import "@openzeppelin/contracts/access/AccessControl.sol";

import "../interfaces/ERC721Enumerable.sol";
import "../interfaces/Base64.sol";
import "../interfaces/OnlyExtended.sol";

contract RarityBattleScar is AccessControl, Ownable, ERC721Enumerable, OnlyExtended {
    using Counters for Counters.Counter;
    using Strings for uint256;

    bytes32 public constant MINTER_ADMIN_ROLE = keccak256("MINTER_ADMIN_ROLE");
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

    string public constant name = "Rarity Battle Scar";
    string public constant symbol = "RBS";

    Counters.Counter private _tokenIds;

    struct Scar {
        uint256 inflictor;
        uint256 receiver;
        string method;
        uint256 timestamp;
    }

    event ScarInflicted(
        uint256 indexed scarId,
        uint256 indexed inflictor,
        uint256 indexed receiver,
        string method,
        uint256 timestamp
    );

    mapping(uint256 => Scar) public scars;
    address[] private _minters;

    constructor(address _rarity) ERC721(_rarity) {
        _tokenIds.increment(); // start at 1
    }

    /*******************************************************************************
	**	@notice
	**		For a contract to be able to mint tokens, it must first be added as a
    **		minter. This is done by calling the `setMinter` function.
    **      The `setMinter` function must be called by the owner of the contract,
    **      aka Extended.
	**	@param _minter The address to add as a Minter.
	*******************************************************************************/
    function setMinter(address _minter) external onlyExtended() {
        _setupRole(MINTER_ROLE, _minter);
    }

    /*******************************************************************************
	**	@notice
	**		For some security reason, the owner should be able to remove a minter.
    **      The `unsetMinter` function must be called by the owner of the contract,
    **      aka Extended.
	**	@param _minter The address to remove as a Minter.
	*******************************************************************************/
    function unsetMinter(address _minter) external onlyExtended() {
        revokeRole(MINTER_ROLE, _minter);
    }

    function safeMint(uint256 toSummonerId) internal returns (uint256) {
        uint256 counter = _tokenIds.current();
        _safeMint(toSummonerId, counter);
        _tokenIds.increment();
        return counter;
    }

    function mintScar(
        uint256 inflictorId,
        uint256 receiverId,
        string memory method
    ) public onlyRole(MINTER_ROLE) returns (uint256){
        uint256 tId = safeMint(receiverId);
        scars[tId] = Scar(inflictorId, receiverId, method, block.timestamp);
        emit ScarInflicted(
            tId,
            inflictorId,
            receiverId,
            method,
            block.timestamp
        );
        return tId;
    }

    function tokenURI(uint256 _tokenId) external view returns (string memory) {
        Scar memory s = scars[_tokenId];
        string[8] memory parts;
        parts[
            0
        ] = '<svg xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMinYMin meet" viewBox="0 0 250 150"><style>.base { fill: white; font-family: sans-serif; font-size: 14px; }</style><rect width="100%" height="100%" fill="black" /><text x="10" y="20" class="base">';
        parts[1] = string(
            abi.encodePacked(
                'Rarity Battle Scar</text><text x="10" y = "60" class="base">',
                "Scar Id: ",
                _tokenId.toString()
            )
        );
        parts[2] = '</text><text x="10" y="80" class="base">';
        parts[3] = string(
            abi.encodePacked("Inflictor: ", s.inflictor.toString())
        );
        parts[4] = '</text><text x="10" y="100" class="base">';
        parts[5] = string(
            abi.encodePacked("Receiver: ", s.receiver.toString())
        );
        parts[6] = '</text><text x="10" y="120" class="base">';
        parts[7] = string(
            abi.encodePacked(
                "Method: ",
                s.method,
                '</text><text x="10" y="140" class="base">',
                "When: ",
                s.timestamp.toString(),
                "</text></svg>"
            )
        );

        string memory output = string(
            abi.encodePacked(
                parts[0],
                parts[1],
                parts[2],
                parts[3],
                parts[4],
                parts[5],
                parts[6],
                parts[7]
            )
        );

        string memory json = Base64.encode(
            bytes(
                string(
                    abi.encodePacked(
                        '{"name": "Rarity Battle Scar"',
                        ', "id": "',
                        _tokenId.toString(),
                        '", "description": "Battle scar received during ',
                        s.method,
                        '", "attributes": {"method": "',
                        s.method,
                        '", "inflictor": "',
                        s.inflictor.toString(),
                        '", "receiver": "',
                        s.receiver.toString(),
                        '"}, "image": "data:image/svg+xml;base64,',
                        Base64.encode(bytes(output)),
                        '"}'
                    )
                )
            )
        );
        output = string(
            abi.encodePacked("data:application/json;base64,", json)
        );

        return output;
    }
}

