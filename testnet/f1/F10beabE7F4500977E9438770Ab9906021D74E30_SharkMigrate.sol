pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "./includes/Signable.sol";

interface BSNT {
    function smallNodeBalanceOf(address address_) external view returns (uint256);
}

contract SharkMigrate is Signable {
    event Claimed(address indexed _address, uint256 _reward);

    using SafeMath for uint256;

    address private _safeWallet;
    address private _transitWallet;
    address private _gamePoolAddress;

    BSNT private _oldGameContract;
    IERC20 private _coinContract;
    IERC721 private _verySimpleNftContract;
    IERC721 private _simpleNftContract;
    IERC721 private _superiorNftContract;

    mapping(address => uint256) private _smallNodes;
    mapping(address => uint256) private _lastSmallNodeClaimTime;

    mapping(address => uint256) private _middleNodes;
    mapping(address => uint256) private _lastMiddleNodeClaimTime;

    mapping(address => uint256) private _bigNodes;
    mapping(address => uint256) private _lastBigNodeClaimTime;

    uint256 private _nodesCount;
    uint256 private _smallNodesCount;
    uint256 private _middleNodesCount;
    uint256 private _bigNodesCount;

    uint256 private _smallNodePrice = 2000000000;

    uint256 private _smallNodeBaseRate = 69444;
    uint256 private _middleNodeBaseRate = 1562500;
    uint256 private _bigNodeBaseRate = 23437500;

    uint256 private _secondsOneDay = 86400;

    uint256 private _feeForMiddleUpgrade = 10000000000;
    uint256 private _feeForBigUpgrade = 150000000000;

    bool private _middleUpgradeAvailable = false;
    bool private _bigUpgradeAvailable = false;

    uint256 private _smallNodeForUpgradeNeeded = 15;
    uint256 private _middleNodeForUpgradeNeeded = 10;

    constructor(
        BSNT oldGameContract,
        IERC20 coinContract,
        IERC721 verySimpleNftContract,
        IERC721 simpleNftContract,
        IERC721 superiorNftContract
    ) {
        _oldGameContract = oldGameContract;
        _coinContract = coinContract;
        _verySimpleNftContract = verySimpleNftContract;
        _simpleNftContract = simpleNftContract;
        _superiorNftContract = superiorNftContract;
    }

    function nodesCount() public view returns (uint256){
        return _nodesCount;
    }

    function smallNodesCount() public view returns (uint256){
        return _smallNodesCount;
    }

    function middleNodesCount() public view returns (uint256){
        return _middleNodesCount;
    }

    function bigNodesCount() public view returns (uint256){
        return _bigNodesCount;
    }

    //    function transferNodes(uint256 lastClaim, bytes calldata signature) public {
    function transferNodes() public {
        //        require(_verify(signer(), _hash(msg.sender, lastClaim), signature), "Invalid signature");

        uint256 count = _oldGameContract.smallNodeBalanceOf(msg.sender);

        _smallNodes[msg.sender] = count;
        _lastSmallNodeClaimTime[msg.sender] = block.timestamp;
        _nodesCount += count;
        _smallNodesCount += count;
    }

    function smallNodeBalanceOf(address address_) public view returns (uint256) {
        return _smallNodes[address_];
    }

    function middleNodeBalanceOf(address address_) public view returns (uint256) {
        return _middleNodes[address_];
    }

    function bigNodeBalanceOf(address address_) public view returns (uint256) {
        return _bigNodes[address_];
    }

    function _verify(address signer_, bytes32 hash, bytes memory signature) private pure returns (bool) {
        return signer_ == ECDSA.recover(hash, signature);
    }

    function _hash(address account, uint256 lastClaim) private pure returns (bytes32) {
        return ECDSA.toEthSignedMessageHash(keccak256(abi.encodePacked(account, lastClaim)));
    }

    function smallNodePrice() public view returns (uint256){
        return _smallNodePrice;
    }

    function setSmallNodePrice(uint256 price_) public onlyOwner {
        _smallNodePrice = price_;
    }

    function transitWallet() public view returns (address) {
        return _transitWallet;
    }

    function setTransitWallet(address address_) public onlyOwner {
        _transitWallet = address_;
    }

    function safeWallet() public view returns (address) {
        return _safeWallet;
    }

    function setSafeWallet(address address_) public onlyOwner {
        _safeWallet = address_;
    }

    function createSmallNode(uint256 count_) public {
        uint256 userBSNBalance = _coinContract.balanceOf(msg.sender);

        uint256 amount = count_ * smallNodePrice();

        require(userBSNBalance >= amount, "Not enough BSN for this type of node");

        uint256 currentAllowance = _coinContract.allowance(msg.sender, address(this));
        require(currentAllowance >= amount, "ERC20: Please approve more BSN for this contract");

        _coinContract.transferFrom(msg.sender, transitWallet(), amount);

        _smallNodes[msg.sender] += count_;
        _smallNodesCount += count_;
        _nodesCount += count_;
    }

    function feeForMiddleUpgrade() public view returns (uint256) {
        return _feeForMiddleUpgrade;
    }

    function setFeeForMiddleUpgrade(uint256 fee_) public onlyOwner {
        _feeForMiddleUpgrade = fee_;
    }

    function feeForBigUpgrade() public view returns (uint256) {
        return _feeForBigUpgrade;
    }

    function setFeeForBigUpgrade(uint256 fee_) public onlyOwner {
        _feeForBigUpgrade = fee_;
    }

    function middleUpgradeAvailable() public view returns (bool){
        return _middleUpgradeAvailable;
    }

    function setMiddleUpgradeAvailability(bool status_) public onlyOwner {
        _middleUpgradeAvailable = status_;
    }

    function bigUpgradeAvailable() public view returns (bool){
        return _bigUpgradeAvailable;
    }

    function setBigUpgradeAvailability(bool status_) public onlyOwner {
        _bigUpgradeAvailable = status_;
    }

    function smallNodeForUpgradeNeeded() public view returns (uint256) {
        return _smallNodeForUpgradeNeeded;
    }

    function setSmallNodeForUpgradeNeeded(uint256 value_) public onlyOwner {
        _smallNodeForUpgradeNeeded = value_;
    }

    function middleNodeForUpgradeNeeded() public view returns (uint256) {
        return _middleNodeForUpgradeNeeded;
    }

    function setMiddleNodeForUpgradeNeeded(uint256 value_) public onlyOwner {
        _middleNodeForUpgradeNeeded = value_;
    }

    function bigUpgrade() public {
        require(bigUpgradeAvailable() == true, "Upgrade to Big Node not available now.");

        uint256 upgradeFee = feeForBigUpgrade();
        uint256 countNodesForUpgrade = middleNodeForUpgradeNeeded();

        uint256 BSNBalance = _coinContract.balanceOf(msg.sender);
        require(BSNBalance >= upgradeFee, "Not enough BSN for upgrade");

        uint256 middleNodesBalance = _middleNodes[msg.sender];
        require(middleNodesBalance >= countNodesForUpgrade, "Not enough middle nodes for upgrade");

        uint256 currentAllowance = _coinContract.allowance(msg.sender, address(this));
        require(currentAllowance >= upgradeFee, "Please approve more BSN for this contract");

        _coinContract.transferFrom(msg.sender, safeWallet(), upgradeFee);

        _middleNodes[msg.sender] -= countNodesForUpgrade;
        _middleNodesCount -= countNodesForUpgrade;
        _bigNodes[msg.sender] += 1;
        _bigNodesCount += 1;
        _nodesCount -= (countNodesForUpgrade - 1);
    }

    function middleUpgrade() public {
        require(middleUpgradeAvailable() == true, "Upgrade to Middle Node not available now.");

        uint256 upgradeFee = feeForMiddleUpgrade();
        uint256 countNodesForUpgrade = smallNodeForUpgradeNeeded();

        uint256 BSNBalance = _coinContract.balanceOf(msg.sender);
        require(BSNBalance >= upgradeFee, "Not enough BSN for upgrade");

        uint256 smallNodesBalance = _smallNodes[msg.sender];
        require(smallNodesBalance >= countNodesForUpgrade, "Not enough small nodes for upgrade");

        uint256 currentAllowance = _coinContract.allowance(msg.sender, address(this));
        require(currentAllowance >= upgradeFee, "Please approve more BSN for this contract");

        _coinContract.transferFrom(msg.sender, safeWallet(), upgradeFee);

        _smallNodes[msg.sender] -= countNodesForUpgrade;
        _smallNodesCount -= countNodesForUpgrade;
        _middleNodes[msg.sender] += 1;
        _middleNodesCount += 1;
        _nodesCount -= (countNodesForUpgrade - 1);
    }

    function gamePoolAddress() public view returns (address) {
        return _gamePoolAddress;
    }

    function setGamePoolAddress(address address_) public onlyOwner {
        _gamePoolAddress = address_;
    }

    function nftBoosterFactor(address address_) public view returns (uint256) {
        bool VSNFTExist = _verySimpleNftContract.balanceOf(address_) > 0;
        bool SINFTExist = _simpleNftContract.balanceOf(address_) > 0;
        bool SUNFTExist = _superiorNftContract.balanceOf(address_) > 0;

        uint256 booster = 100;

        if (VSNFTExist && SINFTExist && SUNFTExist) {
            booster = 151;
        } else if (!VSNFTExist && SINFTExist && SUNFTExist) {
            booster = 150;
        } else if (VSNFTExist && !SINFTExist && SUNFTExist) {
            booster = 142;
        } else if (VSNFTExist && SINFTExist && !SUNFTExist) {
            booster = 123;
        } else if (!VSNFTExist && !SINFTExist && SUNFTExist) {
            booster = 140;
        } else if (!VSNFTExist && SINFTExist && !SUNFTExist) {
            booster = 120;
        } else if (VSNFTExist && !SINFTExist && !SUNFTExist) {
            booster = 110;
        }

        return booster;
    }

    function smallNodeBaseRate() public view returns (uint256) {
        return _smallNodeBaseRate;
    }

    function setSmallNodeBaseRate(uint256 rate_) public onlyOwner {
        _smallNodeBaseRate = rate_;
    }

    function middleNodeBaseRate() public view returns (uint256) {
        return _middleNodeBaseRate;
    }

    function setMiddleNodeBaseRate(uint256 rate_) public onlyOwner {
        _middleNodeBaseRate = rate_;
    }

    function bigNodeBaseRate() public view returns (uint256) {
        return _bigNodeBaseRate;
    }

    function setBigNodeBaseRate(uint256 rate_) public onlyOwner {
        _bigNodeBaseRate = rate_;
    }

    function smallNodeWorkTime(address address_) public view returns (uint256) {
        uint256 workTime = block.timestamp.sub(_lastSmallNodeClaimTime[address_]);

        uint256 twoDays = _secondsOneDay.mul(2);

        if (workTime > twoDays) {
            workTime = twoDays;
        }

        return workTime;
    }

    function middleNodeWorkTime(address address_) public view returns (uint256) {
        uint256 workTime = block.timestamp.sub(_lastMiddleNodeClaimTime[address_]);

        uint256 twoDays = _secondsOneDay.mul(2);

        if (workTime > twoDays) {
            workTime = twoDays;
        }

        return workTime;
    }

    function bigNodeWorkTime(address address_) public view returns (uint256) {
        uint256 workTime = block.timestamp.sub(_lastBigNodeClaimTime[address_]);

        uint256 twoDays = _secondsOneDay.mul(2);

        if (workTime > twoDays) {
            workTime = twoDays;
        }

        return workTime;
    }

    function calculateReward(address address_) public view returns (uint256) {
        uint256 reward = 0;

        uint256 nftBooster = nftBoosterFactor(address_);

        uint256 smallNodesReward = smallNodeBaseRate();
        uint256 smallNodesWorkTime = smallNodeWorkTime(address_);
        smallNodesReward = smallNodesReward.mul(smallNodesWorkTime);
        smallNodesReward = smallNodesReward.mul(nftBooster);
        reward += (smallNodesReward.mul(_smallNodes[address_]));

        uint256 middleNodesReward = middleNodeBaseRate();
        uint256 middleNodesWorkTime = middleNodeWorkTime(address_);
        middleNodesReward = middleNodesReward.mul(middleNodesWorkTime);
        middleNodesReward = middleNodesReward.mul(nftBooster);
        reward += (middleNodesReward.mul(_middleNodes[address_]));

        uint256 bigNodesReward = bigNodeBaseRate();
        uint256 bigNodesWorkTime = bigNodeWorkTime(address_);
        bigNodesReward = bigNodesReward.mul(bigNodesWorkTime);
        bigNodesReward = bigNodesReward.mul(nftBooster);
        reward += (bigNodesReward.mul(_bigNodes[address_]));

        return reward;
    }

    function claim() public {
        uint256 poolBalance = _coinContract.balanceOf(gamePoolAddress());
        require(poolBalance != 0, "Game pool is empty.");

        uint256 reward = calculateReward(msg.sender);

        require(reward > 0, "Not enough BSN for claim");
        require(poolBalance >= reward.div(10000), "Not enough BSN in game pool.");
        _coinContract.transfer(msg.sender, reward.div(10000));

        emit Claimed(msg.sender, reward);
    }
}

