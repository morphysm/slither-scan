pragma solidity 0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "../owner/Operator.sol";
import "../interfaces/ITaxable.sol";
import "../interfaces/IUniswapV2Router.sol";
import "../interfaces/IERC20.sol";

contract TaxOfficeV3 is Operator {
    using SafeMath for uint256;

    // olympic contract address
    address public olympic;

    // oshare contract address
    address public oshare;

    constructor(address _olympic, address _oshare) public {
        if (_olympic != address(0)) oshare = address(_olympic);
        if (_oshare != address(0)) oshare = address(_oshare);
    }

    mapping(address => bool) public taxExclusionEnabled;

    function setTaxCollectorAddress(address _taxCollectorAddress)
        public
        onlyOperator
    {
        ITaxable(olympic).setTaxCollectorAddress(_taxCollectorAddress);
        ITaxable(oshare).setTaxCollectorAddress(_taxCollectorAddress);
    }

    /* Tax rate */
    function setOlympicTaxRate(uint256 _taxRate) public onlyOperator {
        ITaxable(olympic).setTaxRate(_taxRate);
    }

    function setOshareTaxRate(uint256 _taxRate) public onlyOperator {
        ITaxable(olympic).setTaxRate(_taxRate);
    }

    /* Address exclusion part */
    function excludeAddressFromOlympicTax(address _address)
        external
        onlyOperator
        returns (bool)
    {
        return _excludeAddressFromOlympicTax(_address);
    }

    function excludeAddressFromOshareTax(address _address)
        external
        onlyOperator
        returns (bool)
    {
        return _excludeAddressFromOshareTax(_address);
    }

    function _excludeAddressFromOlympicTax(address _address)
        private
        returns (bool)
    {
        if (!ITaxable(olympic).isAddressExcluded(_address)) {
            return ITaxable(olympic).excludeAddress(_address);
        }
    }

    function _excludeAddressFromOshareTax(address _address)
        private
        returns (bool)
    {
        if (!ITaxable(oshare).isAddressExcluded(_address)) {
            return ITaxable(oshare).excludeAddress(_address);
        }
    }

    /* Address inclusion part */
    function includeAddressInOlympicTax(address _address)
        external
        onlyOperator
        returns (bool)
    {
        return _includeAddressInOlympicTax(_address);
    }

    function includeAddressInOshareTax(address _address)
        external
        onlyOperator
        returns (bool)
    {
        return _includeAddressInOshareTax(_address);
    }

    function _includeAddressInOlympicTax(address _address) private returns (bool) {
        if (ITaxable(olympic).isAddressExcluded(_address)) {
            return ITaxable(olympic).includeAddress(_address);
        }
    }

    function _includeAddressInOshareTax(address _address)
        private
        returns (bool)
    {
        if (ITaxable(oshare).isAddressExcluded(_address)) {
            return ITaxable(oshare).includeAddress(_address);
        }
    }

    function transferTaxOffice(address _newTaxOffice) external onlyOperator {
        ITaxable(olympic).setTaxOffice(_newTaxOffice);
        ITaxable(oshare).setTaxOffice(_newTaxOffice);
    }

    function setTaxExclusionForAddress(address _address, bool _excluded)
        external
        onlyOperator
    {
        taxExclusionEnabled[_address] = _excluded;
    }
}

