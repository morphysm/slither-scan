/**
 * Note:
 * - address(0) is native token
 * - address(1) is USD
 */
contract PayrollV1 is Ownable {
    using SafeMath for uint256;

    /**
     * @dev Storage Variables
     */
    address payable private _feeRecipient;
    mapping(address => bool) public paymentTokenAvailabilityMapping;
    mapping(address => mapping(address => address)) public chainlinkPriceFeedMapping;
    uint256 public defaultTokenPriceFee;

    /**
     * @dev Events
     */
    event SendNative(address indexed to, uint256 amount);
    event SendERC20(address indexed tokenAddress, address indexed to, uint256 amount);
    event PayFee(address indexed from, uint256 fee);

    /**
     * @dev Errors
     */
    error arrayLengthUnequal(); // Error: Input length parameters have different array lengths
    error valueZero(); // Error: `msg.value` is 0
    error valueNotSufficient(); // Error: `msg.value` not sufficiently covering the total amount
    error paymentTokenNotAvailable(); // Error: token cannot be used for payroll

    /**
     * @dev The contract constructor
     */
    constructor(address payable feeRecipient_, uint256 defaultTokenPriceFee_) {
        _feeRecipient = feeRecipient_;
        defaultTokenPriceFee = defaultTokenPriceFee_;
    }

    /**
     * @dev Handle token transfers to multiple recipients
     * @param tokenAddress An array of token address to be sent to the recepients
     * @param recipients An array of recepient address that is going to receive tokens
     * @param amounts An array of amounts the receipients are going to receive from the transfer
     */
    function multiTokenTransfer(
        address[] memory tokenAddress,
        address payable[] memory recipients,
        uint256[] memory amounts
    ) public payable {
        if (recipients.length != amounts.length) revert arrayLengthUnequal();
        if (msg.value == 0) revert valueZero();

        for (uint256 i = 0; i < recipients.length; i++) {
            if (!paymentTokenAvailabilityMapping[tokenAddress[i]])
                revert paymentTokenNotAvailable();
        }

        // total sending amount
        uint256 nativeTokenTotalAmount = 0;
        for (uint256 i = 0; i < recipients.length; i++) {
            if (tokenAddress[i] == address(0)) {
                nativeTokenTotalAmount += amounts[i];
            } else {
                // If there is a Chainlink Price Feed Mapping
                if (chainlinkPriceFeedMapping[tokenAddress[i]][address(1)] != address(0)) {
                    uint256 nativeTokenERC20Value = uint256(
                        PriceConverter.getDerivedPrice(
                            chainlinkPriceFeedMapping[tokenAddress[i]][address(1)],
                            chainlinkPriceFeedMapping[address(0)][address(1)],
                            18
                        )
                    );
                    nativeTokenTotalAmount += nativeTokenERC20Value;
                } else {
                    nativeTokenTotalAmount += defaultTokenPriceFee;
                }
            }
        }
        // 0.5% fee
        uint256 fee = SafeMath.div(SafeMath.mul(nativeTokenTotalAmount, 5), 1000);
        if (msg.value < nativeTokenTotalAmount + fee) revert valueNotSufficient();

        // transfer the required amount of ether to each one of the receiver
        for (uint256 i = 0; i < recipients.length; i++) {
            if (tokenAddress[i] == address(0)) {
                recipients[i].transfer(amounts[i]);
                emit SendNative(recipients[i], amounts[i]);
            } else {
                IERC20 token = IERC20(tokenAddress[i]);
                token.transferFrom(msg.sender, recipients[i], amounts[i]);
                emit SendERC20(tokenAddress[i], recipients[i], amounts[i]);
            }
        }

        // paying fees
        _feeRecipient.transfer(fee);
        emit PayFee(msg.sender, fee);

        // in case you deployed the contract with more ether than required,
        // transfer the remaining ether back to yourself
        payable(msg.sender).transfer(address(this).balance);
    }

    function setPaymentTokenAvailability(address tokenAddress, bool tokenAvailability)
        public
        onlyOwner
    {
        paymentTokenAvailabilityMapping[tokenAddress] = tokenAvailability;
    }
}

