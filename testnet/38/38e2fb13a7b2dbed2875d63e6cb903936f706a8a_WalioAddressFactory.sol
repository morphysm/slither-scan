contract DepositorWallet {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    mapping (address => bool) public _admin;
    address payable public _owner;
    address payable public _parent;

    event AuthorisedModule(address indexed module, bool value);
    event Parent(address parent);
    event Invoked(address indexed module, address indexed target, uint indexed value, bytes data);
    constructor (address _module, address payable owner) public {
        _admin[address(_module)] = true; // ALready our deployed admin smart contract
        _admin[address(owner)] = true;
        _owner = owner;
        _parent = msg.sender;
        emit AuthorisedModule(address(_module), _admin[address(_module)]);
        emit Parent(msg.sender);
    }
 
    receive() payable external {
      address myOwner = _getMyParent(_parent);
      address payable receiver = payable(myOwner);
      receiver.transfer(msg.value);
    }

    modifier authorize() {
        require(msg.sender == _parent, "Child: parent permission required");
        _;
    }
		// sweepERC20 -> transfer all balance;
    function sweepERC20 (address token, uint256 amount, address beneficiary) public authorize returns (bool) {
        // The token being sold
        IERC20 _token = IERC20(token);
        _token.safeTransfer(beneficiary, amount);

        // uint256 balance = IERC20(contractAddress).balanceOf(address(this));
        // require(balance >= 0,'Child: insufficient token balance');
        // require(IERC20(contractAddress).transfer(receiverAddress, balance),'Child: transfer error');
        return true;
    }
    // sweepETH -> transfer all balance;
    function sweepETH(uint256 amount, address payable beneficiary) public authorize returns(bool) {
        beneficiary.transfer(amount);
        return true;
    }

    function _getMyParent(address factory) internal view returns (address) {
        address factoryOwner = IWAF(factory).owner();
        return factoryOwner;
    }
}

contract WalioAddressFactory is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    mapping (address => bool) public _admin;
    //platform specific constant required to generate address
    string constant ACCOUNT_SALT_MSG_PREFIX = "WALIOAVAXV1.0";
    // The hash of the wallet contract
    bytes32 public contractCodeHash;
    // The code of the wallet contract
    bytes public contractCode;
    event WalletCreated(address indexed _wallet, address indexed _owner);
    constructor () public {
        //get the contract code for dynamically deploying new wallets
        contractCode = type(DepositorWallet).creationCode;
        
        contractCode = abi.encodePacked(contractCode, abi.encode(address(this), msg.sender));
        //create contract code hash
        contractCodeHash = keccak256(contractCode);
    }
    function updateAdmin(address adminAddress,bool status) public authorize {
        _admin[adminAddress] = status;
    }
    modifier authorize() {
			require(isOwner() || _admin[msg.sender], 'Parent: this address is not authorized');
			_;        
    }
        
    //withdrawal from smart contract when limit increase in case of multiple contract need to withdraw
    function sweepChildETH (address payable[] memory childContractsToSweep) public authorize returns (uint256) {
        uint256 amountSuccessfullySweeped = 0;
        for(uint8 i = 0;i < childContractsToSweep.length; i++)
        {
            uint256 childBalance = address(childContractsToSweep[i]).balance;
  
            if(childBalance > 0) {
				DepositorWallet(childContractsToSweep[i]).sweepETH(childBalance, _owner);
                amountSuccessfullySweeped.add(childBalance);
            }
    
        }

		return amountSuccessfullySweeped;
    }
    //withdrawal from smart contract when limit increase in case of multiple contract need to withdraw
    function sweepChildERC20 (address payable token, address payable[] memory childContractsToSweep) public authorize returns (uint256) {
        uint256 amountSuccessfullySweeped = 0;
        for(uint8 i = 0;i < childContractsToSweep.length; i++)
        {
            IERC20 _token = IERC20(token);
            uint256 childTokenBalance = _token.balanceOf(childContractsToSweep[i]);
           
            if (childTokenBalance > 0) {
                DepositorWallet(childContractsToSweep[i]).sweepERC20(token, childTokenBalance, _owner);
                amountSuccessfullySweeped.add(childTokenBalance);
            }
        }

		return amountSuccessfullySweeped;
    }
    
