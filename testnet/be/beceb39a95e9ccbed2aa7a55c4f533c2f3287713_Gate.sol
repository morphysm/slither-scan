interface IHelper {
    function createNodeWithTokens(string memory name) external;
    function createMultipleNodeWithTokens(string memory name, uint amount) external;
    function createMultipleNodeWithTokensAndName(string[] memory names, uint amount) external;
    function claimAll(uint256[] calldata _nodes) external;
}

interface IManager is IERC721 {
    function getRewardOf(uint256 _id) external view returns (uint);
}

contract Gate {
    IManager manager;
    IHelper helper;
    IERC20 token;
    
    mapping(address => uint[]) holders;
    mapping(uint => bool) deposits;

    constructor(address _manager, address _helper, address _token) {
        manager = IManager(_manager);
        helper = IHelper(_helper);
        token = IERC20(_token);
    }

    function _deposit(uint[] memory _nfts) internal {
        for (uint256 i = 0; i < _nfts.length; i++) {
            manager.transferFrom(msg.sender, address(this), _nfts[i]);
            deposits[_nfts[i]] = true;
            holders[msg.sender].push(_nfts[i]);
        }
    }

    function _claim() internal {
        uint[] memory nfts = holders[msg.sender];
        uint normalReward = 0;
        for (uint256 i = 0; i < nfts.length; i++) {
            normalReward += manager.getRewardOf(nfts[i]);
        }
        uint beforeBalance = token.balanceOf(address(this));
        helper.claimAll(nfts);
        uint claimed = token.balanceOf(address(this)) - beforeBalance;
        token.transfer(msg.sender, claimed + (normalReward - claimed));
    }

    function deposit(uint[] memory _nfts) external {
        _deposit(_nfts);
    }

    function claim() external {
        _claim();
    }

    function depositAndClaim(uint[] memory _nfts) external {
        _deposit(_nfts);
        _claim();
    }

    function withdraw(uint amount) external {
        uint[] storage nfts = holders[msg.sender];
        for (uint256 i = 0; i < amount; i++) {
            manager.transferFrom(address(this), msg.sender, nfts[i]);
            nfts[i] = nfts[nfts.length - 1];
            nfts.pop();
            deposits[nfts[i]] = false;
        }
    }
}