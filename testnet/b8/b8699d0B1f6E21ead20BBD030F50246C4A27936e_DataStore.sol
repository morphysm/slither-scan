pragma solidity ^0.8.0;



contract DataStore is IDataStore, Ownable {
    uint256 private _baseEnergyByteSize = 2;
    address private _baseEnergyDataAddress;

    IQueryBytecode private _queryBytecode;

    constructor (address _baseEnergyDataAddress_, address _queryBytecode_) {
        _baseEnergyDataAddress = _baseEnergyDataAddress_;
        _queryBytecode = IQueryBytecode(_queryBytecode_);
    }

    /**
     * External View
     */

    function baseEnergyByteSize() external view override returns(uint256) {
        return _baseEnergyByteSize;
    }

    function baseEnergyDataAddress() external view override returns(address) {
        return _baseEnergyDataAddress;
    }

    function tokenEnergy(uint256 _tokenId) external view override returns(uint256) {
        require(_tokenId != 0, "DataStore: TokenId 0 does not exist");
        uint256 _offset = (_tokenId - 1) * _baseEnergyByteSize;
        require(_offset + _baseEnergyByteSize <= _queryBytecode.dataSize(_baseEnergyDataAddress), "DataStore: Offset exceeds bytecode size");

        bytes memory _data = _queryBytecode.query(_baseEnergyDataAddress, _offset, _baseEnergyByteSize);
        return _queryBytecode.bytesAsUint256(_data, _baseEnergyByteSize);
    }

    /**
     * Owner
     */
    
    function setBaseEnergyByteSize(uint256 _newBaseEnergyByteSize) external onlyOwner {
        _baseEnergyByteSize = _newBaseEnergyByteSize;
    }

    function setBaseEnergyDataAddress(address _newBaseEnergyDataAddress) external onlyOwner {
        _baseEnergyDataAddress = _newBaseEnergyDataAddress;
    }
}