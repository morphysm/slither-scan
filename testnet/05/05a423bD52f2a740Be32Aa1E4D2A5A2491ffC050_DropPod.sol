        require(signer != address(0), "DropPod: Signer is invalid");
        require(signers[signer] == false, "DropPod: Signer is existed");
        signers[signer] = true;

        emit SignerAdded(signer);
    }

    function removeSigner(address signer) public onlyRole(OWNER_ROLE) {
        require(signer != address(0), "DropPod: Signer is invalid");
        require(signers[signer] == true, "DropPod: Signer is not existed");
        signers[signer] = false;

        emit SignerRemoved(signer);
