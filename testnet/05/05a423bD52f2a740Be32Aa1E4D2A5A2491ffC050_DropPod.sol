        accessoriesContract = _accessoriesContract;

        _setRoleAdmin(OWNER_ROLE, OWNER_ROLE);
        _setRoleAdmin(MINTER_ROLE, OWNER_ROLE);
        _setupRole(OWNER_ROLE, msg.sender);
