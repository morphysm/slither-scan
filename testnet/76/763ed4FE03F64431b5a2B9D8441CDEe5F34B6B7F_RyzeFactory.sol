pragma solidity 0.8.13;

import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";

library TokenHelper {
	using SafeERC20 for IERC20;

	enum TokenStandard {
		ERC20,
		ERC1155
	}

	struct Token {
		TokenStandard standard;
		address addr;
		uint id;
	}

	function safeApprove(
		Token memory token,
		address to,
		uint256 value
	) internal {
		if (TokenHelper.isERC20(token)) {
			IERC20(token.addr).safeApprove(to, value);
		} else {
			IERC1155(token.addr).setApprovalForAll(to, true);
		}
	}

	function safeTransfer(
		Token memory token,
		address to,
		uint256 value
	) internal {
		if (TokenHelper.isERC20(token)) {
			IERC20(token.addr).safeTransfer(to, value);
		}
		else {
			IERC1155(token.addr).safeTransferFrom(address(this), to, token.id, value, "");
		}
	}

	function safeTransferFrom(
		Token memory token,
		address from,
		address to,
		uint256 value
	) internal {
		if (TokenHelper.isERC20(token)) {
			IERC20(token.addr).safeTransferFrom(from, to, value);
		}
		else {
			IERC1155(token.addr).safeTransferFrom(from, to, token.id, value, "");
		}
	}

	function safeTransferETH(address to, uint256 value) internal {
		(bool success,) = to.call{value : value}(new bytes(0));
		require(success, 'TokenHelper::safeTransferETH: ETH transfer failed');
	}

	function encodeToken(Token memory _token) internal pure returns (bytes memory token) {
		token = abi.encode(_token.standard, _token.addr, _token.id);
	}

	function isSameToken(
		Token memory _tokenA,
		Token memory _tokenB
	) internal pure returns (bool) {
		return _tokenA.standard == _tokenB.standard && _tokenA.addr == _tokenB.addr && _tokenA.id == _tokenB.id;
	}

	function isERC20(Token memory _token) internal pure returns (bool) {
		return _token.standard == TokenStandard.ERC20;
	}
}

