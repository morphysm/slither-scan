pragma solidity 0.8.13;

import "./interfaces/IRyzeFactory.sol";
import "./interfaces/IRyzePair.sol";
import "./libraries/TokenHelper.sol";
import "./RyzePair.sol";

contract RyzeFactory is IRyzeFactory {
	bytes32 public constant PAIR_HASH = keccak256(abi.encodePacked(type(RyzePair).creationCode));

    address public override feeTo;
    address public override feeToSetter;

    mapping(bytes => mapping(bytes => address)) public pairMap;
    address[] public override allPairs;

    constructor(address _feeToSetter) {
        feeToSetter = _feeToSetter;
    }

    function allPairsLength() external view override returns (uint256) {
        return allPairs.length;
    }

    function createPair(
		TokenHelper.Token memory tokenA,
		TokenHelper.Token memory tokenB
	) external override returns (
		address pair
	) {
		(
			TokenHelper.Token memory token0,
			TokenHelper.Token memory token1
		) = _validatePairCreation(
			tokenA,
			tokenB
		);

		bytes memory encodedToken0 = TokenHelper.encodeToken(token0);
		bytes memory encodedToken1 = TokenHelper.encodeToken(token1);

        pair = address(
            new RyzePair{
                salt: keccak256(abi.encodePacked(
					encodedToken0,
					encodedToken1
				))
            }()
        );

        IRyzePair(pair).initialize(token0, token1);

        pairMap[encodedToken0][encodedToken1] = pair;
		pairMap[encodedToken1][encodedToken0] = pair; // populate mapping in the reverse direction

        allPairs.push(pair);
        emit PairCreated(encodedToken0, encodedToken1, pair, allPairs.length);
    }

    function setFeeTo(address _feeTo) external override {
        require(msg.sender == feeToSetter, "UniswapV2: FORBIDDEN");
        feeTo = _feeTo;
    }

    function setFeeToSetter(address _feeToSetter) external override {
        require(msg.sender == feeToSetter, "UniswapV2: FORBIDDEN");
        feeToSetter = _feeToSetter;
    }

	function _validatePairCreation(
		TokenHelper.Token memory tokenA,
		TokenHelper.Token memory tokenB
	) private view returns (
		TokenHelper.Token memory token0,
		TokenHelper.Token memory token1
	) {
		TokenHelper.TokenStandard erc1155enum = TokenHelper.TokenStandard.ERC1155;

		if (tokenA.id > 0)
			require(
				tokenA.standard == erc1155enum,
				"UniswapV2: INVALID_ID_FOR_NON_1155"
			);

		if (tokenB.id > 0)
			require(
				tokenB.standard == erc1155enum,
				"UniswapV2: INVALID_ID_FOR_NON_1155"
			);

		if (tokenA.addr == tokenB.addr) {
			require(
				tokenA.standard == erc1155enum && tokenB.standard == erc1155enum && tokenA.id != tokenB.id,
				"UniswapV2: IDENTICAL_TOKEN"
			);

			(token0, token1) = tokenA.id < tokenB.id
				? (tokenA, tokenB)
				: (tokenB, tokenA);
		} else {
			(token0, token1) = tokenA.addr < tokenB.addr
				? (tokenA, tokenB)
				: (tokenB, tokenA);
		}

		require(
			token0.addr != address(0),
			"UniswapV2: ZERO_ADDRESS"
		);

		require(
			// single check is sufficient
			pairMap[TokenHelper.encodeToken(token0)][TokenHelper.encodeToken(token1)] == address(0),
			"UniswapV2: PAIR_EXISTS"
		);
	}

	function getPair(
		TokenHelper.Token memory tokenA,
		TokenHelper.Token memory tokenB
	) external view override returns (address pair) {
		return pairMap[TokenHelper.encodeToken(tokenA)][TokenHelper.encodeToken(tokenB)];
	}
}

