pragma solidity 0.8.4;

import "@openzeppelin/contracts/access/AccessControl.sol";

import "./VeERC20.sol";

// Infinite supply, used to receive extra farming yields and voting power
contract VeShell is VeERC20, AccessControl {
    bytes32 public constant TURTLZ_CONTRACTS = keccak256("TURTLZ_CONTRACTS");

    constructor() VeERC20("VeShellToken", "veSHELL") {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        // the admin need to call grantRole after the deploy
        // to give the role TURTLZ_CONTRACTS to the VeShellStaking contract
    }

    function mint(address _to, uint256 _amount) external onlyRole(TURTLZ_CONTRACTS) {
        _mint(_to, _amount);
    }

    function burnFrom(address _from, uint256 _amount) external onlyRole(TURTLZ_CONTRACTS) {
        _burn(_from, _amount);
    }
}

