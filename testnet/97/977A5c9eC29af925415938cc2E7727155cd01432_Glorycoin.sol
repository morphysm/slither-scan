contract Glorycoin is ERC20, Ownable {

    using SafeMath for uint256;

    uint256 _maxSupply = 2_500_000_000 ether;
    address _presaleTokenAddress = address(0);
    uint256 _maxAmountPresale = 1000*(10**18);
    uint256 _price = 10**16;
    bool _presaleStart = false;
    
    mapping(address=>bool) _whiteListed;
    mapping(address=>uint) _paidTotal;

    event Presale(uint amount);
    event Mint(uint amount, address sentTo);

    constructor(uint supply) ERC20("Glorycoin", "GLO") {
        _mint(msg.sender, supply);
    }

    function mint(uint amount, address sendTo) public onlyOwner {
        require(totalSupply() + amount <= _maxSupply);
        _mint(sendTo, amount);
        emit Mint(amount, sendTo);
    }

    function presale(uint256 paidAmount) public {
        require(_presaleStart == true);
        require(paidAmount > 0, "You need to sell at least some tokens");
        require(_paidTotal[msg.sender] + paidAmount <= _maxAmountPresale);
        IERC20 token = IERC20(_presaleTokenAddress);
        uint256 allowance = token.allowance(msg.sender, address(this));
        require(allowance >= paidAmount, "Check the token allowance");
        token.transferFrom(msg.sender, address(this), paidAmount);
        mint(paidAmount.div(_price), msg.sender);
        _paidTotal[msg.sender] += paidAmount;
        emit Presale(paidAmount);
    }

    function startPresale(bool start) public onlyOwner {
        _presaleStart = start;
    }

    function setPrice(uint256 price) public onlyOwner {
        _price = price;
    }

    function setMaxAmountPresale(uint256 maxAmountPresale) public onlyOwner {
        _maxAmountPresale = maxAmountPresale;
    }

    function setPresaleTokenAddress(address presaleTokenAddress) public onlyOwner {
        _presaleTokenAddress = presaleTokenAddress;
    }

    function setWhitelist(address[] memory addresses) public onlyOwner{
        for (uint i = 0; i < addresses.length; i++) {
            _whiteListed[addresses[i]] = true;
        }
    }

    function removeWhitelist(address removedAddress) public onlyOwner {
        _whiteListed[removedAddress] = false;
    }

    function withdraw(uint amount) public onlyOwner {
        require(amount > 0, "Claim::recoverERC20: amount is 0");
        IERC20(_presaleTokenAddress).transfer(owner(), amount);
    }
}