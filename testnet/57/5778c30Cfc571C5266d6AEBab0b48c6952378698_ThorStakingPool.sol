import "../libraries/Address.sol";
import "../libraries/SafeERC20.sol";
import "../utils/Ownable.sol";
import "../utils/ReentrancyGuard.sol";



/// @title Staking contract for farming in vesperPools in return for staking THOR Tokens
/// @dev Only the owner can add new pools
contract ThorStakingPool is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    

    // @notice The staking fee in THOR
    uint256 public STAKE_FEE;


    /// @notice The staking token aka $THOR
    IERC20 public THOR;


    /// @notice mapping to keep track of poolIds
    mapping(address => uint256) private poolIds;

    /// @notice mapping for total user stakes
    mapping(address => uint256) public userStakes;


    /// @notice List of available
    IThorPool[] public pools;

    constructor(
        IERC20 _THOR
    ) {
        require(
            address(_THOR) != address(0),
            "constructor: _THOR must not be zero address"
        );

        THOR = _THOR;
        STAKE_FEE = 20e18;
    }

    /// @notice Returns the number of pools that have been added by the owner
    /// @return Number of pools
    function numberOfPools() external view returns (uint256) {
        return pools.length;
    }

    function removePool(address _pool) public onlyOwner {
        require(poolIds[_pool]!=0, 'removePool: pool not found');
        uint256 pid = poolIds[_pool];
        if(pid < pools.length){
            pools[pid-1] = pools[pools.length-1];
        }
        pools.pop();
        delete poolIds[_pool];
    }

    function addPools (
        address[] memory _pools
    ) external onlyOwner {
        for(uint256 i=0; i<_pools.length; i++) {
            _addPool(_pools[i]);
        }
    }

    /// @notice Create a new THOR pool
    /// @dev Can only be called by the contract owner
    /// @param _pool Address of the vesperPool to add
    function addPool(
        address _pool
    ) public onlyOwner {        
       _addPool(_pool);
    }


    function _addPool(address _pool) internal {
        require(poolIds[_pool] == 0, "addPool(): pool already exists");
        pools.push(IThorPool(_pool));
        poolIds[_pool] = pools.length;
    }


    /// @notice User pays fee to gain access to VPs
    function payFee() external {
        require(userStakes[msg.sender] == 0, "payFee: you have already paid the fee.");
        THOR.safeTransferFrom(msg.sender, address(this), STAKE_FEE);
        userStakes[msg.sender] = STAKE_FEE;
    }


    /// @notice Allows a user to unstake his Thor
    function unstake() external nonReentrant{
        require(userStakes[msg.sender] > 0, "unstake(): you do not have any stakes");
        require(!_remainingInvestments(msg.sender), "unstake(): please first withdraw from all pools");
        userStakes[msg.sender] = 0;
        THOR.safeTransfer(msg.sender, userStakes[msg.sender]);
    }


    function _remainingInvestments(address _user) internal view returns (bool) {
        for(uint256 i=0;i<pools.length;i++){
            if(pools[i].getShares(_user) > 0){
                return true;
            }
        }
        return false;
    }


    /// @notice Allows owner to withdraw any ERC20 tokens collected in the contract
    /// @dev Partial withdrawals permitted
    /// @param _token address
    /// @param _amount Being withdrawn
    function withdrawBalance(address _token, uint256 _amount) external onlyOwner {
        IERC20 token = IERC20(_token);
        require(token.balanceOf(address(this)) >= _amount, "withdraw");
        token.safeTransfer(msg.sender, _amount);
    }

    function setStakeFee(uint256 fee) external onlyOwner {
        STAKE_FEE = fee;
    }


    function isFeePaid(address user) public view returns (bool) {
        return userStakes[user] > 0;
    }

    function getPools() external view returns (IThorPool[] memory) {
        return pools;
    }


    // safe fallback for recovery
    receive() external payable {
        payable(owner()).transfer(msg.value);
    }
}

