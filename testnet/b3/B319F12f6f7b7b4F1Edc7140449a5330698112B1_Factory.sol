import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

import "./lib/PermissionControlUpgradeable.sol";
import "./interfaces/IGameItem.sol";
import "./interfaces/IFactory.sol";

contract Factory is IFactory, Initializable, PermissionControlUpgradeable {
    using SafeMathUpgradeable for uint256;
    using CountersUpgradeable for CountersUpgradeable.Counter;
    using ECDSAUpgradeable for bytes32;

    event Mint(address indexed user, bytes32 _externalId, uint256 _weight, uint256 indexed _id);

    struct GameItemMeta {
        bytes32 externalId;
        uint256 weight;
    }

    // map between external ID and token id
    mapping(bytes32 => uint256) private _externalToTokenIds;
    // map between token ID and metadata
    mapping(uint256 => GameItemMeta) private _tokenMetas;
    // list of all token IDs
    uint256[] _tokenIds;

    // current token id
    CountersUpgradeable.Counter private _currentTokenId;

    // nft contract
    IGameItem public nft;

    /**
     * @dev initializer
     * @param _nft NFT address
     */
    function initialize(address _nft) external initializer {
        require(_nft != address(0), "Factory: zero address");

        __PermissionControl_init();

        nft = IGameItem(_nft);
    }

    /**
     * @dev Updates NFT contract address
     * @param _nft NFT contract address
     */
    function setNFT(address _nft) external onlyAdmin {
        require(_nft != address(0), "Factory: zero address");

        nft = IGameItem(_nft);
    }

    /**
     * @dev Mints asset(s) in accordance to a specific address with an _externalId.
     * See {IGameItemFactory-mint}
     */
    function mint(
        address _toAddress,
        bytes32 _externalId,
        uint256 _weight,
        bytes memory signature,
        bytes calldata _data
    ) external override returns (uint256) {
        require(!_externalIdExists(_externalId), "Factory: already minted");
        require(_weight > 0, "Factory: weight is zero");

        bytes32 msgHash = keccak256(abi.encodePacked(_toAddress, _externalId, _weight));
        bytes32 signedMsgHash = msgHash.toEthSignedMessageHash();
        address signer = signedMsgHash.recover(signature);
        require(hasRole(OPERATOR_ROLE, signer), "Factory: invalid signer");

        uint256 _id = _getNextTokenId();

        GameItemMeta memory meta = GameItemMeta(_externalId, _weight);
        _externalToTokenIds[_externalId] = _id;
        _tokenMetas[_id] = meta;
        _tokenIds.push(_id);

        // mint NFT
        nft.mint(_toAddress, _id, _data);

        emit Mint(_toAddress, _externalId, _weight, _id);

        return _id;
    }

    /*                                            Utility Public Functions                                            */

    /**
     * @dev Returns the current token ID
     */
    function currentTokenId() public view returns (uint256) {
        return _currentTokenId.current();
    }

    /**
     * @dev Returns the weight for a token ID
     * See {IGameItemFactory-tokenWeight}
     */
    function tokenWeight(uint256 _id) external view override returns (uint256) {
        require(_exists(_id), "Factory: nonexistent token");

        return _tokenMetas[_id].weight;
    }

    /*                                            Utility Private Functions                                           */

    /**
     * @dev Returns whether the specified token exists by checking to see if it has metadata
     * @param _id uint256 ID of the token to query the existence of
     * @return bool whether the token exists
     */
    function _exists(uint256 _id) internal view returns (bool) {
        return _tokenMetas[_id].weight != 0;
    }

    /**
     * @dev Returns whether the specified external ID exists by checking to see if it has an token id
     * @param _externalId external id of the token to query the existence of
     * @return bool whether the external ID exists
     */
    function _externalIdExists(bytes32 _externalId) internal view returns (bool) {
        return _externalToTokenIds[_externalId] != 0;
    }

    /**
     * @dev calculates the next token ID based on value of _currentTokenId
     * @return uint256 for the next token ID
     */
    function _getNextTokenId() private returns (uint256) {
        _currentTokenId.increment();
        return _currentTokenId.current();
    }
}

