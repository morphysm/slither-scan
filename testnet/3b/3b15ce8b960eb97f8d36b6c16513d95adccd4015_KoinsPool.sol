    ///@title Koins Pool
    /**
    @author @viken33
    This contract is used to create and join Tournament Pools on the BlockBets Dapp
    It allows Blockbets to create and finish time-based tournament pools
    It allows players to join tournaments pools for their favourite games
    @dev We use Open Zeppelin SafeMath, EnumerableSet and Ownable libraries
    */
contract KoinsPool is Initializable, OwnableUpgradeable {
    
    using SafeMathUpgradeable for uint256;
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.UintSet;
    using SafeERC20Upgradeable for IERC20Upgradeable;
    
    struct Pool {
        uint8[] winnersFees;
        bool finished;
        uint256 currentPrize;
        uint256 entryFee;
        uint256 startOn;
        uint256 finishOn;
        address payable[] players;
        mapping(address => bool) addressJoined;
        mapping(uint256 => bool) joined;
        mapping(address => uint16) playerKoinsCount;
        address tokenAddr;
    }
    
    uint256 public poolCount;                                // historic counter, poolId comes from the counter
    uint256 public bbFee;                                    // protocol fee
    address payable public treasury;                         // blast treasury
    address public koinsContract;                            // Koins NFT contract
    mapping(uint256 => Pool) public pools;                   // PoolId => Pool Struct
    mapping(uint256 => uint256[]) public userPools;          // tokenId => joined Pools 
    EnumerableSetUpgradeable.UintSet private activePools;    // set of current active Pools
   
    
    /** 
    * @dev Event emitted on new pool created
    * @param _currentPrize initial pool prize
    * @param _entryFee entry fee to join the pool
    * @param _startOn unix start epoch in ms
    * @param _finishOn unix finish epoch in ms
    * @param _tokenAddr address of token used for pool
    */
    event NewPool(
        uint256 indexed poolId,
        uint256 _currentPrize,
        uint256 _entryFee,
        uint256 _startOn,
        uint256 _finishOn,
        address _tokenAddr
        );
        
    /** 
    * @dev Event emitted on cancelled pool
    * @param _poolId pool Id of cancelled pool
    */    
    event CancelPool(uint256 indexed _poolId);
     
    /** 
    * @dev Event emitted when a player joins a pool
    * @param _player player who joins the pool
    * @param _poolId pool Id
    */ 
    event PoolJoinedBy(uint256 indexed _poolId, address _player);
    /** 
    * @dev Event emitted on a finished pool
    * @param _poolId pool Id
    */ 
    event PoolFinished(uint256 indexed _poolId);
    
    /** 
    * @dev Initializes pool count and bbFee
    */
    function initialize() public initializer {
        poolCount = 0;
        bbFee = 2; // 2% fee
        koinsContract = 0x56FCe2E8393e3362Ac0244c098c19443Fd5290ef;
        __Ownable_init();
        treasury = payable(address(uint160(owner())));
    }

    /** 
    * @dev Creates a new Pool providing entryFee, CurrentPrize, start and finish times. <br>
    * @dev The transaction value must be equal to initial pool prize. <br>
    * @dev Prizes and fees are in uint256, start and finish times are Unix Epochs in miliseconds. <br>
    * @dev Fees are uint expressed in percentages i.e. a value of 10 means 10% fee, the sum of the 3 fees must equal a 100
    * @param _currentPrize initial pool prize
    * @param _entryFee entry fee to join the pool
    * @param _startOn unix start epoch in ms
    * @param _finishOn unix finish epoch in ms
    * @param _tokenAddr token used for pool prize and fees, if tokenAddr is address(0), native coin will be used
    * @return PoolId (uint256)
    */
    
    function createPool(
        uint8[] memory _winnersFees,
        uint256 _currentPrize,
        uint256 _entryFee,
        uint256 _startOn,
        uint256 _finishOn,
        address _tokenAddr) public payable onlyOwner returns(uint256){
       
        require(_startOn >= 0, "wrong startOn");
        require(_finishOn >= 0, "wrong finishOn");
        uint totalFee = 0;
        for (uint i = 0; i < _winnersFees.length; i++) {
        totalFee = totalFee.add(_winnersFees[i]);
      }
        require(totalFee == 100, 'Wrong prize structure in array');

        if (_tokenAddr == address(0)) {
        require(msg.value == _currentPrize, "value must be equal to _currentPrize");
        } else {
            IERC20Upgradeable token = IERC20Upgradeable(_tokenAddr);
            uint256 allowance = token.allowance(msg.sender, address(this));
            require(allowance >= _currentPrize, "Check the token allowance");
            token.safeTransferFrom(msg.sender, address(this), _currentPrize);
        }
            poolCount = poolCount.add(1);
        Pool storage pool = pools[poolCount];
            pool.currentPrize = _currentPrize;
            pool.entryFee = _entryFee;
            pool.finished = false;
            pool.startOn = _startOn;
            pool.finishOn = _finishOn;
            pool.winnersFees = _winnersFees;
            pool.tokenAddr = _tokenAddr;
            activePools.add(poolCount);
            
            emit NewPool(poolCount, pool.currentPrize, pool.entryFee, pool.startOn, pool.finishOn, pool.tokenAddr);
            return poolCount;
    }
    
    /** 
    * @dev Allows players to join a pool
    * @dev if the pool has an entry fee it should be equal to msg.value
    */

    function joinPool(uint256 _poolId, uint256[] memory _koins) public payable {
           
      Pool storage poo = pools[_poolId];
      IERC721 nftContract = IERC721(koinsContract);
      require(poo.finished == false, "pool is finished");
      uint256 totalFee = (poo.entryFee).mul(_koins.length);
      
      for (uint i = 0; i < _koins.length; i++) {
        require(nftContract.ownerOf(_koins[i])== msg.sender, "Koin doesn't belong to player");
        require(poo.joined[_koins[i]] == false , "Koin already in pool");
        poo.joined[_koins[i]] = true;
        poo.playerKoinsCount[msg.sender]++;
        userPools[_koins[i]].push(_poolId);
      }

      if (poo.tokenAddr == address(0)) {
        require(msg.value == totalFee, "wrong entryFee sent");
        
      } else {
          IERC20Upgradeable token = IERC20Upgradeable(poo.tokenAddr);
          uint256 allowance = token.allowance(msg.sender, address(this));
          require(allowance >= totalFee, "Check the token allowance");
          token.safeTransferFrom(msg.sender, address(this), totalFee);
      }
      
      if (poo.addressJoined[msg.sender] == false) {
      poo.players.push(payable(msg.sender));
      poo.addressJoined[msg.sender] = true;
      }
      poo.currentPrize = poo.currentPrize.add(totalFee);         
      emit PoolJoinedBy(_poolId, msg.sender);
        
    }

    /** 
    * @dev View function to retrieve joined pools for a given player(address)
    * @param koin tokenId of the Koin
    */
    function viewPools(uint256 koin) public view returns(uint256[] memory _userPools) {
        return userPools[koin];
    }

    /** 
    * @dev View function to retrieve current active Pools
    * @return _activePools an array of pool Ids
    */
    function viewActivePools() public view returns(uint256[] memory _activePools) {
        return activePools.values();
    }

    /** 
    * @dev Admin function to finish a pool
    * @param _poolId id of the pool to finish
    * @param _winners array of winner koins
    */

    function finishPool(uint256 _poolId, uint256[] memory _winners) public onlyOwner {
        // call with Pool Id and array of Koin winners
        
        Pool storage poo = pools[_poolId];
        IERC721 nftContract = IERC721(koinsContract);
        require(poo.finishOn < block.timestamp, "pool period not ended");
        require(poo.finished == false, "Pool already finished");
        address payable winner;
        

        if (poo.tokenAddr == address(0)) {
        treasury.transfer(poo.currentPrize.mul(bbFee).div(100));
        poo.currentPrize = (poo.currentPrize).sub(poo.currentPrize.mul(bbFee).div(100));
        

      
          for (uint i = 0; i < _winners.length; i++) {
          winner = payable(nftContract.ownerOf(_winners[i]));
          winner.transfer((poo.currentPrize).mul(poo.winnersFees[i]).div(100));
          poo.currentPrize = poo.currentPrize.sub((poo.currentPrize).mul(poo.winnersFees[i]).div(100));
      
          }
        } else {
            IERC20Upgradeable token = IERC20Upgradeable(poo.tokenAddr);
            token.safeTransfer(treasury, poo.currentPrize.mul(bbFee).div(100));
            poo.currentPrize = (poo.currentPrize).sub(poo.currentPrize.mul(bbFee).div(100));

          for (uint i = 0; i < _winners.length; i++) {
            winner = payable(nftContract.ownerOf(_winners[i]));
            token.safeTransfer(winner, (poo.currentPrize).mul(poo.winnersFees[i]).div(100));
            poo.currentPrize = poo.currentPrize.sub((poo.currentPrize).mul(poo.winnersFees[i]).div(100));
          }
            
        }
        if (poo.currentPrize > 0) {
            
            if (poo.tokenAddr == address(0)) {
                treasury.transfer(poo.currentPrize);
            } else {
                IERC20Upgradeable token = IERC20Upgradeable(poo.tokenAddr);
                token.safeTransfer(treasury, poo.currentPrize);
            }
        }
        poo.currentPrize = 0;
        poo.finished = true;
        activePools.remove(_poolId);
        
        emit PoolFinished(_poolId);
    }
    
    /** 
    * @dev Admin function to cancel a pool
    * it returns the entry fee to all the players who joined, and the prize pool to treasury
    * @param _poolId id of the pool to finish
    * 
    */

    function cancelPool(uint256 _poolId) public onlyOwner {
        Pool storage poo = pools[_poolId];
        
        if (poo.entryFee > 0) {
        for (uint i = 0; i < poo.players.length; i++) {
            if (poo.addressJoined[poo.players[i]]) {
                if (poo.tokenAddr == address(0)) {
                    poo.players[i].transfer((poo.entryFee).mul(poo.playerKoinsCount[poo.players[i]]));
                } else {
                    IERC20Upgradeable token = IERC20Upgradeable(poo.tokenAddr);
                    token.safeTransfer(poo.players[i], (poo.entryFee).mul(poo.playerKoinsCount[poo.players[i]]));
                }
                poo.currentPrize = (poo.currentPrize).sub((poo.entryFee).mul(poo.playerKoinsCount[poo.players[i]]));
            }
          }
        }

        if (poo.currentPrize > 0) {
            
            if (poo.tokenAddr == address(0)) {
                treasury.transfer(poo.currentPrize);
            } else {
                IERC20Upgradeable token = IERC20Upgradeable(poo.tokenAddr);
                token.safeTransfer(treasury, poo.currentPrize);
            }
        }
                       
        delete pools[_poolId];
        activePools.remove(_poolId);
        emit CancelPool(_poolId);
    }
    
    /** 
    * @dev Admin function to update protocol fee
    * @param _newFee new fee to set
    * 
    */

    function updateFee(uint256 _newFee) public onlyOwner {
          bbFee = _newFee;
      }

    /** 
    * @dev Admin function to update treasury
    * @param _newTreasury new treasury to set
    */

    function updateTreasury(address payable _newTreasury) public onlyOwner {
          treasury = _newTreasury;
      }  

    function updateKoinsContract(address _newAddr) public onlyOwner {
      koinsContract = _newAddr;
    }  
   
}

