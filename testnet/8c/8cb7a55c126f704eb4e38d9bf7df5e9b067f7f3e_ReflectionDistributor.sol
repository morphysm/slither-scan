interface IReflectionDistributor {
    function setShare(address shareholder, uint256 amount) external;
    function depositRewardAmount(uint256 _amount) external;
}

interface ITalentScout {
    function router() external pure returns (address);
    function WAVAX() external pure returns (address);

    function approveMax(address spender) external returns (bool);
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);
}

contract ReflectionDistributor is IReflectionDistributor {
  using SafeMath for uint256;

  ITalentScout public talentScout;

  struct Share {
    uint256 amount;
    uint256 totalExcluded;
    uint256 totalRealised;
  }
  mapping (address => Share) public shares;
  address[] shareholders;
  mapping (address => uint256) shareholderIndexes;
  mapping (address => uint256) shareholderClaims;

  uint256 public totalShares;
  uint256 public reflectionsPerShare;
  uint256 public reflectionsPerShareAccuracyFactor = 10 ** 36;
  uint256 public totalReflections;

  // TODO: Change for mainnet
  IERC20 public USDT = IERC20(0xF6aCAfc258a3015Af7F2f605E13b008FAB34b318);
  IDEXRouter router;

  constructor(
    address _talentScout
  ) {
    talentScout = ITalentScout(_talentScout);
    
    router = IDEXRouter(talentScout.router());
    talentScout.approveMax(address(router));
  }

    modifier onlyScout() {
        require(msg.sender == address(talentScout)); _;
    }

    function setShare(address shareholder, uint256 amount) external override onlyScout {
        if(shares[shareholder].amount > 0){
            distributeReflection(shareholder);
        }

        if(amount > 0 && shares[shareholder].amount == 0){
            addShareholder(shareholder);
        } else if(amount == 0 && shares[shareholder].amount > 0){
            removeShareholder(shareholder);
        }

        // sub(shares[shareholder].amount) amount will be zero if shareholder has just been added as his share is zero
        // sub(shares[shareholder].amount) amount will be non zero if shareholder already exists and thus his old share has to be removed first ,
        // and then the new share can be added
        totalShares = totalShares.sub(shares[shareholder].amount).add(amount);
        shares[shareholder].amount = amount;
        shares[shareholder].totalExcluded = getCumulativeReflections(shares[shareholder].amount);
    }

    function distributeReflection(address shareholder) internal {
        if(shares[shareholder].amount == 0){ return; }

        uint256 amount = getUnpaidEarnings(shareholder);
        if(amount > 0){
            totalReflections = totalReflections.add(amount);
            USDT.transfer(shareholder, amount);
            shareholderClaims[shareholder] = block.timestamp;
            shares[shareholder].totalRealised = shares[shareholder].totalRealised.add(amount);
            shares[shareholder].totalExcluded = getCumulativeReflections(shares[shareholder].amount);
        }
    }

    function addShareholder(address shareholder) internal {
        shareholderIndexes[shareholder] = shareholders.length;
        shareholders.push(shareholder);
    }

    function removeShareholder(address shareholder) internal {
        shareholders[shareholderIndexes[shareholder]] = shareholders[shareholders.length-1];
        shareholderIndexes[shareholders[shareholders.length-1]] = shareholderIndexes[shareholder];
        shareholders.pop();
    }

    function depositRewardAmount(uint256 _amount) external override onlyScout {
        address[] memory path = new address[](2);
        path[0] = address(talentScout);
        path[1] = router.WAVAX();
        path[2] = address(USDT);

        router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            _amount,
            0,
            path,
            address(this),
            block.timestamp
        );

        uint256 amount = USDT.balanceOf(address(this));

        // the following are the parameters that the depositreward function in the talent scout contract expects
        totalReflections = totalReflections.add(amount);
        reflectionsPerShare = reflectionsPerShare.add(reflectionsPerShareAccuracyFactor.mul(amount).div(totalShares));
    }

    function getCumulativeReflections(uint256 share) internal view returns (uint256) {
        return share.mul(reflectionsPerShare).div(reflectionsPerShareAccuracyFactor);
    }

    function getUnpaidEarnings(address shareholder) public view returns (uint256) {
        if(shares[shareholder].amount == 0) { return 0; }

        uint256 shareholderTotalReflections = getCumulativeReflections(shares[shareholder].amount);
        uint256 shareholderTotalExcluded = shares[shareholder].totalExcluded;

        if(shareholderTotalReflections <= shareholderTotalExcluded){ return 0; }

        return shareholderTotalReflections.sub(shareholderTotalExcluded);
    }
}