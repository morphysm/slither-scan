        require(msg.sender == _allocator(), "UNAUTHORIZED");

        _mint(_to, _id);
    }

    function burn(uint _allocationTokenId) external {
        require(msg.sender == _allocator(), "UNAUTHORIZED");

        _burn(_allocationTokenId);
    }
}

