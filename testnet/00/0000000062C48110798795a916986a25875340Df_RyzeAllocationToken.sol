pragma solidity 0.8.13;

import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";

import "./abstract/RyzeAddressBookUser.sol";
import "./abstract/RyzeOwnableUpgradeable.sol";
import "./dex/RyzeRouter.sol";
import "./interfaces/IRyzeTokenConverter.sol";
import "./libraries/Permit.sol";
import "./RyzeAllocationToken.sol";
import "./RyzeTokenDatabase.sol";

contract RyzeAllocator is RyzeOwnableUpgradeable, RyzeAddressBookUser {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    enum AllocationState {
        PRE_SALE,
        PENDING,
        ENABLED,
        DISABLED
    }

    struct GlobalInfo {
        uint totalAllocated;
        AllocationState allocationState;
    }

    struct AllocationTokenInfo {
        uint realEstateTokenId;
        uint amount;
        bool isReward;
    }

    address private dai;

    uint public allocationTokenCount;
    uint public initialLiquidityBasisPoints; // 100 = 1%
    uint public referralRewardBasisPoints; // 100 = 1%

    mapping(uint => GlobalInfo) public globalInfos;
    mapping(uint => AllocationTokenInfo) public allocationTokenInfos;
    mapping(uint => uint) public initialLiquidityAllocationTokenId;
    mapping(uint => uint) public disabledTokenValue;

    event TokenStateChanged(uint realEstateTokenId, AllocationState state);
    event Allocated(address user, uint realEstateTokenId, uint allocationTokenId, uint amount, bool isReward);

    function initialize(
        address _addressBook,
        address _dai,
        uint _initialLiquidityBasisPoints,
        uint _referralRewardBasisPoints
    ) public initializer {
        __AddressBookUser_init(_addressBook);
        __Ownable_init();
        transferOwnership(addressBook.owner());

        dai = _dai;
        initialLiquidityBasisPoints = _initialLiquidityBasisPoints;
        referralRewardBasisPoints = _referralRewardBasisPoints;
    }

    function _initializeAllocation(uint _realEstateTokenId) internal {
        initialLiquidityAllocationTokenId[_realEstateTokenId] = allocationTokenCount;

        _allocateForFree(
            _liquidityInitializer(),
            _realEstateTokenId,
            _tokenDatabaseInstance().maxSupply(_realEstateTokenId) * initialLiquidityBasisPoints / 10000
        );
    }

    function allocate(
        uint _realEstateTokenId,
        uint _amount,
        address _referrer
    ) external {
        _allocate(_realEstateTokenId, _amount, _referrer, true);
    }

    function allocateWithPermit(
        uint _realEstateTokenId,
        uint _amount,
        address _referrer,
        Permit.PermitInfo calldata _permitInfo
    ) external {
        Permit._approveDaiWithPermit(dai, _permitInfo);

        _allocate(_realEstateTokenId, _amount, _referrer, true);
    }

    function allocateWithEth(
        uint _realEstateTokenId,
        uint _minAmount,
        address _referrer
    ) external payable {
        RyzeRouter router = RyzeRouter(payable(_router()));
        uint initialBalance = _daiInstance().balanceOf(address(this));
        address[] memory path = new address[](2);

        path[0] = router.WETH();
        path[1] = dai;

        router.swapExactETHForTokens{value : msg.value}(
            _minAmount,
            path,
            address(this),
            block.timestamp
        );

        _allocate(
            _realEstateTokenId,
            (_daiInstance().balanceOf(address(this)) - initialBalance) / 1e18,
            _referrer,
            false
        );
    }

    function _allocate(
        uint _realEstateTokenId,
        uint _amount,
        address _referrer,
        bool _collectDai
    ) private {
        require(_realEstateTokenId < _tokenDatabaseInstance().tokenCount(), "INVALID_TOKEN_ID");

        GlobalInfo storage globalInfo = globalInfos[_realEstateTokenId];

        if (globalInfo.totalAllocated == 0) {
            _initializeAllocation(_realEstateTokenId);
        }

        require(globalInfo.allocationState == AllocationState.PRE_SALE, "ALLOCATION_PERIOD_OVER");

        uint amount = _getActualAllocationAmount(_realEstateTokenId, _amount);

        require(amount > 0, "INVALID_AMOUNT");

        if (_collectDai) {
            _daiInstance().safeTransferFrom(msg.sender, address(this), amount * 1e18);
        }
        uint allocationTokenId = allocationTokenCount;

        globalInfo.totalAllocated += amount;

        allocationTokenInfos[allocationTokenId] = AllocationTokenInfo(
            _realEstateTokenId,
            amount,
            false
        );

        _allocationTokenInstance().mint(msg.sender, allocationTokenId);

        emit Allocated(msg.sender, _realEstateTokenId, allocationTokenId, amount, false);

        allocationTokenCount++;

        if (_referrer != address(0) && _referrer != msg.sender) {
            _allocateForFree(
                _referrer,
                _realEstateTokenId,
                _amount * referralRewardBasisPoints / 10_000
            );
        }
    }

    function _allocateForFree(address _user, uint _realEstateTokenId, uint _amount) private {
        uint amount = _getActualAllocationAmount(_realEstateTokenId, _amount);

        if (amount == 0) {
            return;
        }

        GlobalInfo storage globalInfo = globalInfos[_realEstateTokenId];
        uint allocationTokenId = allocationTokenCount;

        globalInfo.totalAllocated += amount;

        allocationTokenInfos[allocationTokenId] = AllocationTokenInfo(
            _realEstateTokenId,
            amount,
            true
        );

        _allocationTokenInstance().mint(_user, allocationTokenId);

        emit Allocated(_user, _realEstateTokenId, allocationTokenId, amount, true);

        allocationTokenCount++;
    }

    function burnEnabled(uint _id) external {
        uint realEstateTokenId = allocationTokenInfos[_id].realEstateTokenId;

        require(globalInfos[realEstateTokenId].allocationState == AllocationState.ENABLED, "NOT_ENABLED");
        require(msg.sender == _realEstateToken(), "UNAUTHORIZED");

        _allocationTokenInstance().burn(_id);
    }

    function burnDisabled(uint _id) external {
        AllocationTokenInfo memory tokenInfo = allocationTokenInfos[_id];

        require(!tokenInfo.isReward, "REWARD_CANNOT_BE_BURNED");
        require(globalInfos[tokenInfo.realEstateTokenId].allocationState == AllocationState.DISABLED, "NOT_ENABLED");
        require(msg.sender == ownerOf(_id), "UNAUTHORIZED");

        _allocationTokenInstance().burn(_id);
        _daiInstance().safeTransfer(msg.sender, tokenInfo.amount * disabledTokenValue[tokenInfo.realEstateTokenId]);
    }

    function claimDai() external onlyOwner {
        _daiInstance().safeTransfer(
            msg.sender,
            _daiInstance().balanceOf(address(this))
        );
    }

    function enable(uint _realEstateTokenId) external {
        require(msg.sender == _liquidityInitializer(), "UNAUTHORIZED");
        require(
            globalInfos[_realEstateTokenId].totalAllocated == _tokenDatabaseInstance().maxSupply(_realEstateTokenId),
            "PRE_SALE_NOT_OVER"
        );

        _setAllocationState(_realEstateTokenId, AllocationState.ENABLED);
    }

    function disable(uint _realEstateTokenId, uint _value) external onlyOwner {
        require(
            globalInfos[_realEstateTokenId].allocationState != AllocationState.ENABLED,
            "CANNOT_DISABLE"
        );

        disabledTokenValue[_realEstateTokenId] = _value;
        _setAllocationState(_realEstateTokenId, AllocationState.DISABLED);
    }

    function _setAllocationState(uint _realEstateTokenId, AllocationState _state) private {
        globalInfos[_realEstateTokenId].allocationState = _state;

        emit TokenStateChanged(_realEstateTokenId, _state);
    }

    function _getActualAllocationAmount(
        uint _realEstateTokenId,
        uint _requestedAmount
    ) private returns (uint) {
        uint maxSupply = _tokenDatabaseInstance().maxSupply(_realEstateTokenId);
        uint available = maxSupply - globalInfos[_realEstateTokenId].totalAllocated;

        if (available <= _requestedAmount) {
            _setAllocationState(_realEstateTokenId, AllocationState.PENDING);

            return available;
        }
        else {
            return _requestedAmount;
        }
    }

    function ownerOf(uint _allocationTokenId) public view returns (address) {
        return _allocationTokenInstance().ownerOf(_allocationTokenId);
    }

    function _allocationTokenInstance() private view returns (RyzeAllocationToken) {
        return RyzeAllocationToken(_allocationToken());
    }

    function _tokenDatabaseInstance() private view returns (RyzeTokenDatabase) {
        return RyzeTokenDatabase(_tokenDatabase());
    }

    function _daiInstance() private view returns (IERC20Upgradeable) {
        return IERC20Upgradeable(dai);
    }
}

