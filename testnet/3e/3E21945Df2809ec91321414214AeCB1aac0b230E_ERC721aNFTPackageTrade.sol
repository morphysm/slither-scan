library SafeERC721aNFTPackage {
    using Address for address;

    function safeMint(
        IERC721aNFTPackage token,
        address to,
        uint256 quantity,
        string memory pkg
    ) internal {
        _callOptionalReturn(token, abi.encodeWithSelector(token.mint.selector, to, quantity, pkg));
    }

    function safeMintBatch(
        IERC721aNFTPackage token,
        address to,
        uint256[] memory quantity,
        string[] memory pkgs
    ) internal {
        _callOptionalReturn(token, abi.encodeWithSelector(token.mintBatch.selector, to, quantity, pkgs));
    }

    function _callOptionalReturn(IERC721aNFTPackage token, bytes memory data) private {
        address(token).functionCall(data);
    }
}

