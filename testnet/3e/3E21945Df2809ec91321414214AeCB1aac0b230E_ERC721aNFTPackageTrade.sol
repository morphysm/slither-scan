pragma solidity ^0.8.12;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/interfaces/IERC20.sol";
import "@openzeppelin/contracts/interfaces/IERC721.sol";
import "@openzeppelin/contracts/interfaces/IERC1155.sol";
import "./utils/SafeERC721aNFTPackage.sol";
import "./interface/IERC721aNFTPackageTrade.sol";

contract ERC721aNFTPackageTrade is Ownable, Initializable, IERC721aNFTPackageTrade {
    using ECDSA for bytes32;
    using SafeERC721aNFTPackage for IERC721aNFTPackage;

    mapping(bytes32 => bool) public finalized;
    address private _feeRecipient;
    mapping(address => bool) private _verifiers;
    mapping(address => address) private _projectRecipients;

    function initialize() public override initializer {
        transferOwnership(msg.sender);
        _verifiers[msg.sender] = true;
        _feeRecipient = msg.sender;
    }

    function setVerifier(address verifier_) external override onlyOwner {
        _verifiers[verifier_] = true;
    }

    function revokeVerifier(address verifier_) external override onlyOwner {
        _verifiers[verifier_] = false;
    }
    
    function setFeeRecipient(address feeRecipient_) external override onlyOwner {
        _feeRecipient = feeRecipient_;
    }

    function setProjectRecipient(address project_, address recipient_) external override onlyOwner {
        _projectRecipients[project_] = recipient_;
    }

    function projectRecipient(address project_) public view override returns (address) {
        if(_projectRecipients[project_] == address(0)) {
            return owner();
        }

        return _projectRecipients[project_];
    }

    function withdraw(address to) external override onlyOwner {
        Address.sendValue(payable(to), address(this).balance);
    }

    function hashQuantityPackage(Order memory order) public pure returns (bytes memory) {
        bytes memory result;
        for (uint256 index = 0; index < order.quantity.length; index++) {
            result = abi.encodePacked(result, order.quantity[index], order.package[index]);
        }
        return result;
    }

    function hashOrder(address signer, Order memory order) public pure override returns (bytes32) {
        return keccak256(
            abi.encodePacked(
                signer,
                order.salt,
                order.project,
                order.to,
                hashQuantityPackage(order),
                order.token,
                order.amount,
                order.tokenId,
                order.fee
            )
        );
    }

    function signedOrderHash(address signer, Order memory order) public pure override returns (bytes32) {
        return hashOrder(signer, order).toEthSignedMessageHash();
    }

    function _transfer(address from, address to, address token, uint256 amount, uint256 tokenId) internal {
        if (address(0) == token) {
            Address.sendValue(payable(to), amount);
            return;
        }

        if (tokenId == 0) {
            IERC20(token).transferFrom(from, to, amount);
        }

        if (amount == 0) {
            IERC721(token).safeTransferFrom(from, to, tokenId);
        }

        IERC1155(token).safeTransferFrom(from, to, tokenId, amount, "");
    }

    function mint(Order memory order, bytes memory sig) public payable override {
        require(order.fee < order.amount, "400");
        require(order.token == address(0) && order.amount <= msg.value, "400");

        bytes32 _hashOrder = signedOrderHash(msg.sender, order);
        require(_verifiers[_hashOrder.recover(sig)], "401");
    
        require(!finalized[_hashOrder], "403");
        finalized[_hashOrder] = true;

        if (order.tokenId != 0 || order.fee == 0) {
            _transfer(msg.sender, projectRecipient(order.project), order.token, order.amount, order.tokenId);
        } else {
            _transfer(msg.sender, projectRecipient(order.project), order.token, order.amount - order.fee, order.tokenId);
            _transfer(msg.sender, _feeRecipient, order.token, order.fee, order.tokenId);
        }
        
        IERC721aNFTPackage(order.project).safeMintBatch(order.to, order.quantity, order.package);
    }
}

