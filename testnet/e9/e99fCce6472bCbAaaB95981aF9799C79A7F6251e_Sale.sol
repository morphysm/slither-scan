pragma solidity ^0.8.0;
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "./SaleToken.sol";

import "./library/SafeERC20.sol";
import "./interfaces/IERC20Decimals.sol";
import "./interfaces/ISalesFactory.sol";
import "./interfaces/IFarmLens.sol";
import "./interfaces/IAllocationStaking.sol";

/// @title AVATA Sale smart contract
contract Sale is SaleToken, Ownable {

    using SafeMath for uint256;
    using SafeERC20 for IERC20Decimals;
    using ECDSA for bytes32;

    /// @notice Signatory address
    address public immutable signatory;

    /// @notice Start of the sale
    bool public isInitialized;

    /// @notice Start and end of the allocation
    RoundDuration public allocation;

    /// @notice Start and end of the sale
    RoundDuration public sale;

    /// @notice Start and end of the FCFS
    RoundDuration public fcfs;

    /// @notice Total tokens that users claimed
    uint public totalTokensClaim;

    /// @notice Total tokens that users bought
    uint public totalTokensBuy;

    /// @notice Number of users that bought tokens
    uint public participants;

    /// @notice Total AVAT tokens collected
    uint public totalFundsCollected;

    /// @notice Selling tokens address
    IERC20Decimals public sellingTokenAddress;

    /// @notice Allocation staking address
    IAllocationStaking public stakingAddress;

    /// @notice Farm lens address to get tokens price
    IFarmLens public farmLensAddress;

    /// @notice Is address fix its staking allocation
    mapping(address => bool) public addressStakingAllocation;

    /// @notice Is address fix its lottery allocation
    mapping(address => bool) public addressLotteryAllocation;

    /// @notice Whitelist of tokens that can be deposited
    mapping(address => bool) public depositWhitelistAddresses;

    /// @notice The EIP-712 typehash for the contract's domain
    bytes32 public constant DOMAIN_TYPEHASH = keccak256("EIP712Domain(string name,uint256 chainId,address verifyingContract)");

    /// @notice The EIP-712 typehash for the permit struct used by the contract
    bytes32 public constant PERMIT_TYPEHASH = keccak256("Permit(address participant,uint256 tokenAmount,uint256 deadline)");

    string public constant saleName = "AVATA Sale";

    /// @notice Precision rate for math operations
    uint public constant precisionRate = 100;

    /// @notice Token price in AVAT
    uint public tokenPriceInUSD;

    /// @notice Distribution periods with 'timestamp' and 'percent'
    DistributionPeriod[] private _distributionPeriods;

    /// @notice Addresses with distribution data of 'amount' and 'isClaimed' bool
    mapping(address => DistributionAddress[]) private _distributionAddresses;

    struct DistributionPeriod {
        uint256 timestamp;
        uint256 percent;
    }

    struct DistributionAddress {
        uint256 amount;
        bool isClaimed;
    }

    struct RoundDuration {
        uint startTime;
        uint endTime;
    }

    enum States { NOT_INITIALIZED, WAITING_FOR_SALE, SALE, WAITING_FOR_FCFS, FCFS, CLAIM }

    event SaleInitialized(address[] depositWhitelistAddresses, address token, uint startSale, uint endSale, uint256 tokenPriceInUSD, DistributionPeriod[] distributionPeriods);
    event DistributionPeriodsUpdated(DistributionPeriod[] distributionPeriods);
    event SalePeriodUpdated(uint startSale, uint endSale);
    event FCFSPeriodUpdated(uint startFCFS, uint endFCFS);
    event AllocationPeriodUpdated(uint startAllocation, uint endAllocation);
    event TokenRateUpdated(uint tokenPriceInUSD);
    event TokensBought(address buyer, uint sentAmount);
    event TokensClaimed(address claimer, uint periodId, uint receivedAmount);
    event AvatTokensCollected(address collector, uint amount);
    event SellingTokensCollected(address collector, uint amount);

    modifier onlyInitialized() {
        require(isInitialized == true, "Sale::onlyInitialized: sale must be initialized");
        _;
    }
    
    constructor (
        address owner_,
        address signatory_,
        address stakingAddress_,
        address farmLensAddress_,
        address sellingTokenAddress_,
        string memory name_,
        string memory symbol_
    ) SaleToken(name_, symbol_) {
        require(sellingTokenAddress_ != address(0),  "Sale::constructor:  cannot set to zero address");
        require(signatory_ != address(0), "Sale::constructor: cannot set to zero address");
        require(owner_ != address(0), "Sale::constructor: cannot set to zero address");
        require(stakingAddress_ != address(0), "Sale::constructor: cannot set to zero address");
        require(farmLensAddress_ != address(0), "Sale::constructor: cannot set to zero address");

        _transferOwnership(owner_);

        farmLensAddress = IFarmLens(farmLensAddress_);
        signatory = signatory_;
        sellingTokenAddress = IERC20Decimals(sellingTokenAddress_);
        stakingAddress = IAllocationStaking(stakingAddress_);
    }

    /**
    * @notice [OWNER ONLY] Initialize sale settings. Set `isInitialized` field to true
    * @param tokenPriceInUSD_ token price in AVAT token
    * @param sale_ start and end of sale
    * @param fcfs_ start and end of fcfs
    * @param distributionPeriods_ distribution periods
    */
    function initialize(
        address[] calldata depositWhitelistAddresses_,
        uint256 tokenPriceInUSD_,
        RoundDuration calldata allocation_,
        RoundDuration calldata sale_,
        RoundDuration calldata fcfs_,
        DistributionPeriod[] calldata distributionPeriods_
    ) external onlyOwner {
        require(block.timestamp < allocation_.startTime, "Sale::initialize: Start of allocation should be greater than blocktimestamp");

        require(allocation_.startTime < allocation_.endTime, "Sale::initialize: allocation start should be less than allocation end");
        require(allocation_.endTime < sale_.startTime, "Sale::initialize: allocation start should be less than sale start");
        require(sale_.startTime < sale_.endTime, "Sale::initialize: sale start should be less than sale end");
        
        require(sale_.endTime < fcfs_.startTime, "Sale::initialize: start of fcfs should be greater than end of sale");
        require(fcfs_.startTime < fcfs_.endTime, "Sale::initialize: start of fcfs should be less than end");

        require(fcfs_.endTime < distributionPeriods_[0].timestamp, "Sale::initialize: end of sale should be lesser than fist claim period");

        require(tokenPriceInUSD_ > 0, "Sale::initialize: token price in AVAT must be greater than 0");

        sale = sale_;
        fcfs = fcfs_;
        allocation = allocation_;

        _allowTransfer(allocation_.startTime, allocation_.endTime);

        tokenPriceInUSD = tokenPriceInUSD_;

        uint periodsLength = distributionPeriods_.length;
        uint amountPercent = 0;

        for(uint i = 0 ; i < periodsLength; i++) {
            amountPercent = amountPercent.add(distributionPeriods_[i].percent);
            _distributionPeriods.push(distributionPeriods_[i]);
        }

        require(amountPercent.div(precisionRate) == 100, "Sale::initialize: total percentage should be 100%");

        isInitialized = true;

        for(uint i = 0 ; i < depositWhitelistAddresses_.length; i++) {
           depositWhitelistAddresses[depositWhitelistAddresses_[i]] = true;
        }

        emit SaleInitialized(depositWhitelistAddresses_, address(sellingTokenAddress), sale_.startTime, sale_.endTime, tokenPriceInUSD_, distributionPeriods_);
    }

    /**
    * @notice [OWNER ONLY] Update distribution periods
    * @param distributionPeriods_ new distribution periods
    */
    function updateDistributionPeriods(DistributionPeriod[] calldata distributionPeriods_) external onlyOwner onlyInitialized {
        require(sale.endTime < distributionPeriods_[0].timestamp, "Sale::updateDistributionPeriods: end of sale should be lesser then fist claim period");

        delete _distributionPeriods;

        uint periodsLength = distributionPeriods_.length;
        uint amountPercent = 0;

        for(uint i = 0 ; i < periodsLength; i++) {
            amountPercent = amountPercent.add(distributionPeriods_[i].percent);
            _distributionPeriods.push(distributionPeriods_[i]);
        }

        require(amountPercent.div(precisionRate) == 100, "Sale::initialize: total percentage should be 100%");
        emit DistributionPeriodsUpdated(distributionPeriods_);
    }

    /**
    * @notice [OWNER ONLY] Update sale period
    * @param startSale_ start of sale in timestamp
    * @param endSale_ end of  sale in timestamp
    */
    function updateSalePeriod(
        uint startSale_,
        uint endSale_
    ) external onlyOwner onlyInitialized {
        require(block.timestamp < sale.startTime, "Sale::updateSalePeriod: Start of sale should be greater");
        require(startSale_ < endSale_, "Sale::updateSalePeriod: sale start should be less than sale end");
        require(endSale_ < _distributionPeriods[0].timestamp, "Sale::updateSalePeriod: end of sale should be lesser then fist claim period");

        sale.startTime = startSale_;
        sale.endTime = endSale_;
        emit SalePeriodUpdated(startSale_, endSale_);
    }

    /**
    * @notice [OWNER ONLY] Update FCFS period
    * @param startFCFS_ start of FCFS in timestamp
    * @param endFCFS_ end of FCFS in timestamp
    */
    function updateFCFSPeriod(
        uint startFCFS_,
        uint endFCFS_
    ) external onlyOwner onlyInitialized {
        require(block.timestamp < fcfs.startTime, "Sale::updateFCFSPeriod: Start of fcfs should be greater");
        require(startFCFS_ < endFCFS_, "Sale::updateFCFSPeriod: fcfs start should be less than fcfs end");
        require(sale.endTime < startFCFS_, "Sale::updateFCFSPeriod: fcfs start should be greater than sale end");
        require(endFCFS_ < _distributionPeriods[0].timestamp, "Sale::updateFCFSPeriod: end of sale should be lesser than fist claim period");

        fcfs.startTime = startFCFS_;
        fcfs.endTime = endFCFS_;
        emit FCFSPeriodUpdated(startFCFS_, endFCFS_);
    }

    /**
    * @notice [OWNER ONLY] Update FCFS period
    * @param startAllocation_ start of FCFS in timestamp
    * @param endAllocation_ end of FCFS in timestamp
    */
    function updateAllocationPeriod(
        uint startAllocation_,
        uint endAllocation_
    ) external onlyOwner onlyInitialized {
        require(block.timestamp < allocation.startTime, "Sale::updateAllocationPeriod: Start of fcfs should be greater");
        require(startAllocation_ < endAllocation_, "Sale::updateAllocationPeriod: fcfs start should be less than fcfs end");
        require(endAllocation_ < sale.startTime, "Sale::updateFCFSPeriod: end of sale should be lesser than fist claim period");

        allocation.startTime = startAllocation_;
        allocation.endTime = endAllocation_;
        _allowTransfer(startAllocation_, endAllocation_);
        emit AllocationPeriodUpdated(startAllocation_, endAllocation_);
    }

    /**
    * @notice [OWNER ONLY] Update token rate
    * @param tokenPriceInUSD_ Rate for buy token
    */
    function updateTokenRates(uint tokenPriceInUSD_) external onlyOwner onlyInitialized {
        require(tokenPriceInUSD_ > 0, "Sale::updateTokenRates: tokenPriceInUSD must be greater than 0");

        tokenPriceInUSD = tokenPriceInUSD_;
        emit TokenRateUpdated(tokenPriceInUSD_);
    }

    /**
    * @notice Take iAVAT allocation from staking
    * @param to Address which get tokens
    */
    function takeStakingAllocation(address to) external onlyInitialized {
        uint iAVATAmount = stakingAddress.getiAVATAmount(msg.sender);

        require(iAVATAmount != 0, "Sale::takeStakingAllocation: no available iAVATs");
        require(addressStakingAllocation[msg.sender] == false, "Sale::takeStakingAllocation: already fixed allocation");

        addressStakingAllocation[msg.sender] = true;

        _mint(to, iAVATAmount);
    }

    /**
    * @notice Take iAVAT allocation from lottery
    * @param to Address which get tokens
    */
    function takeLotteryAllocation(
        address to,
        address participant,
        uint tokenAmount,
        uint deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external onlyInitialized {
        require(_permitLotteryAllocation(participant, tokenAmount, deadline, v, r, s) == true, "Sale::takeLotteryAllocation: Invalid signature");
        require(tokenAmount != 0, "Sale::takeLotteryAllocation: no available iAVATs");
        require(addressLotteryAllocation[msg.sender] == false, "Sale::takeLotteryAllocation: already fixed allocation");

        addressLotteryAllocation[msg.sender] = true;

        _mint(to, tokenAmount);
    }

    function availableAllocation(address participant) public view onlyInitialized returns(uint) {
        uint addressAllocationPoint = balanceOf(participant).mul(10**decimals()).div(totalSupply());
        return sellingTokenAddress.balanceOf(address(this)).mul(addressAllocationPoint).div(10**decimals());
    }

    /**
    * @notice Buy token
    * @param depositAddress ERC20 Token address
    * @param amount The number of tokens that are approved
    */
    function buyToken(
        address depositAddress,
        uint amount
    ) external onlyInitialized {
        require(block.timestamp >= sale.startTime, "Sale::buyToken: Sale has not started");
        require(block.timestamp <= sale.endTime, "Sale::buyToken: Sale ended, so sorry");

        uint allocationAmount = balanceOf(msg.sender);
        require(allocationAmount != 0, "Sale::buyToken: No available allocation");

        require(_isAddressInDepositWhitelist(depositAddress) == true, "Sale::buyTokenOnFCFS: Sale does not support this ERC20 token");

        IERC20Decimals(depositAddress).safeTransferFrom(msg.sender, address(this), amount);

        uint amountOfSellingTokens = _getAmountOfSellingTokens(depositAddress, amount);
        require(totalTokensBuy.add(amountOfSellingTokens) <= sellingTokenAddress.balanceOf(address(this)), "Sale::buyToken: No available  tokens for buy");

        uint usedAllocationPoint = amountOfSellingTokens.mul(10**decimals()).div(balanceOf(address(this)));
        _burn(msg.sender, usedAllocationPoint);

        if (_distributionAddresses[msg.sender].length == 0) {
           participants = participants.add(1);
        }

        _createDistributionAddress(amountOfSellingTokens, msg.sender);

        totalTokensBuy = totalTokensBuy.add(amountOfSellingTokens);
        totalFundsCollected = totalFundsCollected.add(amount);

        emit TokensBought(msg.sender, amount);
    }

    /**
    * @notice Buy token without any allocation (FCFS)
    * @param depositAddress ERC20 Token address
    * @param amount The number of tokens that are approved
    */
    function buyTokenOnFCFS(
        address depositAddress,
        uint amount
    ) external onlyInitialized {
        require(block.timestamp >= fcfs.startTime, "Sale::buyTokenOnFCFS: FCFS has not started");
        require(block.timestamp <= fcfs.endTime, "Sale::buyTokenOnFCFS: FCFS ended, so sorry");

        require(_isAddressInDepositWhitelist(depositAddress) == true, "Sale::buyTokenOnFCFS: Sale does not support this ERC20 token");

        IERC20Decimals(depositAddress).safeTransferFrom(msg.sender, address(this), amount);

        uint amountOfSellingTokens = _getAmountOfSellingTokens(depositAddress, amount);
        require(totalTokensBuy.add(amountOfSellingTokens) <= sellingTokenAddress.balanceOf(address(this)), "Sale::buyTokenOnFCFS: No available  tokens for buy");

        _createDistributionAddress(amountOfSellingTokens, msg.sender);

        if (_distributionAddresses[msg.sender].length == 0) {
           participants = participants.add(1);
        }

        totalTokensBuy = totalTokensBuy.add(amountOfSellingTokens);
        totalFundsCollected = totalFundsCollected.add(amount);

        emit TokensBought(msg.sender, amount);
    }

    /**
    * @notice Claim available tokens.
    * @param periodId_ Number of period
    */
    function claimToken(uint periodId_) external onlyInitialized {
        address participant = msg.sender;
        require(
            _distributionAddresses[participant][periodId_].isClaimed == false && 
            _distributionAddresses[participant][periodId_].amount != 0, 
            "claimToken: Participant does not have funds for withdrawal"
        );
        require(isPeriodUnlocked(periodId_) == true, "Sale::claimToken: Claim date is not arrived");
        require(periodId_ < _distributionPeriods.length, "Sale::claimToken: PeriodId should be lesser then total periods");

        _distributionAddresses[participant][periodId_].isClaimed = true;
        sellingTokenAddress.safeTransfer(participant, _distributionAddresses[participant][periodId_].amount);
        totalTokensClaim = totalTokensClaim.add(_distributionAddresses[participant][periodId_].amount);

        emit TokensClaimed(participant, periodId_, _distributionAddresses[participant][periodId_].amount);
    }

    /**
    * @notice [OWNER ONLY] Collect raised funds. No check for whitelist to be able to return randomly transfered tokens
    * @param depositAddress Deposit address
    * @param to_ Address which receive tokens
    * @param amount_ amount to withdraw
    */
    function collectRaisedTokens(
        address depositAddress,
        address to_,
        uint amount_
    ) external onlyOwner {
        IERC20Decimals(depositAddress).safeTransfer(to_, amount_);
        emit AvatTokensCollected(to_, amount_);
    }

    /**
    * @notice [OWNER ONLY] Collect leftover
    * @param amount_ Available amount to withdraw
    * @param address_ Address owner
    */
    function collectLeftoverTokens(uint amount_, address address_) external onlyOwner onlyInitialized {
        require(sellingTokenAddress.balanceOf(address(this)).sub(totalTokensBuy.sub(totalTokensClaim)) >= amount_, "Sale::collectLeftoverTokens: No available tokens for leftover");
        sellingTokenAddress.safeTransfer(address_, amount_);
        emit SellingTokensCollected(address_, amount_);
    }

    /**
    * @notice Creates distribution for address
    * param amount_ Amount for buy token
    * param participant_ User who is allowed to purchase
    */
    function _createDistributionAddress(uint amount_, address participant_) internal {
        uint _amountPercent = 0;

        for(uint i = 0 ; i < _distributionPeriods.length; i++) {
            _amountPercent = amount_.mul(_distributionPeriods[i].percent).div(100).div(precisionRate);
            DistributionAddress memory distributionAddress = DistributionAddress({amount: _amountPercent, isClaimed: false});

            if( i < _distributionAddresses[participant_].length) {
                _distributionAddresses[participant_][i].amount = _distributionAddresses[participant_][i].amount.add(distributionAddress.amount);
            } else {
                _distributionAddresses[participant_].push(distributionAddress);
            }
        }
    }

    /**
    * @notice Get current state of smart contract
    */
    function getState() external view returns (uint) {
        return !isInitialized ? uint(States.NOT_INITIALIZED)
            : (block.timestamp < sale.startTime) ? uint(States.WAITING_FOR_SALE)
            : (block.timestamp >= sale.startTime && block.timestamp <= sale.endTime) ? uint(States.SALE)
            : (block.timestamp > sale.endTime && block.timestamp < fcfs.startTime) ? uint(States.WAITING_FOR_FCFS)
            : (block.timestamp >= fcfs.startTime && block.timestamp <= fcfs.endTime) ? uint(States.FCFS)
            : uint(States.CLAIM);
    }

    /**
    * @notice Get distribution for address
    * @param participant_ User who is allowed to purchase
    */
    function getDistributionAddress(address participant_) external view returns(DistributionAddress[] memory) {

        return  _distributionAddresses[participant_];
    }

    /**
    * @notice Get selling token address
    */
    function getSellingTokenAddress() external view returns(address) {

        return address(sellingTokenAddress);
    }

    /**
    * @notice Get distribution periods number
    * @return length periods
    */
    function getDistributionPeriodsNumber() external view returns (uint) {

        return _distributionPeriods.length;
    }

    /**
    * @notice Get array of distribution periods
    * @return array of distribution dates
    */
    function getDistributionPeriods() external view returns (DistributionPeriod[] memory) {

        return _distributionPeriods;
    }

    /**
    * @notice Check unlock period or not array of distribution dates
    * @param periodId_ Id of period
    * @return true if unlock period? else return false
    */
    function isPeriodUnlocked(uint periodId_) public view returns (bool) {
        return block.timestamp >= _distributionPeriods[periodId_].timestamp;
    }

    /**
    * @notice Get chain id for sign
    *
    * @return chainId
    **/
    function _getChainId() internal view returns (uint) {
        uint256 chainId;

        assembly { chainId := chainid() }

        return chainId;
    }

    /**
    * @notice Get amount of selling tokens from deposit tokens
    * @param depositAddress ERC20 Tokens address
    * @param amount Amount of tokens
    */
    function _getAmountOfSellingTokens(
        address depositAddress,
        uint amount
    ) private view returns(uint) {
        uint depositTokenPriceInUSD = farmLensAddress.getPriceInUsd(depositAddress);

        return amount
            .mul(depositTokenPriceInUSD)
            .div(tokenPriceInUSD)
            .mul(10**sellingTokenAddress.decimals())
            .div(IERC20Decimals(depositAddress).decimals());
    }

    /**
    * @notice Is address in deposit whitelist
    * @param depositAddress ERC20 Tokens address
    */
    function _isAddressInDepositWhitelist(
        address depositAddress
    ) private view returns(bool) {
        return depositWhitelistAddresses[depositAddress] == true;
    }

    /**
     * @notice Check permit to mint lottery allocation
     * @param participant Participant address
     * @param tokenAmount amount of tokens
     * @param deadline The time at which to expire the signature
     * @param v The recovery byte of the signature
     * @param r Half of the ECDSA signature pair
     * @param s Half of the ECDSA signature pair
     */
    function _permitLotteryAllocation(address participant, uint tokenAmount, uint deadline, uint8 v, bytes32 r, bytes32 s) private view returns (bool) {
        uint96 amount;

        if (tokenAmount == type(uint).max) {
            amount = type(uint96).max;
        } else {
            amount = _safe96(tokenAmount, "Sale::_permitLotteryAllocation: amount exceeds 96 bits");
        }

        bytes32 domainSeparator = keccak256(abi.encode(DOMAIN_TYPEHASH, keccak256(bytes(saleName)), _getChainId(), address(this)));
        bytes32 structHash = keccak256(abi.encode(PERMIT_TYPEHASH, participant, tokenAmount, deadline));
        bytes32 digest = keccak256(abi.encodePacked("\x19\x01", domainSeparator, structHash));
        address _signatory = ECDSA.recover(digest, v, r, s);

        if (
            _signatory == address(0) ||
            signatory != _signatory ||
            block.timestamp > deadline
        ) {
            return false;
        }

        return true;
    }

    /**
    * @notice Check safe96
    *
    **/
    function _safe96(uint n, string memory errorMessage) internal pure returns (uint96) {
        require(n < 2**96, errorMessage);

        return uint96(n);
    }
}

