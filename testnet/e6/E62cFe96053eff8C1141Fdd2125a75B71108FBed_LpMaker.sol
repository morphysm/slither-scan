contract LpMaker is Ownable {
    using SafeERC20 for IERC20;

    address public router; // uniswap, pancakeswap etc

    receive() external payable {
    }

    function initialize(
        address _uniRouterAddress
    ) public virtual initializer {
        Ownable.__Ownable_init();
        router = _uniRouterAddress;
    }

    function makelp(
        address _token0,
        address _token1
    ) external virtual payable {
      makelp(router, _token0, _token1);
    }

    function makelp(
        address _unirouter,
        address _token0,
        address _token1
    ) public virtual payable {
        // Get want tokens, ie. add liquidity
        uint256 token0Amt = IERC20(_token0).balanceOf(address(this));
        uint256 token1Amt = IERC20(_token1).balanceOf(address(this));
        if (token0Amt > 0 && token1Amt > 0) {
            IERC20(_token0).safeApprove(_unirouter, token0Amt);
            IERC20(_token1).safeApprove(_unirouter, token1Amt);
            IUniswapV2Router02(_unirouter).addLiquidity(
                _token0,
                _token1,
                token0Amt,
                token1Amt,
                0,
                0,
                msg.sender,
                block.timestamp + 600
            );
        }
    }

    function setUniRouterAddress(address _uniRouterAddress)
        public
        virtual
        onlyOwner
    {
        router = _uniRouterAddress;
    }

    function inCaseTokensGetStuck(address _token, uint256 _amount)
        public
        onlyOwner
    {
        IERC20(_token).safeTransfer(msg.sender, _amount);
    }    
}

