pragma solidity 0.8.9;

// based on https://ftmscan.com/address/0x9a896d3c54d7e45b558bd5fff26bf1e8c031f93b#code
//  and https://ftmscan.com/address/0xeebfa3528a2e5fa1292db33ae10d0847e914a9af#code

import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

import "../interfaces/IBasisAsset.sol";
import "../interfaces/ITaxManager.sol";
import "../interfaces/WAVAX.sol";
import "../helpers/traderjoe/interfaces/IJoePair.sol";
import "../helpers/traderjoe/interfaces/IJoeRouter02.sol";

contract ArenaPool is Pausable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    // governance
    address public operator;

    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many tokens the user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
        uint256 depositedAt; // withdraw unlock timestamp.
    }

    // Info of each pool.
    struct PoolInfo {
        IERC20 token; // Address of LP token contract.
        bool isStarted; // if lastRewardBlock has passed
        uint256 allocPoint; // How many allocation points assigned to this pool. TOMB to distribute.
        uint256 lastRewardTime; // Last time that TOMB distribution occurs.
        uint256 accRewardPerShare; // Accumulated TOMB per share, times 1e18. See below.
        address nft;
        uint256[] periodTiers;
        uint256[] taxTiers;
    }

    address public rewardToken;

    // Info of each pool.
    PoolInfo[] public poolInfo;

    // Info of each user that stakes LP tokens.
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;

    // Total allocation points. Must be the sum of all allocation points in all pools.
    uint256 public totalAllocPoint = 0;

    // The time when reward mining starts.
    uint256 public poolStartTime;

    // The time when reward mining ends.
    uint256 public poolEndTime;
    address public daoFundAddress;

    // MAINNET
    bool public finalized = false;
    uint256 public rewardPerSecond = 89999 ether / uint256(180 days); // 89999 GLADSHARE / (180d * 24h * 60min * 60s)
    uint256 public runningTime = 180 days; // 180 days
    // END MAINNET

    bool public emergencyWithdrawEnabled;

    IJoeRouter02 public router;

    ITaxManager public taxManager;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(
        address indexed user,
        uint256 indexed pid,
        uint256 amount
    );
    event RewardPaid(address indexed user, uint256 amount);

    constructor(
        address _rewardToken,
        address _daoFund,
        address _router,
        address _taxManager,
        uint256 _poolStartTime
    ) {
        require(block.timestamp < _poolStartTime, "late");
        if (_rewardToken != address(0)) rewardToken = _rewardToken;
        if (_daoFund != address(0)) daoFundAddress = _daoFund;
        if (_router != address(0)) router = IJoeRouter02(_router);
        if (_taxManager != address(0)) taxManager = ITaxManager(_taxManager);
        poolStartTime = _poolStartTime;
        poolEndTime = poolStartTime + runningTime;
        operator = msg.sender;
    }

    modifier onlyOperator() {
        require(
            operator == msg.sender,
            "ArenaPool: caller is not the operator"
        );
        _;
    }

    function checkTaxTiers(
        uint256[] memory _periodTiers,
        uint256[] memory _taxTiers
    ) internal view {
        require(
            _periodTiers.length == _taxTiers.length,
            "tier length mismatch"
        );
        for (uint256 i = 0; i < _periodTiers.length; i++) {
            require(_taxTiers[i] < 10000, "tax out of range");
            if (i > 0) {
                require(
                    _periodTiers[i - 1] < _periodTiers[i],
                    "tier invalid order"
                );
            }
        }
    }

    function updatePoolTaxTiers(
        uint256 _pid,
        uint256[] memory _periodTiers,
        uint256[] memory _taxTiers
    ) public onlyOperator {
        checkTaxTiers(_periodTiers, _taxTiers);

        PoolInfo storage pool = poolInfo[_pid];
        pool.periodTiers = _periodTiers;
        pool.taxTiers = _taxTiers;
    }

    function checkPoolDuplicate(IERC20 _token) internal view {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            require(poolInfo[pid].token != _token, "ArenaPool: existing pool?");
        }
    }

    // Add a new token to the pool. Can only be called by the owner.
    function add(
        uint256 _allocPoint,
        IERC20 _token,
        bool _withUpdate,
        uint256 _lastRewardTime,
        address _nft,
        uint256[] memory _periodTiers,
        uint256[] memory _taxTiers
    ) public onlyOperator {
        checkPoolDuplicate(_token);
        checkTaxTiers(_periodTiers, _taxTiers);
        if (_withUpdate) {
            massUpdatePools();
        }
        if (block.timestamp < poolStartTime) {
            // chef is sleeping
            if (_lastRewardTime == 0) {
                _lastRewardTime = poolStartTime;
            } else {
                if (_lastRewardTime < poolStartTime) {
                    _lastRewardTime = poolStartTime;
                }
            }
        } else {
            // chef is cooking
            if (_lastRewardTime == 0 || _lastRewardTime < block.timestamp) {
                _lastRewardTime = block.timestamp;
            }
        }
        bool _isStarted = (_lastRewardTime <= poolStartTime) ||
            (_lastRewardTime <= block.timestamp);
        poolInfo.push(
            PoolInfo({
                token: _token,
                allocPoint: _allocPoint,
                lastRewardTime: _lastRewardTime,
                accRewardPerShare: 0,
                isStarted: _isStarted,
                nft: _nft,
                periodTiers: _periodTiers,
                taxTiers: _taxTiers
            })
        );
        if (_isStarted) {
            totalAllocPoint = totalAllocPoint.add(_allocPoint);
        }
    }

    // Update the given pool's TOMB allocation point. Can only be called by the owner.
    function set(uint256 _pid, uint256 _allocPoint) public onlyOperator {
        massUpdatePools();
        PoolInfo storage pool = poolInfo[_pid];
        if (pool.isStarted) {
            totalAllocPoint = totalAllocPoint.sub(pool.allocPoint).add(
                _allocPoint
            );
        }
        pool.allocPoint = _allocPoint;
    }

    // Return accumulate rewards over the given _from to _to block.
    function getGeneratedReward(uint256 _fromTime, uint256 _toTime)
        public
        view
        returns (uint256)
    {
        if (_fromTime >= _toTime) return 0;
        if (_toTime >= poolEndTime) {
            if (_fromTime >= poolEndTime) return 0;
            if (_fromTime <= poolStartTime)
                return poolEndTime.sub(poolStartTime).mul(rewardPerSecond);
            return poolEndTime.sub(_fromTime).mul(rewardPerSecond);
        } else {
            if (_toTime <= poolStartTime) return 0;
            if (_fromTime <= poolStartTime)
                return _toTime.sub(poolStartTime).mul(rewardPerSecond);
            return _toTime.sub(_fromTime).mul(rewardPerSecond);
        }
    }

    // View function to see pending reward on frontend.
    function pendingReward(uint256 _pid, address _user)
        external
        view
        returns (uint256)
    {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 accRewardPerShare = pool.accRewardPerShare;
        uint256 tokenSupply = pool.token.balanceOf(address(this));
        if (block.timestamp > pool.lastRewardTime && tokenSupply != 0) {
            uint256 _generatedReward = getGeneratedReward(
                pool.lastRewardTime,
                block.timestamp
            );
            uint256 _reward = _generatedReward.mul(pool.allocPoint).div(
                totalAllocPoint
            );
            accRewardPerShare = accRewardPerShare.add(
                _reward.mul(1e18).div(tokenSupply)
            );
        }
        return
            user.amount.mul(accRewardPerShare).div(1e18).sub(user.rewardDebt);
    }

    // Update reward variables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.timestamp <= pool.lastRewardTime) {
            return;
        }
        uint256 tokenSupply = pool.token.balanceOf(address(this));
        if (tokenSupply == 0) {
            pool.lastRewardTime = block.timestamp;
            return;
        }
        if (!pool.isStarted) {
            pool.isStarted = true;
            totalAllocPoint = totalAllocPoint.add(pool.allocPoint);
        }
        if (totalAllocPoint > 0) {
            uint256 _generatedReward = getGeneratedReward(
                pool.lastRewardTime,
                block.timestamp
            );
            uint256 _reward = _generatedReward.mul(pool.allocPoint).div(
                totalAllocPoint
            );
            pool.accRewardPerShare = pool.accRewardPerShare.add(
                _reward.mul(1e18).div(tokenSupply)
            );
        }
        pool.lastRewardTime = block.timestamp;
    }

    // Deposit LP tokens.
    function deposit(uint256 _pid, uint256 _amount) public whenNotPaused {
        address _sender = msg.sender;
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_sender];
        updatePool(_pid);
        if (user.amount > 0) {
            uint256 _pending = user
                .amount
                .mul(pool.accRewardPerShare)
                .div(1e18)
                .sub(user.rewardDebt);
            if (_pending > 0) {
                IBasisAsset(rewardToken).mint(_sender, _pending);
                emit RewardPaid(_sender, _pending);
            }
        }
        if (_amount > 0) {
            pool.token.safeTransferFrom(_sender, address(this), _amount);
            _depositFor(_pid, _sender, _amount);
        }
        user.rewardDebt = user.amount.mul(pool.accRewardPerShare).div(1e18);
    }

    // Zap AVAX
    function zap(uint256 _pid) public payable whenNotPaused {
        address _sender = msg.sender;
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_sender];
        updatePool(_pid);

        if (user.amount > 0) {
            uint256 _pending = user
                .amount
                .mul(pool.accRewardPerShare)
                .div(1e18)
                .sub(user.rewardDebt);
            if (_pending > 0) {
                IBasisAsset(rewardToken).mint(_sender, _pending);
                emit RewardPaid(_sender, _pending);
            }
        }

        if (msg.value > 0) {
            address wavax = router.WAVAX();
            WAVAX(wavax).deposit{value: msg.value}();

            IJoePair pair = IJoePair(address(pool.token));
            address token0 = pair.token0();
            address token1 = pair.token1();
            uint256 sellAmount = msg.value / 2;
            uint256 amount0 = _swapTokenForToken(wavax, token0, sellAmount);
            uint256 amount1 = _swapTokenForToken(wavax, token1, sellAmount);

            IERC20(token0).safeApprove(address(router), 0);
            IERC20(token0).safeApprove(address(router), amount0);
            IERC20(token1).safeApprove(address(router), 0);
            IERC20(token1).safeApprove(address(router), amount1);

            (, , uint256 liquidity) = router.addLiquidity(
                token0,
                token1,
                amount0,
                amount1,
                0,
                0,
                address(this),
                block.timestamp
            );

            _depositFor(_pid, _sender, liquidity);
        }

        user.rewardDebt = user.amount.mul(pool.accRewardPerShare).div(1e18);
    }

    function _withdrawTax(uint256 _pid, address _user)
        internal
        view
        returns (uint256)
    {
        PoolInfo memory pool = poolInfo[_pid];
        UserInfo memory user = userInfo[_pid][_user];

        if (pool.periodTiers.length == 0) return 0;

        uint256 depositDuration = block.timestamp - user.depositedAt;
        if (depositDuration < pool.periodTiers[0]) return pool.taxTiers[0];
        for (uint256 i = 1; i < pool.periodTiers.length; i++) {
            if (depositDuration < pool.periodTiers[i]) {
                return
                    pool.taxTiers[i] +
                    ((pool.taxTiers[i - 1] - pool.taxTiers[i]) *
                        (pool.periodTiers[i] - depositDuration)) /
                    (pool.periodTiers[i] - pool.periodTiers[i - 1]);
            }
        }
        return 0;
    }

    // Withdraw LP tokens.
    function withdraw(uint256 _pid, uint256 _amount) public whenNotPaused {
        address _sender = msg.sender;
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_sender];

        require(user.amount >= _amount, "withdraw: not good");
        updatePool(_pid);
        uint256 _pending = user
            .amount
            .mul(pool.accRewardPerShare)
            .div(1e18)
            .sub(user.rewardDebt);
        if (_pending > 0) {
            IBasisAsset(rewardToken).mint(_sender, _pending);
            emit RewardPaid(_sender, _pending);
        }
        if (_amount > 0) {
            uint256 tax = _withdrawTax(_pid, _sender);
            user.amount = user.amount.sub(_amount);
            uint256 taxAmount = _amount.mul(tax).div(10000);
            if (taxAmount > 0) {
                pool.token.safeApprove(address(taxManager), taxAmount);
                taxManager.processTax(address(pool.token), taxAmount);
            }
            pool.token.safeTransfer(_sender, _amount.sub(taxAmount));
        }
        user.rewardDebt = user.amount.mul(pool.accRewardPerShare).div(1e18);
        emit Withdraw(_sender, _pid, _amount);
    }

    function _depositFor(
        uint256 _pid,
        address _sender,
        uint256 _amount
    ) private {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_sender];

        if (pool.nft != address(0)) {
            require(
                IERC721(pool.nft).balanceOf(_sender) > 0,
                "deposit: must hold an NFT"
            );
        }

        uint256 depositDebt = _amount.mul(100).div(10000);
        uint256 depositAmount = _amount.sub(depositDebt);
        user.amount = user.amount.add(depositAmount);
        user.depositedAt = block.timestamp;
        pool.token.safeTransfer(daoFundAddress, depositDebt);

        emit Deposit(_sender, _pid, _amount);
    }

    function _swapTokenForToken(
        address tokenIn,
        address tokenOut,
        uint256 amountIn
    ) private returns (uint256) {
        if (tokenIn == tokenOut) {
            return amountIn;
        }
        address[] memory path = new address[](2);
        path[0] = tokenIn;
        path[1] = tokenOut;

        IERC20(tokenIn).safeApprove(address(router), 0);
        IERC20(tokenIn).safeApprove(address(router), amountIn);

        uint256[] memory amountsOut = router.swapExactTokensForTokens(
            amountIn,
            0,
            path,
            address(this),
            block.timestamp
        );
        return amountsOut[1];
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) public {
        require(emergencyWithdrawEnabled, "emergency withdraw disabled");

        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        uint256 _amount = user.amount;
        user.amount = 0;
        user.rewardDebt = 0;
        user.depositedAt = 0;
        pool.token.safeTransfer(msg.sender, _amount);
        emit EmergencyWithdraw(msg.sender, _pid, _amount);
    }

    function setEmergencyWithdrawEnabled(bool enabled) external onlyOperator {
        emergencyWithdrawEnabled = enabled;
    }

    function setOperator(address _operator) external onlyOperator {
        operator = _operator;
    }

    function finalize() external onlyOperator {
        require(!finalized, "finalized");
        finalized = true;
    }

    function setRewardPerSecond(uint256 _rewardPerSecond)
        external
        onlyOperator
    {
        require(!finalized, "finalized");
        rewardPerSecond = _rewardPerSecond;
    }

    function setRunningTime(uint256 _runningTime) external onlyOperator {
        require(!finalized, "finalized");
        require(
            poolStartTime + runningTime > block.timestamp,
            "running time too short"
        );

        runningTime = _runningTime;
        poolEndTime = poolStartTime + runningTime;
    }

    function governanceRecoverUnsupported(
        IERC20 _token,
        uint256 amount,
        address to
    ) external onlyOperator {
        if (block.timestamp < poolEndTime + 90 days) {
            // do not allow to drain core token (TOMB or lps) if less than 33 days after pool ends
            require(address(_token) != address(rewardToken), "reward token");
            uint256 length = poolInfo.length;
            for (uint256 pid = 0; pid < length; ++pid) {
                PoolInfo storage pool = poolInfo[pid];
                require(_token != pool.token, "pool.token");
            }
        }
        _token.safeTransfer(to, amount);
    }
}

