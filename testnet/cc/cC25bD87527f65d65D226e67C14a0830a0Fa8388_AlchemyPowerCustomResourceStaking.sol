contract AlchemyPowerCustomResourceStaking is Ownable, ERC1155Holder {
    struct UserPayout {
        uint256 startingValue;
        uint256 targetValue;
        uint256 startingTime;
        uint256 targetTime;
        uint256 paidOut;
    }

    IAlchemyPower public immutable alchemyPower;
    IResourceFactory public immutable factory;
    ITimeProvider public immutable timeProvider;

    mapping (address => mapping (IResourceToken => mapping (uint256 => uint256))) private _stakedTokens;
    mapping (address => UserPayout) public userPayouts;
    uint256 public constant payoutDuration = 7 days;

    event CustomResourceStaked(address indexed account, IResourceToken indexed token, uint256 tokenId, uint256 amount);
    event CustomResourceUnstaked(address indexed account, IResourceToken indexed token, uint256 tokenId, uint256 amount);

    constructor(IAlchemyPower alchemyPower_, IResourceFactory factory_, ITimeProvider timeProvider_) {
        alchemyPower = alchemyPower_;
        factory = factory_;
        timeProvider = timeProvider_;
    }

    function stake(IResourceToken token, uint256 tokenId, uint256 amount) external {
        require(factory.resourceTokenFactory().deployedTokens(token), "unsupported token");
        require(!token.getResourceIsBase(tokenId), "base resources are not allowed");

        uint256 apAmount = token.getResourceWeight(tokenId) * amount * 1e18;
        UserPayout storage payout = userPayouts[msg.sender];
        _claimAlchemyPower(msg.sender);
        uint256 timestamp = timeProvider.getTimestamp();
        payout.startingValue = payout.paidOut;
        payout.startingTime = timestamp;
        payout.targetValue += apAmount;
        payout.targetTime = timestamp + payoutDuration;
        _stakedTokens[msg.sender][token][tokenId] += amount;

        token.safeTransferFrom(msg.sender, address(this), tokenId, amount, "");
        emit CustomResourceStaked(msg.sender, token, tokenId, amount);
    }

    function unstake(IResourceToken token, uint256 tokenId, uint256 amount) external {
        uint256 currentBalance = _stakedTokens[msg.sender][token][tokenId];
        require(currentBalance >= amount, "insufficient staked tokens");

        uint256 apAmount = token.getResourceWeight(tokenId) * amount * 1e18;
        UserPayout storage payout = userPayouts[msg.sender];
        uint256 newTargetValue = payout.targetValue - apAmount;
        _claimAlchemyPower(msg.sender);
        if (payout.paidOut > newTargetValue) {
            payout.startingValue = 0;
            payout.startingTime = 0;
            payout.targetValue = newTargetValue;
            payout.targetTime = 0;
            alchemyPower.burn(msg.sender, payout.paidOut - newTargetValue);
            payout.paidOut = newTargetValue;
        } else {
            uint256 timestamp = timeProvider.getTimestamp();
            payout.startingValue = payout.paidOut;
            payout.startingTime = timestamp;
            payout.targetValue = newTargetValue;
            payout.targetTime = timestamp + payoutDuration;
        }
        _stakedTokens[msg.sender][token][tokenId] = currentBalance - amount;

        token.safeTransferFrom(address(this), msg.sender, tokenId, amount, "");
        emit CustomResourceUnstaked(msg.sender, token, tokenId, amount);
    }

    function pendingAlchemyPower(address account) public view returns (uint256) {
        uint256 timestamp = timeProvider.getTimestamp();
        UserPayout memory payout = userPayouts[account];
        uint256 valuesDelta = payout.targetValue - payout.startingValue;
        uint256 pendingDelta;
        if (timestamp >= payout.targetTime) {
            pendingDelta = valuesDelta;
