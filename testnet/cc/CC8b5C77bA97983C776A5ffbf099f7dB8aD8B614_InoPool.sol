        );

        _forwardFunds(message.fundingWallet, _inAmount);

        (uint256 startTokenId, uint256 toTokenId) = IInoERC721(message.outToken).mintTo(
            msg.sender,
            message.outAmount,
            message.outPackageId
        );

        _updatePurchasingState(_inAmount, message.outAmount);

        userInvested[msg.sender] += _inAmount;

        emit TokenPurchaseByEther(msg.sender, _inAmount, message.outToken, message.outAmount, startTokenId, toTokenId);
    }

    function buyNftByTokenWithPermission(InoMessage memory message, bytes memory _signature)
        public
        whenNotPaused
        nonReentrant
    {
        message.candidate = msg.sender;

        require(_verifyWhitelist(message, _signature), "POOL:INVALID_SIGNATURE");

        _preValidateToken(message.inToken);
        _preValidatePurchase(message.inAmount);

        require(message.totalSupply >= tokenSold + message.outAmount, "POOL::NOT_ENOUGH_TOKENS_FOR_SALE");
        require(userPurchased[msg.sender] + message.outAmount >= message.minAmount, "POOL::MIN_AMOUNT_UNREACHED");
        require(
            userPurchased[msg.sender] + message.outAmount <= message.maxAmount,
            "POOL:PURCHASE_AMOUNT_EXCEED_ALLOWANCE"
        );

        _forwardTokenFunds(message.fundingWallet, message.inToken, message.inAmount);

        (uint256 startTokenId, uint256 toTokenId) = IInoERC721(message.outToken).mintTo(
            msg.sender,
            message.outAmount,
            message.outPackageId
        );

        _updatePurchasingState(message.inAmount, message.outAmount);

        userInvested[msg.sender] += message.inAmount;

        emit TokenPurchaseByToken(
            msg.sender,
            message.inToken,
            message.inAmount,
            message.outToken,
            message.outAmount,
            startTokenId,
            toTokenId
        );
    }

    /**
     * @notice Owner can set the offered token conversion rate.
     * Receiver tokens = tradeTokens * tokenRate / 10 ** etherConversionRateDecimals
     * @param _newSigner Address of new signer
     */
    function setNewSigner(address _newSigner) external onlyOwner {
        require(signer != _newSigner, "POOL::SIGNER_INVALID");
        address previousSigner = signer;
        signer = _newSigner;
        emit SetNewSigner(msg.sender, previousSigner, _newSigner);
    }

    /**
     * @dev validate token, get data from first buy
     */
    function _preValidateToken(address _inToken) internal {
        if (investedToken == address(1)) {
            investedToken = _inToken;
        }

        require(investedToken == _inToken, "POOL:INVALID_INVESTED_TOKEN");
    }

    /**
     * @dev Validation of an incoming purchase.
     * Use require statements to revert state when conditions are not met. Use super to concatenate validations.
     * @param _weiAmount Value in wei involved in the purchase
     */
    function _preValidatePurchase(uint256 _weiAmount) internal pure {
        require(_weiAmount != 0, "POOL::INVALID_WEI_AMOUNT");
    }

    /**
     * @param _tokens Value of sold tokens
     * @param _weiAmount Value in wei involved in the purchase
     */
    function _updatePurchasingState(uint256 _weiAmount, uint256 _tokens) internal {
        weiRaised = weiRaised + _weiAmount;
        tokenSold = tokenSold + _tokens;
        userPurchased[msg.sender] = userPurchased[msg.sender] + _tokens;
    }

    /**
     * @dev Determines how ETH is stored/forwarded on purchases.
     */
    function _forwardFunds(address _fundingWallet, uint256 _value) internal {
        address payable wallet = payable(_fundingWallet);
        (bool success, ) = wallet.call{ value: _value }("");
        require(success, "POOL::WALLET_TRANSFER_FAILED");
    }

    /**
     * @dev Determines how Token is stored/forwarded on purchases.
     */
    function _forwardTokenFunds(
        address _fundingWallet,
        address _token,
        uint256 _amount
    ) internal {
        TransferHelper.safeTransferFrom(_token, msg.sender, _fundingWallet, _amount);
    }

    /**
     * @dev Verify permission of purchase
     * @param _signature Signature of signers
     */
    function _verifyWhitelist(InoMessage memory message, bytes memory _signature) private view returns (bool) {
        return verify(signer, message, _signature);
    }
