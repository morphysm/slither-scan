pragma solidity 0.8.11;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "../interfaces/ISparkWorldToken.sol";

/**
 *  @notice this contract's address must be added to lossless:
 *        https://lossless-cash.gitbook.io/lossless/guides/lossless-vault-protection-user-guide
 */
contract RewardManager is AccessControl {
    ISparkWorldToken sparkWorldToken;

    bytes32 public constant OWNER_ROLE = keccak256("OWNER_ROLE");
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");
    bytes32 public constant REWARDER_ROLE = keccak256("REWARDER_ROLE");

    /**
     * @param owner project ownerâ€™s wallet that is used to change operator in case of operator's
     *        private key exposure. This address's private key must not be on a server.
     */
    constructor(ISparkWorldToken _sparkWorldToken, address owner) {
        sparkWorldToken = _sparkWorldToken;
        _setupRole(OWNER_ROLE, owner);
        _setupRole(ADMIN_ROLE, _msgSender());
        _setupRole(ADMIN_ROLE, owner);
        _setRoleAdmin(OWNER_ROLE, OWNER_ROLE);
        _setRoleAdmin(ADMIN_ROLE, OWNER_ROLE);
        _setRoleAdmin(OPERATOR_ROLE, ADMIN_ROLE);
        _setRoleAdmin(REWARDER_ROLE, OPERATOR_ROLE);
    }

    function setOperator(address _newOperator) public onlyRole(ADMIN_ROLE) {
        require(
            _newOperator != address(0),
            "0200 New Operator address cannot be zero."
        );

        _setupRole(OPERATOR_ROLE, _newOperator);
    }

    function addPool(address _poolAddress) public onlyRole(OPERATOR_ROLE) {
        require(
            _poolAddress != address(0),
            "0210 Pool address cannot be zero."
        );

        _setupRole(REWARDER_ROLE, _poolAddress);
    }

    function rewardUser(address _user, uint256 _amount)
        public
        onlyRole(REWARDER_ROLE)
    {
        require(_user != address(0), "0230 User address cannot be zero.");

        require(sparkWorldToken.transfer(_user, _amount));
    }
}

