pragma solidity ^0.8.13;

import "./SheepCore.sol";

/**
 * @title Genesis Sheep
 * @notice Genesis Sheep NFT for PlayDreamland.io
 * @author BowTiedPickle
 */
contract GenesisSheep is SheepCore {
    // ----- Errors -----
    error MaxSupply();
    error Initialized();
    error OnlyMinter();

    event Withdrawal(uint256 balance);
    event MinterSet(address minter);

    /// @notice Admin address, recipient of token sweeps
    address public immutable admin;

    /// @notice Minter contract address
    address public minter;

    /// @notice Maximum allowable token supply
    uint256 public immutable maxSupply;

    /**
     * @dev Setting alpha + beta == max supply will disable admin minting
     * @param _name Token name
     * @param _symbol Token symbol
     * @param _admin Token sweep recipient, DEFAULT_ADMIN_ROLE
     * @param _maxSupply Total supply available across alpha, beta, and admin mints
     * @param _royaltyBPS Royalty in basis points, may not exceed 1000 pts (10%)
     * @param _subscriptionId Chainlink VRF subscription ID
     */
    constructor(
        string memory _name,
        string memory _symbol,
        address _admin,
        uint256 _maxSupply,
        uint96 _royaltyBPS,
        uint64 _subscriptionId,
        address _vrfCoordinator,
        address _elixirs
    ) SheepCore(_name, _symbol, _subscriptionId, _vrfCoordinator, _elixirs) {
        if (_admin == address(0)) revert ZeroAddress();
        _grantRole(DEFAULT_ADMIN_ROLE, _admin);
        admin = _admin;

        maxSupply = _maxSupply;

        if (_royaltyBPS > 1000) revert Params();
        _setDefaultRoyalty(_admin, _royaltyBPS);
    }

    /**
     * @notice Permissioned mint function
     * @param _to Recipient address
     * @param _qty Number of NFTs to mint
     */
    function mint(address _to, uint256 _qty) external {
        if (msg.sender != minter) revert OnlyMinter();
        if (nextTokenId() + _qty - 1 > maxSupply) revert MaxSupply();

        for (uint256 i; i < _qty; i++) {
            mintInternal(_to);
        }
    }

    // ----- Admin Functions -----

    /**
     * @notice Sets the minter address, may only be called once
     * @param _minter The sole address with minting rights for this NFT
     */
    function init(address _minter) external onlyRole(DEFAULT_ADMIN_ROLE) {
        if (_minter == address(0)) revert ZeroAddress();
        if (minter != address(0)) revert Initialized();
        minter = _minter;
        emit MinterSet(_minter);
    }

    /**
     * @notice Sweeps accidental ERC-20 transfers to this contract
     * @param _token ERC-20 token to be swept
     */
    function sweepToken(IERC20 _token) external onlyRole(DEFAULT_ADMIN_ROLE) {
        uint256 balance = _token.balanceOf(address(this));
        _token.transfer(admin, balance);
        emit TokenSwept(address(_token), balance);
    }

    /**
     * @notice Sets a new royalty numerator
     * @dev Cannot exceed 10%
     * @param _royaltyBPS New royalty, denominated in BPS (10000 = 100%)
     * @return True on success
     */
    function setRoyalty(uint96 _royaltyBPS) external onlyRole(DEFAULT_ADMIN_ROLE) returns (bool) {
        require(_royaltyBPS <= 1000, "!bps");

        _setDefaultRoyalty(admin, _royaltyBPS);

        emit NewRoyalty(_royaltyBPS);
        return true;
    }
}

pragma solidity ^0.8.13;

import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/common/ERC2981.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBaseV2.sol";

import "./interfaces/IElixirs.sol";

contract SheepCore is ERC721, AccessControl, ERC2981, VRFConsumerBaseV2 {
    VRFCoordinatorV2Interface COORDINATOR;

    uint64 immutable s_subscriptionId;
    address public vrfCoordinator;
    bytes32 constant keyHash = 0x354d2f95da55398f44b7cff77da56283d9c6c829a4bdf1bbcaf2ad6a4d081f61;
    uint32 constant callbackGasLimit = 250000;
    uint16 constant requestConfirmations = 3;
    uint32 constant hatchWords = 2;
    uint32 constant mintWords = 1;

    mapping(uint256 => uint256) s_requestIdToTokenId;
    mapping(uint256 => uint256[]) public s_requestIdToRandomWords;

    using Counters for Counters.Counter;

    Counters.Counter internal nextId;

    error HatchError();
    error HatchForbidden();
    error ZeroAddress();
    error NotOwner();
    error Params();

    event NewURI(string newURI);
    event TokenSwept(address indexed token, uint256 amount);
    event Hatch(uint256 tokenId, uint256 rarityRNG, uint256 traitsRNG);
    event EyeColor(uint256 tokenId, uint256 eyeRNG);
    event HatchAllowed(bool status);
    event NewRoyalty(uint256 _newRoyalty);
    event NewElixirThreshold(uint256 _newElixirThreshold);

    uint8 internal constant STATUS_ZERO = 0;
    uint8 public constant STATUS_EGG = 1;
    uint8 public constant STATUS_HATCHING = 2;
    uint8 public constant STATUS_ADULT = 3;

    /// @notice Mapping of tokenID to hatching status
    mapping(uint256 => uint8) public sheepStatus;

    /// @notice Hatching allowed on the contract
    bool public hatchAllowed;

    string public baseURI;

    IElixirs public immutable elixirs;
    uint256 elixirThreshold = 100_000;

    constructor(
        string memory _name,
        string memory _symbol,
        uint64 subscriptionId,
        address _vrfCoordinator,
        address _elixirs
    ) ERC721(_name, _symbol) VRFConsumerBaseV2(_vrfCoordinator) {
        nextId.increment();
        COORDINATOR = VRFCoordinatorV2Interface(_vrfCoordinator);
        s_subscriptionId = subscriptionId;

        if (_elixirs == address(0)) revert ZeroAddress();
        elixirs = IElixirs(_elixirs);
    }

    function mintInternal(address _to) internal {
        uint256 tokenId = nextId.current();
        nextId.increment();

        sheepStatus[tokenId] = STATUS_EGG;

        _mint(_to, tokenId);

        requestRandomWordsInternal(tokenId, mintWords);
    }

    /**
     * @notice Hatch a sheep egg
     * @param tokenId TokenID of the sheep to hatch
     */
    function hatch(uint256 tokenId) external {
        if (!hatchAllowed) revert HatchForbidden();
        if (sheepStatus[tokenId] != STATUS_EGG) revert HatchError();
        if (msg.sender != ownerOf(tokenId)) revert NotOwner();
        // if (s_tokenIdToRequestId[tokenId] != 0) revert HatchError();

        sheepStatus[tokenId] = STATUS_HATCHING;

        requestRandomWordsInternal(tokenId, hatchWords);
    }

    function nextTokenId() public view returns (uint256) {
        return nextId.current();
    }

    function _baseURI() internal view override returns (string memory) {
        return baseURI;
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC721, ERC2981, AccessControl) returns (bool) {
        return
            interfaceId == type(ERC2981).interfaceId ||
            interfaceId == type(AccessControl).interfaceId ||
            ERC721.supportsInterface(interfaceId);
    }

    // ----- Admin Functions -----

    /**
     * @notice Set a new base URI
     * @param _newURI new URI string
     */
    function setURI(string memory _newURI) external onlyRole(DEFAULT_ADMIN_ROLE) {
        baseURI = _newURI;
        emit NewURI(_newURI);
    }

    /// @notice Toggle if hatching is allowed
    function toggleHatchAllowed() external onlyRole(DEFAULT_ADMIN_ROLE) {
        hatchAllowed = !hatchAllowed;
        emit HatchAllowed(hatchAllowed);
    }

    function setElixirThreshold(uint256 _elixirThreshold) external onlyRole(DEFAULT_ADMIN_ROLE) {
        elixirThreshold = _elixirThreshold;
        emit NewElixirThreshold(_elixirThreshold);
    }

    // ----- Chainlink VRF -----

    function requestRandomWordsInternal(uint256 _id, uint32 _numWords) internal {
        uint256 requestId = COORDINATOR.requestRandomWords(keyHash, s_subscriptionId, requestConfirmations, callbackGasLimit, _numWords);
        s_requestIdToTokenId[requestId] = _id;
        // s_tokenIdToRequestId[_id] = requestId;
    }

    function fulfillRandomWords(uint256 requestId, uint256[] memory randomWords) internal override {
        s_requestIdToRandomWords[requestId] = randomWords;
        uint256 tokenId = s_requestIdToTokenId[requestId];

        if (sheepStatus[tokenId] == STATUS_EGG) {
            uint256 eyeRNG = randomWords[0] % 100_000;
            emit EyeColor(tokenId, eyeRNG);
        } else {
            sheepStatus[tokenId] = STATUS_ADULT;
            uint256 rarityRNG = randomWords[0] % 100_000;
            uint256 traitRNG = randomWords[1] % 100_000;

            if (rarityRNG <= elixirThreshold) {
                elixirs.mint(ownerOf(tokenId), 1, 1);
            }

            emit Hatch(tokenId, rarityRNG, traitRNG);
        }
    }
}

