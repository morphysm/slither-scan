pragma solidity ^0.8.0;



contract NFTMarketPlace{
    address _NFT;
    address _erc20;
    mapping (uint=> myNFT) public market;

    struct myNFT{
        uint price;
        bool isOnSale;
    }
    constructor( address NFT, address erc20){
        _NFT= NFT;
        _erc20=erc20;
    }
    function setOnSale(uint id, uint amount) public{
        require(IERC721A(_NFT).ownerOf(id)== msg.sender, "Only Owner can set NFT on sale");
        market[id].price=amount;
        market[id].isOnSale= true;
    }
    function buyNFT(uint id) public{
        require(market[id].isOnSale, "This NFT is not on sale"); 
        address owner= IERC721A(_NFT).ownerOf(id);
        IERC20(_erc20).transferFrom(msg.sender, owner, market[id].price);
        IERC721A(_NFT).safeTransferFrom(owner, msg.sender, id);
        market[id].isOnSale= false;
        market[id].price=0;      
    }
}