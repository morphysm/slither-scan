pragma solidity 0.8.7;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";


interface StakingRewards {
    function periodFinish() external view returns(uint256);
    function notifyRewardAmount(uint256) external;
    function owner() external view returns(address);
    function transferOwnership(address) external;

    // Legacy Contrats
    function nominatedOwner() external view returns(address);
    function nominateNewOwner(address) external;
    function acceptOwnership() external;
}

contract FarmPoolManager is Ownable {
    string public name = "FarmPoolManager";

    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    struct Pool {
        address pool;
        string name;
        uint256 rewardAmount;
        bool legacy;
        bool active;
    }

    /* ========== STATE VARIABLES ========== */

    address public treasury;
    IERC20 public rewardsToken;

    Pool[] private pools;
    mapping(address => uint256) private poolMap;

    /* ========== CONSTRUCTOR ========== */

    constructor(address _rewardsToken, address _treasury) {
        rewardsToken = IERC20(_rewardsToken);
        treasury = _treasury;
    }

    /* ========== VIEWS ========== */

    function poolCount() external view returns (uint256) {
        return pools.length;
    }

    function getPool(uint256 id) public view returns (Pool memory) {
        return pools[id];
    }

    function getPoolByAddress(address pool) public view returns (Pool memory) {
        return getPool(poolMap[pool].sub(1));
    }

    function checkPeriodFinish(uint256 id) public view returns (bool) {
        return block.timestamp > StakingRewards(getPool(id).pool).periodFinish();
    }

    /* ========== MUTATIVE FUNCTIONS ========== */

    function addPool(uint256 rewardAmount, address poolAddr, string memory poolName, bool legacy) external onlyOwner {
        if (legacy) {
            require(StakingRewards(poolAddr).nominatedOwner() == address(this), "Invalid Ownership!");
            StakingRewards(poolAddr).acceptOwnership();
        } else {
            require(StakingRewards(poolAddr).owner() == address(this), "Invalid Ownership!");
        }
        uint256 poolId = poolMap[poolAddr];
        if (poolId > 0) { // Exists Pool
            poolId = poolId.sub(1);
            require(!pools[poolId].active, "Pool Already Added!");
            pools[poolId].rewardAmount = rewardAmount;
            pools[poolId].name = poolName;
            pools[poolId].active = true;
            emit PoolUpdated(pools[poolId]);
        } else {
            Pool memory newPool = Pool(
                poolAddr,
                poolName,
                rewardAmount,
                legacy,
                true
            );
            pools.push(newPool);
            poolMap[poolAddr] = pools.length;
            emit PoolAdded(newPool);
        }
    }

    function removePool(uint256 id) external onlyOwner {
        require(id <= pools.length, "Invalid Pool ID!");
        require(pools[id].active, "Pool Already Removed!");
        if (pools[id].legacy) {
            StakingRewards(pools[id].pool).nominateNewOwner(owner());
        } else {
            StakingRewards(pools[id].pool).transferOwnership(owner());
        }
        pools[id].active = false;
        emit PoolRemoved(pools[id]);
    }

    function updatePoolReward(uint256 id, uint256 rewardAmount) external onlyOwner {
        require(id <= pools.length, "Invalid Pool ID!");
        require(pools[id].rewardAmount != rewardAmount, "Invalid Reward Amount!");
        pools[id].rewardAmount = rewardAmount;
        emit PoolUpdated(pools[id]);
    }

    function fundPool(uint256 id) external onlyOwner {
        require(id <= pools.length, "Invalid Pool ID!");
        require(checkPeriodFinish(id), "Pool Not Finished!");
        require(rewardsToken.balanceOf(treasury) > pools[id].rewardAmount, "Insufficient Rewards Token!");
        rewardsToken.safeTransferFrom(treasury, pools[id].pool, pools[id].rewardAmount);
        StakingRewards(pools[id].pool).notifyRewardAmount(pools[id].rewardAmount);
        emit PoolFunded(pools[id]);
    }

    function updateTreasury(address _treasury) external onlyOwner {
        require(_treasury != treasury, "Invalid Treasury!");
        treasury = _treasury;
        emit TreasuryUpdated(_treasury);
    }

    /* ========== EVENTS ========== */

    event PoolAdded(Pool pool);
    event PoolRemoved(Pool pool);
    event PoolUpdated(Pool pool);
    event PoolFunded(Pool pool);
    event TreasuryUpdated(address newTreasury);
}

