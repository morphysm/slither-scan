abstract contract ReceiptECDSA is EIP712 {
    using ECDSA for bytes32;

    uint256 public requestLifetime = 15 minutes;

    bytes32 private constant RECEIPT_SCHEMA_HASH =
        keccak256(
            "Receipt(uint256 amount,address token,address from,address to,string fromName,string toName,uint256 receiptId,uint256 creationTimestamp)"
        );
    bytes32 private constant UPDATE_NAME_SCHEMA_HASH =
        keccak256(
            "UpdateName(uint256 tokenId,address operator,string newName,uint256 signTimestamp)"
        );

    mapping(bytes32 => bool) public hashes;

    constructor(string memory _contractName) EIP712(_contractName, "1.0") {}

    function setRequestLifetime(uint256 _new) external {
        if (msg.sender != owner()) revert();
        requestLifetime = _new;
    }

    function _useSignature(
        uint256 _amount,
        address _token,
        address _from,
        address _to,
        string memory _fromName,
        string memory _toName,
        uint256 _receiptId,
        uint256 _creationTimestamp,
        bytes memory _signature
    ) internal {
        checkRequestLifetime(_creationTimestamp);
        bytes32 hash = getReceiptHash(
            _amount,
            _token,
            _from,
            _to,
            _fromName,
            _toName,
            _receiptId,
            _creationTimestamp
        );

        recoverOwner(hash, _signature);
    }

    function _useSignature(
        uint256 _tokenId,
        address _operator,
        string memory _newName,
        uint256 _signTimestamp,
        bytes memory _signature
    ) internal {
        checkRequestLifetime(_signTimestamp);
        bytes32 hash = getUpdateNameHash(
            _tokenId,
            _operator,
            _newName,
            _signTimestamp
        );

        recoverOwner(hash, _signature);
    }

    function recoverOwner(bytes32 _hash, bytes memory _signature) internal {
        if (hashes[_hash]) revert AlreadyClaimed(_hash);
        hashes[_hash] = true;

        address signer = _hash.toEthSignedMessageHash().recover(_signature);
        if (signer != owner()) revert SignerNotOwner(signer);
