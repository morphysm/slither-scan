    function checkRequestLifetime(uint256 _startTimestamp) internal view {
        if (_startTimestamp + requestLifetime < block.timestamp)
            revert RequestLifetimeHasExpired();
    }

    function getReceiptHash(
        uint256 _amount,
        address _token,
        address _from,
        address _to,
        string memory _fromName,
        string memory _toName,
        uint256 _receiptId,
        uint256 _creationTimestamp
    ) public view returns (bytes32) {
        bytes32 structHash = _buildReceiptStructHash(
            _amount,
            _token,
            _from,
            _to,
            _fromName,
            _toName,
            _receiptId,
            _creationTimestamp
