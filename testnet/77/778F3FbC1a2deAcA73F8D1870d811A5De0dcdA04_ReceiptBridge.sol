pragma solidity 0.8.16;

import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "contracts/interfaces/IReceipt.sol";
import "contracts/base/ReceiptECDSA.sol";
import "contracts/base/Whitelist.sol";
import "./NFT.sol";

contract ReceiptBridge is Ownable, ReceiptECDSA, Whitelist, IReceipt {
    using SafeERC20 for IERC20;

    uint256 constant PERCENT_100 = 100e9;
    uint96 feePercent;

    struct PayRequest {
        uint256 amount;
        address token;
        address recipient;
        string payerName;
        string recipientName;
        uint256 receiptId;
        uint256 creationTimestamp;
        bytes signature;
    }

    NFT nft;
    // token => admin accumulated fee
    mapping(address => uint256) public adminRevenue;

    constructor(
        uint256 _feePercent,
        address _nft,
        address _owner
    ) ReceiptECDSA("ReceiptBridge") {
        feePercent = uint96(_feePercent);
        nft = NFT(_nft);
        _transferOwnership(_owner);
    }

    function setFeePercent(uint256 _newPercentE9) external onlyOwner {
        feePercent = uint96(_newPercentE9);
    }

    function pay(
        uint256 _amount,
        address _token,
        address _recipient,
        string calldata _payerName,
        string calldata _recipientName,
        uint256 _receiptId,
        uint256 _creationTimestamp,
        bytes calldata _signature
    ) external {
        requireWhitelisted(_token);

        PayRequest memory pr = PayRequest({
            amount: _amount,
            token: _token,
            recipient: _recipient,
            payerName: _payerName,
            recipientName: _recipientName,
            receiptId: _receiptId,
            creationTimestamp: _creationTimestamp,
            signature: _signature
        });

        _useSignature(
            pr.amount,
            pr.token,
            msg.sender,
            pr.recipient,
            pr.payerName,
            pr.recipientName,
            pr.receiptId,
            pr.creationTimestamp,
            pr.signature
        );

        uint256 feePayed = distributeInvoice(
            pr.token,
            pr.amount,
            msg.sender,
            pr.recipient
        );

        uint256 tokenId = nft.mintReceiptNFT(
            pr.amount,
            uint96(block.timestamp),
            pr.token,
            msg.sender,
            pr.recipient,
            pr.payerName,
            pr.recipientName
        );

        emit Payed(
            msg.sender,
            pr.recipient,
            pr.amount,
            feePayed,
            pr.token,
            pr.receiptId,
            tokenId
        );
    }

    function verifySignatureForNameChanging(
        uint256 _tokenId,
        address _operator,
        string memory _newName,
        uint256 _signTimestamp,
        bytes memory _signature
    ) external {
        if (msg.sender != address(nft)) revert();
        _useSignature(
            _tokenId,
            _operator,
            _newName,
            _signTimestamp,
            _signature
        );
    }

    function redeemRevenue(address _token) external onlyOwner {
        uint256 amount = adminRevenue[_token];
        if (amount > 0) {
            delete adminRevenue[_token];
            IERC20(_token).safeTransfer(msg.sender, amount);
        }
    }

    function changeTokensIsWhitelisted(address[] calldata _tokens)
        external
        onlyOwner
    {
        for (uint256 i; i < _tokens.length; i++) changeWhitelisted(_tokens[i]);
    }

    function owner()
        public
        view
        override(Ownable, ReceiptECDSA)
        returns (address)
    {
        return Ownable.owner();
    }

    function calculateInvoiceFee(uint256 _amount)
        public
        view
        returns (uint256 fee_)
    {
        fee_ = (_amount * feePercent) / PERCENT_100;
    }

    function distributeInvoice(
        address _token,
        uint256 _amount,
        address _from,
        address _to
    ) internal returns (uint256 fee_) {
        fee_ = calculateInvoiceFee(_amount);

        IERC20(_token).safeTransferFrom(_from, _to, _amount);
        IERC20(_token).safeTransferFrom(_from, address(this), fee_);

        adminRevenue[_token] += fee_;
    }
}

