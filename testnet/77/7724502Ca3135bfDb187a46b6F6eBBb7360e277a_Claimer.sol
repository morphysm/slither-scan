pragma solidity ^0.8.7;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Receiver.sol";

interface IDaopioneerPhys {
    function mint(address to,uint256 id,uint256 amount) external;
}

/**
 * @title Claimer
 * Claimer - Contract that claim the physical nft.
 */
contract Claimer is ERC1155Receiver, Ownable {
    using SafeMath for uint256;

    mapping(address => mapping(uint256 => uint256)) public balancesToClaim;
    mapping(uint256 => address) public physicalDPNs;

    function initialize(
        uint256 id,
        address claimedNFT
    ) public onlyOwner {
        physicalDPNs[id] = claimedNFT;
    }

    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes calldata data
    ) external override returns (bytes4)
    {
        balancesToClaim[from][id] += value;
        _claim(id, from, value);
        return IERC1155Receiver(address(this)).onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address operator,
        address from,
        uint256[] calldata ids,
        uint256[] calldata values,
        bytes calldata data
    ) external override returns (bytes4) {
        return IERC1155Receiver(address(this)).onERC1155BatchReceived.selector;
    }
    
    function _claim(uint256 id, address to, uint256 amount) internal {
        IDaopioneerPhys(physicalDPNs[id]).mint(
            to,
            id,
            amount
        );
    }

    function claim(uint256 id, uint256 amount) public {
        address operator = _msgSender();

        require(
            balancesToClaim[operator][id] >= amount,
            "Claimer: insufficent balance for claim"
        );

        require(physicalDPNs[id] != address(0), "Claimed NFT address hasn't been set!");

        _claim(id, msg.sender, amount);
        balancesToClaim[operator][id] -= amount;
    }
}

