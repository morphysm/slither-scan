pragma solidity 0.8.9;

import "@openzeppelin/contracts/access/Ownable.sol";
import '@openzeppelin/contracts/token/ERC20/ERC20.sol';
import { IAxelarGasReceiver } from "@axelar-network/axelar-cgp-solidity/src/interfaces/IAxelarGasReceiver.sol";
import { IAxelarExecutable } from "@axelar-network/axelar-cgp-solidity/src/interfaces/IAxelarExecutable.sol";

contract MultiChainERC20 is ERC20, Ownable, IAxelarExecutable {
    // ERC20 Decimal
    uint8 private decimal;
    // Axelar gas receiver
    IAxelarGasReceiver gasReceiver;
    // Mapping of chainId to Token address
    mapping(string => string) public linkers;
    // Mapping of account to depositAmt
    mapping(address => uint256) public depositMap;


    event Deposit(uint256 amount);

    constructor (string memory _name, string memory _symbol, uint8 _decimals, uint256 _initialSupply, address _gateway, address _gasReceiver) ERC20(_name, _symbol) IAxelarExecutable(_gateway) {
        decimal = _decimals;
        gasReceiver = IAxelarGasReceiver(_gasReceiver);

        _mint(msg.sender, _initialSupply);
    }

    function decimals() public view override returns (uint8) {
        return decimal;
    }

    function mint(address _account, uint256 _amount) external onlyOwner {
        require(_amount > 0, "amount must be positive");
        _mint(_account, _amount);
    }

    function burn(address _account, uint256 _amount) external onlyOwner {
        require(_amount > 0, "amount must be positive");
        _burn(_account, _amount);
    }

    /// Used to add linkers. This should be only callably by trusted sources normally.
    function addLinker(string memory chain, string memory linker) external {
        linkers[chain] = linker;
    }

    /// Transfer token to account on another chain
    function transferToken(string memory destinationChain, address destinationAddress, uint256 _amount) external {
        _burn(msg.sender, _amount);

        // Create the payload.
        bytes memory payload = abi.encode(destinationAddress, _amount);

        // Call Axelar Gateway
        callAxelarGateway(destinationChain, payload);
    }

    /// Deposit token
    function deposit(uint256 _amount) external {
        // Burn token
        _burn(msg.sender, _amount);

        // Increase depositAmt
        depositMap[msg.sender] += _amount;

        emit Deposit(_amount);
    }

    /// Withdraw token on another chain
    function withdrawToken(string memory destinationChain, address destinationAddress, uint256 _amount) external {
        uint256 depositAmt = depositMap[msg.sender];
        require(depositAmt >= _amount, "Insufficient deposited");

        depositMap[msg.sender] -= _amount;

        // Create the payload.
        bytes memory payload = abi.encode(destinationAddress, _amount);

        // Call Axelar Gateway
        callAxelarGateway(destinationChain, payload);
    }

    function callAxelarGateway(string memory destinationChain, bytes memory payload) internal {
        //Pay for gas. We could also send the contract call here but then the sourceAddress will be that of the gas receiver which is a problem later.
        gasReceiver.payNativeGasForContractCall{value: msg.value}(
            address(this),
            destinationChain,
            linkers[destinationChain],
            payload,
            msg.sender
        );
        //Call remote contract.
        gateway.callContract(
            destinationChain,
            linkers[destinationChain],
            payload
        );
    }

    ///This is automatically executed by Axelar Microservices since gas was payed for.
    function _execute(string memory sourceChain, string memory sourceAddress, bytes calldata payload) internal override {
        //Check that the sender is another token linker.
        require(keccak256(bytes(sourceAddress)) == keccak256(bytes(linkers[sourceChain])), 'NOT_A_LINKER');

        // Parse payload
        (address to, uint256 amount) = abi.decode(payload, (address, uint256));

        // mint token
        _mint(to, amount);
    }
}

