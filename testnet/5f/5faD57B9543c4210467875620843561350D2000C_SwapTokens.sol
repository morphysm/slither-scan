    /// @return Address of lotto token
    function getLottoToken() external view returns (address) {
        return address(_lotteryToken);
    }

    /// @dev Show address of game lotto token
    /// @return Address of game lotto token
    function getGameLottoToken() external view returns (address) {
        return address(_lotteryGameToken);
    }

    /// @dev Show total staked balance
    /// @return amount of staked tokens
    function getTotalStaked() external view returns (uint256) {
        return IERC20(address(_lotteryGameToken)).totalSupply();
    }
}