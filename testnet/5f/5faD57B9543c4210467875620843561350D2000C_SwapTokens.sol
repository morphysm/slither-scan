/// @title Contract to swap lotto token for game token and reverse
/// @dev Current contract is allowed to mint/burn game token
contract SwapTokens is Ownable, ISwapTokens {
    using SafeERC20 for IERC20;

    IERC20 private immutable _lotteryToken;
    ILotteryGameToken private immutable _lotteryGameToken;

    /// @notice Initialize lotto and game token addresses
    /// @param lotto lotto token address
    /// @param gLotto game token address
    constructor(address lotto, address gLotto) {
        _lotteryToken = IERC20(lotto);
        _lotteryGameToken = ILotteryGameToken(gLotto);
    }

    /// @dev Swap Lotto for gLotto
    /// @param amount The amount of tokens to swap
    function swapLotto(uint256 amount) external override {
        require(amount > 0, "SwapTokens: Amount of tokens ZERO");
        _lotteryToken.safeTransferFrom(msg.sender, address(this), amount);
        _lotteryGameToken.mint(msg.sender, amount);
        emit SwapLotto(msg.sender, amount);
    }

    /// @dev Swap gLotto for Lotto
    /// @param amount The amount of tokens to Swap
    function swapGameLotto(uint256 amount) external override {
        require(amount > 0, "SwapTokens: Amount of tokens ZERO");
        _lotteryGameToken.burn(msg.sender, amount);
        _lotteryToken.safeTransfer(msg.sender, amount);
        emit SwapGameLotto(msg.sender, amount);
    }

    /// @dev Replenish the contract balance with additional Lotto tokens in case if there is
    /// not enought tokens to swap gameLotto for Lotto
    /// @param amount The amount of tokens to replenish
