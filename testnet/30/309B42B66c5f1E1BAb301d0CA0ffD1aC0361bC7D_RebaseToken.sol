contract RebaseToken is ERC20Detailed, Ownable, ReentrancyGuard, MinterRole {
    using SafeMath for uint256;
    using SafeMathInt for int256;

    InterfaceLP public pairContract;

    bool public initialDistributionFinished = false;
    bool public swapEnabled = true;
    bool public autoRebase = false;
    bool public isLiquidityInAvax = true;

    uint256 public rewardYield = 304409000256615;
    uint256 public rewardYieldDenominator = 100000000000000000;

