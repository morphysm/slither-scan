contract APAPhotoshoot is ERC721 {
    using Strings for uint256;
    
    address public owner;
    uint256 public totalSupply;
    string public baseURI;

    error WrongOwner();
    error NotMinted();
    
    constructor(string memory name,string memory symbol, string memory _baseURI) ERC721(name, symbol) {
        owner = msg.sender;
        baseURI = _baseURI;
    }

    function setOwner(address _owner) external {
        if(owner != msg.sender) revert WrongOwner();
    
        owner = _owner;
    }

    function setBaseURI(string memory _baseURI) external {
        if(owner != msg.sender) revert WrongOwner();
    
        baseURI = _baseURI;
    }

    function mint(address[] memory receivers) external {
        if(owner != msg.sender) revert WrongOwner();

        uint256 id = totalSupply;    
        for(uint256 i = 0; i < receivers.length; i++) {
            _mint(receivers[i], id + i);

        }

        totalSupply += receivers.length;
    }

    function tokenURI(uint256 tokenId)
        public
        view
        virtual
        override
        returns (string memory)
    {

        if (ownerOf[tokenId] == address(0)) revert NotMinted();

        return
            string(
                bytes.concat(
                    "data:application/json;base64,",
                    bytes(
                        Base64.encode(
                            bytes.concat(
                                '{"name":"APA Photoshoot 1", "description":"APA Photoshoot 1", "attributes":[],',
                                '"image":"https://',
                                bytes(baseURI),
                                bytes(tokenId.toString()),
                                '.png"}'
                            )
                        )
                    )
                )
            );
    }


}