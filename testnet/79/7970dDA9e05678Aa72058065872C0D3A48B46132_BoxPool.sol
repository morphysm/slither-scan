import "./ICBox.sol";
import "./ICBoxFactory.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";

contract BoxPool  is ERC1155Holder{ 

    address public cbox;
    address public admin;
    address public CBoxFactory;
    address public box;
    
    address[] public numberCollection;
    uint256 public price;
    uint256 public numCBox;
    uint256 public starTime;
    uint256 public endTime;
    uint256 public boxId;

    using Counters for Counters.Counter;
    Counters.Counter private _numberCounter;
    Counters.Counter private _periodsCounter;
    
    mapping(uint256 => uint256[]) public winNums;
    mapping(uint256 => address[]) public numbers;
    mapping(uint256 => uint256) public pricePeriod;
    mapping(uint256 => uint256) public boxIdPeriod;


    event purchaseEvent(address account,uint256 price,uint256 randomNum,uint256 period);
    event lotteryEvent(uint256 [] winNum,uint256 periods,uint256 price,uint256 starTime,uint256 endTime);
    event getRewardEvent(address account,uint256 periods);
    event redeemEvent(address account,uint256 period,uint256 amount);

    modifier owner(address account) {
        require(admin == account,"cyberpop: FORBIDDEN");
        _;
    }

    constructor(address cbox_, address admin_,address CBoxFactory_,address box_){
        cbox = cbox_;
        admin = admin_;
        CBoxFactory = CBoxFactory_;
        box = box_;
    }

    function purchase() external {
    //    require(timeValidation() == true,"The activity time is not right");
       IERC20(cbox).transferFrom(msg.sender,address(this),price);
       numberCollection.push(msg.sender);
       _numberCounter.increment();
       uint256 randomNum = _numberCounter.current();
       emit purchaseEvent(msg.sender,price,randomNum,_periodsCounter.current());
    }   

    function rand(uint256 salt,uint256 _length) internal view returns(uint256) {
    uint256 random = uint256(keccak256(abi.encodePacked("cyberpopbox",salt,block.difficulty, block.timestamp)));
    return random%_length;
  }

  function getRandNums()  internal view returns(uint256 [] memory){
    uint256 [] memory results = new uint256[](numCBox);
    uint256 randNum;
    if(_numberCounter.current()<=numCBox){
        for(uint256 i =0 ;i<numCBox ;i++){
            results[i] = i+1;
        }
        
    }else{
	    for(uint256 i =0;i<numCBox;i++){
             randNum = rand(i*i*i*33,_numberCounter.current()+1);          //mapping （uint256 => uint256）
            results[i] = randNum;
  	}     
  }  
  	return results;
  }

    //2分查找法快点
    function findNumber(address account,uint256 number,uint256 period) internal view returns(bool){
        for(uint256 i = 0 ;i< winNums[period].length ;i++){
            if(number == winNums[period][i] && account == numbers[period][number-1])
            return true;
        }
        return false;
    }

    function setNumber(uint256 period,uint256 number) internal{
        for(uint256 i = 0 ;i<winNums[period].length;i++){
            if(winNums[period][i] == number){
                winNums[period][i] = 0;
            }
        }
    }

    function lottery(uint256 starTime_, uint256 endTime_,uint256 price_,uint256 numCBox_) external owner(msg.sender){
           _periodsCounter.increment();
        uint256 periodCurrent = _periodsCounter.current();        
         winNums[periodCurrent] =  getRandNums();  
         pricePeriod[periodCurrent] = price;
         numbers[periodCurrent] =  numberCollection; 
         boxIdPeriod[periodCurrent] = boxId;
         _numberCounter.reset();
         delete numberCollection;
        emit lotteryEvent(winNums[periodCurrent],periodCurrent,price,starTime,endTime);
         starTime = starTime_;
         endTime = endTime_;
         price = price_;
         numCBox = numCBox_;
        _periodsCounter.increment();
        
    }

    function getReward(uint256 number,uint256 period)external{
        //    require(timeValidation() == true,"The activity time is not right");
         require(number !=0,"forbidden:  number is zero");
         require(findNumber(msg.sender,number,period),"No permissions");
         setNumber(number,period);
         ICBox(cbox).burn(pricePeriod[period]);
         IERC1155(box).safeTransferFrom(address(this),msg.sender,boxIdPeriod[period],1,"0x");
        emit getRewardEvent(msg.sender,period);
    }

   function redeem(uint256 period) external{
        uint256 fee = ICBoxFactory(CBoxFactory).Fee(pricePeriod[period]);        
        (bool flag ,uint256  amount)= SafeMath.trySub(pricePeriod[period],fee);
         require(flag==true,"Numeric overflow");
        IERC20(cbox).transfer(msg.sender,amount);
        IERC20(cbox).transfer(ICBoxFactory(CBoxFactory).feeTo(),fee);
        emit redeemEvent(msg.sender,period,amount);
    }

    function timeValidation() internal view returns(bool){
         if(starTime > block.timestamp || (endTime !=0 && endTime <= block.timestamp)){
           return false;
         }
        return true;
    }

    function setNumCBox(uint256 numCBox_)external owner(msg.sender){
        numCBox = numCBox_;
    }

    function setBoxId(uint256 boxId_)external owner(msg.sender){
        boxId = boxId_;
    }

   function setPrice(uint256 price_)external owner(msg.sender){
        price = price_;
    }

}

