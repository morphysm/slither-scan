contract FC is ContextUpgradeable, OwnableUpgradeable {
    struct Game {
        GameState state;

        uint256 opponent0;
        uint256 opponent1;

        uint256 lastMoveAt0;
        uint256 lastMoveAt1;

        bytes32 commit0;

        GameMove reveal0;
        GameMove reveal1;

        uint256 currentRound;
        uint256 timestamp;
    }

    enum GameState {
        Pending,
        Active,
        Finished
    }

    enum GameMove {
        Null,
        Claw,
        Bite,
        Whip
    }

    uint256[] public lobby;
    mapping (uint256 => uint256) public currentOpponent;
    mapping (bytes32 => Game) games;
    mapping (uint256 => uint256[]) lastHealth;
    mapping (uint256 => uint256) public level;
    mapping (uint256 => uint256) public wins;
    mapping (uint256 => bytes32) public DNS;

    address public tokenAddress;
    IERC721 NFT;
    DXPToken DXP;

    // variables
    uint256 healthPerSecond;
    uint256 public duration;

    event JoinedLobby(uint256 tokenId);
    event AttackCommitted();
    event GameFinished(Game game);
    event GameNextRound(Game game, uint256 winner, uint256 loser);
    event RevealCommitted();

    function initialize(address _nftAddress, address _dxpAddress) public initializer {
        __Ownable_init();
        NFT = IERC721(_nftAddress); // DINO token
        DXP = DXPToken(_dxpAddress); // DXP ERC20 token
        duration = 180;
        healthPerSecond = 116; // thousandths, roughly 1 day for full health restore (100000)
    }

    function inDuration(bytes32 gameId) internal view returns (bool) {
        return games[gameId].timestamp + duration > block.timestamp;
    }

    function getWinnerCandidate(bytes32 gameId) internal view returns (uint256) {
        uint256 passedTime = block.timestamp - (games[gameId].timestamp + duration);
        uint256 turn = (passedTime / duration) % 2;
        if (games[gameId].commit0 == ""){
            if(turn == 0) return games[gameId].opponent1; else games[gameId].opponent0;
        } else if (games[gameId].reveal1 == GameMove.Null) {
            if(turn == 1) return games[gameId].opponent1; else games[gameId].opponent0;
        } else if (games[gameId].reveal0 == GameMove.Null) {
            if(turn == 0) return games[gameId].opponent1; else games[gameId].opponent0;
        }
        return 100000;
    }

    function setDuration(uint256 newDuration) external onlyOwner() {
        duration = newDuration;
    }

    function getHealth(uint256 tokenId) public view returns (uint256) {
        uint256[] memory health = lastHealth[tokenId]; // [timestamp, health]

        if (health.length == 0 || health[0] == 0) {
            return 100000; // no activity
        }

        if (inGame(tokenId)) {
            return health[1];
        }

        uint256 timeSince = block.timestamp - health[0];
        uint256 currentHealth = health[1] + (healthPerSecond * timeSince);
        
        return (currentHealth > 100000) ? 100000 : currentHealth;
    }

    function joinLobby(uint256 tokenID) public {
        require (!inGame(tokenID), "ALREADY_IN_GAME");
        require (NFT.ownerOf(tokenID) == _msgSender(), "NOT_OWNER");
        if (lobby.length == 0) {
            lobby.push(tokenID);
        } else {
            startGame(tokenID, lobby[0]);
            lobby.pop();
            emit JoinedLobby(tokenID);
        }
    }

    function getLobby() public view returns (uint256[] memory) {
        return lobby;
    }

    function startGame(uint256 myTokenId, uint256 opponentTokenId) internal {
        require (!inGame(myTokenId), "ALREADY_IN_GAME");
        require (!inGame(opponentTokenId), "ALREADY_IN_GAME_OPPONENT");
        
        currentOpponent[myTokenId] = opponentTokenId;
        currentOpponent[opponentTokenId] = myTokenId;

        lastHealth[myTokenId] = [block.timestamp, getHealth(myTokenId)];
        lastHealth[opponentTokenId] = [block.timestamp, getHealth(opponentTokenId)];
        
        // start game
        bytes32 gameId = getGameId(myTokenId, opponentTokenId);
        games[gameId].state = GameState.Active;
        games[gameId].opponent0 = opponentTokenId;
        games[gameId].opponent1 = myTokenId;
        games[gameId].currentRound = 1;
        // add start game time
        games[gameId].timestamp = block.timestamp;
    }

    function attackCommit(uint256 myTokenId, bytes32 hash) public {
        require (NFT.ownerOf(myTokenId) == _msgSender(), "NOT_OWNER");
        require (inGame(myTokenId), "NOT_IN_GAME");

        uint256 opponentTokenId = currentOpponent[myTokenId];
        bytes32 gameId = getGameId(myTokenId, opponentTokenId);
        require(inDuration(gameId), "DURATION_TIME_OUT");

        require(games[gameId].commit0 == "", "MOVE_ALREADY_MADE");
        games[gameId].commit0 = hash;
        games[gameId].timestamp = block.timestamp;
        emit AttackCommitted();
    }

    function revealCommit(uint256 tokenId, GameMove move) public {
        require (NFT.ownerOf(tokenId) == _msgSender(), "NOT_OWNER");
        require (inGame(tokenId), "NOT_IN_GAME");

        uint256 opponentTokenId = currentOpponent[tokenId];
        bytes32 gameId = getGameId(tokenId, opponentTokenId);
        require(inDuration(gameId), "DURATION_TIME_OUT");

        require (games[gameId].commit0 != "", "OPPONENT_DID_NOT_COMMIT");
        games[gameId].reveal1 = move;
        games[gameId].timestamp = block.timestamp;
        emit RevealCommitted();
    }

    function attackReveal(uint256 myTokenId, GameMove move, bytes32 proof) public {
        require (NFT.ownerOf(myTokenId) == _msgSender(), "NOT_OWNER");
        require (inGame(myTokenId), "NOT_IN_GAME");

        uint256 opponentTokenId = currentOpponent[myTokenId];
