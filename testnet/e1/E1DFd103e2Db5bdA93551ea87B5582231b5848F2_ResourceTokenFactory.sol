pragma solidity ^0.8.0;

import "/OpenZeppelin/[email protected]/contracts/access/Ownable.sol";
import "/OpenZeppelin/[email protected]/contracts/utils/Counters.sol";
import "/OpenZeppelin/[email protected]/contracts/utils/structs/EnumerableSet.sol";
import "/OpenZeppelin/[email protected]/contracts/token/ERC20/IERC20.sol";
import "/OpenZeppelin/[email protected]/contracts/token/ERC20/utils/SafeERC20.sol";
import "/OpenZeppelin/[email protected]/contracts/token/ERC1155/ERC1155.sol";
import "/OpenZeppelin/[email protected]/contracts/security/Pausable.sol";
import "../interfaces/ITimeProvider.sol";
import "../interfaces/IResourceToken.sol";
import "../interfaces/IEventLogger.sol";

contract ResourceToken is ERC1155, Ownable, Pausable, IResourceToken {
    using Counters for Counters.Counter;
    using SafeERC20 for IERC20;
    using EnumerableSet for EnumerableSet.UintSet;
    using EnumerableSet for EnumerableSet.AddressSet;

    struct ResourceType {
        string name;
        uint256 weight;
        uint256[] ingredients;
        string ipfsHash;
        string tier;
        uint256 maxSupply;
        bool isBase;
    }

    struct PendingCraft {
        uint256 craftId;
        uint256 tokenId;
        uint256 finishTimestamp;
        bool claimed;
    }

    IERC20 public immutable craft;
    ITimeProvider public immutable timeProvider;
    IEventLogger public immutable eventLogger;

    Counters.Counter internal _tokenIds;
    Counters.Counter internal _craftIds;
    bool public initialMintComplete;
    EnumerableSet.AddressSet internal _players;
    uint256 public craftPrice = 3 ether;  // default 3 CRAFT
    uint256 public craftDelay = 60 * 60 * 24;  // default 24 hours
    uint256 public craftWaitSkipPrice = 10 ether;  // default 10 CRAFT
    bool public reverseCraftActive;

    mapping (uint256 => ResourceType) public resourceTypes;
    mapping (address => EnumerableSet.UintSet) internal _pendingCraftsByUser;
    mapping (uint256 => PendingCraft) internal _pendingCrafts;
    mapping (address => EnumerableSet.UintSet) internal _ownedTokens;
    mapping (bytes32 => uint256) internal _recipes;
    mapping (uint256 => uint256) public circulatingSupply;

    event ResourceTypeRegistered(uint256 indexed tokenId, string name, uint256 weight, string ipfsHash);
    event CraftStarted(address indexed player, uint256 craftId);
    event CraftClaimed(address indexed player, uint256 craftId);
    event CraftWaitSkipped(uint256 indexed craftId);
    event InitialMint();
    event ResourceUpdated(uint256 indexed resourceId);

    event CraftPriceUpdated(uint256 newValue);
    event CraftDelayUpdated(uint256 newValue);
    event CraftWaitSkipPriceUpdated(uint256 newValue);
    event ReverseCraftStatusUpdated(bool newValue);
    event FeesWithdrawn(uint256 value);
    event MetaUrlUpdated(string newValue);

    constructor(IERC20 craft_, ITimeProvider timeProvider_, IEventLogger eventLogger_, address owner_, string memory metaUrl) ERC1155(metaUrl) {
        craft = craft_;
        timeProvider = timeProvider_;
        eventLogger = eventLogger_;
        _transferOwnership(owner_);

        emit CraftPriceUpdated(craftPrice);
        emit CraftDelayUpdated(craftDelay);
        emit CraftWaitSkipPriceUpdated(craftWaitSkipPrice);
        emit ReverseCraftStatusUpdated(reverseCraftActive);
    }

    function initialMint(address to, uint256[] calldata tokenIds, uint256[] calldata amounts) external onlyOwner {
        require(!initialMintComplete, "imc");
        require(tokenIds.length == amounts.length, "inva");
        for (uint256 i=0; i < tokenIds.length; i++) {
            uint256 amount = amounts[i];
            uint256 tokenId = tokenIds[i];
            uint256 supply = circulatingSupply[tokenId];
            uint256 newSupply = supply + amount;
            require(amount > 0, "amounts should be positive");
            require(newSupply <= resourceTypes[tokenId].maxSupply, "max supply exceeded");
            circulatingSupply[tokenId] = newSupply;
        }
        initialMintComplete = true;
        _mintBatch(to, tokenIds, amounts, "");
        emit InitialMint();
    }

    function registerResourceTypes(ResourceType[] calldata types) external onlyOwner {
        for (uint256 i=0; i < types.length; i++) {
            _tokenIds.increment();
            uint256 tokenId = _tokenIds.current();
            resourceTypes[tokenId] = types[i];
            if (types[i].ingredients.length != 0)
                _recipes[keccak256(abi.encode(types[i].ingredients))] = tokenId;
            emit ResourceTypeRegistered(tokenId, types[i].name, types[i].weight, types[i].ipfsHash);
        }
    }

    function startCraft(uint256 tokenId) external whenNotPaused {
        require(resourceTypes[tokenId].ingredients.length > 0, "no recipe");
        require(resourceTypes[tokenId].maxSupply == 0 || circulatingSupply[tokenId] < resourceTypes[tokenId].maxSupply, "max supply exceeded");
        uint256[] memory ingredients = resourceTypes[tokenId].ingredients;
        for (uint256 i=0; i < ingredients.length; i++) {
            require(balanceOf(msg.sender, ingredients[i]) > 0, "insufficient ingredients");
            _burn(msg.sender, ingredients[i], 1);
            circulatingSupply[ingredients[i]]--;
        }
        circulatingSupply[tokenId]++;
        _craftIds.increment();
        uint256 craftId = _craftIds.current();
        _pendingCrafts[craftId] = PendingCraft(craftId, tokenId, timeProvider.getTimestamp() + craftDelay, false);
        _pendingCraftsByUser[msg.sender].add(craftId);
        emit CraftStarted(msg.sender, craftId);
        if (craftPrice > 0)
            craft.safeTransferFrom(msg.sender, address(this), craftPrice);
        eventLogger.reportCraftStarted(msg.sender, craftId);
    }

    function startReverseCraft(uint256 tokenId) external whenNotPaused {
        require(reverseCraftActive, "reverse craft disabled");
        require(balanceOf(msg.sender, tokenId) > 0, "token not owned");
        uint256[] memory ingredients = resourceTypes[tokenId].ingredients;
        require(ingredients.length > 0, "invalid token");
        circulatingSupply[tokenId]--;
        _burn(msg.sender, tokenId, 1);
        for (uint256 i=0; i < ingredients.length; i++) {
            uint256 ingredient = ingredients[i];
            require(resourceTypes[ingredient].maxSupply == 0 || circulatingSupply[ingredient] < resourceTypes[ingredient].maxSupply, "max supply exceeded");
            circulatingSupply[ingredient]++;
            _craftIds.increment();
            uint256 craftId = _craftIds.current();
            _pendingCrafts[craftId] = PendingCraft(craftId, ingredient, timeProvider.getTimestamp() + craftDelay, false);
            _pendingCraftsByUser[msg.sender].add(craftId);
            emit CraftStarted(msg.sender, craftId);
            eventLogger.reportCraftStarted(msg.sender, craftId);
        }
        if (craftPrice > 0)
            craft.safeTransferFrom(msg.sender, address(this), craftPrice);
    }

    function claimCraft(uint256 craftId) public whenNotPaused {
        require(_pendingCraftsByUser[msg.sender].contains(craftId), "not owned");
        PendingCraft storage craft_ = _pendingCrafts[craftId];
        require(craft_.finishTimestamp <= timeProvider.getTimestamp(), "still pending");
        craft_.claimed = true;
        _pendingCraftsByUser[msg.sender].remove(craftId);
        _mint(msg.sender, craft_.tokenId, 1, "");
        emit CraftClaimed(msg.sender, craftId);
        eventLogger.reportCraftClaimed(msg.sender, craftId);
    }

    function skipCraftWait(uint256 craftId) external whenNotPaused {
        require(_pendingCraftsByUser[msg.sender].contains(craftId), "not owned");
        PendingCraft storage craft_ = _pendingCrafts[craftId];
        uint256 timestamp = timeProvider.getTimestamp();
        require(craft_.finishTimestamp > timestamp, "not pending");
        craft_.finishTimestamp = timestamp - 1;
        emit CraftWaitSkipped(craftId);
        claimCraft(craftId);
        craft.safeTransferFrom(msg.sender, address(this), craftWaitSkipPrice);
        eventLogger.reportCraftClaimed(msg.sender, craftId);
    }

    function withdrawFees(address to) external onlyOwner {
        require(to != address(0), "");
        uint256 balance = craft.balanceOf(address(this));
        emit FeesWithdrawn(balance);
        craft.safeTransfer(to, balance);
    }

    function ownedTokens(address player) external view returns (uint256[] memory) {
        return _ownedTokens[player].values();
    }

    function ownedTokensPaginated(address player, uint256 offset, uint256 count) external view returns (uint256[] memory) {
        uint256 length = _ownedTokens[player].length();
        if (offset >= length)
            return new uint256[](0);
        uint256 resultLength = length - offset;
        if (resultLength > count)
            resultLength = count;
        uint256[] memory result = new uint256[](resultLength);
        for (uint256 i=0; i < resultLength; i++) {
            result[i] = _ownedTokens[player].at(offset + i);
        }
        return result;
    }

    function getResourceTypes(uint256[] calldata ids) external view returns (ResourceType[] memory) {
        ResourceType[] memory result = new ResourceType[](ids.length);
        for (uint256 i=0; i<ids.length; i++) {
            result[i] = resourceTypes[ids[i]];
        }
        return result;
    }

    function getResourceWeight(uint256 id) external view returns (uint256) {
        return resourceTypes[id].weight;
    }

    function getResourceIsBase(uint256 id) external view returns (bool) {
        return resourceTypes[id].isBase;
    }

    function getCraftingResult(uint256[] calldata tokenIds) external view returns (uint256) {
        return _recipes[keccak256(abi.encode(tokenIds))];
    }

    function pendingCrafts(address player) external view returns (uint256[] memory) {
        return _pendingCraftsByUser[player].values();
    }

    function getPendingCraftsPaginated(address player, uint256 offset, uint256 count) external view returns (uint256[] memory) {
        uint256 length = _pendingCraftsByUser[player].length();
        if (offset >= length)
            return new uint256[](0);
        uint256 resultLength = length - offset;
        if (resultLength > count)
            resultLength = count;
        uint256[] memory result = new uint256[](resultLength);
        for (uint256 i=0; i < resultLength; i++) {
            result[i] = _pendingCraftsByUser[player].at(offset + i);
        }
        return result;
    }

    function getCrafts(uint256[] calldata ids) external view returns (PendingCraft[] memory) {
        PendingCraft[] memory result = new PendingCraft[](ids.length);
        for (uint256 i=0; i<ids.length; i++) {
            result[i] = _pendingCrafts[ids[i]];
        }
        return result;
    }

    function getPlayers() external view returns (address[] memory) {
        return _players.values();
    }

    function getPlayersPaginated(uint256 offset, uint256 count) external view returns (address[] memory) {
        uint256 length = _players.length();
        if (offset >= length)
            return new address[](0);
        uint256 resultLength = length - offset;
        if (resultLength > count)
            resultLength = count;
        address[] memory result = new address[](resultLength);
        for (uint256 i=0; i < resultLength; i++) {
            result[i] = _players.at(offset + i);
        }
        return result;
    }

    function resourceCount() external view returns (uint256) {
        return _tokenIds.current();
    }

    function setCraftPrice(uint256 newValue) external onlyOwner {
        require(craftPrice != newValue, "nc");
        craftPrice = newValue;
        emit CraftPriceUpdated(newValue);
    }

    function setCraftDelay(uint256 newValue) external onlyOwner {
        require(craftDelay != newValue, "nc");
        craftDelay = newValue;
        emit CraftDelayUpdated(newValue);
    }

    function setCraftSkipWaitPrice(uint256 newValue) external onlyOwner {
        require(craftWaitSkipPrice != newValue, "nc");
        craftWaitSkipPrice = newValue;
        emit CraftWaitSkipPriceUpdated(newValue);
    }

    function setReverseCraftActive(bool newValue) external onlyOwner {
        require(newValue != reverseCraftActive, "nc");
        reverseCraftActive = newValue;
        emit ReverseCraftStatusUpdated(newValue);
    }

    function updateResource(uint256 tokenId, string calldata name, string calldata ipfsHash) external onlyOwner {
        ResourceType storage rt = resourceTypes[tokenId];
        rt.name = name;
        rt.ipfsHash = ipfsHash;
        emit ResourceUpdated(tokenId);
    }

    function _afterTokenTransfer(address operator, address from, address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data) internal virtual override {
        super._afterTokenTransfer(operator, from, to, ids, amounts, data);
        for (uint256 i=0; i<ids.length; i++) {
            if (from != address(0) && balanceOf(from, ids[i]) == 0)
                _ownedTokens[from].remove(ids[i]);
            if (to != address(0) && balanceOf(to, ids[i]) > 0)
                _ownedTokens[to].add(ids[i]);
        }
        _players.add(from);
        _players.add(to);
    }

    function safeBatchTransferFromMultipleRecipients(address from, address[] calldata to, uint256[][] calldata tokenId, uint256[][] calldata amount) external {
        require(to.length == tokenId.length && tokenId.length == amount.length, "inva");
        for (uint256 i=0; i < to.length; i++) {
            safeBatchTransferFrom(from, to[i], tokenId[i], amount[i], "");
        }
    }

    function balanceOfBatchSingleAccount(address account, uint256[] calldata ids) external view returns (uint256[] memory) {
        uint256[] memory batchBalances = new uint256[](ids.length);

        for (uint256 i = 0; i < ids.length; ++i) {
            batchBalances[i] = balanceOf(account, ids[i]);
        }

        return batchBalances;
    }

    function updateMetaUrl(string calldata newUrl) external onlyOwner {
        _setURI(newUrl);
        emit MetaUrlUpdated(newUrl);
    }

    function togglePause() external onlyOwner {
        if (paused())
            _unpause();
        else
            _pause();
    }
}

