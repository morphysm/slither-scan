pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "./lib/signedUpgradeable.sol";
import "../interfaces/IChamp.sol";
import "../interfaces/ISkill.sol";
import "../interfaces/IGamecore.sol";

contract GameCoreV1 is
    Initializable,
    OwnableUpgradeable,
    SignedUpgradeable,
    IGameCore
{
    using SafeMathUpgradeable for uint256;
    using SafeERC20Upgradeable for IERC20Upgradeable;

    IERC20Upgradeable public BT;
    uint256[5] public maxSkillEquipped;
    uint256 public equipFee;

    function initialize(
        IERC20Upgradeable _rewardToken,
        uint256[5] calldata _maxSkillEquipped
    ) public initializer {
        __Ownable_init();
        require(
            address(_rewardToken) != address(0),
            "GameCoreV1: reward token can't be address(0)"
        );
        BT = _rewardToken;
        maxSkillEquipped = _maxSkillEquipped;
        equipFee = 100 ether;
    }

    uint256 public internalBTBalance;
    event STAKECHAMPION(address indexed owner, ChampionData champData);
    event UNSTAKECHAMPION(address indexed owner, ChampionData champData);

    //user stakedChampion
    mapping(address => mapping(address => mapping(uint256 => ChampionData)))
        public userChampion; // owner Address => champion address => tokenId => ChampionData

    // champion skills
    mapping(address => mapping(uint256 => mapping(uint256 => SkillData)))
        public championSkill; // champData => champId => slot => skill data

    // check stdChampion
    mapping(address => bool) stdChampion; // nft address => isStdChampion

    modifier checkChampionSkillSlot(
        address championAddress,
        uint256[] memory champIds
    ) {
        for (uint256 j = 0; j < champIds.length; j++) {
            uint256 champId = champIds[j];
            Rarities rarity = Rarities(
                userChampion[msg.sender][championAddress][champId].rarity
            );
            uint256 maxEquipped = maxSkillEquipped[uint256(rarity)];
            for (uint256 i = 0; i < maxEquipped; i++) {
                address skillAddress = championSkill[championAddress][champId][
                    i
                ].nftAddress;
                require(
                    skillAddress == address(0),
                    "GameCoreV1: Still have equiped skill"
                );
            }
        }
        _;
    }

    function stakeChampion(address nftAddress, uint256[] memory tokenIds)
        external
    {
        IChamp nft = IChamp(nftAddress);
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            require(
                nft.ownerOf(tokenId) == msg.sender,
                "GameCoreV1: not owner"
            );
            require(
                nft.getApproved(tokenId) == address(this) ||
                    nft.isApprovedForAll(msg.sender, address(this)),
                "GameCoreV1: token not approved"
            );
            Rarities rarity = Rarities(nft.checkTokenRarity(tokenId));
            nft.transferFrom(msg.sender, address(this), tokenId);
            userChampion[msg.sender][nftAddress][tokenId] = ChampionData(
                nftAddress,
                tokenId,
                rarity
            );

            emit STAKECHAMPION(
                msg.sender,
                ChampionData(nftAddress, tokenId, rarity)
            );
        }
    }

    function unstakeChampion(address nftAddress, uint256[] memory tokenIds)
        external
        checkChampionSkillSlot(nftAddress, tokenIds)
    {
        IChamp nft = IChamp(nftAddress);
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            require(
                userChampion[msg.sender][nftAddress][tokenId].nftAddress !=
                    address(0),
                "GameCoreV1: can't find champion data"
            );

            nft.transferFrom(address(this), msg.sender, tokenId);
            delete userChampion[msg.sender][nftAddress][tokenId];

            emit UNSTAKECHAMPION(
                msg.sender,
                userChampion[msg.sender][nftAddress][tokenId]
            );
        }
    }

    function equipSkillPremiumChamp(
        address champAddress,
        uint256 champId,
        address skillAddress,
        uint256 skillId,
        uint256 slot
    ) public {
        ISkill skillNft = ISkill(skillAddress);

        ChampionData memory champData = userChampion[msg.sender][champAddress][
            champId
        ];
        require(
            champData.nftAddress != address(0),
            "GameCoreV1: can't find champion data"
        );
        require(
            slot < maxSkillEquipped[uint256(champData.rarity)],
            "GameCoreV1: insuficient slot"
        );

        SkillData memory skillData = championSkill[champAddress][champId][slot];
        require(
            skillData.nftAddress == address(0),
            "GameCoreV1: slot is not empty"
        );
        skillData.nftAddress = skillAddress;
        skillData.tokenId = skillId;
        championSkill[champAddress][champId][slot] = skillData;

        skillNft.setEquipped(skillId, true);
        _deductEquipFee();
    }

    function unEquipSkillPremiumChamp(
        address champAddress,
        uint256 champId,
        uint256 slot
    ) public {
        ChampionData memory champData = userChampion[msg.sender][champAddress][
            champId
        ];
        require(
            champData.nftAddress != address(0),
            "GameCoreV1: can't find champion data"
        );
        require(
            slot < maxSkillEquipped[uint256(champData.rarity)],
            "GameCoreV1: insuficient slot"
        );

        SkillData memory skillData = championSkill[champAddress][champId][slot];
        require(
            skillData.nftAddress != address(0),
            "GameCoreV1: skill data not found"
        );
        ISkill skillNft = ISkill(skillData.nftAddress);

        delete championSkill[champAddress][champId][slot];

        skillNft.setEquipped(skillData.tokenId, false);
        _deductEquipFee();
    }

    function _deductEquipFee() internal {
        require(
            BT.balanceOf(msg.sender) >= equipFee,
            "GameCoreV1: Insuficient BT Balance"
        );
        require(
            BT.allowance(msg.sender, address(this)) >= equipFee,
            "GameCoreV1: Insuficient BT Allowance"
        );

        BT.safeTransferFrom(msg.sender, address(this), equipFee);
        internalBTBalance = internalBTBalance.add(equipFee);
    }

    //claim bt price using signature
    function claimBT(
        bytes calldata signature,
        uint256 amount,
        uint256 nonce
    ) public {
        require(
            amount <= internalBTBalance,
            "GameCoreV1: Insuficient BT In contract"
        );
        verifySignature(signature, amount, nonce);
        BT.safeTransfer(msg.sender, amount);
        internalBTBalance = internalBTBalance.sub(amount);
    }

    function refillBT(uint256 amount) external onlyOwner {
        BT.safeTransferFrom(msg.sender, address(this), amount);
        internalBTBalance = internalBTBalance.add(amount);
    }

    // update internal bt amount for emergency
    function updateInternalBT(uint256 amount) external onlyOwner {
        internalBTBalance = amount;
    }

    function setEquipFee(uint256 _equipFee) external onlyOwner {
        require(equipFee != _equipFee, "GameCoreV1: cant set same price");
        equipFee = _equipFee;
    }
}

