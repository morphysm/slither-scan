contract Bank is AccessControl, ERC721TokenReceiver {

    using Strings for uint256;

    address public currency;
    address public bond;

    mapping (uint256 => uint256) prices;
    mapping (uint256 => uint256) prizes;
    mapping (uint256 => uint256) public bondEncashmentRecord;
    mapping (uint256 => uint256) public claimPrizeRecord;
    

    constructor(address _currency, address _bond) {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);

        currency = _currency;
        bond = _bond;
        
        prices[101] = 100 * 1e2;
        prices[201] = 200 * 1e2;
        prices[751] = 750 * 1e2;
        prices[152] = 1500 * 1e2;
        prices[752] = 7500 * 1e2;
        prices[153] = 15000 * 1e2;
        prices[253] = 25000 * 1e2;
        prices[403] = 40000 * 1e2;
    }
    function purchase(address to, uint256 tokenId) public {
        uint256 price = prices[getPrefix(tokenId)];
        require (price >0, "price not found for this Bond");
        IERC20(currency).transferFrom(msg.sender, address(this), price);
        IERC721(bond).transferFrom(address(this), to, tokenId);
    }
    function batchPurchase(address to, uint256[] memory tokenIds) public{
         uint256 totalAmount = 0;
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 price = prices[getPrefix(tokenIds[i])];
            totalAmount += price;
        }
        IERC20(currency).transferFrom(msg.sender,address(this), totalAmount);
        batchTransfer(address(this), to, tokenIds);
    }
    
    function batchTransfer(address from, address to, uint256 [] memory tokenIds)internal {
        for( uint256 i=0; i< tokenIds.length; i++){
            IERC721(bond).transferFrom(from, to, tokenIds[i]);
        }
    }
    function encash(address to, uint256 tokenId) public {
        uint256 price = prices[getPrefix(tokenId)];
        IERC721(bond).transferFrom(msg.sender, address(this), tokenId);
        IERC20(currency).transfer(to, price);
        bondEncashmentRecord[tokenId]+=1;
    }

    function claim(address to, uint256 tokenId) public {
        require(prizes[tokenId] > 0, "invalid");
        IERC721(bond).transferFrom(msg.sender, address(this), tokenId);
        IERC20(currency).transfer(to, prizes[tokenId]);
        claimPrizeRecord[tokenId]+=1;
        delete prizes[tokenId];
    }

    function addPrizes(uint256[] memory tokenIds, uint256[] memory amounts) public onlyRole(DEFAULT_ADMIN_ROLE) {
        require(tokenIds.length == amounts.length, "unequal list");
        uint256 totalAmount = 0;
        for (uint256 i = 0; i < tokenIds.length; i++) {
            prizes[tokenIds[i]] = amounts[i];
            totalAmount += amounts[i];
        }
        IERC20(currency).mint(address(this), totalAmount);
    }

    function getPrefix(uint256 tokenId) private pure returns (uint256) {
        bytes memory tokenIdBytes = bytes(tokenId.toString());
        bytes memory prefixBytes = new bytes(3);
        for (uint i = 0; i < 3; i++) {
            prefixBytes[i] = tokenIdBytes[i];
        }
        return toInteger(string(prefixBytes));
    }

    function toInteger(string memory numString) private pure returns(uint256) {
        uint256 val = 0;
        bytes memory stringBytes = bytes(numString);
        for (uint256 i = 0; i<stringBytes.length; i++) {
            uint256 exp = stringBytes.length - i;
            bytes1 ival = stringBytes[i];
            uint8 uval = uint8(ival);
            uint256 jval = uval - uint256(0x30);
            val +=  (uint256(jval) * (10**(exp-1))); 
        }
        return val;
    }
     
     function onERC721Received(address, address, uint256, bytes calldata) external override pure returns (bytes4) {
        return this.onERC721Received.selector;
    }
}