    /**
     * @dev Moves `amount` tokens from `from` to `to` using the
     * allowance mechanism. `amount` is then deducted from the caller's
     * allowance.
     *
     * Returns a boolean value indicating whether the operation succeeded.
     *
     * Emits a {Transfer} event.
     */
    function transferFrom(
        address from,
        address to,
        uint256 amount
    ) external returns (bool);
}


interface IExchanger {
  function buy (address buyer, uint256 amount) external returns (bool);
  function sell (address seller, uint256 amount) external returns (bool);
  function reflect () external returns (bool);
  function totalBalance() external view returns (uint256);
}

interface IUniswapV2Pair {
  function sync() external;
}

contract ShellToken is IERC20, Ownable, ReentrancyGuard {
  /////////// //////////
  ////// LIBRARIES ////
  ///////////// ///////
  using SafeMath for uint256;
  using DecimalConversion for uint256;
  using EnumerableSet for EnumerableSet.AddressSet;

  /////////////// /////
  ///// EVENTS  //////
  ///// //////////////
  event LogReflection(uint256 supplyDelta);
  event Mint(address indexed account, uint256 amount);
  event Burn(address indexed account, uint256 amount);

  ///////////// ///////
  ///// MEMORY  ///////  MEMORY MUST BE DEFINED HERE 
  ///////////////////    AND REMAIN UNCHANGED AFTER FIRST DEPLOYMENT
  
  // EIP712 Domain (Required for security)
  bytes32 public constant EIP712_DOMAIN = keccak256("EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)");
  string  public constant EIP712_REVISION = "1";

  // Shell Token
  string  private constant NAME     = "Shell MirrorCoin";
  string  private constant SYMBOL   = "SHELL";
  uint256 private constant DECIMALS = 9; // 9 decimal places
  
  uint256 private constant MAX_UINT256 = type(uint256).max; // 2^256 - 1 = MAX possible supply
  uint256 private constant MAX_SUPPLY  = type(uint128).max; // Max / 2 = MAX usable supply
  
  uint256 private _totalSupply = 0;
  uint256 private _totalMint   = 0;
  uint256 private _totalBurn   = 0;

  address public exchanger;

  EnumerableSet.AddressSet private _owners;
  mapping(address => uint256) private _balances; // account => balance;
  mapping(address => mapping(address => uint256)) private _allowed; // account -> spender -> allowance
  mapping(address => uint256) private _nonces; // account => nonce;
  
  ///// ///// ///////// ///
  /////  CONSTRUCTOR  /////
  /////// ////// //// ////
  constructor(address exchanger_) {
    require(exchanger_ != address(0), "ShellToken: exchanger cannot be zero address");
    exchanger = exchanger_;
  }

  modifier onlyExchangerGuard() {
    require(msg.sender == exchanger, "Only the exchanger can call this function");
    _;
  }

  /////////////// //////
  ///// METHODS //////
  ///// //////////////

  function setExchanger(address updatedExchanger) public onlyOwner returns(bool) {
    exchanger = updatedExchanger;
    return true;
  }

  function DOMAIN_SEPARATOR() public view returns (bytes32) {
    uint256 chainId;
    assembly {chainId := chainid()}
    return keccak256(abi.encode(
      EIP712_DOMAIN,
      keccak256(bytes(name())),
      keccak256(bytes(EIP712_REVISION)),
      chainId,
      address(this)
    ));
  }

  function name() public pure returns(string memory) {return NAME;}
  function symbol() public pure returns(string memory) {return SYMBOL;}
  function decimals() public pure returns(uint8) {return uint8(DECIMALS);}  
  function totalSupply() public view returns(uint256) {return _totalSupply;}
  
  function balanceOf(address account) public view returns(uint256) {
    return _balances[account];
  }
  
  function allowance(address account, address spender) public view returns(uint256) {
    return _allowed[account][spender];
  }
  
  function approve(address spender, uint256 amount) external returns(bool) {
    _allowed[msg.sender][spender] = _allowed[msg.sender][spender].add(amount);
    emit Approval(msg.sender, spender, _allowed[msg.sender][spender]);
    return true;
  }

  function increaseAllowance(address spender, uint256 addedValue) public returns(bool) {
    _allowed[msg.sender][spender] = _allowed[msg.sender][spender].add(addedValue);
    emit Approval(msg.sender, spender, _allowed[msg.sender][spender]);
    return true;
  }

  function decreaseAllowance(address spender, uint256 subtractedValue) public returns(bool) {
    uint256 oldValue = _allowed[msg.sender][spender];
    _allowed[msg.sender][spender] = (subtractedValue >= oldValue) ? 0 : oldValue.sub(subtractedValue);
    emit Approval(msg.sender, spender, _allowed[msg.sender][spender]);
    return true;
  }

  function transfer(address to, uint256 amount) public returns(bool) {
    
    _beforeTransfer(msg.sender, to, amount);
    _transfer(msg.sender, to, amount);
    _afterTransfer(msg.sender, to);
    
    return true;
  }

  function transferFrom(address spender, address to, uint256 amount) public returns(bool) {
    require(_balances[spender] >= amount, "Insufficient balance");
    require(_allowed[spender][msg.sender] >= amount, "Insufficient allowance");
    
    _beforeTransfer(spender, to, amount);
    _transfer(spender, to, amount);
    _afterTransfer(spender, to);

    return true;
  }

  function transferAll(address to) public returns(bool) {
    require(_balances[msg.sender] > 0, "Insufficient balance");
    
    uint256 amount = _balances[msg.sender];

    _beforeTransfer(msg.sender, to, amount);
    _transfer(msg.sender, to, amount);
    _afterTransfer(msg.sender, to);

    return true;
  }

  function mint(address account, uint256 amount) external onlyExchangerGuard returns (bool) {
    require(account != address(0), "Account must not be the zero address");
    require(amount > 0, "Amount must be greater than 0");

    _mint(account, amount);
    emit Mint(account, amount);

    return true;
  }

  function burn(address account, uint256 amount) external onlyExchangerGuard returns (bool) {
    require(account != address(0), "Account must not be the zero address");
    require(amount > 0, "Amount must be greater than 0");
    require(_totalSupply >= amount, "Insufficient supply");

    _burn(account, amount);
    emit Burn(account, amount);

    return true;
  }
  
  function reflect(uint256 deltaSupply) public onlyExchangerGuard returns(uint256) {
    require(deltaSupply > 0, "Reflection supply must be greater than 0");
  
    // Update users balances, dividing the change across all users based on their share of the total supply
    for (uint256 i = 0; i < _owners.length(); i++) {
      address account = _owners.at(i);
      if (_balances[account] > 0) {
        uint256 amount = deltaSupply.mul(_balances[account]).div(_totalSupply);
        _balances[account] = _balances[account].add(amount);
      }
    }
    
    // Ensure the total supply is reflected
    if ((deltaSupply + _totalSupply) >= MAX_SUPPLY) {
      _totalSupply = MAX_SUPPLY;
    } else {
      _totalSupply = _totalSupply.add(deltaSupply);
    }
    
    emit LogReflection(deltaSupply);

    return _totalSupply;
  }

  function _rebaseAndSync(uint256 deltaSupply, address pair) private {
    reflect(deltaSupply);
    IUniswapV2Pair(pair).sync();
  }

  function _mint(address account, uint256 amount) private nonReentrant returns(uint256) {
    _beforeTransfer(address(0), account, amount);
    
    _totalSupply = _totalSupply.add(amount); // Add to the total supply.
    _totalMint = _totalMint.add(amount); // Add to our mint counter.
    _balances[account] = _balances[account].add(amount); // Add to the account's balance.
    
    _afterTransfer(address(0), account);
    
    return amount;
  }

  function _burn(address account, uint256 amount) private nonReentrant returns(uint256) {
    _beforeTransfer(account, address(0), amount);
    
    _totalSupply = _totalSupply.sub(amount); // Subtract from the total supply.
    _totalBurn = _totalBurn.add(amount); // Add to our burn counter.
    _balances[account] = _balances[account].sub(amount); // Subtract from the account's balance.
    
    _afterTransfer(account, address(0));
    
    return amount;
  }

  function _transfer(address from, address to, uint256 amount) nonReentrant private {
    require(amount > 0, "Amount must be greater than 0");
    require(to != address(0x0), "Cannot transfer to the null address");
    require(from != to, "Cannot transfer to the same address");
    require(_balances[from] >= amount, "Insufficient balance");

    _balances[from] = _balances[from].sub(amount);
    _balances[to] = _balances[to].add(amount);

    emit Transfer(from, to, amount);
  }

  function _beforeTransfer(address from, address to, uint256 amount) internal {}
  function _afterTransfer(
    address from, 
    address to
    // uint256 amount
  ) internal {
    if (from == address(0)) {
      // mint
      _owners.add(to);
    } else if (to == address(0)) {
      // burn
      if (balanceOf(from) == 0) {
        _owners.remove(from);
      }
    } else {
      // transfer
      if (balanceOf(from) == 0) {
        _owners.remove(from);
      }
      _owners.add(to);
    }
  }
}