contract FirstTest is IAxelarExecutable  {
    string public value; // value that can set cross chain
    IAxelarGasService public immutable gasReceiver;

    constructor(
        address gateway_,
        IAxelarGasService  _gasReceiver
    ) IAxelarExecutable(gateway_){
        gasReceiver = _gasReceiver;        
    }
    

    // // is executed on chain origin
    function setRemoteValueToMultipleChain(
        string[] calldata destinationChains,
        string[] calldata destinationAddresses,
        string calldata _value
    ) external payable{
        // encode the data to be sent to chain destination
        bytes memory payload = abi.encode(_value);
        // pay for gas 
        for(uint i=0; i< destinationChains.length ; i++){
            if(msg.value > 0) {
                string memory destinationChain = destinationChains[i];
                string memory destinationAddress = destinationAddresses[i];
                gasReceiver.payNativeGasForContractCall{value: msg.value}(
                    address(this),
                    destinationChain,
                    destinationAddress,
                    payload,
                    msg.sender
                );
                // call the gateway contract to execute the tx
                gateway.callContract(destinationChain, destinationAddress, payload);
                // set the same state on both contracts
                value = _value;
                // clear 
            }
            
        }
    }
    // // is executed on chain origin
    function setRemoteValue(
        string calldata destinationChain,
        string calldata destinationAddress,
        string calldata _value
    ) external payable{
        // encode the data to be sent to chain destination
        bytes memory payload = abi.encode(_value);
        // pay for gas 
        if(msg.value > 0) {
            gasReceiver.payNativeGasForContractCall{value: msg.value}(
                address(this),
                destinationChain,
                destinationAddress,
                payload,
                msg.sender
            );
        }
        // call the gateway contract to execute the tx
        gateway.callContract(destinationChain, destinationAddress, payload);
        // set the same state on both contracts
        value = _value;
    }

    // is executed on chain destination
    function _execute(
        string memory, //sourceChain_ 
        string memory,//sourceAddress_
        bytes calldata payload_
    ) internal override {
        (value) = abi.decode(payload_, (string));        
    }
    // function _executeWithToken(
    //     string memory sourceChain,
    //     string memory sourceAddress,
    //     bytes calldata payload,
    //     string memory tokenSymbol,
    //     uint256 amount
    // ) internal override{}
}

