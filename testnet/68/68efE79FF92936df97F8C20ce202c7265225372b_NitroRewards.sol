pragma solidity 0.8.4;
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

interface INitroVault {
    function release(address _to, uint256 _amount) external;
}

contract NitroRewards is Ownable, ReentrancyGuard {
    IERC20 public token;
    INitroVault public vault;
    address public verifier;

    mapping(address => mapping(uint256 => bool)) public txNonce;
    mapping(address => uint256) public userRewards;

    uint256 public totalRewards;

    event RewardClaimed(
        address wallet,
        uint256 amount,
        uint256 nonce,
        uint256 when,
        address verifier
    );
    event VerifierUpdated(
        address oldVerifier,
        address newVerifier,
        uint256 when,
        address who
    );

    constructor(
        IERC20 _token,
        INitroVault _vault,
        address _verifier
    ) {
        token = _token;
        vault = _vault;
        verifier = _verifier;
    }

    function updateVerifier(address _newVerifier) external onlyOwner {
        require(
            _newVerifier != address(0),
            "UpdateVerifier:: Verifier can not be Zero"
        );
        emit VerifierUpdated(
            verifier,
            _newVerifier,
            block.timestamp,
            msg.sender
        );
    }

    function claimRewards(
        uint256 amount,
        uint256 nonce,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external nonReentrant {
        require(!txNonce[msg.sender][nonce], "ClaimRewards:: Already claimed");
        require(
            recoverSigner(
                getEthSignedMessageHash(msg.sender, amount, nonce),
                v,
                r,
                s
            ) == verifier,
            "ClaimRewards:: Invalid Signature"
        );
        txNonce[msg.sender][nonce] = true;
        INitroVault(vault).release(msg.sender, amount);
        userRewards[msg.sender] = userRewards[msg.sender] + amount;
        totalRewards = totalRewards + amount;
        emit RewardClaimed(
            msg.sender,
            amount,
            nonce,
            block.timestamp,
            verifier
        );
    }

    function recoverSigner(
        bytes32 _ethSignedMessageHash,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) public pure returns (address) {
        return ecrecover(_ethSignedMessageHash, v, r, s);
    }

    function getEthSignedMessageHash(
        address wallet,
        uint256 amount,
        uint256 nonce
    ) public view returns (bytes32) {
        return
            keccak256(
                abi.encodePacked(
                    "\x19Ethereum Signed Message:\n32",
                    getMessageHash(wallet, amount, nonce)
                )
            );
    }

    function getMessageHash(
        address wallet,
        uint256 amount,
        uint256 nonce
    ) public view returns (bytes32) {
        return keccak256(abi.encodePacked(address(this), wallet, amount, nonce));
    }
}

