    mapping(address => address[]) public getPools;

    event PresalePoolCreated(address registeredBy, address indexed pool, uint256 poolId);

    /**
     * @notice Get the number of all created pools
     * @return Return number of created pools
     */
    function allPoolsLength() public view returns (uint256) {
        return allPools.length;
    }

    /**
     * @notice Get the created pools by token address
     * @dev User can retrieve their created pool by address of tokens
     * @param _creator Address of created pool user
     * @return Created PreSalePool Address
     */
    function getCreatedPools(address _creator) public view returns (address[] memory) {
        return getPools[_creator];
    }

    /**
     * @notice Retrieve number of pools created for specific token
     * @param _creator Address of created pool user
     * @return Return number of created pool
     */
    function getCreatedPoolsLength(address _creator) public view returns (uint256) {
        return getPools[_creator].length;
    }

    /**
     * @notice Register ICO PreSalePool
     * @param _signer Address of funding ICO wallets. Sold tokens in eth will transfer to this address
     */
    function registerPool(address _signer) external whenNotPaused returns (address pool) {
        pool = address(new PreSalePool());
        IPool(pool).initialize(_signer);
        getPools[msg.sender].push(pool);
        allPools.push(pool);

        emit PresalePoolCreated(msg.sender, pool, allPools.length - 1);
    }
