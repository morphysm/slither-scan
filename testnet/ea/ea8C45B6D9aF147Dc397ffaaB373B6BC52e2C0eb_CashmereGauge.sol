pragma solidity 0.8.15;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "../interfaces/IMasterCashmere.sol";
import "../interfaces/IVeCSM.sol";

contract CashmereGauge is AccessControl {
    IMasterCashmere public masterCashmere;
    IVeCSM public veCSM;

    uint256 public totalVotes;
    mapping(uint256 => uint256) public poolVotes;
    mapping(address => uint256) public userTotalVotes;
    mapping(address => mapping(uint256 => uint256)) public userPoolVotes;
    mapping(address => mapping(uint256 => uint256)) public userPoolTimestamps;

    uint256 public voteTimeout = 10 days;
    uint256 public allocationUpdateInterval = 7 days;
    uint256 public nextAllocationUpdate;

    event Vote(address indexed account, uint256 indexed pid, uint256 oldValue, uint256 newValue);
    event VoteReset(address indexed account, uint256 indexed pid, uint256 valueBeforeReset);
    event VoteTimeoutUpdated(uint256 oldValue, uint256 newValue);
    event AllocationUpdateIntervalUpdated(uint256 oldValue, uint256 newValue);
    event MasterCashmereUpdated(IMasterCashmere oldValue, IMasterCashmere newValue);
    event VeCSMUpdated(IVeCSM oldValue, IVeCSM newValue);
    event UpdateTriggered();

    constructor(IMasterCashmere _masterCashmere, IVeCSM _veCSM) {
        masterCashmere = _masterCashmere;
        veCSM = _veCSM;
        nextAllocationUpdate = block.timestamp + allocationUpdateInterval;

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function vote(uint256 pid, uint256 amount) external {
        require(pid < masterCashmere.poolLength(), "invalid pid");
        require(amount > 0, "invalid amount");
        uint256 balance = veCSM.balanceOf(msg.sender);
        uint256 userVotes = userTotalVotes[msg.sender];
        require(balance >= userVotes + amount, "insufficient veCSM");
        require(block.timestamp - userPoolTimestamps[msg.sender][pid] >= voteTimeout, "too early");

        uint256 userPoolVotesAmount = userPoolVotes[msg.sender][pid];
        uint256 userNewPoolVotesAmount = userPoolVotesAmount + amount;

        totalVotes += amount;
        poolVotes[pid] += amount;
        userTotalVotes[msg.sender] = userVotes + amount;
        userPoolVotes[msg.sender][pid] = userNewPoolVotesAmount;
        userPoolTimestamps[msg.sender][pid] = block.timestamp;

        emit Vote(msg.sender, pid, userPoolVotesAmount, userNewPoolVotesAmount);
    }

    function resetVote(uint256 pid) external {
        uint256 votedBalance = userPoolVotes[msg.sender][pid];
        require(votedBalance > 0, "nothing to reset");
        require(block.timestamp - userPoolTimestamps[msg.sender][pid] >= voteTimeout, "too early");

        totalVotes -= votedBalance;
        poolVotes[pid] -= votedBalance;
        userTotalVotes[msg.sender] -= votedBalance;
        userPoolVotes[msg.sender][pid] = 0;
        userPoolTimestamps[msg.sender][pid] = block.timestamp;

        emit VoteReset(msg.sender, pid, votedBalance);
    }

    function triggerUpdate() external {
        uint256 _nextAllocationUpdate = nextAllocationUpdate;
        require(block.timestamp >= _nextAllocationUpdate, "too early");

        uint256 poolLength = masterCashmere.poolLength();
        for (uint256 i; i < poolLength; i++) {
            masterCashmere.set(i, poolVotes[i], IRewarder(address(0)), false);
        }
        nextAllocationUpdate = _nextAllocationUpdate + allocationUpdateInterval;

        emit UpdateTriggered();
    }

    function updateVoteTimeout(uint256 newVoteTimeout) external onlyRole(DEFAULT_ADMIN_ROLE) {
        emit VoteTimeoutUpdated(voteTimeout, newVoteTimeout);
        voteTimeout = newVoteTimeout;
    }

    function updateAllocationUpdateInterval(uint256 newAllocationUpdateInterval) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(newAllocationUpdateInterval > 1 days, "too small"); // sanity check
        emit AllocationUpdateIntervalUpdated(allocationUpdateInterval, newAllocationUpdateInterval);
        allocationUpdateInterval = newAllocationUpdateInterval;
    }

    function updateMasterCashmere(IMasterCashmere newMasterCashmere) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(Address.isContract(address(newMasterCashmere)), "not a contract");
        emit MasterCashmereUpdated(masterCashmere, newMasterCashmere);
        masterCashmere = newMasterCashmere;
    }

    function updateVeCSM(IVeCSM newVeCSM) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(Address.isContract(address(newVeCSM)), "not a contract");
        emit VeCSMUpdated(veCSM, newVeCSM);
        veCSM = newVeCSM;
    }
}

