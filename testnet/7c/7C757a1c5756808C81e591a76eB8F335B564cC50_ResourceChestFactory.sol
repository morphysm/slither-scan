import "../interfaces/IEventLogger.sol";

contract ResourceChest is Ownable, Pausable, ERC1155Holder, IResourceChest {
    using SafeERC20 for IERC20;
    using EnumerableSet for EnumerableSet.UintSet;

    struct ChestOrder {
        uint256 count;
        address buyer;
        bool executed;
    }

    struct BalanceInfo {
        uint256 tokenId;
        uint256 amount;
    }

    IResourceToken public immutable resource;
    IERC20 public immutable craft;
    ITimeProvider public immutable timeProvider;
    IEventLogger public immutable eventLogger;

    uint256 public chestPrice;
    uint256 public startTime;
    uint256 public limitPerUser;
    bool private _started;
    uint256 public totalBalance;
    uint256 public chestsSold;

    mapping (address => uint256) public openedCount;
    EnumerableSet.UintSet private _chestInventory;
    mapping (uint256 => uint256) private _chestBalances;
    ChestOrder[] public chestOrders;
    address public executorAddress;

    uint256 public creatorBalance;
    uint256 public creatorWithdrawnBalance;
    uint256 public ownerBalance;
    uint256 public creatorVestingStartTimestamp;
    address public immutable creatorAddress;

    event TokensDeposited(uint256[] tokenIds, uint256[] amounts);
    event ChestOrdered(address indexed player, uint256 orderIdx);
    event OrderExecuted(address indexed player, uint256[] tokenIds, uint256[] amounts);
    event ChestPriceUpdated(uint256 newValue);
    event LimitPerUserUpdated(uint256 newValue);
    event StartTimeUpdated(uint256 newValue);
    event ExecutorAddressUpdated(address newValue);
    event OwnerWithdrawFee(uint256 amount);
    event CreatorWithdrawFee(uint256 amount);
    event EmergencyWithdrawFee(uint256 value);
    event EmergencyWithdraw();

    constructor(IResourceToken resource_, ITimeProvider timeProvider_, IEventLogger eventLogger_, IERC20 craft_, address owner_, address creator_, uint256 chestPrice_, uint256 startTime_, uint256 limitPerUser_) {
        resource = resource_;
        timeProvider = timeProvider_;
        craft = craft_;
        chestPrice = chestPrice_;
        startTime = startTime_;
        limitPerUser = limitPerUser_;
        creatorAddress = creator_;
        eventLogger = eventLogger_;

        emit ChestPriceUpdated(chestPrice_);
        emit StartTimeUpdated(startTime_);
        emit LimitPerUserUpdated(limitPerUser_);

        _transferOwnership(owner_);
        _pause();
    }

    function depositTokens(uint256[] calldata tokenIds, uint256[] calldata amounts) external onlyOwner {
        require(tokenIds.length == amounts.length, "invalid args");
        for (uint256 i=0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            uint256 amount = amounts[i];
            _chestInventory.add(tokenId);
            _chestBalances[tokenId] += amount;
            totalBalance += amount;
        }
        resource.safeBatchTransferFrom(msg.sender, address(this), tokenIds, amounts, "");
        emit TokensDeposited(tokenIds, amounts);
    }

    function orderChest(uint256 count) external {
        if (!_started && timeProvider.getTimestamp() >= startTime) {
            _started = true;
            if (paused())
                _unpause();
        }

        require(!paused(), "Pausable: paused");
        require(limitPerUser == 0 || openedCount[msg.sender] + count <= limitPerUser, "user limit exceeded");
        require(totalBalance >= count, "insufficient chests");

        openedCount[msg.sender] += count;
        totalBalance -= count;
        chestsSold++;
        uint256 orderIdx = chestOrders.length;
        chestOrders.push(ChestOrder({
            count: count,
            buyer: msg.sender,
            executed: false
        }));

        uint256 craftFee = chestPrice * count;

        uint256 creatorFee = craftFee / 2;
        creatorBalance += creatorFee;
        ownerBalance += craftFee - creatorFee;
        creatorVestingStartTimestamp = block.timestamp;

        craft.safeTransferFrom(msg.sender, address(this), craftFee);
        emit ChestOrdered(msg.sender, orderIdx);
    }

    function executeChest(uint256 chestIdx, uint256[] calldata tokenIds, uint256[] calldata amounts) public {
        require(msg.sender == executorAddress, "invalid caller");
        uint256 tokenIdsLength = tokenIds.length;
        require(tokenIdsLength == amounts.length, "invalid lengths");
        ChestOrder storage order = chestOrders[chestIdx];
        require(!order.executed, "already executed");
        uint256 totalAmount;
        for (uint256 i=0; i < tokenIdsLength; i++) {
            uint256 tokenId = tokenIds[i];
            uint256 amount = amounts[i];
            uint256 chestBalance = _chestBalances[tokenId];
            require(chestBalance >= amount, "insufficient tokens");
            uint256 newChestBalance = chestBalance - amount;
            _chestBalances[tokenId] = newChestBalance;
            if (newChestBalance == 0)
                _chestInventory.remove(tokenId);
            totalAmount += amount;
        }
        require(totalAmount == order.count, "invalid count");
        order.executed = true;
        resource.safeBatchTransferFrom(address(this), order.buyer, tokenIds, amounts, "");
        emit OrderExecuted(order.buyer, tokenIds, amounts);
    }

    function started() external view returns (bool) {
        return _started || timeProvider.getTimestamp() >= startTime;
    }

    function updateChestPrice(uint256 newValue) external onlyOwner {
        require(chestPrice != newValue, "no change");
        chestPrice = newValue;
        emit ChestPriceUpdated(newValue);
    }

    function updateLimitPerUser(uint256 newValue) external onlyOwner {
        require(limitPerUser != newValue, "no change");
        limitPerUser = newValue;
        emit LimitPerUserUpdated(newValue);
    }

    function updateStartTime(uint256 newTime) external onlyOwner {
        require(!_started, "started already");
        require(startTime != newTime, "no change");
        require(newTime >= timeProvider.getTimestamp(), "cannot set start time in past");
        startTime = newTime;
        emit StartTimeUpdated(newTime);
    }

    function updateExecutorAddress(address newValue) external onlyOwner {
        require(newValue != executorAddress, "no change");
        executorAddress = newValue;
        emit ExecutorAddressUpdated(newValue);
    }

    function withdrawCreatorFee() external {
        require(msg.sender == creatorAddress, "wrong caller");
        uint256 balance = creatorBalance;
        uint256 paid = creatorWithdrawnBalance;
        uint256 timeDelta = block.timestamp - creatorVestingStartTimestamp;
        uint256 vestingValue = balance * timeDelta / 7 days;
        if (vestingValue > balance)
            vestingValue = balance;
        require(vestingValue > paid, "nothing to withdraw");
        uint256 withdrawValue = vestingValue - paid;
        creatorWithdrawnBalance = vestingValue;
        craft.safeTransfer(msg.sender, withdrawValue);
        emit CreatorWithdrawFee(withdrawValue);
    }

    function withdrawOwnerFee() external onlyOwner {
        uint256 balance = ownerBalance;
        ownerBalance = 0;
        craft.safeTransfer(owner(), balance);
        emit OwnerWithdrawFee(balance);
    }

    function chestInventory() external view returns (BalanceInfo[] memory) {
        uint256 inventoryLength = _chestInventory.length();
        BalanceInfo[] memory result = new BalanceInfo[](inventoryLength);
        for (uint256 i; i < inventoryLength; i++) {
            uint256 tokenId = _chestInventory.at(i);
            result[i] = BalanceInfo({
                tokenId: tokenId,
                amount: _chestBalances[tokenId]
            });
        }
        return result;
    }

    function emergencyWithdrawFee(address to) external onlyOwner {
        uint256 balance = craft.balanceOf(address(this));
        craft.safeTransfer(to, balance);
        emit EmergencyWithdrawFee(balance);
    }

    function emergencyWithdraw(address to) external onlyOwner {
        uint256[] memory availableTokens = resource.ownedTokens(address(this));
        uint256[] memory availableBalances = resource.balanceOfBatchSingleAccount(address(this), availableTokens);
        resource.safeBatchTransferFrom(address(this), to, availableTokens, availableBalances, "");
        emit EmergencyWithdraw();
    }
}

