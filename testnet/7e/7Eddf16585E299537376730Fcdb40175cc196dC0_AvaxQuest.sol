  mapping(address => Player) public playerInfo; // Mapping of player addresses to player info
  mapping(address => GameToken) public playerTokenInfo; // Mapping of player addresses to player token info
  mapping(string => Battle) public battleInfo; // Mapping of battle name to battle info
