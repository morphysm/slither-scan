  /// @dev Creates a new battle
  /// @param _name battle name; set by player
  function createBattle(string memory _name) external returns (Battle memory) {
    bytes32 battleHash = keccak256(abi.encode(_name));
    battleInfo[_name] = Battle(
      battleHash, // Battle hash
      false, // Battle started
      false, // Battle ended
      _name, // Battle name
      msg.sender, // player 1 address
      0x0000000000000000000000000000000000000000, // player 2 address; empty until player 2 joins battle
      0x0000000000000000000000000000000000000000, // winner address; empty until battle ends
      1 // player turn; player 1 starts
    ); // Creates battle info
    return battleInfo[_name];
  }

  function joinBattle(string memory _name) external returns (Battle memory) {
    require(!battleInfo[_name].battleStarted, 'Battle already started'); // Require that battle has not started
    require(battleInfo[_name].player1 != msg.sender, 'Only player two can join a battle'); // Require that player 2 is joining the battle
    require(!inBattle[msg.sender], 'Already in battle'); // Require that player is not already in a battle
    battleInfo[_name] = Battle(
      battleInfo[_name].battleHash, // Battle hash
      true, // Battle started
      false, // Battle ended
      battleInfo[_name].name, // Battle name
      battleInfo[_name].player1, // player 1 address
      msg.sender, // player 2 address
      0x0000000000000000000000000000000000000000, // winner address; empty until battle ends
      1
    );
    battles.push(battleInfo[_name]); // Adds battle to battles array
    inBattle[battleInfo[_name].player1] = true; // Sets inBattle mapping to true for player 1
    inBattle[msg.sender] = true; // Sets inBattle mapping to true for player 2
    battleInfo[_name].battleStarted = true; // Sets battle started to true
    emit NewBattle(battleInfo[_name].battleHash, battleInfo[_name].player1, msg.sender); // Emits NewBattle event
    return battleInfo[_name];
  }

  /// @dev Starts a Attack or Defense cycle
  /// @param _choice 1 for Attack, 2 for Defense
  /// @param _battleName battle name; set by player 1
  function attackOrDefend(uint256 _choice, string memory _battleName)
    external
    returns (string memory message)
  {
    require(
      battleInfo[_battleName].battleStarted,
      'Battle not started. Please tell another player to jon the battle'
    ); // Require that battle has started
    require(!battleInfo[_battleName].battleEnded, 'Battle has already ended'); // Require that battle has not ended
    require(
      msg.sender == battleInfo[_battleName].player1 ||
        msg.sender == battleInfo[_battleName].player2,
      'You are not in this battle'
    ); // Require that player is in the battle
    if (battleInfo[_battleName].playerTurn == 1) {
      require(msg.sender == battleInfo[_battleName].player1, 'Not your turn'); // Require that it is player 1's turn
    } else {
      require(msg.sender == battleInfo[_battleName].player2, 'Not your turn'); // Require that it is player 2's turn
    }

    // attack logic
    if (_choice == 1) {
      _attack(_battleName); // calls _attack function
    } else {
      // defend logic
      if (battleInfo[_battleName].playerTurn == 1) {
        // TODO add defense logic
        // playerInfo[battleInfo[_battleName].player1].playerHealth += playerTokenInfo[
        //   battleInfo[_battleName].player1
        // ].defenseStrength;
        playerInfo[battleInfo[_battleName].player1].playerMana += 3;
      } else {
        // TODO add defense logic
        // playerInfo[battleInfo[_battleName].player2].playerHealth += playerTokenInfo[
        //   battleInfo[_battleName].player2
        // ].defenseStrength;
        playerInfo[battleInfo[_battleName].player2].playerMana += 3;
      }
    }
    // change turn
    if (battleInfo[_battleName].playerTurn == 1) {
      battleInfo[_battleName].playerTurn = 2;
    } else {
      if (battleInfo[_battleName].playerTurn == 2) {
        battleInfo[_battleName].playerTurn = 1;
      }
    }
  }

  /// @dev internal function to attack
  /// @param _battleName battle name; taken from attackOrDefend function
  function _attack(string memory _battleName) internal returns (string memory message) {
    if (battleInfo[_battleName].playerTurn == 1) {
      // win logic
      if (
        // await player 2 stats
        battleMoveInfo[_battleName].player2Choice == 1 &&
        playerTokenInfo[battleInfo[_battleName].player1].attackStrength >=
        playerInfo[battleInfo[_battleName].player2].playerHealth
        // If player 2 is not defending and player 1 attack strength is greater than player 2 health
      ) {
        // player 1 wins the battle
        _endBattle(msg.sender, _battleName); // calls _endBattle function
        return 'Player 1 wins the battle';
      } else {
        playerInfo[battleInfo[_battleName].player2].playerHealth -= playerTokenInfo[
          battleInfo[_battleName].player1
        ].attackStrength; // Subtracts player 1 attack strength from player 2 health
        playerInfo[battleInfo[_battleName].player1].playerMana -= 3; // Subtracts 3 mana from player 1
        battleMoveInfo[_battleName].player1Choice = 1; // Sets player 1 choice to 1
        return 'Player 1 attacked';
      }

      // player 2 attack
    } else {
      // win logic
      if (
        battleMoveInfo[_battleName].player1Choice == 1 &&
        playerTokenInfo[battleInfo[_battleName].player2].attackStrength >=
        playerInfo[battleInfo[_battleName].player1].playerHealth
        // If player 1 is not defending and player 2 attack strength is greater than player 1 health
      ) {
        // player 2 wins the battle
        _endBattle(msg.sender, _battleName);
        return 'Player 2 wins the battle';
      } else {
        playerInfo[battleInfo[_battleName].player1].playerHealth -= playerTokenInfo[
          battleInfo[_battleName].player2
        ].attackStrength; // Subtracts player 2 attack strength from player 1 health
        playerInfo[battleInfo[_battleName].player2].playerMana -= 3; // Subtracts 3 mana from player 2
        battleMoveInfo[_battleName].player2Choice = 1; // Sets player 2 choice to 1
        return 'Player 2 attacked';
      }
    }
  }

  /// @dev internal function to end the battle
  /// @param battleEnder winner address
  /// @param _name battle name; taken from attackOrDefend function
  function _endBattle(address battleEnder, string memory _name) internal returns (Battle memory) {
    require(!battleInfo[_name].battleEnded, 'Battle already ended'); // Require that battle has not ended
    battleInfo[_name] = Battle(
      battleInfo[_name].battleHash, // Battle hash
      true, // Battle started
      true, // Battle ended
      battleInfo[_name].name, // Battle name
      battleInfo[_name].player1, // player 1 address
      battleInfo[_name].player2, // player 2 address
      msg.sender, // winner address
      battleInfo[_name].playerTurn // player turn
    );
    battles.push(battleInfo[_name]); // Adds battle to battles array
    inBattle[battleInfo[_name].player1] = false; // Resets inBattle mapping to false for player 1
    inBattle[battleInfo[_name].player2] = false; // Resets inBattle mapping to false for player 2
    battleInfo[_name].battleStarted = true; // Sets battle started to true
    battleInfo[_name].battleEnded = true; // Sets battle ended to true
    playerInfo[battleInfo[_name].player1].playerHealth = 25; // Resets player 1 health to 25
    playerInfo[battleInfo[_name].player1].playerMana = 10; // Resets player 1 mana to 10
    playerInfo[battleInfo[_name].player2].playerHealth = 25; // Resets player 2 health to 25
    playerInfo[battleInfo[_name].player2].playerMana = 10; // Resets player 2 mana to 10
    emit BattleEnded(battleInfo[_name].name, battleEnder); // Emits BattleEnded event
    return battleInfo[_name];
  }

  // TODO: add defense logic
  function _defend(string memory _battleName) internal returns (string memory message) {
    if (battleInfo[_battleName].playerTurn == 1) {
      // playerInfo[battleInfo[_battleName].player1].playerHealth += playerTokenInfo[
