  /// @dev Initializes the contract by setting a `metadataURI` to the token collection
  /// @param _metadataURI baseURI where token metadata is stored
  constructor(string memory _metadataURI) ERC1155(_metadataURI) {
    _mint(msg.sender, SNEK, 1, ''); // Mint 1 SNEK token to contract owner
    _mint(msg.sender, OCELOT, 1, ''); // Mint 1 OCELOT token to contract owner
    baseURI = _metadataURI; // Set baseURI
  }

  /// @dev GameToken struct to store player token info
  /// @param name battle card name; set by player
  /// @param id battle card token id; will be randomly generated
  /// @param attackStrength battle card attack; generated randomly
  /// @param defenseStrength battle card defense; generated randomly
  struct GameToken {
    string name;
    uint256 id;
    uint256 attackStrength;
    uint256 defenseStrength;
  }

  /// @dev Player struct to store player info
  /// @param playerAddress player wallet address
  /// @param playerName player name; set by player during registration
  /// @param playerMana player mana; affected by battle results
  /// @param playerHealth player health; affected by battle results
  struct Player {
    address playerAddress;
    string playerName;
    uint256 playerMana;
    uint256 playerHealth;
  }

