  /// @param player1 player 1 address
  /// @param player2 player 2 address
  /// @param player1Choice player 1 move
  /// @param player2Choice player 2 move
  struct BattleMoves {
    string BattleName;
    address player1;
    address player2;
    uint256 player1Choice;
    uint256 player2Choice;
  }

