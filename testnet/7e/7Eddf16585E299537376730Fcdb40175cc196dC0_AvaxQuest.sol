  event NewPlayer(address indexed owner, string name);
  event NewBattle(bytes32 battleHash, address indexed player1, address indexed player2);
  event BattleStarted(bytes32 battleHash, address indexed player1, address indexed player2);
  event BattleEnded(string battleName, address indexed winner);

  function setURI(string memory newuri) public onlyOwner {
    _setURI(newuri);
  }

  function withdraw() external payable onlyOwner {
    address payable _owner = payable(owner());
    _owner.transfer(address(this).balance);
  }

  /// @dev Registers a player
  /// @param _name player name; set by player
  function registerPlayer(string memory _name) external {
    require(!isPlayer[msg.sender], 'Player already registered'); // Require `that player is not already registered
    playerInfo[msg.sender] = Player(msg.sender, _name, 10, 25); // Creates player info
    players.push(playerInfo[msg.sender]); // Adds player to players array
    isPlayer[msg.sender] = true; // Sets isPlayer mapping to true for player
    emit NewPlayer(msg.sender, _name); // Emits NewPlayer event
  }

  /// @dev internal function to generate random number; used for Battle Card Attack and Defense Strength
  function _createRandomNum() internal view returns (uint256[] memory attributes) {
    uint256 randomNum = uint256(keccak256(abi.encodePacked(block.timestamp, msg.sender)));
    uint256[] memory attributeValues = new uint256[](2);
    uint256 newAttackValue = randomNum % 25;
    if (newAttackValue < 12) {
      newAttackValue = 12;
    }
    uint256 newDefenseValue = (randomNum + 1) % 25;
    if (newDefenseValue < 12) {
      newDefenseValue = 12;
    }
    attributeValues[0] = newAttackValue;
    attributeValues[1] = newDefenseValue;

    attributes = attributeValues;

    return (attributes);
  }

  /// @dev internal function to create a new Battle Card
  function _createGameToken(string memory _name) internal returns (GameToken memory) {
    uint256 randAttackStrength = _createRandomNum()[0];
    uint256 randDefenseStrength = _createRandomNum()[1];
    uint8 randId = uint8(uint256(keccak256(abi.encodePacked(block.timestamp, msg.sender))) % 100);
    if (randId >= 5) {
      randId = 1;
    }
    GameToken memory newGameToken = GameToken(
      _name,
      randId,
      randAttackStrength,
      randDefenseStrength
    );
    playerTokenInfo[msg.sender] = newGameToken;
    gameTokens.push(newGameToken);
    _mint(msg.sender, randId, 1, '0x0');
    totalSupply++;
    emit NewGameToken(msg.sender, randId, randAttackStrength, randDefenseStrength);
    return newGameToken;
  }

  /// @dev Creates a new game token
  /// @param _name game token name; set by player
  function createRandomGameToken(string memory _name) public payable {
    require(isPlayer[msg.sender], 'Please Register Player First'); // Require that the player is registered
    _createGameToken(_name); // Creates game token
  }

  function getTotalSupply() external view returns (uint256) {
    return totalSupply;
  }

  function getGameTokens() public view returns (GameToken[] memory) {
    return gameTokens;
