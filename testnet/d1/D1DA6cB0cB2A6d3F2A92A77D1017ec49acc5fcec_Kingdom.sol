pragma solidity ^0.8.0;

import "./Character.sol";
import "./Castle.sol";

import "./IKingdom.sol";

contract Kingdom is IKingdom {

    Character characters;
    Castle castles;

    mapping(address => KingdomStruct) public addressToKingdom;

    constructor(address _characters, address _castles) {
        characters = Character(_characters);
        castles = Castle(_castles);
    }

    function newKingdom() external
    {
        require(addressToKingdom[msg.sender].is_created == false, "Kingdom: already created");
        addressToKingdom[msg.sender].name = "";
        addressToKingdom[msg.sender].is_created = true;
        addressToKingdom[msg.sender].castles.push(
            castles.newCastle(ICastle.CastleType.Starter)
        );
    }

    function getKingdom(address owner) external view kingdomExists(owner) returns (string memory, uint256[] memory)
    {
        return (
            addressToKingdom[owner].name,
            addressToKingdom[owner].castles
        );
    }

    function buyKingdomName(string memory name) external kingdomExists(msg.sender)
    {
        addressToKingdom[msg.sender].name = name;
    }

    function buyNewCastle(ICastle.CastleType castle_type) external kingdomExists(msg.sender)
    {
        addressToKingdom[msg.sender].castles.push(
            castles.newCastle(castle_type)
        );
    }

    function buyCastleName(uint256 castle_id, string memory name) external kingdomExists(msg.sender)
    {
        require(castle_id < addressToKingdom[msg.sender].castles.length, "Kingdom: castle not found");
        castles.setCastleName(addressToKingdom[msg.sender].castles[castle_id], name);
    }

    modifier kingdomExists(address owner)
    {
        require(addressToKingdom[owner].is_created == true, "Kingdom: not created");
        _;
    }
}

