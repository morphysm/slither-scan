pragma solidity ^0.8.0;

import "openzeppelin-solidity/contracts/token/ERC721/extensions/ERC721Enumerable.sol";
import "openzeppelin-solidity/contracts/access/Ownable.sol";
import "openzeppelin-solidity/contracts/security/Pausable.sol";

import "./ICharacter.sol";

contract Character is ICharacter, ERC721Enumerable, Ownable, Pausable {

    // Current character gen characteristics
    uint8 _current_gen;
    uint256 _current_gen_cap;
    uint256 _current_gen_price_avax;
    uint256 _current_gen_price_ecu;

    mapping(uint256 => CharacterStruct) public tokenIDToCharacterStruct;
    mapping(uint256 => uint256) public hashToTokenID;

    constructor(uint256 cap, uint256 avax, uint256 ecu) ERC721("", "") {
        _current_gen = 0;
        _current_gen_cap = cap;
        _current_gen_price_avax = avax;
        _current_gen_price_ecu = ecu;
    }




    /* Game functions */

    function mintCharacter(uint8 amount) external payable whenNotPaused {
        require(amount > 0 && amount <= getMintLimitPerTransaction(), "Invalid character mint transaction amount");
        require(totalSupply() + amount <= getCurrentGenCap(), "Character generation cap exceeded");
        require(amount * getMintPriceAVAX() <= msg.value, "Transaction payment amount too low");

        for (uint8 token_index = 0; token_index < amount; token_index++)
        {
            _mintUniqueCharacter(msg.sender);
        }

        //TODO burn les ECU si besoin
    }




    /* Common public functions */

    function getCurrentGen() public view returns (uint8)
    {
        return _current_gen;
    }

    function getCurrentGenCap() public view returns (uint256)
    {
        return _current_gen_cap;
    }

    function getMintPriceAVAX() public view returns (uint256)
    {
        return _current_gen_price_avax;
    }

    function getMintPriceECU() public view returns (uint256)
    {
        return _current_gen_price_ecu;
    }

    function getMintLimitPerTransaction() public pure returns (uint8)
    {
        return uint8(5);
    }

    function getCharacter(uint256 token_id) external view returns (uint8, Role)
    {
        return (
            tokenIDToCharacterStruct[token_id].generation,
            tokenIDToCharacterStruct[token_id].role
        );
    }




    /* Admin functions */

    function incrementGen(uint256 cap) external onlyOwner
    {
        _current_gen++;
        _current_gen_cap = totalSupply() + cap;
    }

    function giveaway(address to, uint8 amount) external onlyOwner
    {
        require(totalSupply() + amount <= getCurrentGenCap(), "Character generation cap exceeded");

        for (uint8 token_index = 0; token_index < amount; token_index++)
        {
            _mintUniqueCharacter(to);
        }
    }




    /* Private functions */

    function _mintUniqueCharacter(address to) private
    {
        uint256 new_token_id = totalSupply() + 1;  // token ID starts from 1
        tokenIDToCharacterStruct[new_token_id] = _generateUniqueCharacter(
            new_token_id,
            _generateRandom(new_token_id)
        );
        _safeMint(to, new_token_id);
    }

    function _generateUniqueCharacter(uint256 token_id, uint256 seed) private returns (CharacterStruct memory result_nft)
    {
        // Create a new token based on this random value
        result_nft.generation = getCurrentGen();
        result_nft.role = Role(seed % 2);

        // Check if this newly created token is unique
        uint256 token_hash = _calculateCharacterHash(result_nft);
        if (hashToTokenID[token_hash] == 0)
        {
            hashToTokenID[token_hash] = token_id;
            return result_nft;
        }

        return _generateUniqueCharacter(token_id, _generateRandom(seed));
    }

    function _calculateCharacterHash(CharacterStruct memory token) private pure returns (uint256)
    {
        // alpha score must no be included into hash calculation
        return uint256(bytes32(abi.encodePacked(
            token.generation,
            token.role
        )));
    }

    function _generateRandom(uint256 seed) private view returns (uint256)
    {
        return uint256(keccak256(abi.encodePacked(
            tx.origin,
            blockhash(block.number - 1),
            block.timestamp,
            seed
        )));
    }
}

