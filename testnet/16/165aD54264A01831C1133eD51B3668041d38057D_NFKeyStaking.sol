    mapping(uint => string) ipfsURI;
    mapping(address => uint) public lastMintTimestamp;
    mapping(address => uint) availableMintTimestamp;
    mapping(address => bool) adminAddresses;

    uint _totalSupply;
    address whitelistContractAddress;
    address smarterCoinAddress;
    address nfkeyStakingAddress;

    struct WhitelistUser {
        address whitelistAddress;
        uint tier;
    }

    constructor (address _whitelistContractAddress, address _smarterCoinAddress) ERC721("NFKey", "NFKEY")
        {
            whitelistContractAddress = _whitelistContractAddress;
            smarterCoinAddress = _smarterCoinAddress;
            adminAddresses[0xCeaf7780c54bc6815A8d5c3E10fdc965d0F26762] = true;
            adminAddresses[0x9CB52e780db0Ce66B2c4d8193C3986B5E7114336] = true;
            adminAddresses[0xbDe951E26aae4F39e20628724f58293A4E6457D4] = true;
            _totalSupply = 0;
            ipfsURI[1] = "https://ipfs.moralis.io:2053/ipfs/QmVmT7nRx9yp6AEUBMyuKJEAx8UowpaGicpabsh8QcGgQA";
            ipfsURI[2] = "https://ipfs.moralis.io:2053/ipfs/QmcxQKUN1wNaxCvrd7eB4DiftBiWTf4ZPeBhfqe8ZirgcJ";
            ipfsURI[3] = "https://ipfs.moralis.io:2053/ipfs/QmYJREAafP6qTddDLuRpLQVyJjneWAwqob9uWJPdVyA8aR";
            ipfsURI[4] = "https://ipfs.moralis.io:2053/ipfs/QmbX1WB8eXzgSLgLtY6ThhJXb1fiSxFfbQL15YYiKeZMGN";
            ipfsURI[5] = "https://ipfs.moralis.io:2053/ipfs/QmaCK3S1aMi27QUzaE6v9KTM2CU86u9DxhmdBtaTtQ2f4g";
            ipfsURI[6] = "https://ipfs.moralis.io:2053/ipfs/QmP85sUqSYHDkEoKmcCEWD4JUVozEVvAny5p126XDFs1QR";
            ipfsURI[7] = "https://ipfs.moralis.io:2053/ipfs/QmQeKUZ7ZP9u2eCtNy5mqkwDX5kSFQncFf6aTU5mSGo1Um";
            ipfsURI[8] = "https://ipfs.moralis.io:2053/ipfs/QmdUx5L36YkR4DbhHLVyRpk56YRZvKomJFvKUjC49xw6b1";
            ipfsURI[9] = "https://ipfs.moralis.io:2053/ipfs/QmcoMe6FnBzWzMhrYLD5ucsN21m4v413HaYzHE6GZggkHK";
            ipfsURI[10] = "https://ipfs.moralis.io:2053/ipfs/QmYkzxAFtNE6NgbwHJM1DFuPNjwK9WYPFW8giStzn3eKB5";

        }

    mapping(address => bool) mintedAddresses;

    modifier onlyAdmin() {
      require(adminAddresses[msg.sender], "NFKey: caller is not the owner");
      _;
    }

    function isMinted(address _address) public view returns(bool){
        bool _isMinted = mintedAddresses[_address];
        return _isMinted;
    }

    function addNFKeyStakingAddress(address _address) public onlyAdmin {
        nfkeyStakingAddress = _address;
    }

    function totalSupply() override public view returns (uint256) {
      return _totalSupply;
    }

    function _burn(uint256 tokenId) internal virtual override(ERC721, ERC721URIStorage) {
        return super._burn(tokenId);
    }

    function tokenURI(uint256 tokenId) public view virtual override(ERC721, ERC721URIStorage) returns(string memory) {
        return ERC721URIStorage.tokenURI(tokenId);
    }

   function _setTokenURI(uint256 tokenId, string memory _tokenURI) internal virtual override(ERC721URIStorage) {
        ERC721URIStorage._setTokenURI(tokenId, _tokenURI);
    }

    function tokenOfOwnerByIndex(address owner, uint256 index) public view override(ERC721Enumerable) returns(uint256) {
        return super.tokenOfOwnerByIndex(owner, index);
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC721, ERC721Enumerable) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

    function _beforeTokenTransfer(address from, address to, uint256 tokenId) internal override(ERC721, ERC721Enumerable) {
        super._beforeTokenTransfer(from, to, tokenId);
    }

    function getIPFS(uint tier) public view returns(string memory) {
        return ipfsURI[tier];
    }

    function getUpgradeDelay (address _address) public view returns(uint) {
        return availableMintTimestamp[_address];
    }

    function setUpgradeDelay (address _address, uint current_tier) internal {
        lastMintTimestamp[_address] = block.timestamp;
        if (current_tier <= 3) {
            availableMintTimestamp[_address] = block.timestamp + 30;
            //availableMintTimestamp[_address] = block.timestamp + (current_tier * 60 * 60);
        }
        if (current_tier > 3) {
            availableMintTimestamp[_address] = block.timestamp + 30;
            //availableMintTimestamp[_address] = block.timestamp + ((current_tier + 8) * 60 * 60);
        }
    } 

    function upgradeKey(uint _tokenId) public {
        NFKeyStaking nfkey_staking_contract = NFKeyStaking(nfkeyStakingAddress);
        bool isStaked = nfkey_staking_contract.isTokenStaked(_tokenId);
        if (isStaked) {
            require(ownerOf(_tokenId) == address(nfkey_staking_contract), "Staker: Call from unknown address");
            require(address(nfkey_staking_contract.getTokenOwner(_tokenId)) == address(msg.sender), "Staker: You are not an owner");
        } else {
            require(ownerOf(_tokenId) == msg.sender, "NFKey: You are not an owner");
        }
        
        require(block.timestamp >= availableMintTimestamp[msg.sender], "Upgrage not available yet");
        Whitelist whitelist_contract = Whitelist(whitelistContractAddress);
        TestSmarter smarterCoin_contract = TestSmarter(smarterCoinAddress);

        uint current_tier = whitelist_contract.verifyUser(msg.sender);
        require(current_tier < 10, "You already have the maximum tier level");
        string memory _tokenURI = getIPFS(current_tier + 1);

        smarterCoin_contract.transferFrom(address(msg.sender), address(this), 5000000 * current_tier * 10**18);

        if (isStaked == false) {
            ERC721._burn(_tokenId);
            _totalSupply = _totalSupply - 1;
            super._mint(msg.sender, _tokenId);
        } else {
            ERC721.setApprovalForAll(address(this), true);
            ERC721._burn(_tokenId);
            _totalSupply = _totalSupply - 1;
            super._mint(nfkeyStakingAddress, _tokenId);
        }
        
        _setTokenURI(_tokenId, _tokenURI);
        _totalSupply = _totalSupply + 1;
        Whitelist.WhitelistUser memory user = Whitelist.WhitelistUser(msg.sender, current_tier + 1);
        whitelist_contract.addAddressToWhitelist(user);
        whitelist_contract.setKeyTier(_tokenId, current_tier + 1);
        nfkey_staking_contract.addLog(_tokenId);
        setUpgradeDelay(msg.sender, current_tier + 1);
    }

    /**
    * Custom accessor to create a unique token
    */

    function mintUniqueTokenTo(address _to) public {
        Whitelist whitelist_contract = Whitelist(whitelistContractAddress);
        uint256 user_tier = whitelist_contract.verifyUser(msg.sender);
        require(user_tier > 0, "Whitelist: You need to be whitelisted");
        require(this.balanceOf(msg.sender) <= 1, "Already have an NFKey");
        require(!mintedAddresses[msg.sender], "Already minted by your address");

        if (user_tier > 0 && this.balanceOf(msg.sender) <= 1 && !mintedAddresses[msg.sender]) {
            string memory _tokenURI = getIPFS(user_tier);
            mintedAddresses[msg.sender] = true;
            uint256 mintIndex = totalSupply();
            super._mint(_to, mintIndex);
            _setTokenURI(mintIndex, _tokenURI);
            _totalSupply = _totalSupply + 1;
            whitelist_contract.setKeyTier(mintIndex, user_tier);
            setUpgradeDelay(msg.sender, user_tier);
        }
    }
}

