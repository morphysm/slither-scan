import "./NFKey.sol";
import "./Whitelist.sol";

contract NFKeyStaking {
    address NFKey_address;
    address whitelist_address;
    mapping(address => bool) adminAddresses;

    constructor(address _nfkey_address, address _whitelist_address) {
        NFKey_address = _nfkey_address;
        whitelist_address = _whitelist_address;
        adminAddresses[0xCeaf7780c54bc6815A8d5c3E10fdc965d0F26762] = true;
        adminAddresses[0xbDe951E26aae4F39e20628724f58293A4E6457D4] = true;
        adminAddresses[0x9CB52e780db0Ce66B2c4d8193C3986B5E7114336] = true;
        adminAddresses[_nfkey_address] = true;
    }

    modifier onlyOwner() {
      require(adminAddresses[msg.sender], "NFkeyStaking Ownable: caller is not the owner");
      _;
    }

    // tokenId => timestamp
    mapping(uint => uint) public treasureRewardAvailable;

    // tokenId => true/false isStaked
    mapping(uint => bool) public isStaked;

    struct Staker {
        uint256[] tokenIds;
        mapping (uint256 => uint256) tokenIndex;
        uint256 rewardsEarned;
        uint256 rewardsReleased;
    }

    struct Log {
        uint start_date;
        uint end_date;
        uint tier;
        uint key_tier;
    }

    event Staked(address owner, uint256 tokenId);
    event Unstaked(address owner, uint256 tokenId);
    event Opened(address owner, uint tokenId, bool status);

    /// @notice mapping of a staker to its current properties
    mapping (address => Staker) public stakers;

    // Mapping from token ID to owner address
    mapping (uint256 => address) public tokenOwner;

    // Mapping from token ID to Chest Tier
    mapping (uint256 => uint256) public chestTier;

    // Mapping from token ID to [bool] notFirstStaking
    // need to set chest Tier for first staking
    mapping (uint256 => bool) public notFirstStaking;

    // tokenId => Log
    mapping (uint => Log[]) public tokenLogs;

    // tokenId => Log length
    mapping (uint => uint) public logsLength;

    function addAdmin(address _address) public onlyOwner {
      adminAddresses[_address] = true;
    }

    function addLog(uint _tokenId) public onlyOwner {
        Whitelist whitelist_contract = Whitelist(whitelist_address);
        uint now_time = block.timestamp;
        uint chest_tier = chestTier[_tokenId];
        uint length = logsLength[_tokenId];
        uint key_tier = whitelist_contract.getKeyTier(_tokenId);

        if (isStaked[_tokenId] == true) {
            if (logsLength[_tokenId] == 0) {
                tokenLogs[_tokenId].push(Log(now_time, 0, chest_tier, key_tier));
            } else {
                tokenLogs[_tokenId][length - 1].end_date = now_time;
                tokenLogs[_tokenId].push(Log(now_time, 0, chest_tier, key_tier));
            }

            logsLength[_tokenId] += 1;
        }
    }

    function unstakeLog(uint _tokenId) private {
        uint now_time = block.timestamp;
        uint length = logsLength[_tokenId];

        tokenLogs[_tokenId][length - 1].end_date = now_time;
    }

    function calcRewards(uint _tokenId) public view returns (uint) {
        uint rewardSum = 0;

        if (getChestLevel(_tokenId) > 0) {
            for (uint i=0; i<= logsLength[_tokenId] - 1; i++) {
                if (tokenLogs[_tokenId][i].end_date == 0) {
                    rewardSum += (block.timestamp - tokenLogs[_tokenId][i].start_date) * tokenLogs[_tokenId][i].key_tier * tokenLogs[_tokenId][i].tier * 5;
                } else {
                    rewardSum += (tokenLogs[_tokenId][i].end_date - tokenLogs[_tokenId][i].start_date) * tokenLogs[_tokenId][i].key_tier * tokenLogs[_tokenId][i].tier * 5;
                }
            }

            return rewardSum * 10**18 / 86400 / 10;
        } else {
            return 0;
        }
    }

    function setChestLevel(uint _tokenId, uint _chestTier) private {
        chestTier[_tokenId] = _chestTier;
    }

    function getChestLevel(uint _tokenId) public view returns(uint) {
        return chestTier[_tokenId];
    }

    function calcBaseProbToOpen(uint _tokenId) public view returns (uint) {
        uint _chestTier = chestTier[_tokenId];
        if (_chestTier > 0) {
            return (1000 - ( 125000 * _chestTier / 1000) );
        } else return 0;
    }

    function getStakedTokens (address _user) public view returns (uint[] memory) {
        Staker storage staker = stakers[_user];

        return staker.tokenIds;
    }

    function setRewardsReleased (address _user, uint _amount, uint _tokenId) public onlyOwner {
        Staker storage staker = stakers[_user];

        staker.rewardsReleased = staker.rewardsReleased + _amount;

        uint lastLogIndex = logsLength[_tokenId];
        bool needToAddLastLog;

        if (tokenLogs[_tokenId][lastLogIndex - 1].end_date == 0) {
            needToAddLastLog = true;
        }

        for (uint i = 0; i <= lastLogIndex - 1; i++) {
            delete tokenLogs[_tokenId][i];
        }

        if (needToAddLastLog) {
            addLog(_tokenId);
        }
    }

    function random() private view returns (uint) {
        uint randomHash = uint(keccak256(abi.encodePacked(block.difficulty, block.timestamp)));
        return randomHash % 100;
    }

    function timeToTreasureUnlock (uint _tokenId) public view returns (uint) {
        return treasureRewardAvailable[_tokenId];
    }

    function stake(uint256 tokenId) external {
        // require();
        _stake(msg.sender, tokenId);
    }

    function unstake(address user, uint256 tokenId) external {
        require(tokenOwner[tokenId] == user, "Staker: need to be a owner");
        _unstake(user, tokenId);
    }

    function updateTreasureRewardTime(uint tokenId) private {
        treasureRewardAvailable[tokenId] = block.timestamp + 35;
    }

    function _stake(
        address _user,
        uint256 _tokenId
    )
        internal
    {
        Staker storage staker = stakers[_user];

        isStaked[_tokenId] = true;

        staker.tokenIds.push(_tokenId);
        tokenOwner[_tokenId] = _user;
        NFKey nfkey_contract = NFKey(NFKey_address);
        nfkey_contract.transferFrom(
            _user,
            address(this),
            _tokenId
        );

        if (notFirstStaking[_tokenId] == false) {
            setChestLevel(_tokenId, 1);
            notFirstStaking[_tokenId] = true;
        }

        addLog(_tokenId);

        updateTreasureRewardTime(_tokenId);

        emit Staked(_user, _tokenId);
    }

    function _unstake(
        address _user,
        uint256 _tokenId
    )
        internal
    {
        Staker storage staker = stakers[_user];

        uint256 lastIndex = staker.tokenIds.length - 1;
        uint256 lastIndexKey = staker.tokenIds[lastIndex];
        uint256 tokenIdIndex = staker.tokenIndex[_tokenId];
        
        staker.tokenIds[tokenIdIndex] = lastIndexKey;
        staker.tokenIndex[lastIndexKey] = tokenIdIndex;
        if (staker.tokenIds.length > 0) {
            staker.tokenIds.pop();
            delete staker.tokenIndex[_tokenId];
        }

        delete tokenOwner[_tokenId];

        NFKey nfkey_contract = NFKey(NFKey_address);
        nfkey_contract.transferFrom(
            address(this),
            _user,
            _tokenId
        );

        treasureRewardAvailable[_tokenId] = 0;

        unstakeLog(_tokenId);

        isStaked[_tokenId] = false;

        emit Unstaked(_user, _tokenId);
    }

    function openChest(address _user, uint _tokenId) public {
        Staker storage staker = stakers[_user];
        require(staker.tokenIds.length > 0, "Staker: you have no staked tokens");
        require(block.timestamp > treasureRewardAvailable[_tokenId], "Staker: chest not available yet");
        updateTreasureRewardTime(_tokenId);
        uint randomCount = random();
        uint probToOpen = calcBaseProbToOpen(_tokenId);
        uint _chestTier = chestTier[_tokenId];
        bool answer;
        if ((randomCount * 10) < probToOpen) {
            setChestLevel(_tokenId, _chestTier + 1);
            answer = true;
        } else {
            if (_chestTier - 1 != 0) {
                setChestLevel(_tokenId, _chestTier - 1);
            }
            answer = false;
        }

        addLog(_tokenId);

        emit Opened(_user, _tokenId, answer);
    }

    function isTokenStaked (uint _tokenId) public returns(bool) {
        return isStaked[_tokenId];
    }

    function getTokenOwner (uint _tokenId) public returns(address) {
        return address(tokenOwner[_tokenId]);
    }
}

