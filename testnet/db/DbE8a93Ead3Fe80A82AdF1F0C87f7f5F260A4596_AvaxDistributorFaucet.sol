import "../libraries/LibAppStorage.sol";
import "../interfaces/IERC20.sol";
import "../interfaces/Counters.sol";
import "./RoleControlFaucet.sol";

contract AvaxDistributorFaucet is RoleControl {
    AppStorage internal s;

    using Counters for Counters.Counter;
    Counters.Counter private NodeID;
    Counters.Counter private WinnerID;

    constructor() RoleControl(msg.sender) {}

    /* struct NodeToken {
        uint256 nodeId_;
        string tokenName_;
        uint256 rewardAmount_;
        address contractAddress_;
    }

    struct Winner {
        uint256 Id_;
        uint256 NodeTokenId_;
        address walletAddress_;
    } */

    NodeToken internal nodeToken;
    Winner internal winner;

    event RewardsSent(uint256 tokenId, uint256 rewardAmount);

    /*
     * create a object of the token reward
     */
    function addToNodeToken(
        string memory tokenName,
        uint256 rewardAmount,
        address contractAddress
    ) public onlyAdminAndStaff {
        NodeID.increment();
        nodeToken = NodeToken(
            NodeID.current(),
            tokenName,
            rewardAmount,
            contractAddress
        );
        s.NodeTokens[NodeID.current()] = nodeToken;
    }

    /*
     * UpdateNodeToken
     */
    function UpdateNodeToken(
        uint256 NodeTokenId_,
        string memory tokenName,
        uint256 rewardAmount,
        address contractAddress
    ) public onlyAdminAndStaff {
        nodeToken = NodeToken(
            NodeTokenId_,
            tokenName,
            rewardAmount,
            contractAddress
        );
        s.NodeTokens[NodeTokenId_] = nodeToken;
    }

    /*
     *   Set the token Id and sent in an array of winners for that token
     */
    function addToWinnerAddress(
        uint256 nodeTokenId,
        address[] memory newWinners
    ) external onlyAdminAndStaff {
        require(nodeTokenId <= NodeID.current(), "Node Token Id doesn't exist");

        for (uint256 i = 0; i < newWinners.length; i++) {
            WinnerID.increment();
            winner = Winner(WinnerID.current(), nodeTokenId, newWinners[i]);
            s.WinnerAddresses[WinnerID.current()] = winner;
        }
        s.WinnerCountByNodeTokenId[nodeTokenId] = newWinners.length;
    }

    /*
     * withdraw the token in the conctract by NodeToken Id
     * Owner
     */
    function withdraw(uint256 nodeId) public payable onlyAdmin {
        require(nodeId <= NodeID.current(), "Node Token Id doesn't exist");

        address tokenAddress = s.NodeTokens[nodeId].contractAddress_;
        IERC20 token = IERC20(tokenAddress);

        token.transfer(msg.sender, token.balanceOf(address(this)));
    }

    /*
     *   Select The Node Id to send rewards
     */
    function sendRewards(uint256 nodeId) public onlyAdminAndStaff {
        require(nodeId <= NodeID.current(), "Node Token Id doesn't exist");

        address tokenAddress = s.NodeTokens[nodeId].contractAddress_;
        uint256 rewardAmount = s.NodeTokens[nodeId].rewardAmount_;
        IERC20 token = IERC20(tokenAddress);

        require(
            token.balanceOf(address(this)) > 0,
            "Token balance must be greater than 0"
        );

        for (uint256 i = 1; i < s.WinnerCountByNodeTokenId[nodeId]; i++) {
            address winnerAddress = s.WinnerAddresses[i].walletAddress_;
            token.transfer(winnerAddress, rewardAmount);
        }

        emit RewardsSent(nodeId, rewardAmount);
    }

    /*
     *   Delete the Winners // can have it automatically delete after?
     */
    function clearWinners() public onlyAdminAndStaff {
        require(WinnerID.current() > 0, "No winners to delete");
        
        for (uint256 i = 1; i <= NodeID.current(); i++) {
            delete s.WinnerCountByNodeTokenId[i];
        }

        for (uint256 x = 1; x <= WinnerID.current(); x++) {
            delete s.WinnerAddresses[x];
        }

        WinnerID.reset();
    }
}

