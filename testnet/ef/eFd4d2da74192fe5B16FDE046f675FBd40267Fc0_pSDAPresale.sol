pragma solidity >=0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract pSDAPresale is Ownable {

    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    struct UserInfo {
        uint256 daiAmount;
        uint256 depositAmount;
        uint256 claimedAmount;
        uint256 claimableAmount;        
    }

    IERC20 public dai;
    IERC20 public pSDA;

    uint256 constant DECIMAL = 4;

    // address private admin;

    uint256[5] public priceAry = [25, 50, 100, 200, 400];
    uint256[5] public stepLimitAry = [
        2000000 * 10 ** DECIMAL,
        4000000 * 10 ** DECIMAL,
        6000000 * 10 ** DECIMAL,
        8000000 * 10 ** DECIMAL,
        10000000 * 10 ** DECIMAL];

    
    mapping(address => UserInfo) public userInfos;

    uint256 public totalDepositAmount = 0;
    uint8 public presaleStep = 0;

    uint256 public presaleStartDate;
    uint256 public presaleEndDate;

    event TokenPurchase(address indexed beneficiary, uint256 amount);
    event TokenClaim(address indexed beneficiary, uint256 tokenAmount);

    uint256 public minContribution = 0;
    uint256 public maxContribution = 1000000 * 10 ** DECIMAL;

    bool public initialized;

    mapping(address => bool) public approvedBuyers;

    constructor() {}

    function initialize (
        address _pSDA, 
        address _dai
    ) external onlyOwner {
        require(!initialized);
        pSDA = IERC20(_pSDA);
        dai = IERC20(_dai);
        presaleStartDate = block.timestamp;
        totalDepositAmount = 0;
        presaleStep = 0;
        initialized = true;
    }


    function setPriceAry(uint256[5] memory _ary) external onlyOwner() {
        require(_ary.length == 5, "Price array length has to be 5");
        priceAry = _ary;
    }

    function setPresaleStartDate() external onlyOwner {
        presaleStartDate = block.timestamp;
    }

    function setPresaleEndDate() external onlyOwner {
        presaleEndDate = block.timestamp;
    }

    function setMinContribution(uint256 _minContribution) external onlyOwner() {
        minContribution = _minContribution;
    }

    function setMaxContribution(uint256 _maxContribution) external onlyOwner() {
        maxContribution = _maxContribution;
    }

    function _getCalculatePrice(uint256 _amount, uint256 _step) internal view returns (uint256) {
        return _amount.mul(priceAry[_step]).div(1000);
    }

    function _getCalculateAmountFromPrice(uint256 _amount, uint256 _step) internal view returns (uint256) {
        return _amount.mul(1000).div(priceAry[_step]);
    }
    
    function _getCalculateAmount(address _user, uint256 _daiAmount) internal returns (uint256) {
        uint256 purchaseAmount = 0;
        uint256 buyableAmount = _getCalculatePrice(stepLimitAry[presaleStep].sub(totalDepositAmount), presaleStep);
        if (buyableAmount >= _daiAmount) {
            purchaseAmount = _getCalculateAmountFromPrice(_daiAmount, presaleStep);
            totalDepositAmount = totalDepositAmount.add(purchaseAmount);
            if(presaleStep == 4 && _daiAmount.sub(buyableAmount) > 0) {
                dai.safeTransfer(_user, _daiAmount.sub(buyableAmount));
            }
            return purchaseAmount;
        }
        purchaseAmount = _getCalculateAmountFromPrice(buyableAmount, presaleStep).add(_getCalculateAmountFromPrice(_daiAmount.sub(buyableAmount), presaleStep + 1));
        presaleStep = presaleStep + 1;
        return purchaseAmount;
    }

    function buypSDA(uint256 _daiAmount) external returns (bool) {
        require(approvedBuyers[msg.sender], "Buyer not approved.");
        uint256 purchaseAmount = _getCalculateAmount(msg.sender, _daiAmount);
        _validatePurchase(msg.sender, purchaseAmount);
        dai.safeTransferFrom(msg.sender, address(this), _daiAmount);
        UserInfo storage user = userInfos[msg.sender];
        user.depositAmount = user.depositAmount.add(purchaseAmount);
        user.daiAmount = user.daiAmount.add(_daiAmount);

        emit TokenPurchase(msg.sender, purchaseAmount);
        return true;
    }

    function _validatePurchase(address _buyer, uint256 _amount) internal view {
        UserInfo memory user = userInfos[_buyer];
        // require(_amount >= minContribution, "Presale: min contribution criteria not met");
        require(user.depositAmount.add(_amount) <= maxContribution, "Presale: max contribution criteria not met");
        this;
    }

    function _getClaimableAmount(address _user) internal view {
        require(block.timestamp.sub(presaleStartDate) >= 18 * 30 * 1 days, "Presale: Lock time error");
        uint256 percent = 100;
        UserInfo memory user = userInfos[_user];
        if (pSDA.totalSupply() >= 4 * 500 * 10 ** 6 * 10 ** DECIMAL) { // 2B
            percent = percent.add(225 * 4);
        }
        else if (pSDA.totalSupply() >= 3 * 500 * 10 ** 6 * 10 ** DECIMAL) { // 1.5B
            percent = percent.add(225 * 3);
        }
        else if (pSDA.totalSupply() >= 2 * 500 * 10 ** 6 * 10 ** DECIMAL) { // 1B
            percent = percent.add(225 * 2);
        }
        else if (pSDA.totalSupply() >= 500 * 10 ** 6 * 10 ** DECIMAL) { // 500M
            percent = percent.add(225);
        }
        uint256 amount = user.depositAmount.mul(percent).div(1000);
        user.claimableAmount = amount;
    }

    function claimTokens() external returns (bool) {
        UserInfo storage user = userInfos[msg.sender];
        require(user.depositAmount.sub(user.claimedAmount) > 0, "Presale: nothing to claim");
        _getClaimableAmount(msg.sender);
        uint256 amount = user.claimableAmount - user.claimedAmount;
        user.claimedAmount = user.claimableAmount;
        user.claimedAmount = user.claimedAmount.add(amount);
        pSDA.transfer(msg.sender, amount);
        emit TokenClaim(msg.sender, amount);
        return true;
    }

    function withdrawTokens(address token) external onlyOwner() returns (bool) {
        IERC20(token).safeTransfer(msg.sender, IERC20(token).balanceOf(address(this)));
        return true;
    }

    function getUserContribution(address _user) external view returns(uint256) {
        require(_user != address(0), "Zero address");
        return userInfos[_user].daiAmount;
    }
}

