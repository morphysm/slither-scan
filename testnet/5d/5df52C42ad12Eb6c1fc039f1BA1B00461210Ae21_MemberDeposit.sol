interface USDC is IERC20Upgradeable, IERC20PermitUpgradeable {

}

contract MemberDeposit is OwnableUpgradeable {
    using SafeERC20Upgradeable for USDC;

    uint256 public constant FEE_DENOMINATOR = 10000;

    event FeePercentageChanged(uint256 newFeePercentage);

    event MinDepositChanged(uint256 newMinDeposit);

    event Deposited(
        address indexed originator,
        uint256 fundAmount,
        uint256 poolAmount
    );

    IWhitelistChecker private _whitelistCheckerAddr;

    USDC private _usdcAddr;

    address private _fundWallet;
    address private _poolWallet;
    uint256 private _feePercentage;
    uint256 private _minDeposit;

    function initialize(
        IWhitelistChecker whitelistCheckerAddr,
        USDC usdcAddr,
        address fundWallet,
        address poolWallet,
        uint256 feePercentage,
        uint256 minDeposit
    ) external initializer {
        __Ownable_init();

        setWhitelistChecker(whitelistCheckerAddr);
        setUsdcAddr(usdcAddr);
        setFundWallet(fundWallet);
        setPoolWallet(poolWallet);
        setFeePercentage(feePercentage);
        setMinDeposit(minDeposit);
    }

    function getWhitelistChecker() external view returns (IWhitelistChecker) {
        return _whitelistCheckerAddr;
    }

    function setWhitelistChecker(IWhitelistChecker whitelistCheckerAddr)
        public
        onlyOwner
    {
        require(
            address(whitelistCheckerAddr) != address(0),
            "MemberDeposit: require whitelist checker"
        );
        _whitelistCheckerAddr = whitelistCheckerAddr;
    }

    /**
     * @dev Returns the address of the USDC token.
     */
    function getUsdcAddr() external view returns (USDC) {
        return _usdcAddr;
    }

    /**
     * @notice Sets the address of the USDC ERC20 token.
     *
     * @dev The `usdcAddr` must not be the Zero address.
     */
    function setUsdcAddr(USDC usdcAddr) public onlyOwner {
        require(address(usdcAddr) != address(0), "MemberDeposit: require usdc");
        _usdcAddr = usdcAddr;
    }

    function getFundWallet() external view returns (address) {
        return _fundWallet;
    }

    function setFundWallet(address fundWallet) public onlyOwner {
        require(
            address(fundWallet) != address(0),
            "MemberDeposit: require fund wallet"
        );
        _fundWallet = fundWallet;
    }

    function getPoolWallet() external view returns (address) {
        return _poolWallet;
    }

    function setPoolWallet(address poolWallet) public onlyOwner {
        require(
            address(poolWallet) != address(0),
            "MemberDeposit: require pool wallet"
        );
        _poolWallet = poolWallet;
    }

    function getFeePercentage() external view returns (uint256) {
        return _feePercentage;
    }

    function setFeePercentage(uint256 feePercentage) public onlyOwner {
        require(
            feePercentage > 0,
            "MemberDeposit: fee % must be greater than zero"
        );
        require(
            feePercentage <= ((50 * FEE_DENOMINATOR) / 100),
            "MemberDeposit: fee % must be less or equal than 50%"
        );
        _feePercentage = feePercentage;
        emit FeePercentageChanged(feePercentage);
    }

    function getMinDeposit() external view returns (uint256) {
        return _minDeposit;
    }

    function setMinDeposit(uint256 minDeposit) public onlyOwner {
        _minDeposit = minDeposit;
        emit MinDepositChanged(minDeposit);
    }

    modifier onlyWhitelisted() {
        require(
            _whitelistCheckerAddr.isWhitelisted(msg.sender),
            "MemberDeposit: Only whitelisted"
        );
        _;
    }

    /**
     * @notice Deposits `amount` of USDC into both the Fund and Pool wallets from `msg.sender`.
     * This method is only allowed by an account that had been previously whitelisted.
     *
     * @dev The `deadline`, `v`, `r` and `s` parameters allows the sender to
     * avoid paying gas for approvals.
     * The current blocktime should be less than or equal to `deadline`.
     * The `v`, `r` and `s` values represent a valid `secp256k1` signature from `msg.sender` of the message.
     * See https://eips.ethereum.org/EIPS/eip-2612 for more details.
     */
    function deposit(
        uint256 amount,
        uint256 deadline,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external onlyWhitelisted {
        require(
            msg.sender != _fundWallet,
            "MemberDeposit: fund wallet is not allowed to deposit"
        );
        require(
            msg.sender != _poolWallet,
            "MemberDeposit: pool wallet is not allowed to deposit"
        );
        require(
            amount >= _minDeposit,
            "MemberDeposit: amount must be greater than min deposit"
        );

        uint256 fundAmount = (_feePercentage * amount) / 10000;
        uint256 poolAmount = ((10000 - _feePercentage) * amount) / 10000;

        // https://github.com/crytic/slither/wiki/Detector-Documentation#reentrancy-vulnerabilities-3
        emit Deposited(msg.sender, fundAmount, poolAmount);

        _usdcAddr.permit(msg.sender, address(this), amount, deadline, v, r, s);

        _usdcAddr.safeTransferFrom(msg.sender, _fundWallet, fundAmount);
        _usdcAddr.safeTransferFrom(msg.sender, _poolWallet, poolAmount);
    }
}

