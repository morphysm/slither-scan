pragma solidity ^0.8.2;
pragma abicoder v2;
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "./lzApp/NonblockingLzApp.sol";
interface Heroes {
    function mint(address _receive, uint256 amount) external;
    function burn(uint256 amount) external;
}
/// @title A LayerZero example sending a cross chain message from a source chain to a destination chain to increment a counter
contract IssueHe is NonblockingLzApp {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;
    Heroes public HE;
    
    constructor(address _lzEndpoint, address _token) NonblockingLzApp(_lzEndpoint) {
        HE = Heroes(_token);
    }

    function _nonblockingLzReceive(uint16, bytes memory, uint64, bytes memory payload) internal override {
        //mint
        (address _receive, uint256 amount) = abi.decode(payload, (address, uint256));
        HE.mint(_receive, amount);
    }

    function burn(uint16 _dstChainId, uint256 amount) public payable {
        _lzSend(_dstChainId, abi.encode(msg.sender, amount), payable(msg.sender), address(0x0), bytes(""));
        HE.burn(amount);
    }
}

