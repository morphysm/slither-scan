    using SafeERC20Upgradeable for IERC20Upgradeable;

    event WithdrawToken(address indexed sender, Token token, TokenStandart standart, uint256 timestamp);

    function withdrawToken(Token memory token, TokenStandart standart) external virtual returns (bool success);

    function _tokenTransferFrom(
        Token memory token,
        TokenStandart standart,
        address from,
        address to
    ) internal {
        if (standart == TokenStandart.ERC20) {
            require(token.tokenId == 0, "TokenTransfer: only for zero token id");
            require(token.amount > 0, "TokenTransfer: zero erc20 token amount");
            IERC20Upgradeable(token.tokenContract).safeTransferFrom(from, to, token.amount);
        } else if (standart == TokenStandart.ERC721) {
            require(token.tokenId == 0, "TokenTransfer: only for zero token id");
            require(token.amount == 1, "TokenTransfer: wrong token amount");
            IERC721Upgradeable(token.tokenContract).safeTransferFrom(from, to, token.tokenId);
        } else if (standart == TokenStandart.ERC1155) {
            require(token.amount > 0, "Gamecore: zero erc1155 token amount");
            IERC1155Upgradeable(token.tokenContract).safeTransferFrom(from, to, token.tokenId, token.amount, "0x");
        }
    }
}

