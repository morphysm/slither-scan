pragma solidity 0.8.10;

// solhint-disable not-rely-on-time, max-states-count

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/utils/ERC1155HolderUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/utils/ERC721HolderUpgradeable.sol";
import "./lib/TransferHelper.sol";
import "./interface/IGameFiShops.sol";

import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/AddressUpgradeable.sol";
import "./interface/IGameFiCore.sol";

contract GameFiShops is
    Initializable,
    ReentrancyGuardUpgradeable,
    ERC1155HolderUpgradeable,
    ERC721HolderUpgradeable,
    TransferHelper,
    IGameFiShops
{
    using CountersUpgradeable for CountersUpgradeable.Counter;
    using AddressUpgradeable for address;

    address internal _gameFiCore;

    CountersUpgradeable.Counter internal _totalShops;
    mapping(uint256 => Shop) internal _orders;

    modifier onlyAdmin() {
        IGameFiCore(_gameFiCore).isAdmin(msg.sender);
        _;
    }

    function initialize(address gamefiCore_) external override initializer {
        require(gamefiCore_.isContract(), "GameFiShops: gamefiCore must be a contract");

        __ReentrancyGuard_init();
        __ERC1155Holder_init();
        __ERC721Holder_init();
    }

    function withdrawToken(Token memory token, TokenStandart standart) external override onlyAdmin returns (bool success) {
        _tokenTransferFrom(token, standart, address(this), msg.sender);

        emit WithdrawToken({sender: msg.sender, token: token, standart: standart, timestamp: block.timestamp});

        return true;
    }

    function createShop(Shop memory newShop) external override onlyAdmin returns (uint256 shopId) {
        uint256 newShopId = _totalShops.current();
        _orders[newShopId] = newShop;

        emit CreateShop({sender: msg.sender, shopId: newShopId, shop: newShop, timestamp: block.timestamp});

        return newShopId;
    }

    function editShop(uint256 shopId, Shop memory shop) external override onlyAdmin returns (bool success) {
        _checkShop(shopId);

        _orders[shopId] = shop;

        emit EditShop({sender: msg.sender, shopId: shopId, shop: shop, timestamp: block.timestamp});

        return true;
    }

    function buyToken(uint256 shopId) external override returns (bool success) {
        _checkShop(shopId);

        Shop memory shop = _orders[shopId];

        require(shop.status == ShopStatus.OPEN, "GameFiShops: shop must be open");

        // swap tokens
        _tokenTransferFrom(shop.tokenInOffer, shop.tokenInStandart, msg.sender, address(this));
        _tokenTransferFrom(shop.tokenOutOffer, shop.tokenOutStandart, address(this), msg.sender);

        emit BuyToken({sender: msg.sender, shopId: shopId, timestamp: block.timestamp});

        return true;
    }

    function shopDetails(uint256 shopId) external view override returns (Shop memory) {
        return _orders[shopId];
    }

    function totalShops() external view override returns (uint256) {
        return _totalShops.current();
    }

    function gamefiCore() external view override returns (address) {
        return _gameFiCore;
    }

    function _checkShop(uint256 shopId) internal view {
        require(shopId < _totalShops.current(), "GameFiShops: nonexistent shop");
    }
}

