        _mint(_msgSender(), uint256(2500000000000000000000)); // 2.5k tokens for initial liquidity
        _mint(address(0x99Fb7c32020680AB5bea10061f4f1AD0e44d8690), uint256(2500000000000000000000)); // 2.5k to treasury
