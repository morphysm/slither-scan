/*
 * Ownable
 *
 * Base contract with an owner.
 * Provides onlyOwner modifier, which prevents function from running if it is called by anyone other than the owner.
 */
contract Ownable {
  address public owner;

  constructor () public {
    owner = msg.sender;
  }

  modifier onlyOwner {
    if (msg.sender == owner)
      _;
  }

  function transferOwnership(address newOwner) onlyOwner public {
    if (newOwner != address(0)) owner = newOwner;
  }

}

interface ERC20 {
    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);
    function transfer(address to, uint value) external returns (bool);
    function balanceOf(address account) external view returns (uint256);
    function decimals() external pure returns (uint8);
}

contract Airdrop is Ownable {
    using SafeMath for uint256;
    
    
    function airdropTokensMulDecimals(ERC20 token, address[] memory recipients, uint256[] calldata values) public {
        
        uint256 totalAirdrop = 0;
        uint256 tokenDecimals = token.decimals();
        
        for (uint256 i = 0; i < recipients.length; i++) {
            totalAirdrop = totalAirdrop.add(values[i].mul(10**tokenDecimals));
        }
        
        token.transferFrom(msg.sender, address(this), totalAirdrop);
        
        for (uint256 i = 0; i < recipients.length; i++) {
            token.transfer(recipients[i], values[i].mul(10**tokenDecimals));
        }
        
        
        uint256 balanceOfThis = token.balanceOf(address(this));
        
        if(balanceOfThis > 0) {
            token.transfer(msg.sender, balanceOfThis);
        }
    }
    
    function airdropTokens(ERC20 token, address[] memory recipients, uint256[] calldata values) public {
        
        uint256 totalAirdrop = 0;
        
        for (uint256 i = 0; i < recipients.length; i++) {
            totalAirdrop = totalAirdrop.add(values[i]);
        }
        
        token.transferFrom(msg.sender, address(this), totalAirdrop);
        
        for (uint256 i = 0; i < recipients.length; i++) {
            token.transfer(recipients[i], values[i]);
        }
        
        
        uint256 balanceOfThis = token.balanceOf(address(this));
        
        if(balanceOfThis > 0) {
            token.transfer(msg.sender, balanceOfThis);
        }
    }
    
    function withdrawTokens(address _token, address _to, uint256 _amount ) public onlyOwner {
        ERC20 token = ERC20(_token);
        token.transfer(_to, _amount);
    }

    function withdrawBNB(address payable _to, uint256 _amount) public onlyOwner {
        _to.transfer(_amount);
    }
    
}