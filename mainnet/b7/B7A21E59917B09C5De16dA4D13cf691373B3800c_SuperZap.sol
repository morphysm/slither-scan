pragma solidity 0.6.12;
interface IZapper {
    function zapTokenToLP(address _from, uint256 amount, address _to) external;
}

contract SuperZap is ContractGuard {
    using SafeERC20 for IERC20;
    using Address for address;
    using SafeMath for uint256;

    IZapper public zapper;
    IERC20 public fudge;
    IERC20 public straw;
    IERC20 public fudgePair;
    IERC20 public strawPair;
    address public operator;
    uint256 public minStraw;
    uint256 public minFudge;

    constructor(address _zapper, address _fudge, address _straw, address _fudgePair, address _strawPair) public {
        zapper = IZapper(_zapper);
        fudge = IERC20(_fudge);
        straw = IERC20(_straw);
        fudgePair = IERC20(_fudgePair);
        strawPair = IERC20(_strawPair);
        operator = msg.sender;
        minStraw = 0.0005 * 1e18;
        minFudge = 1e18;

        fudge.approve(address(zapper), type(uint256).max);
        straw.approve(address(zapper), type(uint256).max);
    }

    modifier onlyOperator() {
        require(operator == msg.sender, "SuperZap: caller is not the operator");
        _;
    }

    function setMins(uint256 _minStraw, uint256 _minFudge) external onlyOperator {
        minStraw = _minStraw;
        minFudge = _minFudge;
    }

    function approveZapper(address asset) external onlyOperator {
        IERC20(asset).approve(address(zapper), type(uint256).max);
    }

    function withdraw(address asset) external onlyOperator {
        if (asset != address(0))
            IERC20(asset).safeTransfer(msg.sender, IERC20(asset).balanceOf(address(this)));
        else
            payable(msg.sender).transfer(address(this).balance);
    }

    function _checkMin(address from, uint256 amount) internal view returns (bool) {
        return from == address(fudge) ? amount >= minFudge : amount >= minStraw;
    }

    function zapStrategy(address from, uint256 amount, uint256 percentFudgeLP) external returns (uint256, uint256) {
        require(percentFudgeLP <= 100, "Invalid FUDGE-DAI-LP percent");
        require(IERC20(from).balanceOf(msg.sender) >= amount, "Insufficient balance");
        IERC20(from).safeTransferFrom(msg.sender, address(this), amount);

        uint256 amountFudgePair = percentFudgeLP < 100 ? amount.mul(percentFudgeLP).div(100) : amount;
        uint256 amountStrawPair = amount.sub(amountFudgePair);

        uint256 prevFudgeLP = fudgePair.balanceOf(address(this));
        uint256 prevStrawLP = strawPair.balanceOf(address(this));
        
        if (_checkMin(from, amountFudgePair)) {
            zapper.zapTokenToLP(from, amountFudgePair, address(fudgePair));
        } else {
            IERC20(from).safeTransfer(msg.sender, amountFudgePair);
        }
        if (_checkMin(from, amountStrawPair)) {
            zapper.zapTokenToLP(from, amountStrawPair, address(strawPair));
        } else {
            IERC20(from).safeTransfer(msg.sender, amountStrawPair);
        }

        uint256 zappedFudgeLP = fudgePair.balanceOf(address(this)).sub(prevFudgeLP);
        uint256 zappedStrawLP = strawPair.balanceOf(address(this)).sub(prevStrawLP);
        
        if (zappedFudgeLP > 0)
            fudgePair.safeTransfer(msg.sender,  zappedFudgeLP);
        if (zappedStrawLP > 0)
            strawPair.safeTransfer(msg.sender,  zappedStrawLP);
            
        return (zappedFudgeLP, zappedStrawLP);
    }
}