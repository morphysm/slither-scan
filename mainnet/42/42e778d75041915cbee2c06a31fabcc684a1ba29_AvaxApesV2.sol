pragma solidity 0.8.13;

import { ERC721 } from "solmate/tokens/ERC721.sol";
import { Ownable } from "./Ownable.sol"; 
import { Strings } from "./Strings.sol";

contract AvaxApesV2 is ERC721("AvaxApesV2", "AVAXAPESV2"), Ownable {
    using Strings for uint;
    
    uint256 constant MINT_PRICE = 0.5 ether;
    ERC721 constant AVAX_APES = ERC721(0x6d5087B3082f73D42a32D85e38BC95dcceDe39Bb);

    mapping(uint256 => bool) public claimed;
    string public baseUri;

    constructor(string memory _baseUri) {
        baseUri = _baseUri;
    }

    function claim(uint256[] calldata tokenIds) public payable {
        require(msg.value == (tokenIds.length * MINT_PRICE), "Incorrect Value Sent");

        for (uint i; i < tokenIds.length; i++) {
            //Only owner of ape can mint corresponding v2 
            require(AVAX_APES.ownerOf(tokenIds[i]) == msg.sender, "Only Claimable By V1 Owner");
            require(!claimed[tokenIds[i]], "Token Already Minted");

            claimed[tokenIds[i]] = true;
            _mint(msg.sender, tokenIds[i]);
        }
    }

    function tokenURI(uint256 tokenId) public view override returns(string memory) {
        return string(abi.encodePacked(baseUri, tokenId.toString(), ".json"));
    }

    function setBaseUri(string memory _baseUri) external onlyOwner() {
        baseUri = _baseUri;
    }

    function payout() external onlyOwner() {
        payable(_owner).transfer(address(this).balance);
    }
}

