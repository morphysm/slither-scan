        address[] memory path_1;
        address[] memory path_2;
        uint256[] memory results_1;
        uint256[] memory results_2;
        uint256[] memory _amountIn;
        uint256[] memory _amountOut;

        path_1 = new address[](2);
        path_1[0] = _baseToken;
        path_1[1] = _arbiToken;

        path_2 = new address[](2);
        path_2[0] = _arbiToken;
        path_2[1] = _baseToken;

        _amountIn = IUniswapV2Router02(_buyRouter).getAmountsIn(_amountToBuy, path_1 );
        _amountOut = IUniswapV2Router02(_sellRouter).getAmountsOut(_amountIn[0], path_2);   

        require(IERC20(_baseToken).balanceOf(address(this)) > _amountIn[0], "Not enough funds");
        require(_amountIn[0] < _amountOut[1], "Failed arbitrage");

        if (IERC20(_baseToken).allowance(address(this), _buyRouter) < _amountIn[0] ) {
            IERC20(_baseToken).approve(_buyRouter, type(uint256).max);
        }

        results_1 = IUniswapV2Router02(_buyRouter).swapTokensForExactTokens(_amountToBuy, type(uint256).max, path_1, address(this), block.timestamp);

