            sendMessageWithTransfer(
                _receiver,
                srcTokenOut,
                srcAmtOut,
                _dstChainId,
                _nonce,
                _maxBridgeSlippage,
                message
            );
            emit SwapRequestSent(id, _dstChainId, _amountIn, _srcSwap.path[0], _dstSwap.path[_dstSwap.path.length - 1]);
        }
    }

