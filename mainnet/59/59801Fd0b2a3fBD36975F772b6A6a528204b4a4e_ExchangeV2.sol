pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./interfaces/IExchange.sol";
import "./interfaces/ISwapV2Router.sol";

contract ExchangeV2 is IExchange, Ownable {

    using SafeMath for uint256;

    ISwapV2Router public router;

    constructor(address _router) {
        router = ISwapV2Router(_router);
    }

    function setRouter(address _router) external onlyOwner {
        router = ISwapV2Router(_router);
    }

    /// @inheritdoc IExchange
    function getEstimatedTokensForETH(IERC20 _token, uint256 _ethAmount) external returns (uint256) {
        return router.getAmountsIn(_ethAmount, _getSwapPair(_token))[0];
    }

    /// @inheritdoc IExchange
    function swapTokensToETH(IERC20 _token, uint256 _receiveEthAmount, uint256 _tokensMaxSpendAmount, address _ethReceiver, address _tokensReceiver) external returns (uint256) {
        // Approve tokens for router V2
        require(_token.approve(address(router), _tokensMaxSpendAmount), "Approve router for exchange v2 failed");

        // Make exchange
        uint256 spentTokens = router.swapTokensForExactAVAX(_receiveEthAmount, _tokensMaxSpendAmount, _getSwapPair(_token), _ethReceiver, block.timestamp.add(15))[0];

        // Send rest of tokens to tokens receiver
        if (spentTokens < _tokensMaxSpendAmount) {
            require(_token.transfer(_tokensReceiver, _tokensMaxSpendAmount.sub(spentTokens)));
        }

        return spentTokens;
    }

    function _getSwapPair(IERC20 _token) internal returns (address[] memory) {
        address[] memory swapPair = new address[](2);

        swapPair[0] = address(_token);
        swapPair[1] = router.WETH();
        return swapPair;
    }
}

