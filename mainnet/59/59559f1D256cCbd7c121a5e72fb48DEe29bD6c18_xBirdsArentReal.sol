    function _burn(address sender, uint256 amount) private {
        removeAllFee();
        if (_isExcluded[sender]) {
            _burnFromExcluded(sender, amount);
        } else {
            _burnStandard(sender, amount);
        }
        restoreAllFee();
    }

    function _burnStandard(address sender, uint256 tAmount) private {
        (
            uint256 rAmount,
            uint256 rTransferAmount,
            uint256 rFee,
            uint256 tTransferAmount,
            uint256 tFee,
            uint256 tLiquidity
        ) = _getValues(tAmount);
        _rOwned[sender] = _rOwned[sender].sub(rAmount);
        _tTotal = _tTotal.sub(tAmount);
        _rTotal = _rTotal.sub(rAmount);
        emit Transfer(sender, address(0), tAmount);
    }

    function _burnFromExcluded(address sender, uint256 tAmount) private {
        (
