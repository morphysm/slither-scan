import "./helpers/traderjoe/interfaces/IJoeRouter02.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract Arbitrage is Ownable {
    address public routerAddress;

    address public wavax;
    address public daiAddress;

    address public glad;
    address public gladShare;

    address public gladLp;
    address public gladShareLp;
    address public directLp;

    address public dao;

    uint256 public gasCost;

    constructor(
        address _routerAddress,
        address _wavax,
        address _glad,
        address _gladShare,
        address _gladLp,
        address _gladShareLp,
        address _directLp,
        uint256 _gas,
        address _dao
    ) {
        routerAddress = _routerAddress;
        wavax = _wavax;
        glad = _glad;
        gladShare = _gladShare;
        gladLp = _gladLp;
        gladShareLp = _gladShareLp;
        directLp = _directLp;
        gasCost = _gas;
        dao = _dao;

        IERC20(wavax).approve(routerAddress, uint256(int256(-1)));
    }

    function setGasCost(uint256 _gas) public onlyOwner {
        gasCost = _gas;
    }

    function arbitrageAmount() public view returns (uint256) {
        return IERC20(wavax).balanceOf(address(this));
    }

    function withdraw(uint256 amount) public onlyOwner {
        IERC20(wavax).transferFrom(address(this), msg.sender, amount);
    }

    function makeArbitrage() public {
        uint256 amountIn = IERC20(wavax).balanceOf(address(this));
        uint256 out0 = amountOut(false, amountIn);
        uint256 out1 = amountOut(true, amountIn);
        uint256 out = out0 > out1 ? out0 : out1;

        require(out > amountIn + gasCost, "Arbitrage: no profit");

        uint256 amountOutMin = (out * 95) / 100;
        address[] memory path = new address[](4);
        path[0] = wavax;
        path[3] = wavax;
        if (out == out0) {
            path[1] = glad;
            path[2] = gladShare;
        } else {
            path[2] = gladShare;
            path[1] = glad;
        }
        uint256 amountOut = IJoeRouter02(routerAddress).swapExactTokensForTokens(
            amountIn,
            amountOutMin,
            path,
            address(this),
            block.timestamp
        )[3];
        IERC20(wavax).transfer(dao, amountOut - amountIn);
    }

    function amountOut(bool dir, uint256 amount) public view returns (uint256) {
        address[] memory pairs = new address[](4);
        pairs[0] = wavax;
        if (dir) {
            pairs[1] = gladShare;
            pairs[2] = glad;
        } else {
            pairs[1] = glad;
            pairs[2] = gladShare;
        }
        pairs[3] = wavax;
        uint256 out = IJoeRouter02(routerAddress).getAmountsOut(amount, pairs)[3];
        return out;
    }

    function profit() public view returns (uint256) {
        uint256 amountIn = IERC20(wavax).balanceOf(address(this));
        uint256 out0 = amountOut(false, amountIn);
        uint256 out1 = amountOut(true, amountIn);
        uint256 out = out0 > out1 ? out0 : out1;
        if (out > amountIn) return out - amountIn;
        return 0;
    }

    function isProfitable() public view returns (bool) {
        uint256 profit = profit();
        if (profit > gasCost) return true;
        return false;
    }
}

