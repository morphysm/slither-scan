  function buyRGK(uint _amount) public onlyWhileOpen onlyWhitelisted onlyUnderLimit(_amount) {
    // safe transferFrom of the payout amount
    mim.safeTransferFrom(msg.sender, address(this), _amount);

    // calculate rgk amount to be created
    uint256 rgkAmount = _amount.mul(rate).div(RATE_DECIMALS);

    // update state
    mimRaised = mimRaised.add(_amount);
    totalRgkAmountToDistribute = totalRgkAmountToDistribute.add(rgkAmount);
    require(rgk.balanceOf(address(this)) >= totalRgkAmountToDistribute, "there aren't enough fund to buy more rgk");

    preBuys[msg.sender].mimAmount = preBuys[msg.sender].mimAmount.add(_amount);

