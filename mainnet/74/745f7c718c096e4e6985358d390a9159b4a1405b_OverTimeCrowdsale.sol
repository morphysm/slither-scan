  // unix timestamp datas
  uint256 public openingTime; // time once the presale will start
  uint256 public closingTime; // time once the presale will close
  uint256 public vestedTime; // vesting period

  // Whitelisted addresses
  mapping (address => bool) public wl;
  struct preBuy {
    uint mimAmount;
    uint rgkClaimedAmount;
  }
  mapping (address => preBuy) public preBuys;
  // RGK address
  ERC20 public rgk;
  // address where funds are collected
  address public wallet;
  // address of mim stablecoin
  ERC20 public mim;
  // buy rate
  uint public rate;
  // amount of wei raised
  uint public mimRaised;
  // total amount (max) of rgk token that wl can redeem
  uint public totalRgkAmountToDistribute;
  // maximum mim per buyer
  uint public maxMimPerBuyer;

  uint public immutable VESTING_TIME_DECIMALS = 10000000;
  uint public immutable RATE_DECIMALS = 1000000000000000000;

  event TokenPurchase(
    address indexed purchaser,
    uint256 MimAmount,
    uint256 RGKAmount
  );

  constructor(uint256 _rate, address _wallet, ERC20 _mim, ERC20 _rgk, uint _openingTime, uint _closingTime, uint _vestedTime, uint _maxMimPerBuyer) {
    require(_rate > 0);
    require(_wallet != address(0));
    require(address(_mim) != address(0));
    require(address(_rgk) != address(0));

    rate = _rate;
    wallet = _wallet;
    mim = _mim;
    rgk = _rgk;

    require(_closingTime >= _openingTime);

