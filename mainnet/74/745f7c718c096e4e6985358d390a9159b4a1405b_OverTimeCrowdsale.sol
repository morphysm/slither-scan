    uint percentReleased = getPercentReleased();

    uint totalRgkToClaim = preBuys[msg.sender].mimAmount.mul(rate).div(RATE_DECIMALS).mul(percentReleased).div(VESTING_TIME_DECIMALS);
    uint rgkToClaim = totalRgkToClaim.sub(preBuys[msg.sender].rgkClaimedAmount);
    preBuys[msg.sender].rgkClaimedAmount = preBuys[msg.sender].rgkClaimedAmount.add(rgkToClaim);

    rgk.safeTransfer(msg.sender, rgkToClaim);
