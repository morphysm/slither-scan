pragma solidity 0.6.12;
pragma experimental ABIEncoderV2;

import "@openzeppelin/contracts-upgradeable/proxy/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/SafeERC20Upgradeable.sol";
import "./library/NeedAccess.sol";

contract TalecraftStaking is Initializable, ReentrancyGuardUpgradeable, NeedAccess {
    using SafeMathUpgradeable for uint256;
    using SafeERC20Upgradeable for IERC20Upgradeable;

    struct Stakeholder {
        address wallet;
        uint256 stake;
    }

    address public stakingToken;

    uint256 constant public MINIMAL_STAKE = 1 ether;
    mapping(address => uint256) public stakeOf;
    uint256 public totalStakeholders;

    address constant public LIST_GUARD = address(1);
    mapping(address => address) public nextStakeholder;
    mapping(address => address) public prevStakeholder;

    uint256 constant public UNSTAKE_LOCK_TIME = 14 days;
    mapping(address => uint256) public unstakeRequestedAt;
    mapping(address => uint256) public unstakePoolOf;

    event Stake(
        address indexed stakeholder,
        uint256 amount,
        uint256 timestamp
    );
    event UnstakeRequest(
        address indexed stakeholder,
        uint256 amount,
        uint256 timestamp
    );
    event Unstake(
        address indexed stakeholder,
        uint256 amount,
        uint256 timestamp
    );

    function initialize(address _accessListContract, address _stakingToken) public initializer {
        require(_accessListContract != address(0), "TalecraftStaking: zero access list address");
        require(_stakingToken != address(0), "TalecraftStaking: zero token address");

        __ReentrancyGuard_init();

        accessListContract = _accessListContract;
        stakingToken = _stakingToken;

        nextStakeholder[LIST_GUARD] = LIST_GUARD;
        prevStakeholder[LIST_GUARD] = LIST_GUARD;
    }

    function stake(uint256 _amount, address _prevStakeholder) external nonReentrant needAccess returns(bool success) {
        require(_amount >= MINIMAL_STAKE, "TalecraftStaking: too small stake amount");
        require(_prevStakeholder != address(0), "TalecraftStaking: zero previous stakeholder");

        // previous stakeholder is not stakeholder
        if (nextStakeholder[_prevStakeholder] == address(0)) {
            _prevStakeholder = LIST_GUARD;
        }

        uint256 userStake = stakeOf[msg.sender];

        if (userStake == 0) {
            _addStakeholder(msg.sender, _amount, _prevStakeholder);
        } else {
            _updateStakeholder(msg.sender, userStake.add(_amount), _prevStakeholder);
        }

        IERC20Upgradeable(stakingToken).safeTransferFrom(msg.sender, address(this), _amount);

        emit Stake(msg.sender, _amount, block.timestamp);

        return true;
    }

    function unstakeRequest() external nonReentrant needAccess returns(bool success) {
        require(unstakeRequestedAt[msg.sender] == 0, "TalecraftStaking: the sender is already in the unlocking phase");

        uint256 currentStake = stakeOf[msg.sender];

        require(currentStake > 0, "TalecraftStaking: zero stake error");

        _removeStakeholder(msg.sender);

        unstakeRequestedAt[msg.sender] = block.timestamp;
        unstakePoolOf[msg.sender] = unstakePoolOf[msg.sender].add(currentStake);

        emit UnstakeRequest(msg.sender, currentStake, block.timestamp);

        return true;
    }

    function unstake() external nonReentrant needAccess returns(uint256 unstakingAmount) {
        require(unstakeRequestedAt[msg.sender] != 0, "TalecraftStaking: the sender must be in the unlocking phase");
        require(block.timestamp >= (unstakeRequestedAt[msg.sender].add(UNSTAKE_LOCK_TIME)), "LaunchpadStaking: lock time has not expired yet");

        unstakingAmount = unstakePoolOf[msg.sender];

        unstakeRequestedAt[msg.sender] = 0;
        unstakePoolOf[msg.sender] = 0;

        IERC20Upgradeable(stakingToken).safeTransfer(msg.sender, unstakingAmount);

        emit Unstake(msg.sender, unstakingAmount, block.timestamp);
    }

    function isStakeholder(address _target) external view returns(bool) { 
        return(_isStakeholder(_target));
    }

    function stakeholders()
        external
        view
        returns (Stakeholder[] memory)
    {
        return _stakeholders();
    }

    function fetchStakeholdersPage(uint256 _cursor, uint256 _howMany)
        external
        view
        returns (Stakeholder[] memory values, uint256 newCursor)
    {
        Stakeholder[] memory arr = _stakeholders();
        uint256 length = _howMany;
        if (length > arr.length - _cursor) {
            length = arr.length - _cursor;
        }

        values = new Stakeholder[](length);
        for (uint256 i = 0; i < length; i++) {
            values[i] = arr[_cursor + i];
        }

        return (values, _cursor + length);
    }


    function _stakeholders()
        internal
        view
        returns (Stakeholder[] memory)
    {
        Stakeholder[] memory result = new Stakeholder[](totalStakeholders);

        address nextAddress = nextStakeholder[LIST_GUARD];
        uint256 index = 0;
        while (nextAddress != LIST_GUARD) {
            result[index].wallet = nextAddress;
            result[index].stake = stakeOf[nextAddress];
            nextAddress = nextStakeholder[nextAddress];
            index = index.add(1);
        }

        return result;
    }

    function _addStakeholder(address _target, uint256 _value, address _prevStakeholder) internal {
        require(_target != address(0), "Stakeholder: zero target error");
        require(_value > 0, "Stakeholder: zero value error");
        require(!_isStakeholder(_target), "Stakeholder: the sender must not be a stakeholder");
        require(nextStakeholder[_target] == address(0), "Stakeholder: the sender is already on the list");
        require(nextStakeholder[_prevStakeholder] != address(0), "Stakeholder: wrong previous stakeholder");

        // add stakeholder
        stakeOf[_target] = stakeOf[_target].add(_value);
        totalStakeholders = totalStakeholders.add(1);

        // check positon, correct error in position
        address prevCandidate = _prevStakeholder;
        if (!(_verifyIndexLeft(prevCandidate, _value) && _verifyIndexRight(nextStakeholder[prevCandidate], _value))) {
            prevCandidate = _findPrevCandidate(prevCandidate, _value);
        }

        // binding in lists
        nextStakeholder[_target] = nextStakeholder[prevCandidate];
        nextStakeholder[prevCandidate] = _target;

        prevStakeholder[_target] = prevCandidate;
        prevStakeholder[nextStakeholder[_target]] = _target;
    }

    function _removeStakeholder(address _target) internal {
        require(_target != address(0), "Stakeholder: zero target error");
        require(nextStakeholder[_target] != address(0), "Stakeholder: the sender must be on the list");
        require(_isStakeholder(_target), "Stakeholder: the sender must be a stakeholder");

        address next = nextStakeholder[_target];
        address prev = prevStakeholder[_target];
        require(next != address(0) && prev != address(0), "Stakeholder: the list is broken");

        // remove stakeholder
        stakeOf[_target] = 0;
        totalStakeholders = totalStakeholders.sub(1);

        // unbinding in a sorted list
        nextStakeholder[prev] = next;
        prevStakeholder[next] = prev;

        nextStakeholder[_target] = address(0);
        prevStakeholder[_target] = address(0);
    }

    function _updateStakeholder(address _target, uint256 _value, address _prevStakeholder) internal {
        _removeStakeholder(_target);
        _addStakeholder(_target, _value, _prevStakeholder);
    }

    function _isStakeholder(address _target) internal view returns(bool) { 
        return(stakeOf[_target] > 0);   
    }

    function _verifyIndexLeft(address _prevStakeholder, uint256 _value)
        internal
        view
        returns(bool)
    {
        return(_prevStakeholder == LIST_GUARD || stakeOf[_prevStakeholder] >= _value);
    }

    function _verifyIndexRight(address _nextStakeholder, uint256 _value)
        internal
        view
        returns(bool)
    {
        return(_nextStakeholder == LIST_GUARD || _value > stakeOf[_nextStakeholder]);
    }

    function _findPrevCandidate(address _firstCandidate, uint256 _value)
        internal 
        view 
        returns(address) 
    {
        address prevCandidate = _firstCandidate;

        for (uint256 i = 0; i < 800; i++) {
            bool leftIsCorrect = _verifyIndexLeft(prevCandidate, _value);
            bool rightIsCorrect = _verifyIndexRight(nextStakeholder[prevCandidate], _value);

            if (!leftIsCorrect) {
                prevCandidate = prevStakeholder[prevCandidate];
            }
            else if (!rightIsCorrect) {
                prevCandidate = nextStakeholder[prevCandidate];
            }
            else {
                return prevCandidate;
            }
        }
        revert("TalecraftStaking: find prev candidate error");
    }
}

