////import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
////import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
////import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract IDO is ReentrancyGuard {
  using SafeERC20 for IERC20;

  // Info of each user.
  struct UserInfo {
      uint256 amount;   // How many tokens the user has provided.
      bool claimed;  // default false
  }

  // admin address
  address public adminAddress;
  // The pay token
  IERC20 public payToken;
  // The ido token
  IERC20 public idoToken;
  // The time when IDO starts
  uint256 public startTime;
  // The time when IDO ends
  uint256 public endTime;
  uint256 public harvestTime;
  // total amount of pay tokens need to be raised
  uint256 public totalPayAmount;
  // total amount of idoToken that will offer
  uint256 public totalIdoAmount;
  // total amount of pay tokens that have already raised
  uint256 public totalReceivePayAmount;

  uint256 public minPayAmount;
  uint256 public maxPayAmount;

  bool public whiteListEnable;
  uint256 public whiteListCount;
  // address => amount
  mapping (address => UserInfo) public userInfo;

  mapping (address => bool) public whiteList;
  // participators
  address[] public addressList;


  event Deposit(address indexed user, uint256 amount);
  event Harvest(address indexed user, uint256 idoAmount);

  constructor(
      IERC20 _payToken,
      IERC20 _idoToken,
      uint256 _startTime,
      uint256 _endTime,
      uint256 _harvestTime,
      uint256 _totalIdoAmount,
      uint256 _totalPayAmount,
      uint256 _minPayAmount,
      uint256 _maxPayAmount,
      address _adminAddress
  ) {
      payToken = _payToken;
      idoToken = _idoToken;
      startTime = _startTime;
      endTime = _endTime;
      harvestTime = _harvestTime;
      totalIdoAmount = _totalIdoAmount;
      totalPayAmount= _totalPayAmount;
      minPayAmount= _minPayAmount;
      maxPayAmount= _maxPayAmount;
      adminAddress = _adminAddress;
      whiteListEnable = true;
  }

  modifier onlyAdmin() {
    require(msg.sender == adminAddress, "admin: wut?");
    _;
  }

  function setTotalIdoAmount(uint256 _totalIdoAmount) public onlyAdmin {
    require (block.timestamp < startTime, 'no');
    totalIdoAmount = _totalIdoAmount;
  }

  function setTotalPayAmount(uint256 _totalPayAmount) public onlyAdmin {
    require (block.timestamp < startTime, 'no');
    totalPayAmount = _totalPayAmount;
  }

  function setMinPayAmount(uint256 _amount) public onlyAdmin {
      minPayAmount = _amount;
  }

  function setMaxPayAmount(uint256 _amount) public onlyAdmin {
      maxPayAmount = _amount;
  }

  function setHarvestTime(uint256 _harvestTime) public onlyAdmin {
    require (_harvestTime >= endTime, 'no');
    harvestTime = _harvestTime;
  }

  function setWhiteListEnable(bool enable) public onlyAdmin {
    whiteListEnable = enable;
  }

  function setWhiteList(address[] memory addressArray) public onlyAdmin {
    for(uint256 i=0;i<addressArray.length;++i) {
        if(!whiteList[addressArray[i]]){
            whiteListCount+=1;
            whiteList[addressArray[i]] = true;
        }
    }
  }

  function leftPayAmount() public view returns(uint256) {
      return totalPayAmount - totalReceivePayAmount;
  }

  function deposit(uint256 _amount) public nonReentrant {
    require (block.timestamp > startTime && block.timestamp < endTime, 'not ido time');
    require (_amount> 0 && _amount>=minPayAmount && _amount<=maxPayAmount && _amount<=leftPayAmount(), 'amount error');
    require (userInfo[msg.sender].amount == 0, 'user already exists');
    if(whiteListEnable){
        require(whiteList[msg.sender],"not in whitelist");
    }
    payToken.safeTransferFrom(address(msg.sender), address(this), _amount);
    addressList.push(address(msg.sender));
    userInfo[msg.sender].amount = _amount;
    totalReceivePayAmount = totalReceivePayAmount + _amount;
    emit Deposit(msg.sender, _amount);
  }

  function harvest() public nonReentrant {
    require (block.timestamp > harvestTime, 'not harvest time');
    require (userInfo[msg.sender].amount > 0, 'have you participated?');
    require (!userInfo[msg.sender].claimed, 'nothing to harvest');
    uint256 idoTokenAmount = getIdoAmount(msg.sender);
    idoToken.safeTransfer(address(msg.sender), idoTokenAmount);
    userInfo[msg.sender].claimed = true;
    emit Harvest(msg.sender, idoTokenAmount);
  }

  function hasHarvest(address _user) external view returns(bool) {
      return userInfo[_user].claimed;
  }

  // get the amount of IDO token you will get
  function getIdoAmount(address _user) public view returns(uint256) {
    // userInfo[_user] / (totalPayAmount / totalIdoAmount)
    return userInfo[_user].amount * totalIdoAmount / totalPayAmount;
  }

  function getAddressListLength() external view returns(uint256) {
    return addressList.length;
  }

  function finalWithdraw(uint256 _payTokenAmount, uint256 _idoAmount) public onlyAdmin {
    require (_payTokenAmount <= payToken.balanceOf(address(this)), 'not enough token 0');
    require (_idoAmount <= idoToken.balanceOf(address(this)), 'not enough token 1');
    payToken.safeTransfer(address(msg.sender), _payTokenAmount);
    idoToken.safeTransfer(address(msg.sender), _idoAmount);
  }
}