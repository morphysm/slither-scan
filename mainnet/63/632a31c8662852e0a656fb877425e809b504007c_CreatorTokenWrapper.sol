contract CreatorTokenWrapper {
    function getBuyPrice(address token, address currency, uint amount) public view returns (uint) {
        ICreatorToken ct = ICreatorToken(token);
        address cvAddr = ct.curve();
        if (cvAddr == address(0)) return 0;

        IBondCurve curve = IBondCurve(cvAddr);
        if (amount == 0) amount = 1 * 10 ** ct.decimals();
        return curve.buyPrice(token, amount, currency);
    }

    function getSellPrice(address token, address currency, uint amount) public view returns (uint) {
        ICreatorToken ct = ICreatorToken(token);
        address cvAddr = ct.curve();
        if (cvAddr == address(0)) return 0;
        
        IBondCurve curve = IBondCurve(cvAddr);
        
        if (ct.totalSupply() == 0) return 0;
        if (amount == 0 || amount > ct.totalSupply()) {
            return curve.sellPrice(token, 0, currency);
        } else {
            return curve.sellPrice(token, 0, currency) - curve.sellPrice(token, amount, currency);
        }
    }
}