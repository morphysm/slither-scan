pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/cryptography/draft-EIP712.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

import "./ISettingsStore.sol";
import "./ComponentERC20.sol";
import "./GameNft.sol";

contract ComponentDistributor is EIP712 {
  using SafeERC20 for IERC20;

  struct Component {
    uint256 id;

    address component;
    uint256 quantity;
  }

  event Collected(uint256 indexed id, address ownerId, address component, uint256 quantity);
  
  mapping(uint256 => bool) public collected;
  ISettingsStore public settings;
  uint256 public immutable blockDeployed = block.number;

  constructor(ISettingsStore _settings, string memory _signerDomainName)
    EIP712(_signerDomainName, "1")
  {
    settings = _settings;
  }

  function __glory() private view returns (address) {
    return settings.resolve("glory-erc20.playeternity.io");
  }
  function __gameNft() private view returns (address) {
    return settings.resolve("enftv1.playeternity.io");
  }
  
  bytes32 constant public COMPONENT_SIG_HASH = keccak256("Component(uint256 id,address component,uint256 quantity)");
  function hashComponent(Component calldata component) private pure returns (bytes32) {
    return keccak256(abi.encode(
      COMPONENT_SIG_HASH,
      component.id,
      component.component,
      component.quantity
    ));
  }

  bytes32 constant public COLLECT_SIG_HASH = keccak256("Collect(address userId,Component[] erc20)Component(uint256 id,address component,uint256 quantity)");
  function __verifyCollect(address userId, Component[] calldata components, bytes calldata signature) private view {
    
    bytes memory componentBytes;
    for(uint8 i = 0; i < components.length; i++) {
      componentBytes = bytes.concat(componentBytes, hashComponent(components[i]));
    }

    bytes32 digest = _hashTypedDataV4(keccak256(abi.encode(
      COLLECT_SIG_HASH,
      userId,
      keccak256(componentBytes)
    )));

    address signer = ECDSA.recover(digest, signature);
    require(settings.isPermittedTo(signer, "ComponentDistributor", "Collect"), "403");
  }

  function collect(Component[] calldata components, bytes calldata signature) external {

    __verifyCollect(msg.sender, components, signature);

    for(uint8 i = 0; i < components.length; i++) {

      require(collected[components[i].id] == false, "400");
      collected[components[i].id] = true;

      if(components[i].component == __glory()) {
        IERC20(__glory()).safeTransfer(msg.sender, components[i].quantity);
      } else {
        ComponentERC20(components[i].component).trustedMint(msg.sender, components[i].quantity);
      }

      emit Collected(components[i].id, msg.sender, components[i].component, components[i].quantity);
    }
  }

  function reclaimGlory(uint256 amount) external {
    require(settings.isAdmin(msg.sender), "403");

    IERC20 glory = IERC20(__glory());
    amount = amount > glory.balanceOf(address(this)) ? glory.balanceOf(address(this))
      : amount;

    glory.safeTransfer(msg.sender, amount);
  }
}

