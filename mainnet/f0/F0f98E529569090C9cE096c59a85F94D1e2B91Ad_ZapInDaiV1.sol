            );

            Stable.approve(address(StableBond), swapReturn[1]);

            StableBond.deposit(swapReturn[1], maxPrice, msg.sender);

    }

    function withdrawResidual(address token_) external onlyOwner() {
        IERC20 token = IERC20(token_);
        token.transfer(msg.sender, token.balanceOf(address(this)));
    }

