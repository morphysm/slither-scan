// ExchangeBridge is used to ensure contracts can still exchange tokens if the exchange changes their LPs or router address
contract ExchangeBridge is AccessControl {
    using LowGasSafeMath for uint256;

    JoeRouter public traderJoeRouter;
    address public constant joeFactory = 0x9Ad6C38BE94206cA50bb0d90783181662f0Cfa10;
    uint256 public constant UINT256_MAX = uint256(-1);

    mapping(address => mapping(address => address[])) public paths;

    constructor(
        address _traderJoeRouter
    ) {
        _setupRole(ADMIN_ROLE, msg.sender);
        traderJoeRouter = JoeRouter(_traderJoeRouter);
    }

    function exchangeExactTokensForTokens(uint256 amount, address fromAddress, address sourceToken, address targetToken) external {
        // swap for whatever, deadline is n/a so deadline is block.number
        IERC20 sourceTokenContract = IERC20(sourceToken);
        sourceTokenContract.transferFrom(fromAddress, address(this), amount); // transfer to this contract
        traderJoeRouter.swapTokensForExactTokens(amount, UINT256_MAX, getPath(sourceToken, targetToken), fromAddress, block.number);
    }

    function quoteTokens(uint256 amount, address sourceToken, address targetToken) external view returns(uint256) {
        address[] memory path = getPath(sourceToken, targetToken);
        uint256[] memory amounts = new uint256[](path.length);
        amounts[0] = amount;
        for (uint256 i; i < path.length - 1; i++) {
            (uint256 reserveA, uint256 reserveB) = JoeLibrary.getReserves(joeFactory, path[i], path[i + 1]);
            amounts[i+1] = JoeLibrary.quote(amounts[i], reserveA, reserveB);
        }
        return amounts[path.length - 1];
    }

    function getPath(address sourceToken, address targetToken) public view returns(address[] memory) {
        address[] memory result = paths[sourceToken][targetToken];
        if (result.length != 0) {
            return result;
        }
        address[] memory pathDefault = new address[](2);
        pathDefault[0] = sourceToken;
        pathDefault[1] = targetToken;
        return pathDefault;
    }

    function setPath(address sourceToken, address targetToken, address[] memory path) external onlyRole(ADMIN_ROLE) {
        paths[sourceToken][targetToken] = path;
    }
}