        0xBbD9786f178e2AEBb4b4329c41A821921ca05339,
        0x15e6C37CDb635ACc1fF82A8E6f1D25a757949BEC,
        0x418d541b05D932371EC148852448F7445b2b73dF,
        0xA1B46ff2a3394b9460B4004F2e7401DeC7f7A023,
        0x76dAAaf7711f0Dc2a34BCA5e13796B7c5D862B53,
        0x6d5087B3082f73D42a32D85e38BC95dcceDe39Bb,
        0x9DB5e335522a75a12b09ff2f416602fa2F2176a6,
        0x986B1A382fA81e8A607106F275C34cCD079cd7BD
    ];
  

    mapping(address => bool) public userClaimed;

    event userClaim(address user, uint256 amount, uint256 timestamp);
    event vestingFunded(uint256 amount, uint256 timestamp);

    constructor(address _tokenToDistribute, uint256 _startTime) {
        tokenToDistribute = IERC20(_tokenToDistribute);
        startTime = _startTime;
    }

    function claim() external {
        require(startTime <= block.timestamp, "Airdrop not live yet");
        require(!userClaimed[msg.sender], "User claim already");

        uint256 tokensHold = getTokensHold(msg.sender);
        uint256 amountToTranfer = 100 ether * tokensHold;  

        require(amountToTranfer > 0, "Not rewards available");

        userClaimed[msg.sender] = true;

        tokenToDistribute.transfer(msg.sender, amountToTranfer);

        emit userClaim(msg.sender, amountToTranfer, block.timestamp);
    }

    function fundVesting(uint256 amount) external onlyOwner {
        tokenToDistribute.transferFrom(msg.sender, address(this), amount);

        emit vestingFunded(amount, block.timestamp);
    }

    function tokensAvailable() public view returns (uint256) {
        return tokenToDistribute.balanceOf(address(this));
    }

    function withdrawRemaining() external onlyOwner {
        uint256 remaining = tokenToDistribute.balanceOf(address(this));
        tokenToDistribute.transfer(msg.sender, remaining);
    }

    function getTokensHold (address user) public view returns (uint256 amount){
        for(uint256 i; i < tokensContracts.length; i++){
            uint256 balance = IERC721(tokensContracts[i]).balanceOf(user);
            if(balance > 0){
                amount++;
            }
        }
    }
}