/**
 * @notice MoreMoneyVoter manages deposits for other strategies
 * using a proxy pattern. It also directly accepts deposits
 * in exchange for yyMORE token.
 */
contract MoreMoneyVoter is IMoreMoneyVoter, Ownable, ERC20 {
    using SafeERC20 for IERC20;

    IWAVAX private constant WAVAX = IWAVAX(0xB31f66AA3C1e785363F0875A1B74E27b85FD66c7);
    address public constant MORE = address(0xd9D90f882CDdD6063959A9d837B05Cb748718A05);
    IVeMOREStaking public constant veMOREStaking = IVeMOREStaking(0xCD89D32Fd82b01E0A11d8c9835Da521c24781D29);
    IVeMORE public constant veMORE = IVeMORE(0x7AEa97bA3d91117EA53BE2599C6C6c60e1c7ccBC);

    address public voterProxy;
    bool public override depositsEnabled = true;

    modifier onlyProxy() {
        require(msg.sender == voterProxy, "MoreMoneyVoter::onlyProxy");
        _;
    }

    constructor(address _owner) ERC20("Yield Yak MORE", "yyMORE") {
        transferOwnership(_owner);
    }

    receive() external payable {}

    /**
     * @notice veMORE balance
     * @return uint256 balance
     */
    function veMOREBalance() external view override returns (uint256) {
        return veMORE.balanceOf(address(this));
    }

    /**
     * @notice Enable/disable deposits
     * @dev Restricted to owner
     * @param newValue bool
     */
    function updateDepositsEnabled(bool newValue) external onlyOwner {
        require(depositsEnabled != newValue);
        depositsEnabled = newValue;
    }

    /**
     * @notice External deposit function
     * @param _amount to deposit
     */
    function deposit(uint256 _amount) external override {
        require(depositsEnabled == true, "MoreMoneyVoter:deposits disabled");
        require(IERC20(MORE).transferFrom(msg.sender, address(this), _amount), "MoreMoneyVoter::transfer failed");
        _deposit(_amount);
    }

    /**
     * @notice Update proxy address
     * @dev Very sensitive, restricted to owner
     * @param _voterProxy new address
     */
    function setVoterProxy(address _voterProxy) external override onlyOwner {
        voterProxy = _voterProxy;
    }

    /**
     * @notice Update veMORE balance
     * @dev Any one may call this
     */
    function claimVeMORE() external override {
        veMOREStaking.claim();
    }

    /**
     * @notice Deposit function
     * @dev Restricted to proxy
     * @param _amount to deposit
     */
    function depositFromBalance(uint256 _amount) external override onlyProxy {
        require(depositsEnabled == true, "MoreMoneyVoter:deposits disabled");
        _deposit(_amount);
    }

    /**
     * @notice Deposits MORE and mints yyMORE at 1:1 ratio
     * @param _amount to deposit
     */
    function _deposit(uint256 _amount) internal {
        IERC20(MORE).safeApprove(address(veMOREStaking), _amount);
        _mint(msg.sender, _amount);
        veMOREStaking.deposit(_amount);
        IERC20(MORE).safeApprove(address(veMOREStaking), 0);
    }

    /**
     * @notice Helper function to wrap AVAX
     * @return amount wrapped to WAVAX
     */
    function wrapAvaxBalance() external override onlyProxy returns (uint256) {
        uint256 balance = address(this).balance;
        if (balance > 0) {
            WAVAX.deposit{value: balance}();
        }
        return balance;
    }

    /**
     * @notice Open-ended execute function
     * @dev Very sensitive, restricted to proxy
     * @param target address
     * @param value value to transfer
     * @param data calldata
     * @return bool success
     * @return bytes result
     */
    function execute(
        address target,
        uint256 value,
        bytes calldata data
    ) external override onlyProxy returns (bool, bytes memory) {
        (bool success, bytes memory result) = target.call{value: value}(data);

        return (success, result);
    }
}

