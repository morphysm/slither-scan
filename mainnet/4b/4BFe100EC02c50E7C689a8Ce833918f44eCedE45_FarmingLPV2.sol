import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/interfaces/IERC20.sol";
import "@openzeppelin/contracts/interfaces/IERC721.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "./Authorizable.sol";
import "./Fert.sol";
import "./Farmland.sol";

contract FarmingLPV2 is Authorizable {
    using SafeMath for uint256;
    IERC20 public immutable REWARD_TOKEN; // FEED
    IERC20 public immutable LP_CONTRACT; // EGG/AVAX pair
    IERC20 public immutable EGG_TOKEN; // Egg contract

    address public FERT_CONTRACT; // fert contract
    address public FARM_CONTRACT; // farmland contract

    uint256 public TVL_LP; // total lock up JLP

    uint256 public ONEDAY = 86400;
    uint256 public baseCapacity = 1000 * 10**18; // landsize holding capacity
    uint256 public baseLPMultplier = 400; // LP multiplier
    uint256 public multiplierCap = 12; // maximum amount we can allow to multiply

    struct StakedFarm {
        // when to calculate egg from
        uint32 sinceTs;
        // how much is unclaimed
        uint256 rewardDebt;
    }

    /// Info of each user that stakes JLP tokens.
    mapping(address => uint256) public lpStaked;
    // active farmland for the the farmId
    mapping(uint256 => StakedFarm) public stakedFarm;
    // baseFarmland by user wallet address
    mapping(address => StakedFarm) public baseFarm;
    // wallet against active farm Id
    mapping(address => uint256) public activeFarm;

    // event emiter
    event StakedLP(address indexed user, uint256 amount);
    event WithdrawLP(address indexed user, uint256 amount);
    event FeedClaimed(address indexed user, uint256 amount);
    event BurnedEgg(address indexed user, uint256 amount);

    constructor(
        IERC20 _rewardToken,
        IERC20 _lpToken,
        IERC20 _eggToken,
        address _farmland,
        address _fertContract
    ) {
        require(
            Address.isContract(address(_rewardToken)),
            "constructor: reward token must be a valid contract"
        );
        require(
            Address.isContract(address(_lpToken)),
            "constructor: JLP token must be a valid contract"
        );
        require(
            Address.isContract(address(_eggToken)),
            "constructor: Egg token must be a valid contract"
        );
        REWARD_TOKEN = _rewardToken;
        LP_CONTRACT = _lpToken;
        FARM_CONTRACT = _farmland;
        EGG_TOKEN = _eggToken;
        FERT_CONTRACT = _fertContract;
    }

    function checkActiveFarm() public view returns (uint256) {
        uint256 existingFarmId = activeFarm[msg.sender];
        ChiknFarm x = ChiknFarm(FARM_CONTRACT);
        // verify user is the owner of the farmland...
        if (existingFarmId != 0 && x.ownerOf(existingFarmId) == msg.sender) {
            return existingFarmId;
        }
        return 0;
    }

    function activateBaseFarm() external {
        uint256 existingFarmId = activeFarm[msg.sender];
        _reconcileAccount(msg.sender, existingFarmId); // if no active it will default to 0
        delete activeFarm[msg.sender]; // remove any active farm detail
        StakedFarm memory farm = baseFarm[msg.sender];
        farm.sinceTs = uint32(block.timestamp);
        baseFarm[msg.sender] = farm;
    }

    // farmland activation
    function activateFarm(uint256 id) external {
        ChiknFarm x = ChiknFarm(FARM_CONTRACT);
        // verify user is the owner of the farmland...
        require(x.ownerOf(id) == msg.sender, "NOT OWNER");
        // check if there is active farm
        uint256 existingFarmId = activeFarm[msg.sender];
        _reconcileAccount(msg.sender, existingFarmId); // if no active it will default to 0
        StakedFarm memory farm = stakedFarm[id];
        farm.sinceTs = uint32(block.timestamp);
        stakedFarm[id] = farm;
        // set this as the current active farm
        activeFarm[msg.sender] = id;
    }

    // when user deactivate farm
    function deactivateFarm(uint256 id) external {
        require(activeFarm[msg.sender] == id, "NOT ACTIVE FARM");
        ChiknFarm x = ChiknFarm(FARM_CONTRACT);
        // verify user is the owner of the farmland...
        require(x.ownerOf(id) == msg.sender, "NOT OWNER");
        _reconcileAccount(msg.sender, id); // if no active it will default to 0
        // should revert to baseFarm and activate it
        _updateNoFarmStaking(msg.sender, 0);
        activeFarm[msg.sender] = 0;
    }

    // this function is use to claim any feed when user switch between farm( baseFarm <> farmland)
    function _reconcileAccount(address sender, uint256 id) internal {
        uint256 claimable = claimableView();
        uint256 totalClaim = 0;
        if (id == 0) {
            // basefarm for user
            StakedFarm memory farm = baseFarm[sender];
            totalClaim = claimable + farm.rewardDebt;
            delete baseFarm[sender];
        } else {
            ChiknFarm x = ChiknFarm(FARM_CONTRACT);
            // only if the sender stil own it
            if (x.ownerOf(id) == sender) {
                StakedFarm memory farm = stakedFarm[id];
                totalClaim = claimable + farm.rewardDebt;
                delete stakedFarm[id];
            }
        }
        if (totalClaim > 0) {
            _payRewards(sender, totalClaim);
        }
    }

    // pay the feed rewards
    function _payRewards(address sender, uint256 amt) internal {
        if (amt > 0) {
            if (REWARD_TOKEN.balanceOf(address(this)) >= amt) {
                bool success = REWARD_TOKEN.transfer(sender, amt);
                require(success);
                emit FeedClaimed(sender, amt);
            } else {
                // Balance of rewards is smaller than projection, transfer what is left to the user
                // only return what is left in the reward pool
                uint256 remainder = REWARD_TOKEN.balanceOf(address(this));
                bool success = REWARD_TOKEN.transfer(sender, remainder);
                require(success);
                emit FeedClaimed(sender, remainder);
            }
        }
    }

    //  Internal call
    //  caller need to supply the updated value
    // `rewardDebt` newly added rewardDebt +/- previously rewardDebt
    function _updateLPStaking(uint256 id, uint256 rewardDebt) internal {
        StakedFarm memory farm = stakedFarm[id];
        // update stake - add previous value
        farm.sinceTs = uint32(block.timestamp);
        farm.rewardDebt = rewardDebt;
        // set the stake detail back to mapping
        stakedFarm[id] = farm;
    }

    // update the baseFarmland staking pool
    function _updateNoFarmStaking(address user, uint256 rewardDebt) internal {
        StakedFarm memory farm = baseFarm[user];
        // update stake - add previous value
        farm.sinceTs = uint32(block.timestamp);
        farm.rewardDebt = rewardDebt;
        // set the stake detail back to mapping
        baseFarm[user] = farm;
    }

    // Stake LP token to get feed
    function staking(uint256 amount) external {
        require(
            LP_CONTRACT.balanceOf(msg.sender) >= amount,
            "Not enough LP coin"
        );
        bool success = LP_CONTRACT.transferFrom(
            msg.sender,
            address(this),
            amount
        );
        require(success);
        claimReward(msg.sender); // claim existing reward first
        uint256 currentActiveFarm = activeFarm[msg.sender];
        // make sure user still have the farm
        ChiknFarm x = ChiknFarm(FARM_CONTRACT);
        // verify user is the owner of the farmland...
        if (
            currentActiveFarm != 0 && x.ownerOf(currentActiveFarm) == msg.sender
        ) {
            // still the owner then update
            _updateLPStaking(currentActiveFarm, 0);
        } else {
            // baseFarmland, use the baseFarm (is per wallet)
            // still the owner then update
            _updateNoFarmStaking(msg.sender, 0);
        }
        lpStaked[msg.sender] += amount;
        TVL_LP += amount;

        emit StakedLP(msg.sender, amount);
    }

    function eggInLp(uint256 lpAmt) public view returns (uint256) {
        uint256 totalLPSupply = LP_CONTRACT.totalSupply();
        uint256 totalEggSupplyInLP = EGG_TOKEN.balanceOf(address(LP_CONTRACT));
        return (lpAmt * totalEggSupplyInLP) / totalLPSupply;
    }

    // claimable view calculate any unclaim rewards for active farm or baseFarm
    function claimableView() public view returns (uint256) {
        uint256 claimable = 0;
        uint256 maxCap = baseCapacity;
        uint256 stakedLP = lpStaked[msg.sender];
        uint256 totalLPSupply = LP_CONTRACT.totalSupply();
        uint256 totalEggSupplyInLP = EGG_TOKEN.balanceOf(address(LP_CONTRACT));
        uint256 multiplier = baseLPMultplier;
        uint32 sinceTs = 0;
        // check for active farm land
        uint256 currentActiveFarm = activeFarm[msg.sender];
        ChiknFarm x = ChiknFarm(FARM_CONTRACT);
        if (
            currentActiveFarm != 0 && x.ownerOf(currentActiveFarm) == msg.sender
        ) {
            // have active farm and owning it
            (uint24 size, , , , ) = x.lands(currentActiveFarm);
            if (size >= 120) {
                maxCap = 16000000000 * 10**18; // some super high number 1billion
            } else {
                maxCap = size * baseCapacity;
            }
            // use the ferm to multipl out the egg LP staked
            // if maxCap is higher than the allow, return maxcap
            multiplier = fertilityMultiplier(currentActiveFarm);
            sinceTs = stakedFarm[currentActiveFarm].sinceTs;
        } else {
            // this cater for sold farm while active
            uint32 since = baseFarm[msg.sender].sinceTs;
            if (since == 0) {
                since = uint32(block.timestamp);
            }
            // no active farm
            sinceTs = since;
        }

        // Need to split into two equations due to STACK TOO DEEP
        claimable = stakedLP.mul(totalEggSupplyInLP).mul(multiplier).mul(
            block.timestamp - sinceTs
        );
        // the last divide of 100 is to get the multiply back to decimal point
        claimable = claimable.div(totalLPSupply).div(ONEDAY).div(100);
        if (claimable >= maxCap) {
            return maxCap;
        }
        return claimable;
    }

    // claim rewards and reset the rewardDebt to 0
    function claimReward(address sender) public {
        uint256 existingFarmId = activeFarm[sender];
        uint256 projection = claimableView();
        if (existingFarmId == 0) {
            // baseFarm
            projection += baseFarm[sender].rewardDebt;
            _updateNoFarmStaking(sender, 0);
        } else {
            ChiknFarm x = ChiknFarm(FARM_CONTRACT);
            // verify user is the owner of the farmland...
            if (x.ownerOf(existingFarmId) == sender) {
                // staked farm
                projection += stakedFarm[existingFarmId].rewardDebt;
                _updateLPStaking(existingFarmId, 0);
            }
        }
        _payRewards(sender, projection);
    }

    // withdraw
    function withdraw(uint256 amount) external {
        require(amount > 0, "Need to be greater than 0");
        require(
            lpStaked[msg.sender] >= amount,
            "Can't withdraw more than staked"
        );
        require(
            LP_CONTRACT.balanceOf(address(this)) >= amount,
            "Not enough JLP to withdraw"
        );
        // mint reward tokens to user
        claimReward(msg.sender);
        TVL_LP -= amount;
        lpStaked[msg.sender] -= amount;
        // Transfer LP token to the user
        bool success2 = LP_CONTRACT.transfer(msg.sender, amount);
        require(success2);

        emit WithdrawLP(msg.sender, amount);
    }

