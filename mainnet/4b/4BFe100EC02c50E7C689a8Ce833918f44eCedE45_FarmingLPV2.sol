        address from,
        address to,
        uint price
    );
    event PayRoyalty(
        address from,
        address to,
        uint saleAmt,
        uint royaltyAmt
    );
    event Size(uint id, uint24 size);
    event Fert(uint id, uint256 fert);
    // todo: Add config change event

    // Initialize

    function initialize(
        address a,
        uint b,
        uint c,
        string memory d,
        bool e,
        IERC20 f,
        uint g
    ) public initializer {
        __ERC721_init("FarmLand", "FarmLand");
        __AuthOwnable_init();
        _rAdd = a;
        comm = b;
        fee = c;
        baseURL = d;
        openPub = e;
        lp = f;
        maxSupply = g;
    }

