        require(ownerOf(_id) != msg.sender);
        // get that token from all ChickenRun mapping and create a memory of it defined as (struct => ChickenRun)
        Farmland memory land = lands[_id];
        // price sent in to buy should be equal to or more than the token's price
        require(msg.value >= land.price, "not enough money");
        // token should be for sale
        require(land.forSale);
        lands[_id] = land;
        _payRoyalty(ownerOf(_id), msg.sender);
        _transfer(ownerOf(_id), msg.sender, _id);
        // Purchase event is for sale happening on our site
