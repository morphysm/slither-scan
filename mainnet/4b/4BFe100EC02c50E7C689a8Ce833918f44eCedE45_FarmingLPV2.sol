        // check if thic fucntion caller is not an zero address account
        require(openPub == true, "not open");
        require(totalSupply() < maxSupply, "max supply");
        // pay for minting cost using LP token
        require(lp.balanceOf(msg.sender) >= fee, "not enough LP");
        // burn the LP
        (bool success) = lp.transferFrom(msg.sender, 0x000000000000000000000000000000000000dEaD, fee);
        require(success);
        _ids.increment();
        uint24 newItemId = uint24(_ids.current());
        _safeMint(msg.sender, newItemId);
        // add the token id to the lands
        lands[newItemId] = Farmland(
            1, // size
            1, // fert level
            msg.sender, // current owner
            fee, // current price
            false // for sale
        );
    }

