pragma solidity 0.6.11;

import '../Dependencies/SafeMath.sol';
import '../Interfaces/IPriceFeed.sol';
import "../Dependencies/Ownable.sol";

interface ICRV {
  function get_virtual_price() external view returns (uint);
}

contract CRVOracle is Ownable, IPriceFeed {
  using SafeMath for uint;

  IPriceFeed[] underlyingFeed;
  ICRV crv;
  uint internal constant MAX_UINT = 115792089237316195423570985008687907853269984665640564039457584007913129639935;

  function setParam(IPriceFeed[] calldata _underlying, address _crv) external onlyOwner {
    underlyingFeed = _underlying;
    crv = ICRV(_crv);
  }

  function fetchPrice_v() external override view returns (uint) {
    // MAX_INT
    uint cheapestToken = MAX_UINT;
    for (uint i; i < underlyingFeed.length; ++i) {
      uint underlyingPrice = underlyingFeed[i].fetchPrice_v();
      if (underlyingPrice < cheapestToken) {
        cheapestToken = underlyingPrice;
      }
    }
    require(cheapestToken != MAX_UINT, "No underlying price feed available");
    return crv.get_virtual_price().mul(cheapestToken).div(1e18);
  }
  function fetchPrice() external override returns (uint) {
    // MAX_INT
    uint cheapestToken = MAX_UINT;
    for (uint i; i < underlyingFeed.length; ++i) {
      uint underlyingPrice = underlyingFeed[i].fetchPrice_v();
      if (underlyingPrice < cheapestToken) {
        cheapestToken = underlyingPrice;
      }
    }
    require(cheapestToken != MAX_UINT, "No underlying price feed available");
    return crv.get_virtual_price().mul(cheapestToken).div(1e18);
  }

}

