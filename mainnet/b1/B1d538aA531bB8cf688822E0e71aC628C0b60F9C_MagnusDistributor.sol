// ERC20 Interface
interface IERC20 {
    function decimals() external view returns (uint8);

    function balanceOf(address account) external view returns (uint256);

    function transfer(address recipient, uint256 amount)
        external
        returns (bool);

    function approve(address spender, uint256 amount) external returns (bool);

    function totalSupply() external view returns (uint256);

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);

    event Transfer(address indexed from, address indexed to, uint256 value);

    event Approval(
        address indexed owner,
        address indexed spender,
        uint256 value
    );
}

contract MagnusDistributor {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    address public magnusContract;
    address public owner;

    constructor(address _magnusContract) {
        magnusContract = _magnusContract;
        owner = msg.sender;
    }

    function distribute(
        uint32 _start,
        uint32 _end,
        uint256 _rewardAmount,
        address _token
    ) external onlyOwner {
        // Access the contract
        Magnus _magnusContract = Magnus(magnusContract);
        // Total share count
        uint256 _totalShareCount = _magnusContract.totalShareCount();
        // Reward per share
        uint256 _rewardPerShare = _rewardAmount / _totalShareCount;

        for (uint32 _i = _start; _i < _end; _i++) {
            // Calculate the reward
            address _currentHolder = _magnusContract.holders(_i);
            uint256 _shareCount = _magnusContract.shareCount(_currentHolder);
            uint256 _rewardToBeDistributed = _rewardPerShare * _shareCount;

            // Distribute
            IERC20(_token).safeTransferFrom(
                msg.sender,
                _currentHolder,
                _rewardToBeDistributed
            );
        }
    }

    // Modifiers
    modifier onlyOwner() {
        require(msg.sender == owner);
        _;
    }
}