import "./interfaces/traderjoe/IJoeRouter02.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract EmigroUtilities is Ownable, Pausable {

    IJoeRouter02 public joeRouter;

    constructor(address _joeRouter) {
        joeRouter = IJoeRouter02(_joeRouter);
    }

    /// @notice Swap one token for another
    /// @dev See https://docs.uniswap.org/protocol/V2/reference/smart-contracts/router-02#swapexacttokensfortokens
    /// @param _tokenIn  Token to swap, informs path
    /// @param _tokenOut  Token to receive, informs path
    /// @param _amountIn 	The amount of input tokens to send. 
    /// @param _amountOutMin  The minimum amount of output tokens that must be received for the transaction not to revert.
    function swap(address _tokenIn, address _tokenOut, uint256 _amountIn, uint256 _amountOutMin) 
        external 
        whenNotPaused 
    {
        IERC20(_tokenIn).transferFrom(msg.sender, address(this), _amountIn);
        IERC20(_tokenIn).approve(address(joeRouter), _amountIn);

        address[] memory path;
        path = new address[](2);
        path[0] = _tokenIn;
        path[1] = _tokenOut;

        joeRouter.swapExactTokensForTokens(
            _amountIn,
            _amountOutMin,
            path,
            msg.sender,
            block.timestamp
        );
    }

    function swapAVAXforToken(address _tokenOut, uint256 _amountOutMin) 
        external 
        payable 
        whenNotPaused
    {

        //Path determines tokens to swap
        address[] memory path;
        path = new address[](2);
        path[0] = joeRouter.WAVAX();
        path[1] = _tokenOut;
        uint deadline = block.timestamp+ 15;

        joeRouter.swapExactAVAXForTokens{value: msg.value}(
            _amountOutMin,
            path,
            msg.sender,
            deadline
        );
    }

    //Administrative functions
    
    /// @notice Locks contract in case of issue
    function pause() public onlyOwner {
        _pause();
    }

    /// @notice Unlocks contract once issue is resolved
    function unpause() public onlyOwner {
        _unpause();
    }

}

