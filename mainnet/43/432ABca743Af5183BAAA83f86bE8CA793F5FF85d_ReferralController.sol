import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./Authorizable.sol";

pragma solidity ^0.8.4;

contract ReferralController is Ownable, Pausable, Authorizable {
  using SafeMath for uint256;

  IERC20 private token;
  address public taxPool;

  uint256 public commissionPercentage;
  uint256 public totalReferralCommissions;

  mapping(address => address) public sponsors;
  mapping(address => uint256) public balances;
  mapping(address => uint256) public earnedCommissions;
  mapping(address => uint256) public paidCommissions;

  event Commision(
    address indexed sponsor,
    address indexed referral,
    uint256 commission,
    uint256 timestamp
  );
  event Withdraw(address indexed sponsor, uint256 balance);

  constructor(
    address _token,
    address _taxPool,
    uint256 _commissionPercentage
  ) {
    require(_token != address(0), "Invalid address");
    require(_taxPool != address(0), "Invalid address");
    require(_commissionPercentage != 0, "Invalid commission percentage");
    token = IERC20(_token);
    taxPool = _taxPool;
    commissionPercentage = _commissionPercentage;
  }

  function generateCommission(
    address _referral,
    address _sponsor,
    uint256 _amount
  ) external onlyAuthorized whenNotPaused {
    require(_referral != address(0), "GenerateCommision: Invalid address");
    require(_sponsor != address(0), "GenerateCommision: Invalid sponsor");
    require(_amount > 0, "GenerateCommision: Invalid amount");
    if (sponsors[_referral] == address(0)) {
      sponsors[_referral] = _sponsor;
    }

    address sponsor = sponsors[_referral];
    require(
      sponsor != _referral,
      "GenerateCommision: Sponsor and referral can't be the same"
    );
    uint256 commission = _amount.mul(commissionPercentage).div(100);

    balances[sponsor] = balances[sponsor].add(commission);
    earnedCommissions[sponsor] = earnedCommissions[sponsor].add(commission);
    totalReferralCommissions = totalReferralCommissions.add(commission);

    emit Commision(sponsor, _referral, commission, block.timestamp);
  }

  function withdrawCommision() external whenNotPaused {
    uint256 balance = balances[msg.sender];
    require(balance > 0, "Withdraw: No commission to withdraw");

    balances[msg.sender] = 0;
    token.transferFrom(taxPool, msg.sender, balance);
    paidCommissions[msg.sender] = paidCommissions[msg.sender].add(balance);

    emit Withdraw(msg.sender, balance);
  }

  function getBalance(address _sponsor) external view returns (uint256) {
    return balances[_sponsor];
  }

  function getEarnedCommissions(address _sponsor)
    external
    view
    returns (uint256)
  {
    return earnedCommissions[_sponsor];
  }

  function getPaidCommissions(address _sponsor)
    external
    view
    returns (uint256)
  {
    return paidCommissions[_sponsor];
  }

  function getTokenAddress() external view returns (address) {
    return address(token);
  }

  function getSponsor(address _referral) external view returns (address) {
    return sponsors[_referral];
  }

  // Firewall methods

  function pause() external onlyAuthorized {
    _pause();
  }

  function unpause() external onlyAuthorized {
    _unpause();
  }
}

