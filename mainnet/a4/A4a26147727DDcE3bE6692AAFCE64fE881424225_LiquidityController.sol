import "./interfaces/IJoeRouter02.sol";
import "./interfaces/IJoeFactory.sol";
import "./interfaces/IJoePair.sol";

contract LiquidityController is Ownable {
  // This contract can mint a maximum of 600 millions SEED
  // to set up the pool SEED/AVAX
  uint256 public constant MAX_MINTABLE_SEED = 600 * 10**6 * 1 ether;

  IBurnableToken public immutable seedToken;
  IJoeRouter02 public immutable joeRouter;

  IJoePair public pair;
  // Date after which the LP tokens linked to this contract can be withdrawn
  uint256 public withdrawTimestamp;
  address public constant LPReceiver =
    0xD6d366dBBC288B8b7B366304644E5c3703C3Fca8;

  constructor(address _seedToken, address _joeRouter) {
    require(
      _seedToken != address(0) && _joeRouter != address(0),
      "Invalid address"
    );
    seedToken = IBurnableToken(_seedToken);
    joeRouter = IJoeRouter02(_joeRouter);
  }

  // To allow this contract to receive AVAX
  receive() external payable {}

  function transferLiquidityToPair() external onlyOwner {
    uint256 avaxBalance = address(this).balance;
    require(avaxBalance > 0, "No AVAX");
    // 200,000 SEED will be worth 1 AVAX
    // matching 3000 AVAX to 600 millions SEED
    // No need to take decimals into account as AVAX and WAVAX
    // have 18 decimals too
    uint256 seedForOneAVAX = 200000;
    uint256 amountToMint = seedForOneAVAX * avaxBalance;
    // If the contract receive more than 3000 AVAX
    // then we wont mint more than the maximum
    // which in consequence will increase the starting price
    // of SEED
    amountToMint = amountToMint > MAX_MINTABLE_SEED
      ? MAX_MINTABLE_SEED
      : amountToMint;
    // Mint the SEED
    seedToken.mint(address(this), amountToMint);
    // Need to approve for transfer
    require(
      seedToken.approve(address(joeRouter), amountToMint),
      "Approve failed"
    );
    // We add the liquidity to the pool
    // The pair will be created at the same time
    joeRouter.addLiquidityAVAX{ value: avaxBalance }(
      address(seedToken),
      amountToMint,
      amountToMint,
      avaxBalance,
      // The contract will hold the LP for now so
      // these liquidities cannot be tampered with
      address(this),
      // Give it one hour max
      block.timestamp + 1 hours
    );
    // Fetch the created pair and store on the contract
    address wavax = joeRouter.WAVAX();
    IJoeFactory factory = IJoeFactory(joeRouter.factory());
    pair = IJoePair(factory.getPair(wavax, address(seedToken)));
    // Only allow to withdraw the LP tokens after 1 month
    withdrawTimestamp = block.timestamp + 30 days;
  }

  function withdrawLPTokens() external onlyOwner {
    require(block.timestamp >= withdrawTimestamp, "Cannot withdraw yet");
    uint256 balance = pair.balanceOf(address(this));
    require(balance > 0, "No LP tokens left");
    pair.transfer(LPReceiver, balance);
  }
}

