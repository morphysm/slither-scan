    }

    /**
     * @dev Imitates a Solidity high-level call (i.e. a regular function call to a contract), relaxing the requirement
     * on the return value: the return value is optional (but if data is returned, it must not be false).
     * @param token The token targeted by the call.
     * @param data The call data (encoded using abi.encode or one of its variants).
     */
    function _callOptionalReturn(IERC20 token, bytes memory data) private {
        // We need to perform a low level call here, to bypass Solidity's return data size checking mechanism, since
        // we're implementing it ourselves. We use {Address.functionCall} to perform this call, which verifies that
        // the target address contains contract code and also asserts for success in the low-level call.

        bytes memory returndata = address(token).functionCall(data, "SafeERC20: low-level call failed");
        if (returndata.length > 0) { // Return data is optional
            // solhint-disable-next-line max-line-length
            require(abi.decode(returndata, (bool)), "SafeERC20: ERC20 operation did not succeed");
        }
    }
}

pragma experimental ABIEncoderV2;

struct TriggerQuery{
    // the user address who trigger this rebalancing
    address user;
    
    // the exposureToken for this rebalancing
    address exposureToken;
    
    // current market price for exposureToken, in USD denomination
    uint256 markUSDPrice;
    
    // recorded market price for exposureToken during last rebalancing, in USD denomination
    uint256 lastRebalancingUSDPrice;
    
    // recorded timestamp for last rebalancing
    uint256 lastRebalancingTimestamp;
    
    // current holding in exposureToken
    uint256 currentExposure;
    
    // current holding in stablecoin
    uint256 currentStable;
    
    // rebalancing leverage bps set by user (20000, i.e., 2X leverage)
    // which aims to ensure stablecoin and exposureToken 
    // take equal half in terms of USD value of 
    // (currentExposure * markPrice + currentStable) * currentLeverage
    uint256 currentLeverageBps;
    
    // decimal for markUSDPrice and lastRebalancingUSDPrice
    uint256 priceDecimal;
    
    // decimal for stablecoin token
    uint256 stableCoinDecimal;
    
    // extra data for this rebalancing, 
    // for example using abi.decode() to deserialize the params 
    // and abi.encode() to serialize the params
    bytes extraData;
}

struct TriggerResult{
    // if need to trigger rebalancing 
    bool trigger;
    
    // if need to increase exposure to exposureToken
    bool increase;
    
    // rebalancing amount denominated 
    // in either stablecoin (stableCoinDecimal) if increasing exposure 
    // or in exposureToken (ERC20(exposureToken).decimals()) if decreasing exposure
    uint256 amount;
    
    // rebalancing execution price, usually taken equally as for mark price simplicity
    uint256 markPrice;
}

interface RebalancingMon{
    // return the fee BPS if any, recommended value is 20, i.e., 0.2%
    function feeBps() external view returns(uint256);
    
    // return the fee destination if any
    function feeDestination() external view returns(address);
    
    // By evaluating given TriggerQuery parameter, this function would return a proper TriggerResult
    function triggerRebalancing(TriggerQuery calldata query) external view returns(TriggerResult memory);
    
    // configure rebalancing parameters for msg.sender and exposureToken, 
    // by default using abi.decode() to deserialize the params
    // and abi.encode() to serialize the params
    function configure(address exposureToken, bytes calldata params) external;
    
    // only available to mushmons
    function configureForUser(address user, address exposureToken, bytes calldata params) external;
}

contract LeveragedShannonMon is RebalancingMon {
    using SafeERC20 for IERC20;
    using Address for address;
    using SafeMath for uint256;

    address override public feeDestination;
    uint256 override public feeBps = 200;
    uint256 public constant BPS_DENOM = 10000;
    address public configurationManager;
    address public mushmons = 0x883fB00742161DCe2235bbF4a67df84cd0e50c08;

    constructor(address _feeDestination, uint256 _feeBps) public {
        feeDestination = _feeDestination;
        feeBps = _feeBps;
        configurationManager = msg.sender;
    }

    function setMushmons(address _mushmons) external{
        require(msg.sender == configurationManager && _mushmons != address(0), '!mushmons');
        mushmons = _mushmons;
    }

    function setFeeDestination(address _feeDestination) external{
        require(msg.sender == configurationManager && _feeDestination != address(0), '!configMgr');
        feeDestination = _feeDestination;
    }

    function setFeeBps(uint256 _feeBps) external{
        require(msg.sender == configurationManager && _feeBps < BPS_DENOM, '!configMgr');
        feeBps = _feeBps;
    }

    function setConfigMgr(address _configMgr) external{
        require(msg.sender == configurationManager && _configMgr != address(0), '!configMgr');
        configurationManager = _configMgr;
    }

    // user address -> exposureToken(like BTC) -> bps threshold in price dumping to increase exposure: buy the dips
    mapping(address => mapping(address => uint256)) public incExpoPriceThresholdBps;

    // user address -> exposureToken(like BTC) -> bps threshold in price pumping to decrease exposure: sell the rips
    mapping(address => mapping(address => uint256)) public decExpoPriceThresholdBps;

    function configureForUser(address user, address exposureToken, bytes calldata params) override external{
        require(msg.sender == mushmons, '!mushmons');
        _configure(user, exposureToken, params);
    }

    function configure(address exposureToken, bytes calldata params) override external{
        _configure(msg.sender, exposureToken, params);
    }
    
    function _configure(address user, address exposureToken, bytes calldata params) internal{
        (uint256 incBps, uint256 decBps) = abi.decode(params, (uint256, uint256));

        if (incBps > 0 && incBps < BPS_DENOM){
            incExpoPriceThresholdBps[user][exposureToken] = incBps;
        }

        if (decBps > 0 && decBps < BPS_DENOM){
            decExpoPriceThresholdBps[user][exposureToken] = decBps;
        }
    }

    function triggerRebalancing(TriggerQuery memory query) public override view returns(TriggerResult memory){
        
        uint256 exposureTokenDecimal = _decimalDivisor(ERC20(query.exposureToken).decimals());
        
        // This Shannon-variant rebalancing algorithm aims to ensure stablecoin and exposure token keep following equation:
        // (currentExposure * currentLeverage) * markPrice = (currentStable * currentLeverage) * 1
        
        uint256 levExposureValue = convertExposure2Stablecoin(query.currentExposure.mul(query.currentLeverageBps).div(BPS_DENOM), exposureTokenDecimal, query);
        uint256 levStablecoinValue = query.currentStable.mul(query.currentLeverageBps).div(BPS_DENOM);

        bool _trigger;
        bool _increase;
        uint256 _amount;

        if (query.markUSDPrice > query.lastRebalancingUSDPrice){
            uint256 setting = decExpoPriceThresholdBps[query.user][query.exposureToken];
            require(setting > 0, '!noDecExpoSetting');

            uint256 bps = query.markUSDPrice.sub(query.lastRebalancingUSDPrice).mul(BPS_DENOM).div(query.lastRebalancingUSDPrice);
            if (bps >= setting && levExposureValue > levStablecoinValue){
                _trigger = true;
                uint256 diff = (levExposureValue.sub(levStablecoinValue)).div(2);
                _amount = convertStableCoin2Exposure(diff, exposureTokenDecimal, query);
                _amount = _amount > query.currentExposure? query.currentExposure : _amount;
            }
        } else{
            _increase = true;
            uint256 setting = incExpoPriceThresholdBps[query.user][query.exposureToken];
            require(setting > 0, '!noIncExpoSetting');

            uint256 bps = query.lastRebalancingUSDPrice.sub(query.markUSDPrice).mul(BPS_DENOM).div(query.lastRebalancingUSDPrice);
            if (bps >= setting && levStablecoinValue > levExposureValue){
                _trigger = true;
                _amount = (levStablecoinValue.sub(levExposureValue)).div(2);
                _amount = _amount > query.currentStable? query.currentStable : _amount;
            }
        }

        return TriggerResult(_trigger, _increase, _amount, query.markUSDPrice);
    }
    
    function convertStableCoin2Exposure(uint256 _amount, uint256 _exposureDecimal, TriggerQuery memory query) public view returns(uint256){
        return _amount.mul(_exposureDecimal).div(_decimalDivisor(query.stableCoinDecimal)).mul(_decimalDivisor(query.priceDecimal)).div(query.markUSDPrice);
    }
    
    function convertExposure2Stablecoin(uint256 _amount, uint256 _exposureDecimal, TriggerQuery memory query) public view returns(uint256){
        return _amount.mul(query.markUSDPrice).div(_decimalDivisor(query.priceDecimal)).mul(_decimalDivisor(query.stableCoinDecimal)).div(_exposureDecimal);
    }
    
    function _decimalDivisor(uint256 _decimals) internal view returns(uint256){
        return (10 ** _decimals);
    }

}