contract Reserve is Context {
    using Address for address;
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    address private constant CROWN = 0xed46443C18E38064523180Fc364C6180b35803d3;
    address private constant Receiver = 0x3E3f226455119d58574D7C4b9F0Fdaa25209dd46;

    uint256 private constant WithdrawOnce = 500 * 10**9;
    uint256 private constant WithdrawInterval = 30 days;

    uint256 public lastWithdraw = 0;

    event Deposited(address indexed from, uint256 amount);
    event Withdrawn(address indexed to, uint256 amount);

    constructor() public {
        lastWithdraw = block.timestamp;
    }

    function Deposit(uint256 amount) external {
        IERC20(CROWN).safeTransferFrom( msg.sender, address(this), amount );
        emit Deposited(msg.sender, amount);
    }

    function info() public view returns (uint256 balance, uint256 nextWithdraw) {
        uint256 balance = IERC20(CROWN).balanceOf(address(this));
        uint256 next = lastWithdraw.add(WithdrawInterval);

        return (balance, next);
    }

    function Withdraw() external {
        require(block.timestamp > lastWithdraw.add(WithdrawInterval), "It is too early to call this function");
        require(Receiver == msg.sender, "Only Receiver may use this function");

        uint256 balance = IERC20(CROWN).balanceOf(address(this));
        uint256 _amount = 0;

        if(balance > 0){
            if(balance > WithdrawOnce){
                _amount = WithdrawOnce; // withdraw 10%
            }else{
                _amount = balance; // withdraw rest
            }
        }
        if(_amount > 0){
            IERC20(CROWN).approve(Receiver, _amount);
            IERC20(CROWN).transfer(Receiver, _amount);
            emit Withdrawn(Receiver, _amount);
        }

        lastWithdraw = lastWithdraw.add(WithdrawInterval);
    }

}