// File: contracts/OpsyCharityVote.sol

// https://eips.ethereum.org/EIPS/eip-20

pragma solidity ^0.8.4;



contract OpsyCharityVote is Ownable {
    struct Organization {
        string title;
        string imgURL;
    }

    struct Vote {
        Organization org1;
        uint256 org1TotalVotes;
        Organization org2;
        uint256 org2TotalVotes;
        bool isActive;
    }

    IERC20 immutable public opsyToken;

    mapping(uint256 => Vote) public votes;
    mapping(uint256 => mapping (address => uint8)) public voters;

    uint256 public activeVote;

    constructor(IERC20 opsyToken_, address owner_){
        opsyToken = opsyToken_;
        transferOwnership(owner_);
    }


    function endActiveVote()external onlyOwner {
        votes[activeVote].isActive = false;
    }

    function createNewVote(
        string calldata org1Name_,
        string calldata org1imgUrl_,
        string calldata org2Name_,
        string calldata org2imgUrl_
    ) external onlyOwner {
        // disable past vote
        votes[activeVote].isActive = false;
        // increment the active vote index(in the mapping)
        activeVote++;
        // create new vote
        votes[activeVote] = Vote(
            Organization(org1Name_,org1imgUrl_),
            0,
            Organization(org2Name_,org2imgUrl_),
            0,
            true
        );
    }

    function castVote(uint8 org_) external {
        require(opsyToken.balanceOf(msg.sender) >= 10**18, "OpsyCharityVote: to vote you need at least 1 OPSY");
        require(voters[activeVote][msg.sender] == 0, 'OpsyCharityVote: you can only vote once');
        require(org_ == 1 || org_ == 2, "OpsyCharityVote: invalid casted vote only 1 or 2");
        require(votes[activeVote].isActive, "OpsyCharityVote: No active votes");

        voters[activeVote][msg.sender] = org_;

        if(org_ == 1)
            votes[activeVote].org1TotalVotes++;
        else
            votes[activeVote].org2TotalVotes++;
    }

    function getActiveVote() external view returns(Vote memory){
        return votes[activeVote];
    }

    function renounceOwnership() public virtual override onlyOwner {}
}