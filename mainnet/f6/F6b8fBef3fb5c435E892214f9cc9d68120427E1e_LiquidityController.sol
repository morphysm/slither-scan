import "@openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/IBurnableToken.sol";
import "./interfaces/IJoeRouter02.sol";
import "./interfaces/IJoeFactory.sol";
import "./interfaces/IJoePair.sol";
import "@openzeppelin/contracts/utils/Address.sol";

contract LiquidityController is Ownable {
  using Address for address payable;

  IBurnableToken public immutable juice;
  IJoeRouter02 public immutable joeRouter;

  IJoePair public pair;
  // Date after which the LP tokens linked to this contract can be withdrawn
  uint256 public withdrawTimestamp;
  address public constant LPReceiver =
    0xD6d366dBBC288B8b7B366304644E5c3703C3Fca8;

  constructor(address _juice, address _joeRouter) {
    require(
      _juice != address(0) && _joeRouter != address(0),
      "Invalid address"
    );
    juice = IBurnableToken(_juice);
    joeRouter = IJoeRouter02(_joeRouter);
  }

  // To allow this contract to receive AVAX
  receive() external payable {}

  /**
   * @dev
   * @param juiceForOneAVAX How many JUICE (18 decimals) we should mint per AVAX available on this contract
   * @param tolerance Percentage of tolerance when adding the liquidity (from 0 to 100)
   */
  function transferLiquidityToPair(uint256 juiceForOneAVAX, uint256 tolerance)
    external
    onlyOwner
  {
    uint256 avaxBalance = address(this).balance;
    require(avaxBalance > 0, "No AVAX");
    // Since juiceForOneAVAX has 18 decimals, we need to get rid of them
    uint256 amountToMint = (juiceForOneAVAX * avaxBalance) / 1 ether;
    // Mint the JUICE
    juice.mint(address(this), amountToMint);
    // Need to approve for transfer
    require(juice.approve(address(joeRouter), amountToMint), "Approve failed");
    // We add the liquidity to the pool
    // The pair will be created at the same time if it doesn't exist yet
    joeRouter.addLiquidityAVAX{ value: avaxBalance }(
      address(juice),
      amountToMint,
      (amountToMint * (100 - tolerance)) / 100,
      (avaxBalance * (100 - tolerance)) / 100,
      // The contract will hold the LP for now so
      // these liquidities cannot be tampered with
      address(this),
      // Give it one hour max
      block.timestamp + 1 hours
    );
    if (address(pair) == address(0)) {
      // Fetch the created pair and store on the contract
      address wavax = joeRouter.WAVAX();
      IJoeFactory factory = IJoeFactory(joeRouter.factory());
      pair = IJoePair(factory.getPair(wavax, address(juice)));
    }
    if (withdrawTimestamp == 0) {
      // Only allow to withdraw the LP tokens and AVAX after 1 month
      withdrawTimestamp = block.timestamp + 30 days;
    }
  }

  function withdrawLPTokens() external onlyOwner {
    require(block.timestamp >= withdrawTimestamp, "Cannot withdraw yet");
    uint256 balance = pair.balanceOf(address(this));
    require(balance > 0, "No LP tokens left");
    pair.transfer(LPReceiver, balance);
  }

  function withdrawAVAX() external onlyOwner {
    require(
      withdrawTimestamp > 0 && block.timestamp >= withdrawTimestamp,
      "Cannot withdraw yet"
    );
    uint256 balance = address(this).balance;
    require(balance > 0, "No AVAX");
    payable(LPReceiver).sendValue(balance);
  }
}

