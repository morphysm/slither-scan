pragma solidity ^0.8.14;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeCast.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

contract DragonCryptoArgenti is ERC20("Dragon Crypto Argenti", "DCAR") {
    using SafeCast for uint256;
    using EnumerableSet for EnumerableSet.AddressSet;

    //SEED and PRIVATE round mint amount - this is immediately sent to a vesting contract
    uint256 public constant SEEDPRIVATEMINTAMOUNT = 101602331 * (10**17);
    //Liquidity TGE mint amount
    uint256 public constant LIQUIDITYMINTAMOUNT =   2800000 * (10**18);
    //Ecosystem fund TGE mint amount
    uint256 public constant ECOSYSTEMMINTAMOUNT =   17447301 * (10**16);
    //Public sale mint amount
    uint256 public constant PUBLICMINTAMOUNT =      2424000 * (10**18);

    uint256 public constant MINTLIMIT = 40000000 * (10**18);

    address public MULTISIG;

    EnumerableSet.AddressSet private mintingPermissions;

    struct MintLimitDetails {
        uint96 limit;
        uint96 minted;
        uint64 lastHour;
    }

    mapping(address => MintLimitDetails) public mintLimits;

    event addedMinter(address indexed minterAddress);

    event removedMinter(address indexed minterAddress);

    event hourlyLimitSet(address indexed minterAddress, uint256 mintLimit);

    event multisigSet( address indexed newMultisig );

    constructor(address _multisig) {
        _mint(_multisig, SEEDPRIVATEMINTAMOUNT + LIQUIDITYMINTAMOUNT + ECOSYSTEMMINTAMOUNT + PUBLICMINTAMOUNT);

        MULTISIG = _multisig;
    }

    function addMinter(address _minter) external {
        require(msg.sender == MULTISIG, "MULTISIG_ONLY");
        require(!mintingPermissions.contains(_minter), "ARGENTI: Minter already exists");

        mintingPermissions.add(_minter);

        emit addedMinter(_minter);
    }

    function removeMinter(address _minterAddress) external {
        require(msg.sender == MULTISIG, "MULTISIG_ONLY");
        require(mintingPermissions.contains(_minterAddress), "ARGENTI: Minter doesn't have permissions");

        mintingPermissions.remove(_minterAddress);

        emit removedMinter(_minterAddress);
    }

    function setHourlyLimit(address minter, uint96 amount) external {
        require(msg.sender == MULTISIG, "MULTISIG_ONLY");
        mintLimits[minter].limit = amount;

        emit hourlyLimitSet(minter, amount);
    }

    function setMultisig(address _newMultisig) external {
        require(msg.sender == MULTISIG, "MULTISIG_ONLY");
        MULTISIG = _newMultisig;

        emit multisigSet(_newMultisig);
    }

    function _updateAndCheckMintLimit(address minter, uint256 amount) internal {
        MintLimitDetails memory mintLimit = mintLimits[minter];
        uint256 hour = block.timestamp / (1 hours);
        if (mintLimit.lastHour != hour) {
            mintLimit.minted = amount.toUint96();
            mintLimit.lastHour = hour.toUint64();
        } else {
            mintLimit.minted += amount.toUint96();
        }

        require(mintLimit.minted <= mintLimit.limit, "ARGENTI: Mint reached hourly limit");
        mintLimits[minter] = mintLimit;
    }

    /// @notice Creates `_amount` token to `_to`.
    function mint(address _to, uint256 _amount) external {
        require(mintingPermissions.contains(msg.sender), "ARGENTI: Invalid minter");
        require(totalSupply() + _amount <= MINTLIMIT, "ARGENTI: Mint reached limit");
        _updateAndCheckMintLimit(address(0), _amount);
        _updateAndCheckMintLimit(msg.sender, _amount);
        _mint(_to, _amount);
    }

    function getTotalMinterLength() external view returns (uint256) {
        return mintingPermissions.length();
    }

    function getMinters() external view returns (address[] memory) {
        uint256 mintingPermissionsLength = mintingPermissions.length();

        address[] memory output = new address[](mintingPermissionsLength);

        for (uint256 i = 0; i < mintingPermissionsLength; i++) {
            output[i] = mintingPermissions.at(i);
        }

        return output;
    }
}

