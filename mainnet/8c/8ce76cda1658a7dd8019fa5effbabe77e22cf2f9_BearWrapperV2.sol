contract BearWrapperV2 is IERC721Receiver, Ownable {
    using Strings for uint256;

    address public wBearAddr = 0x8922a8a67787DBE73C1290AD8950993a430638c5;
    address public wavaxAddr = 0xB31f66AA3C1e785363F0875A1B74E27b85FD66c7;
    address public bBearAddr = 0x69617e5c47335049e806425883347b4797E7911b;

    IBEAR wBearContract = IBEAR(wBearAddr);
    IERC20 wavaxContract = IERC20(wavaxAddr);
    IERC721 bBearContract = IERC721(bBearAddr);

    constructor() {
    }
    
    function wrapBears(uint256[] memory _tokenIds) public {
        require(_tokenIds.length > 0 , "_tokenIds array cant be empty!");
        require(_tokenIds.length <= 20 , "_tokenIds array length cant be more than 20!");
        for (uint16 i; i < _tokenIds.length; i++) {
            uint256 _tokenId = _tokenIds[i];
            if(bBearContract.ownerOf(_tokenId) == msg.sender) {
                bBearContract.transferFrom(msg.sender, address(this), _tokenId);
                wBearContract.mint(_tokenId, msg.sender);
            }
        }
    }

    function wrapBearsToAddress(uint256[] memory _tokenIds, address _to) public {
        require(_tokenIds.length > 0 , "_tokenIds array cant be empty!");
        require(_tokenIds.length <= 20 , "_tokenIds array length cant be more than 20!");
        for (uint16 i; i < _tokenIds.length; i++) {
            uint256 _tokenId = _tokenIds[i];
            if(bBearContract.ownerOf(_tokenId) == msg.sender) {
                bBearContract.transferFrom(msg.sender, address(this), _tokenId);
                wBearContract.mint(_tokenId, _to);
            }
        }
    }

    function sendBear(uint256 _tokenId, address _to) external {
        require(msg.sender == wBearAddr, "Only the wBridgingBears contract can call this function!");
        IERC721(bBearAddr).safeTransferFrom(address(this), _to, _tokenId, "");
    }

    function emergencySendBear(uint256 _tokenId, address _to) public onlyOwner {
        IERC721(bBearAddr).safeTransferFrom(address(this), _to, _tokenId, "");
    }

    function setWbear(address _wBearAddr) public onlyOwner {
        wBearAddr = _wBearAddr;
        wBearContract = IBEAR(wBearAddr);
    }

    function setWavax(address _wavaxAddr) public onlyOwner {
        wavaxAddr = _wavaxAddr;
        wavaxContract = IERC20(wavaxAddr);
    }

    function withdraw() public payable onlyOwner {    
        // Withdraw all funds 
        (bool os, ) = payable(owner()).call{value: address(this).balance}("");
        require(os);
    }

    function withdrawWavax(uint256 _amount) public onlyOwner { 
        wavaxContract.transfer(msg.sender, _amount);
    }

    function claimMarketRewards() public onlyOwner {
        IMARKET(bBearAddr).claimRewards();
    }

    // Function to receive Ether. msg.data must be empty
    receive() external payable {}

    // Fallback function is called when msg.data is not empty
    fallback() external payable {}

    function onERC721Received(address , address , uint256 , bytes memory) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }
}