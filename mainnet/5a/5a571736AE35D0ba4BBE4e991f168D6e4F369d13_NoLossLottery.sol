contract NoLossLottery is Ownable {
    using SafeMathChainlink for uint256;
    using SafeERC20 for IERC20;
    
    // Lottery Status
    enum LOTTERY_STATE{OPEN, CALCULATING_WINNER}
    LOTTERY_STATE public lotteryState; 
    IRewardWallet public rewardWallet;    /// @dev contract holding bonus reward tokens
    address [] public players;       /// @param players Player list
    uint256 public totalDeposited;  /// @param totalDeposited Total deposited in the Snowball
    uint256 public latestRound;     /// @param latestRound current round
    ILendingPool public lendingPool;  /// @param ILendingPool Lending Pool
    IERC20 public bAsset;           /// @param bAsset blizz version
    IERC20 public asset;            /// @param asset - asset to deposit in lending pool
    IERC20 public blizzToken;     /// @param blizzToken - Blizz Token
    IChefIncetivesController public ChefIncetivesController = IChefIncetivesController(0x2d867AE30400ffFaD9BeD8472c514c2d6b827F5f);    /// @param ChefIncetivesController - Holding the incetives 
    IMultiFeeDistribution public MultiFeeDistribution = IMultiFeeDistribution(0xA867c1acA4B5F1E0a66cf7b1FE33525D57608854); /// @param MultiFeeDistribution - vesting program. includes the protocol fees
    IERC20 public WAVAX;           /// @param WAVAX wrapped avax
    IERC20 public defaultTreasuryAsset;   /// @param defaultTreasuryAsset default treasury asset
    uint256 public maxWinners;      /// @param maxWinners maximum numbers of players
    uint256 public treasuryShare;   /// @param treasuryShare yield which will be sent to the treasury for development & profit sharing
    uint256 public nextRoundShare;   /// @param nextRoundShare yield which will be forwarded to the next round
    uint256 public winnersShare;   /// @param winnersShare total amount of rewards given to winners
    uint256 public durationPerRound;  /// @param durationPerRound - number of seconds per round
    uint256 public lastRoundTimestamp; /// @param lastRoundTimestamp - last round timestamp
    address public treasury;  /// @param treasury treasuryWallet
    
    // TAKSH Rewards
    /// @param rewardEmissionRate -  rate of bonus tokens distributed per second
    /// @param previousRewardEmissionRate - the reward from the previous round
    IERC20 public rewardToken;
    uint256 public rewardEmissionRate;
    uint256 public previousRewardEmissionRate;
    uint256 public lastRewardTimestamp;
    uint256 public accTakshPerShare;

    // Router
    IUniswapV2Router public router = IUniswapV2Router(0x60aE616a2155Ee3d9A68541Ba4544862310933d4);

    /// @dev UserInfo - includes balance and rewardDebt
    struct UserInfo {
        uint256 balance;
        uint256 rewardDebt;
    }

    mapping(address => UserInfo) public userInfo;

    // events
    event randomness(uint256 randomness);
    event Deposit(address user, uint256 amount);
    event Withdraw(address user, uint256 amount);
    event winnerList(address[] winners);
    event UpdateEmission(uint256 emissionRate);

    constructor(address _lendingPool, address _rewardToken, address _rewardWallet, address _asset, address _bAsset, address _treasury) public {
        (asset, bAsset, blizzToken, WAVAX, defaultTreasuryAsset) = (IERC20(_asset), IERC20(_bAsset), IERC20(0x0f34919404a290e71fc6A510cB4a6aCb8D764b24), IERC20(0xB31f66AA3C1e785363F0875A1B74E27b85FD66c7), IERC20(0xB31f66AA3C1e785363F0875A1B74E27b85FD66c7));
        (rewardEmissionRate, totalDeposited, latestRound) = (0,0,0);
        (lastRoundTimestamp, lastRewardTimestamp) = (block.timestamp, block.timestamp + (600));
        (treasuryShare, nextRoundShare, winnersShare) = (1000, 5000, 4000);
        lendingPool = ILendingPool(_lendingPool);
        rewardWallet = IRewardWallet(_rewardWallet);
        rewardToken = IERC20(_rewardToken);
        maxWinners = 5;
        treasury = _treasury;
        durationPerRound = 600; // 1 hour for testing
        lotteryState = LOTTERY_STATE.OPEN;
    }

    /// @dev Deposit - function is used to deposit funds in the prize pool
    function deposit(uint256 _amount) external {
        require(lotteryState == LOTTERY_STATE.OPEN, "Can't deposit while calculating the winner");    // checks if the lottery is open
        if (latestRound != 0){
            updatePool(); 
        }
        UserInfo storage user = userInfo[msg.sender];                            
        totalDeposited = totalDeposited + _amount;
        if (latestRound != 0){
            if (user.balance > 0) {
                uint256 pending = user.balance.mul(accTakshPerShare).div(1e12).sub(user.rewardDebt);
                if (pending > 0) {
                    safeTokenTransfer(msg.sender, pending);
                }
            }
        }
        if (user.balance == 0) {
            players.push(msg.sender);
        }
        if (_amount > 0) {
            asset.transferFrom(address(msg.sender), address(this), _amount); 
            depositToBlizz(_amount);
            user.balance = user.balance.add(_amount);
        }
        user.rewardDebt = user.balance.mul(accTakshPerShare).div(1e12);
        emit Deposit(msg.sender, _amount);
    }

    /// @dev DepositBAsset - function is used to deposit tWeth in the prize pool -- saves gas
    function depositBAsset(uint256 _amount) external {
        require(lotteryState == LOTTERY_STATE.OPEN, "Can't deposit while calculating the winner");   
        if (latestRound != 0){
            updatePool(); 
        }                                                           
        UserInfo storage user = userInfo[msg.sender];                            
        totalDeposited = totalDeposited + _amount;
        if (latestRound != 0){
            if (user.balance > 0) {
                uint256 pending = user.balance.mul(accTakshPerShare).div(1e12).sub(user.rewardDebt);
                if (pending > 0) {
                    safeTokenTransfer(msg.sender, pending);
                }
            }
        }
        if (user.balance == 0) {
            players.push(msg.sender);
        }
        if (_amount > 0) {
            bAsset.transferFrom(msg.sender, address(this), _amount);
            user.balance = user.balance.add(_amount);
        }
        user.rewardDebt = user.balance.mul(accTakshPerShare).div(1e12);
        emit Deposit(msg.sender, _amount);
    }

    function withdraw(uint256 _amount) external {
        UserInfo storage user = userInfo[msg.sender];
        reinvest();
        if (latestRound != 0){
            updatePool(); 
        }
        require(lotteryState == LOTTERY_STATE.OPEN, "Can't withdraw while calculating winner");
        require(user.balance >= _amount, "you are withdrawing more than your balance");
        if (latestRound != 0){
            if (user.balance > 0) {
                uint256 pending = user.balance.mul(accTakshPerShare).div(1e12).sub(user.rewardDebt);
                if (pending > 0) {
                    safeTokenTransfer(msg.sender, pending);
                }
            }
        }
        if (_amount == user.balance) {
            uint i = 0;
            while(players[i] != msg.sender) {
                i++;
            }
            players[i] = players[players.length - 1];
            players.pop();
        }
        if (_amount > 0) {
            user.balance = user.balance.sub(_amount);
            bAsset.approve(address(lendingPool),_amount);
            ILendingPool(lendingPool).withdraw(address(asset), uint256(_amount), address(this));
            totalDeposited = totalDeposited.sub(_amount);
            asset.transfer(address(msg.sender), _amount); 
        }
        user.rewardDebt = user.balance.mul(accTakshPerShare).div(1e12);
        emit Withdraw(msg.sender, _amount);
    }

    function drawWinner(uint256 _randomness) external onlyOwner { 
        /// @dev probably final reinvest for this round
        reinvest();

        /// @dev calculating mode - ON           
        lotteryState = LOTTERY_STATE.CALCULATING_WINNER;

        /// @dev checks if the duration is done
        require(lastRoundTimestamp.add(durationPerRound) <= block.timestamp, "it's not yet time for the round to end");

        /// @dev if it's the latestRound it will mark the lastRewardTimestamp to the drawWinner timestamp.
        if (latestRound == 0) {
            lastRewardTimestamp = block.timestamp;
        } 

        /// @dev updatesPool
        if (latestRound != 0) {
            updatePool();
        }

        /// @dev calc
        uint256 rewardEarned = uint256(interestEarned());
        uint protocolFee = rewardEarned.mul(treasuryShare).div(10000);
        uint nextRound = rewardEarned.mul(nextRoundShare).div(10000);
        uint rewardForWinners = rewardEarned.mul(winnersShare).div(10000);

        /// @dev withdraws the interestEarned
        bAsset.approve(address(lendingPool),115792089237316195423570985008687907853269984665640564039457584007913129639935);
        ILendingPool(lendingPool).withdraw(address(asset), uint256(rewardEarned), address(this));

        /// @dev swaps the stuff to rewardToken
        swapTokens(address(asset), address(rewardToken), nextRound, address(router));
        
        /// @dev rewardToken in the contract
        uint256 rewardBalance = rewardToken.balanceOf(address(this));

        /// @dev sets the emissionRate accordingly
        previousRewardEmissionRate = rewardBalance.div(86400);

        /// @dev swaps protocolFees for defaultTreasuryAsset
        swapTokens(address(asset), address(defaultTreasuryAsset), protocolFee, address(router));

        /// @dev rewardToken in the contract
        uint256 defaultTreasuryAssetBal = defaultTreasuryAsset.balanceOf(address(this));

        if (defaultTreasuryAsset == rewardToken) {
            /// @dev transfers the protocolFees to treasury wallet
            defaultTreasuryAsset.transfer(treasury, defaultTreasuryAssetBal.sub(rewardBalance));
        } else if (defaultTreasuryAsset != rewardToken) {
            /// @dev transfers the protocolFees to treasury wallet
            defaultTreasuryAsset.transfer(treasury, defaultTreasuryAssetBal);
        }

        /// @dev list of winners to emit the event
        address[] storage winnersList;

        /// @dev distributing the rewards to the winners
        if (players.length >= maxWinners) {
            uint256[] memory winners = expand(_randomness, maxWinners);
            uint rewardPerWinner = rewardForWinners.div(maxWinners);
            for (uint8 i = 0; i < winners.length; i++) {
                UserInfo storage user = userInfo[players[winners[i]%players.length]];
                winnersList.push(players[winners[i]%players.length]);
                user.balance = rewardPerWinner;
            }
        } else if (players.length < maxWinners) {
            uint256[] memory winners = expand(_randomness, players.length);
            uint rewardPerWinner = rewardForWinners.div(players.length);
            for (uint8 i = 0; i < winners.length; i++) {
                UserInfo storage user = userInfo[players[winners[i]%players.length]];
                winnersList.push(players[winners[i]%players.length]);
                user.balance = rewardPerWinner;
            }
        }

        /// @dev updates totalDeposited
        totalDeposited = totalDeposited.add(rewardForWinners);
        
        /// @dev reopening the lottery
        lotteryState = LOTTERY_STATE.OPEN;

        /// @dev increasing round number
        latestRound += 1;

        /// @dev emitting winner
        emit winnerList(winnersList);

        /// @dev emitting randomness
        emit randomness(_randomness);
    }

    /// @dev expand - function for gettting multiple random numbers 
    function expand(uint256 randomValue, uint256 n) public pure returns (uint256[] memory expandedValues) {
        expandedValues = new uint256[](n);
        for (uint256 i = 0; i < n; i++) {
            expandedValues[i] = uint256(keccak256(abi.encode(randomValue, i)));
        }
        return expandedValues;
    }

    /// @dev deposit asset to blizz
    function depositToBlizz(uint256 _amount) internal {
        asset.approve(address(lendingPool),_amount); // Approves Token
        ILendingPool(lendingPool).deposit(address(asset), _amount, address(this), 0); // Deposits to BLIZZ Pool
    }

    /// @dev totalInterestEarned
    function interestEarned() public view returns (uint256) {
        return IERC20(bAsset).balanceOf(address(this)) - totalDeposited;
    }

    /// @dev updatePool - Update reward variables of this pool to be up-to-date.
    function updatePool() public {
        uint256 emissionRate = totalEmissionRate();
        if (block.timestamp <= lastRewardTimestamp) {
            return;
        }
        if (totalDeposited == 0 || emissionRate == 0) {
            lastRewardTimestamp = block.timestamp;
            return;
        }
        uint256 multiplier = getMultiplier(lastRewardTimestamp, block.timestamp);
        uint256 tokenReward = multiplier.mul(emissionRate).mul(1).div(1);
        uint256 tokenRewardToBeRequested = multiplier.mul(rewardEmissionRate).mul(1).div(1);
        rewardWallet.requestReward(tokenRewardToBeRequested);
        accTakshPerShare = accTakshPerShare.add(tokenReward.mul(1e12).div(totalDeposited));
        lastRewardTimestamp = block.timestamp;
    }

    /// @dev pendingTaksh - View function to see pending TAKSH rewards -- only for frontend
    function pendingTaksh(address _user) external view returns (uint256) {
        UserInfo storage user = userInfo[_user];
        uint256 _accTakshPerShare = accTakshPerShare;
        uint256 emissionRate = totalEmissionRate();
        if (block.timestamp > lastRewardTimestamp && totalDeposited != 0) {
            uint256 multiplier = getMultiplier(lastRewardTimestamp, block.timestamp);
            uint256 takshReward = multiplier.mul(emissionRate).mul(1).div(1);
            _accTakshPerShare = _accTakshPerShare.add(takshReward.mul(1e12).div(totalDeposited));
        }
        return user.balance.mul(_accTakshPerShare).div(1e12).sub(user.rewardDebt);
    }

    // Safe TAKSH transfer function, just in case if rounding error causes pool to not have enough TAKSH.
    function safeTokenTransfer(address _to, uint256 _amount) internal {
        uint256 tokenBal = rewardToken.balanceOf(address(this));
        bool transferSuccess = false;
        if (_amount > tokenBal) {
            transferSuccess = rewardToken.transfer(_to, tokenBal);
        } else {
            transferSuccess = rewardToken.transfer(_to, _amount);
        }
        require(transferSuccess, "safeTokenTransfer: transfer failed");
    }

    /// @dev reinvest - function to harvest BLIZZ rewards and reinvest it to the bAsset
    function reinvest() public {
        require(lotteryState == LOTTERY_STATE.OPEN, "LOTTERY != OPEN");

        /// @dev pushing claimToken
        address[] memory rewardsToClaim;
        rewardsToClaim = new address[](1);
        rewardsToClaim[0] = address(bAsset);

        /// @dev vests the rewards
        ChefIncetivesController.claim(address(this), rewardsToClaim);

        /// @dev unvests the rewards
        MultiFeeDistribution.exit(false);

        /// @dev swap to asset
        swapTokens(address(blizzToken), address(asset), blizzToken.balanceOf(address(this)), address(router));

        /// @dev deposits the asset
        depositToBlizz(asset.balanceOf(address(this)));
    }

    /// @dev swap - function to swap tokenz 
    function swapTokens(address _tokenIn, address _tokenOut, uint256 _amountIn, address _router) internal {
        /// @dev approves the token to the router
        IERC20(_tokenIn).approve(_router, 115792089237316195423570985008687907853269984665640564039457584007913129639935);

        /// @dev setting up path
        address[] memory path;
        if (_tokenIn == address(WAVAX) || _tokenOut == address(WAVAX)) {
            path = new address[](2);
            path[0] = _tokenIn;
            path[1] = _tokenOut;
        } else {
            path = new address[](3);
            path[0] = _tokenIn;
            path[1] = address(WAVAX);
            path[2] = _tokenOut;
        }

        /// @dev swap
        router.swapExactTokensForTokens(
            _amountIn,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    /// @dev withdrawDust - implemented to recover tokens which may accidentally be sent to this address 
    function withdrawDust(IERC20 _address, uint256 _amount, address _receiver) external onlyOwner {
        // token expect bAsset can be withdrawn. this is implemented to prevent the DAO (in near future. probably after TAKSH TGE) / Protocol to withdraw bAsset
        require(_address != bAsset, "Token should not be bAsset"); 
        require(_address != rewardToken, "Token should not be rewardToken"); 

        // transfering the dust asset. 
        IERC20(_address).transfer(_receiver, _amount);
    }

