    function updateShare(uint8 _nextRoundShare, uint8 _treasuryShare, uint8 _winnersShare) external onlyOwner {
        require(_nextRoundShare+_winnersShare+_treasuryShare == 10000, "total should be 100%");
        nextRoundShare = _nextRoundShare;
        treasuryShare = _treasuryShare;
        winnersShare = _winnersShare;
    }

    /// @dev updateTreasuryWallet - updating the treasuryWallet 
    function updateTreasuryWallet(address _treasury) external onlyOwner {
        treasury = _treasury;
    }

    /// @dev updateMaxWinner - updating max winners
    function updateMaxWinner(uint256 _winners) external onlyOwner {
        maxWinners = _winners;
    } 

    /// @dev updateRewardToken - function is implemented to change the reward token to TAKSH, once TAKSH is launched.
    function updateRewardToken(IERC20 _reward) external onlyOwner {
        rewardToken = _reward;
    }

    /// @dev updateDurationPerRound - function to update duration per round. min. 1 day
    function updateDurationPerRound(uint8 _days) external onlyOwner {
        durationPerRound = 86400*_days;
    }

    /// @dev updateRouter - in case the asset has more liquidity on some other dex
    function updateRouter(address _router) external onlyOwner {
        router = IUniswapV2Router(_router);
    }

    /// @dev updateDefaultTreasuryAsset - update default treasury asset
    function updateDefaultTreasuryAsset(address _newAsset) external onlyOwner {
        defaultTreasuryAsset = IERC20(_newAsset);
    }

    /// @dev getMultiplier return reward multiplier over the given _from to _to block.
    function getMultiplier(uint256 _from, uint256 _to) public view returns (uint256) {
        return _to.sub(_from).mul(1);
    }

    /// @dev updateEmissionRate - it will be used for updating the emission rate (in case we change the allocation for this pool)
    function updateEmissionRate(uint256 _emissionRate) external onlyOwner {
        require(lotteryState != LOTTERY_STATE.CALCULATING_WINNER, "Cannot do any TX during Calculation");
        if (latestRound != 0){
            updatePool(); 
        }
        rewardEmissionRate = _emissionRate;
        emit UpdateEmission(_emissionRate);
    }
