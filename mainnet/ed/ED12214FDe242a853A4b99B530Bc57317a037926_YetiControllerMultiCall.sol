pragma solidity 0.6.11;
pragma experimental ABIEncoderV2;

import "../Interfaces/IYetiController.sol";
import "./IVault.sol";
import "../Dependencies/SafeMath.sol";
import "../Interfaces/IERC20.sol";

contract YetiControllerMultiCall {
    
    using SafeMath for uint256;

    IYetiController public yetiController;

    constructor(address yetiController_) public {
        yetiController = IYetiController(yetiController_);
    }

    function getYetiControllerData() external view 
        returns (address[] memory whitelistedCollaterals
                , address[] memory vaultTokens
                , address[] memory underlyingTokens
                , uint256[] memory underlyingDecimals
                , uint256[] memory underlyingPerReceptRatios
                , uint256[] memory receiptPerUnderlyingRatios
                , uint256[] memory prices
                , uint256[] memory underlyingPrices) {
        
        whitelistedCollaterals = yetiController.getValidCollateral();

        vaultTokens = new address[](whitelistedCollaterals.length);
        underlyingTokens = new address[](whitelistedCollaterals.length);
        underlyingDecimals = new uint256[](whitelistedCollaterals.length);
        underlyingPerReceptRatios = new uint256[](whitelistedCollaterals.length);
        receiptPerUnderlyingRatios = new uint256[](whitelistedCollaterals.length);
        prices = new uint256[](whitelistedCollaterals.length);
        underlyingPrices = new uint256[](whitelistedCollaterals.length);


        for (uint i = 0; i < whitelistedCollaterals.length; i++) {

            address collateral = whitelistedCollaterals[i];

            uint256 price = yetiController.getPrice(whitelistedCollaterals[i]);

            prices[i] = price;

            if (yetiController.isWrapped(collateral)) {
                IVault vaultToken = IVault(collateral);

                vaultTokens[i] = collateral;
                underlyingTokens[i] = vaultToken.underlying();

                underlyingDecimals[i] = vaultToken.underlyingDecimal();
                underlyingPerReceptRatios[i] = vaultToken.underlyingPerReceipt();
                receiptPerUnderlyingRatios[i] = vaultToken.receiptPerUnderlying();

                underlyingPrices[i] = vaultToken.receiptPerUnderlying().mul(price).div(10 ** (36 - vaultToken.underlyingDecimal()));
            } else {
                IERC20 token = IERC20(collateral);

                underlyingDecimals[i] = token.decimals();

                underlyingPerReceptRatios[i] = 10 ** 18;
                receiptPerUnderlyingRatios[i] = 10 ** 18;
                underlyingPrices[i] = price;
            }
        }

    }

}

