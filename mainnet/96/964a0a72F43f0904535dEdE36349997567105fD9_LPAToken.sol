/**
 * @title ERC20 AToken
 * @dev Implementation of the interest bearing token
 */
contract LPAToken is
  Ownable,
  IncentivizedERC20,
  ILPAToken,
  ReentrancyGuard
{
  using SafeERC20 for IERC20;

  address internal immutable _underlyingAsset;
  IAaveIncentivesController internal _incentivesController;
  address internal immutable _distributor;
  bool private genesisFlag = false;
  /**
   * @dev Initializes the aToken
   * @param distributor The address of the MultiFeeDistributor, receiving the part of the fees on this aToken
   * @param underlyingAsset The address of the underlying asset of this aToken (E.g. WETH for aWETH)
   * @param incentivesController The smart contract managing potential incentives distribution
   * @param aTokenDecimals The decimals of the aToken, same as the underlying asset's
   * @param aTokenName The name of the aToken
   * @param aTokenSymbol The symbol of the aToken
   */
  constructor(
    address distributor,
    address underlyingAsset,
    IAaveIncentivesController incentivesController,
    uint8 aTokenDecimals,
    string memory aTokenName,
    string memory aTokenSymbol
  ) IncentivizedERC20(aTokenName, aTokenSymbol, aTokenDecimals) public {
    _distributor = distributor;
    _underlyingAsset = underlyingAsset;
    _incentivesController = incentivesController;
  }

  function genesisMint(address genesisReceiver, uint256 genesisAmount) public onlyOwner {
    require(!genesisFlag, 'Function already called');
    _mint(genesisReceiver, genesisAmount);
    genesisFlag = true;
  }

  function stake(uint256 amount) public nonReentrant override {
    IERC20(_underlyingAsset).safeTransferFrom(msg.sender, address(this), amount);
    _mint(msg.sender, amount);
    emit Transfer(address(0), msg.sender, amount);
    emit Mint(msg.sender, amount);
    emit Staked(msg.sender, amount);
  }

  function unstake(address receiverOfUnderlying, uint256 amount) public nonReentrant override {
    _burn(msg.sender, amount);
    IERC20(_underlyingAsset).safeTransfer(receiverOfUnderlying, amount);
    emit Transfer(msg.sender, address(0), amount);
    emit Burn(msg.sender, receiverOfUnderlying, amount);
    emit Unstaked(msg.sender, amount);
  }

  /**
   * @dev Returns the address of the MultiFeeDistributor, receiving the part of the fees on this aToken
   **/
  function DISTRIBUTOR_ADDRESS() public view returns (address) {
    return _distributor;
  }

  /**
   * @dev Returns the address of the underlying asset of this aToken (E.g. WETH for aWETH)
   **/
  function UNDERLYING_ASSET_ADDRESS() public override view returns (address) {
    return _underlyingAsset;
  }

  /**
   * @dev For internal usage in the logic of the parent contract IncentivizedERC20
   **/
  function _getIncentivesController() internal view override returns (IAaveIncentivesController) {
    return _incentivesController;
  }

  /**
   * @dev Returns the address of the incentives controller contract
   **/
  function getIncentivesController() external view override returns (IAaveIncentivesController) {
    return _getIncentivesController();
  }
}

