import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "../interface/ILendingPool.sol";
import '../interface/IFarmingVault.sol';
import "../interface/IAaveProtocolDataProvider.sol";
import "../interface/IUniswapV2Router01.sol";


/// @title BTC lending strategy, deposit wBTC, farm with stables
/// @author CYG

contract BtcLendingStrategy is Ownable, ERC20 {
    using SafeERC20 for IERC20;

    address public farmingVault;
    address public constant wbtc = 0x50b7545627a5162F82A992c33b87aDc75187B218;
    address public constant dai = 0xd586E7F844cEa2F87f50152665BCbc2C279D8d70;
    address public constant usdc = 0xA7D7079b0FEaD91F3e65f86E8915Cb59c1a4C664;
    address public aaveLendingPool = 0x4F01AeD16D97E3aB5ab2B501154DC9bb0F1A5A2C;
    address public aaveAddressesProvider = 0xb6A86025F0FE1862B372cb0ca18CE3EDe02A318f;
    address public dataProvider = 0x65285E9dfab318f57051ab2b139ccCf232945451;
    uint16 public targetLtv = 5000; //50% target LTV
    uint16 public constant maxBps = 10000;
    uint8 public constant interestRateMode = 2; //variable
    address public relayer;
    address public swapRouter;
    uint256 private lastFarmingLpPricePerShare = 0;
    //btc is 8 decimals, dai is 18
    uint256 constant public btcToDaiDecimals = 1e10;

    event Harvest(uint256);

    constructor(string memory _name,
        string memory _symbol, address _farm, address _relayer, address _swapRouter) ERC20(_name, _symbol) {
        farmingVault = _farm;
        relayer = _relayer;
        swapRouter = _swapRouter;
        lastFarmingLpPricePerShare = farmShareValue();
        giveAllowance();
    }

    modifier onlyRelayers() {
        require(msg.sender == relayer || msg.sender == owner());
        _;
    }

    /// @notice Deposit wBTC, get stables and farm your stables
    /// @dev Shares are with 8 decimals (wBTC)
    /// @param _amount The amount of wBTC to deposit (8 decimals)
    function enter(uint256 _amount) external {
        IERC20(wbtc).safeTransferFrom(msg.sender, address(this), _amount);

        uint256 shares = getUsersShare(_amount);
        lend(_amount);

        uint256 _stablecoinAmount = getStablecoinBorrowingAmount();

        borrow(_stablecoinAmount);
        farm(_stablecoinAmount);
        _mint(msg.sender, shares);
    }

    /// @notice Redeem wBTC with your shares
    /// @dev Shares are with 8 decimals (wBTC)
    /// @param _shares The amount of shares to burn (8 decimals)
    function exit(uint256 _shares) external {
        require(_shares <= balanceOf(msg.sender));

        uint256 btcAmount = (overallBtcBalance() * _shares) / totalSupply();
        uint256 daiShares = (overallDaiBalance() * _shares) / totalSupply();
        uint256 farmShares = daiShares * 1e18 / farmShareValue();

        _burn(msg.sender, _shares);
        exitFarm(farmShares);
        repayDebt();
        withdrawCollateral(btcAmount);
        IERC20(wbtc).safeTransfer(msg.sender, btcAmount);
    }

    /// @notice Leverage more if LTV < 50%
    function leverage() external onlyRelayers {
        uint256 _stablecoinAmount = getStablecoinBorrowingAmount();

        borrow(_stablecoinAmount);
        farm(_stablecoinAmount);
    }

    /// @notice Deleverage if LTV > 50%
    function deleverage() external onlyRelayers {
        uint256 _stablecoinAmount = getStablecoinRepayAmount();
        uint256 farmShare = _stablecoinAmount * farmShareValue();
        exitFarm(farmShare);
        repayDebt();
    }

    function harvest() external onlyRelayers {
        require(farmShareValue() > lastFarmingLpPricePerShare);
        uint256 lpPriceGrowth = farmShareValue() - lastFarmingLpPricePerShare;
        uint256 farmSharesToWithdraw = calculateFarmSharesToWithdraw(lpPriceGrowth);
        exitFarm(farmSharesToWithdraw);

        swapRewardForNative(IERC20(dai).balanceOf(address(this)));

        uint256 wBtcAccumulated = IERC20(wbtc).balanceOf(address(this));
        lend(wBtcAccumulated);

        //update latest farming LP price
        lastFarmingLpPricePerShare = farmShareValue();

        emit Harvest(wBtcAccumulated);
    }

    function shortcutLendBtc(uint256 _amount) external onlyOwner {
        IERC20(wbtc).safeTransferFrom(msg.sender, address(this), _amount);
        ILendingPool(aaveLendingPool).deposit(wbtc, _amount, address(this), 0);
    }

    function lend(uint256 _amount) private {
        ILendingPool(aaveLendingPool).deposit(wbtc, _amount, address(this), 0);
    }

    function borrow(uint256 _amount) private {
        // 1 = stable, 2 = variable
        ILendingPool(aaveLendingPool).borrow(dai, _amount, interestRateMode, 0, address(this));
    }

    function withdrawCollateral(uint256 _btcAmount) private {
        ILendingPool(aaveLendingPool).withdraw(wbtc, _btcAmount, address(this));
    }

    function repayDebt() private {
        //take all DAI available, redeemed from the farm
        ILendingPool(aaveLendingPool).repay(dai, IERC20(dai).balanceOf(address(this)), interestRateMode, address(this));
    }

    function swapRewardForNative(uint256 _amount) private {
        address[] memory path = new address[](3);

        path[0] = dai;
        path[1] = usdc;
        path[2] = wbtc;

        IUniswapV2Router01(swapRouter).swapExactTokensForTokens(_amount, 0, path, address(this), block.timestamp + 10);
    }

    function getStablecoinRepayAmount() private view returns (uint256) {

        (uint256 totalCollateralUSD, uint256 totalDebtETH,,,,
        ) = ILendingPool(aaveLendingPool).getUserAccountData(address(this));

        uint256 newDebt = (totalCollateralUSD * targetLtv / maxBps) - totalDebtETH;

        return btcToDaiDecimals * newDebt;
    }

    function getStablecoinBorrowingAmount() private view returns (uint256) {
        (uint256 totalCollateralUSD, uint256 totalDebtUSD, ,,,
        ) = ILendingPool(aaveLendingPool).getUserAccountData(address(this));

        uint256 currentLtv = totalDebtUSD * maxBps / totalCollateralUSD;

        require(targetLtv > currentLtv, 'LTV too low');
        uint256 targetDebt = (totalCollateralUSD * targetLtv / maxBps);

        require(targetDebt > totalDebtUSD, 'Debt to high');
        uint256 amountToBorrow = targetDebt - totalDebtUSD;

        return btcToDaiDecimals * amountToBorrow;
    }

    function getUsersShare(uint256 _amount) private view returns (uint256) {
        uint256 _pool = overallBtcBalance() - _amount;
        if (totalSupply() == 0) {
            return _amount;
        } else {
            return ((_amount * totalSupply()) / _pool);
        }
    }

    function calculateFarmSharesToWithdraw(uint256 _lpPriceGrowth) private view returns(uint256) {
        return _lpPriceGrowth * IFarmingVault(farmingVault).balanceOf(address(this)) / 1e18;
    }

    //made a specific function so that it could be used externally
    function overallBtcBalance() public view returns (uint256) {
        return IERC20(wbtc).balanceOf(address(this)) + lendingBalance();
    }

    function overallDaiBalance() public view returns (uint256) {
        return IERC20(dai).balanceOf(address(this)) + borrowBalance();
    }


    function lendingBalance() private view returns (uint256) {
        (uint256 supplyBal,,,,,,,,) = IAaveProtocolDataProvider(dataProvider).getUserReserveData(wbtc, address(this));
        return supplyBal;
    }

    function borrowBalance() private view returns (uint256) {
        (,,uint256 currentVariableDebt,,,,,,) = IAaveProtocolDataProvider(dataProvider).getUserReserveData(dai, address(this));
        return currentVariableDebt;
    }

    function giveAllowance() private {
        IERC20(dai).safeApprove(farmingVault, type(uint256).max);
        IERC20(dai).safeApprove(aaveLendingPool, type(uint256).max);
        IERC20(wbtc).safeApprove(aaveLendingPool, type(uint256).max);
        IERC20(dai).safeApprove(swapRouter, type(uint256).max);
    }

    function farmShareValue() private view returns (uint256) {
        return IFarmingVault(farmingVault).getPricePerFullShare();
    }

    function exitFarm(uint256 _farmShare) private {
        IFarmingVault(farmingVault).withdraw(_farmShare);
    }

    function farm(uint256 _stablecoinAmount) private {
        IFarmingVault(farmingVault).deposit(_stablecoinAmount);
    }

    function setLendingPool(address _newLendingPool) external onlyOwner {
        IERC20(dai).safeApprove(_newLendingPool, type(uint256).max);
        IERC20(wbtc).safeApprove(_newLendingPool, type(uint256).max);
        aaveLendingPool = _newLendingPool;
    }

    function setAddressProvider(address _newAddressesProvider) external onlyOwner {
        aaveAddressesProvider = _newAddressesProvider;
    }

    function setDataProvider(address _newDataProvider) external onlyOwner {
        dataProvider = _newDataProvider;
    }

    function setFarm(address _farm) external onlyOwner {
        IERC20(dai).safeApprove(_farm, type(uint256).max);
        farmingVault = _farm;
    }

    function setRelayer(address _newRelayer) external onlyOwner {
        relayer = _newRelayer;
    }

    function setSwapRouter(address _newSwapRouter) external onlyOwner {
        IERC20(dai).safeApprove(_newSwapRouter, type(uint256).max);
        swapRouter = _newSwapRouter;
    }

    function setTargetLtv(uint16 _newTargetLtv) external onlyOwner {
        targetLtv = _newTargetLtv;
    }
}

