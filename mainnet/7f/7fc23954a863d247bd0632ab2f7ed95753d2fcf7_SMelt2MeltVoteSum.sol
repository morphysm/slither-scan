pragma solidity 0.5.16;




interface ISmelt2MeltSrc {
    function getMeltAmount(uint256 _smeltAmount) external view returns (uint256);
}

contract SMelt2MeltVoteSum is Ownable {
    using SafeMath for uint256;
    address public meltInterestSc = 0x1e93b54AC156Ac2FC9714B91Fa10f1b65e2daFD9;//interest contract
    address[] public smeltsource = [0xB2D69B273daa655D1Ac7031615b36e23D5b302f4,//smelt token
                                    0x40A2bf8a6091010cAE4a96e02e13D5b7157bE236 //curve lp boost smelt toekn
                                   ];

    function removeAll() public onlyOwner {
        smeltsource.length = 0;
    }

    function remove(address _smeltsrc) public onlyOwner {
        for(uint256 i=0;i< smeltsource.length;i++){
            if(smeltsource[i]==_smeltsrc) {
                smeltsource[i] = smeltsource[smeltsource.length-1];
                smeltsource.length--;
                break;
            }
        }
    }

    function addmeltsrc(address _smeltsrc) public onlyOwner {
        for(uint256 i=0;i< smeltsource.length;i++){
            if(smeltsource[i]==_smeltsrc) {
                return;
            }
        }
        smeltsource.push(_smeltsrc);
    }

    function meltBalance(address _user) external view returns (uint256){
        uint256 totalmelt = 0;
        for(uint256 i=0;i< smeltsource.length;i++){
            uint256 smeltbal = IERC20(smeltsource[i]).balanceOf(_user);
            uint256 meltbal = ISmelt2MeltSrc(meltInterestSc).getMeltAmount(smeltbal);
            totalmelt = totalmelt.add(meltbal);
        }
        return totalmelt;
    }

}