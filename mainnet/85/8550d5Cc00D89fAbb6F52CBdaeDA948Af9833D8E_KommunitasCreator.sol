pragma solidity 0.7.6;

contract KommunitasCreator is IKommunitasCreator{
    address[] public override allVestings; // all vestings created
    
    address public override owner;
    
    modifier onlyOwner{
        require(owner == msg.sender, "You are not the owner");
        _;
    }
    
    mapping(address => address) public override getVesting;
    
    constructor(){
        owner = msg.sender;
    }
    
    /**
     * @dev Get total number of vestings created
     */
    function allVestingsLength() public override view returns (uint) {
        return allVestings.length;
    }
    
    /**
     * @dev Create new vesting to distribute token
     * @param _project Launchpad project address
     * @param _tge Epoch date to start TGE (Token Generation Event)
     */
    function createVesting(
        address _project,
        uint _tge
    ) public override onlyOwner returns(address vesting){
        require(getVesting[_project] == address(0), "Vesting exist");
        
        vesting = address(new KommunitasVesting{salt: keccak256(abi.encodePacked(_project))}());

        getVesting[_project] = vesting;
        allVestings.push(vesting);
        
        KommunitasVesting(getVesting[_project]).initialize(
            _project,
            _tge
        );
        
        emit VestingCreated(_project, vesting, allVestings.length-1);
    }
    
    /**
     * @dev Transfer ownership
     * @param _newOwner New owner address
     */
    function transferOwnership(address _newOwner) public override onlyOwner{
        require(_newOwner != address(0) && _newOwner != owner, "Not good");
        owner = _newOwner;
    }
    
}