pragma solidity 0.7.5;


interface IToken {
    function totalSupply() external view returns (uint256);
    function decimals() external view returns (uint8);
    function mint(address _to, uint256 _amount) external returns (bool);
}

interface IStaker {
    function getUserAmountOfDeposits(address userAddress) external view returns(uint256);
    function getUserDepositInfo(address userAddress, uint256 index) external view returns(uint8 plan, uint256 percent, uint256 amount, uint256 profit, uint256 start, uint256 finish);
}

contract SWTCPool {

    using SafeMath for uint256;
    
    address public immutable SWTC;
    address public immutable pool;

    struct Claim {
		uint256 checkPoint;
		uint256 amount;
        uint256 index;
	}

    mapping (address=>Claim) internal users;

    constructor (address _coin, address _pool) {
       SWTC = _coin;
       pool = _pool;
    }

    function claim() public {
        (uint256 amount,uint256 index) = getUserClaimableAmount(msg.sender);
        require(amount > 0 ,"can't claim");
        IToken(SWTC).mint(msg.sender, amount);
        Claim memory usr = users[msg.sender];
        uint256 time = block.timestamp;
        users[msg.sender] = Claim({
            checkPoint: time,
            amount: usr.amount.add(amount),
            index: index
        });
    }

    function getUserClaimableAmount(address staker) public view returns(uint256 claimable, uint256 index){
        uint256 len = IStaker(pool).getUserAmountOfDeposits(staker);
        Claim memory usr = users[staker];
        uint256 i = usr.index;
        for(;i<len;i++){
            (uint8 plan,,uint256 amount,,uint256 start,) = IStaker(pool).getUserDepositInfo(staker,i);
            if(start > usr.checkPoint && plan == 5){
                index = i;
                claimable = claimable.add(amount);
            }
        }
    }

    function getUserAmount(address staker) public view returns(uint256 claimable, uint256 claimed){
        (claimable, ) = getUserClaimableAmount(staker);
        Claim memory usr = users[staker];
        claimed = usr.amount;
    }

    function getClaimedData(address staker)public view returns(uint256 checkPoint_,uint256 amount_,uint256 index_) {
        Claim memory usr = users[staker];
        checkPoint_ = usr.checkPoint;
        index_ = usr.index;
        amount_ = usr.amount;
    }
    
}