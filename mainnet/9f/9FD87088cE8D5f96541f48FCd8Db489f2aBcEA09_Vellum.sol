        require(balanceOf(_requester) >= _amount, "NOT ENOUGH TOKENS");
        _burn(_requester, _amount);
        emit RedeemedToken(_redeemer, _amount, block.timestamp);
        // emit Burned(_redeemer, _redeemAmount); -- removed from review
    }






