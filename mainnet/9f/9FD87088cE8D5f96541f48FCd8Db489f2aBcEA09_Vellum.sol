contract Vellum is ERC20 ,Authorizable {
    constructor(string memory _name, string memory _symbol) ERC20(_name, _symbol) {
       
    }
    // variable
    



    // Events
    event RedeemedToken(address receiver, uint amount, uint256 timestamp);
    event IssuedToken(address receiver,uint amount, uint256 timestamp);

    // function

