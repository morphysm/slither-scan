                allRedemption[_id].amount,
                _id,
                msg.sender, // approver
                allRedemption[_id].approvedTs
            );
        } else {
            vellumContract.transfer(
                allRedemption[_id].redeemer,
                allRedemption[_id].amount
            );
            allRedemption[_id].isApproved = false;
            allRedemption[_id].isRejected = true;
            emit Rejected(
                allRedemption[_id].redeemer,
                allRedemption[_id].amount,
                _id,
                msg.sender, // Rejecter
                uint32(block.timestamp)
            );
