contract Redeem is Authorizable {
    address public VELLUME_CONTRACT;
    address public VELLUMS_CONTRACT;

    uint256 public minVellumE;
    uint256 public minVellumS;

    // change object name
    struct redemption {
        uint32 id;
        uint32 createTs;
        uint32 approvedTs;
        bool tokenTypeIsE; //  true for VellumE false for VellumS
        address redeemer;
        address approver;
        uint256 amount;
        bool isApproved;
        bool isRejected;
    }

    // redeem map number -> {ID, address, token(E or S), amount, isApproved, createTs, approvedTs}
    // Map id to redemption Obj
    mapping(uint256 => redemption) public allRedemption;

    /**
     * Counter on the block to add a uint
     */
    using Counters for Counters.Counter;
    Counters.Counter private _tokenIds;

    /**
     * Add event Approved
     */

    // TODO request for redeem event , add more paras
    event RequestForRedeem(string companyId, address redeemer, uint256 amount, uint256 id, string tokenType);
    event Approved(
        address redeemer,
        uint256 amount,
        uint256 id,
        address approver,
        uint256 approvedTs
    );
    event Rejected(
        address redeemer,
        uint256 amount,
        uint256 id,
        address approver,
        uint256 rejectedTs
    );

    constructor(address _vellumEContract,
     address _vellumSContract,
     uint256 _minVellumE,
     uint256 _mnVellumS) {
        VELLUME_CONTRACT = _vellumEContract;
        VELLUMS_CONTRACT = _vellumSContract;
        minVellumE = _minVellumE;
        minVellumS = _mnVellumS;
    }
    // function getallRedemption() public view returns(  redemption memory)  {
    //     return allRedemption[1];
    // }

    /**
     * redeem function , just update redeem mapping variable
     *
     */
    function redeemVellum(
        string memory companyid,
        address _redeemer,
        uint256 _amount,
        bool _tokenTypeIsE
    ) external {
        Vellum vellumContract = Vellum(
            _tokenTypeIsE
            ? VELLUME_CONTRACT
            : VELLUMS_CONTRACT
        );
        uint256 minimum = _tokenTypeIsE ? minVellumE : minVellumS;
        require(_amount >= minimum, "Less than minimum amount");
        require(
            _amount <= vellumContract.balanceOf(_redeemer),
            "NOT ENOUGH TOKENS"
        );
        vellumContract.transferFrom(msg.sender, address(this), _amount);
        _tokenIds.increment();
        uint32 _newId = uint32(_tokenIds.current());
        redemption memory newRedemption = redemption(
            _newId,
            uint32(block.timestamp), // createTs
            0, // approvedTs
            _tokenTypeIsE,
            _redeemer,
            address(0),
            _amount,
            false, // isApproved = false
            false // isRejected = false
        );
        // add the token id to the allRedemption
        allRedemption[_newId] = newRedemption;
        emit RequestForRedeem(companyid, _redeemer, _amount, _newId, _tokenTypeIsE ? 'VellumE' : 'VellumS');
    }

