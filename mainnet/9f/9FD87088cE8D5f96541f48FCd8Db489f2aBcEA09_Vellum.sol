        _mint(_receiver, _amount);
        emit IssuedToken(_receiver, _amount,block.timestamp );
    }


    // function updateAllowance(address _from, uint256 _amount) external onlyAuthorized{
    //         approve(msg.sender, _amount);
    // }
    
