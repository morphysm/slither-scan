    {
        // burn the tokens locally.
        // tokens will be minted on the destination.
        require(
            allowance(msg.sender, address(this)) >= quantity_,
            "You need to approve the contract to send your tokens!"
        );

        // and burn the local tokens
        _burn(msg.sender, quantity_);

        // abi.encode() the payload with the values to send
        bytes memory payload = abi.encode(msg.sender, quantity_);

        // send LayerZero message
        endpoint.send{value:msg.value}( // TODO let's check if 200k gas is enough in case of complicated _afterTokenTransfer
            chainId_,
            dstOmniChainTokenAddr_,
            payload,
            payable(msg.sender),
            address(0x0),
            bytes("")
        );
    }

