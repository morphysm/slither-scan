        DeploymentParams[] calldata deploymentParams_,
        DeployExternalParams calldata params
    ) public payable returns (bytes32) {
        bytes32 collectionId_ = keccak256(abi.encodePacked(block.timestamp, msg.sender));
        CollectionsRegistry collectionRegistry = systemContext.getCollectionRegistry();
        require(collectionRegistry.externalToCollection(params.originalCollection) == bytes32(0), "Collection already registered");
        require(IERC721(params.originalCollection).supportsInterface(type(IERC721).interfaceId), "Original collection is not erc721");
        _deployNonNativeWrapper(params,  collectionId_);

        return _deployExternalCollection(collectionId_, deploymentParams_, params);
    }

