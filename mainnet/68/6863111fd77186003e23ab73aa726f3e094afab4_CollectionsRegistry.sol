        );

        // decode
        (address toAddr, uint256 quantity) = abi.decode(payload_, (address, uint256));

        // mint the tokens back into existence, to the toAddr from the message payload
        _mint(toAddr, quantity);
    }

    function emergencyUnlock(address toAddr_, uint256 mintSupply_) external onlyRole(systemContext.getAccessControlList().TOKEN_UNLOCK_ROLE()) {
        _mint(toAddr_, mintSupply_);
    }
}

